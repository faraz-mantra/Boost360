<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_correct"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/green_success" />

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/tv_thank_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:text="@string/thank_you_for_nreporting_the_issue"
        android:textColor="@color/black_4a4a4a"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottie_correct" />

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/customTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:text="@string/we_ve_created_a_ticket_against_the_issue_you_ve_reported_you_ll_also_receive_an_email_with_the_expected_sla_for_same_for_any_related_quiry_please_write_an_email_to_ria_nowfloats_com"
        android:textColor="@color/black_4a4a4a"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_thank_you" />


      <com.framework.views.customViews.CustomButton
        android:id="@+id/btn_done"
        style="@style/CustomRoundedYellowButton"
        android:layout_height="42dp"
        android:layout_marginHorizontal="36dp"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="43dp"
        android:background="@drawable/fab_rounded_square_bg"
        android:enabled="true"
        android:stateListAnimator="@null"
        android:text="@string/done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  </androidx.cardview.widget.CardView>
</layout>