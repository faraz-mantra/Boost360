<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="20dp"
            android:layout_marginTop="30dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.framework.views.customViews.CustomImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_close_grey"
                    android:layout_marginTop="19dp"
                    android:layout_marginEnd="22dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_thank_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="151dp"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:text="@string/uh_oh"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/customTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:text="@string/update_could_not_be_posted_on_one_or_more_channels"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_thank_you" />

                <com.framework.views.customViews.CustomMaterialButton
                    android:id="@+id/btn_done"
                    style="@style/CustomRoundedYellowButton"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginTop="26dp"
                    android:text="@string/places_try_again"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/customTextView" />

                <com.framework.views.customViews.CustomMaterialButton
                    android:id="@+id/btn_report_an_error"
                    android:layout_width="0dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="36dp"
                    android:layout_marginBottom="43dp"
                    android:text="@string/report_an_error"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textColor="@color/red_E39595"
                    android:fontFamily="@font/semi_bold"
                    android:background="@drawable/error_colored_rounded_rect"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_done" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <com.framework.views.customViews.CustomImageView
            android:layout_width="199dp"
            android:layout_height="159dp"
            android:elevation="10dp"
            android:src="@drawable/ic_business_logo_mock"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>