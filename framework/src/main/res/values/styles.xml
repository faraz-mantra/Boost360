  <style name="TextViewDefaultFont" parent="android:Widget.TextView">
    <item name="android:fontFamily">@font/regular</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:fontFamily">@font/semi_bold</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/white</item>
  </style>

  <style name="ComposeEditText" parent="Widget.AppCompat.EditText">
