<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- Base application theme. -->
  <style name="BaseTheme" parent="@style/Theme.MaterialComponents.Light.DarkActionBar">
    <item name="dialogCornerRadius">10dp</item>
    <item name="dialogTheme">@style/MaterialDialogTheme</item>
    <item name="materialAlertDialogTheme">@style/MaterialDialogTheme</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
    <item name="android:textViewStyle">@style/TextViewDefaultFont</item>
    <item name="colorSecondary">@color/black_4a4a4a</item>
  </style>

  <style name="CustomBottomSheet" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="BottomSheetTheme" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
    <item name="colorSecondary">@color/black_4a4a4a</item>
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
  </style>

  <style name="MaterialDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:backgroundDimEnabled">true</item>
  </style>

  <style name="MaterialDialogThemeFull" parent="MaterialDialogTheme">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">false</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowCloseOnTouchOutside">false</item>
  </style>

  <style name="CityDialogThemeFull" parent="MaterialDialogThemeFull">
    <item name="colorAccent">@color/black_4a4a4a</item>
  </style>

  <style name="MaterialDialogThemeFullN" parent="MaterialDialogThemeFull">
    <item name="android:backgroundDimEnabled">false</item>
    <item name="android:padding">0dp</item>
  </style>


  <style name="MaterialProgressBarTheme.Circular" parent="Widget.AppCompat.ProgressBar">
