<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/screen_bg">


    <include
        android:id="@+id/app_bar_social"
        layout="@layout/new_app_bar" />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:id="@+id/topFeatureText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:text="Select any or all of the social platforms below to automatically share whatever you update on your website with a bigger audience on these social networks.\n"/>
                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#808080"
                    android:id="@+id/iv_help_nfx"
                    android:layout_alignBottom="@+id/topFeatureText"
                    android:layout_alignRight="@+id/topFeatureText"
                    android:src="@drawable/ic_help_outline_black_24dp"/>-->

            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="3dp"
                app:cardElevation="3dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/social_sharing_facebook_profile_image"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/facebook_icon_inactive"
                            android:layout_marginLeft="20dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/facebookProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Facebook Profile"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:id="@+id/social_sharing_facebook_profile_flag_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Disconnected"
                                android:textSize="12sp"
                                android:layout_marginLeft="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginRight="10dp">
                            <CheckBox
                                android:id="@+id/social_sharing_facebook_profile_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/grey"
                                android:layout_gravity="right"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/social_sharing_facebook_page_image"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/facebookpage_icon_inactive"

                            android:layout_marginLeft="20dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/facebookPage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Facebook Page"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:id="@+id/social_sharing_facebook_page_flag_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Disconnected"
                                android:textSize="12sp"
                                android:layout_marginLeft="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginRight="10dp">
                            <CheckBox
                                android:id="@+id/social_sharing_facebook_page_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/grey"
                                android:layout_gravity="right"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <ImageView
                            android:id="@+id/social_sharing_twitter_image"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/twitter_icon_inactive"

                            android:layout_marginLeft="20dp"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/twitterProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Twitter"
                                android:textSize="18sp"
                                android:layout_marginLeft="10dp"/>
                            <TextView
                                android:id="@+id/social_sharing_twitter_flag_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Disconnected"
                                android:textSize="12sp"
                                android:layout_marginLeft="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginRight="10dp">
                            <CheckBox
                                android:id="@+id/social_sharing_twitter_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:buttonTint="@color/grey"
                            />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <me.biubiubiu.justifytext.library.JustifyTextView
                    android:id="@+id/connectTextView"
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#808080"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="14sp"
                    android:text="Ensure whatever you post to your Facebook Page also gets updated to your website by simply selecting the check box below.\n"/>
                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#808080"
                    android:id="@+id/iv_help_auto_pull"
                    android:layout_alignBottom="@+id/connectTextView"
                    android:layout_alignRight="@+id/connectTextView"
                    android:src="@drawable/ic_help_outline_black_24dp"/>-->

            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                card_view:cardCornerRadius="3dp"
                android:elevation="3dp"
                app:contentPadding="5dp"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/autoPostTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:text="Auto Post Facebook Updates"
                            android:textSize="14sp"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginRight="10dp">
                            <CheckBox
                                android:id="@+id/social_sharing_facebook_page_auto_post"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/grey"
                                android:layout_gravity="right"/>

                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_fb_page_name"
                        android:visibility="gone"
                        android:paddingLeft="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="20dp"
                        android:text="Subscribed for pulling 10 updates from Test Facebook Page"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <me.biubiubiu.justifytext.library.JustifyTextView
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#808080"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="14sp"
                android:text="Updates will reflect on your website one hour after getting posted on the Facebook Page. Do not select this option if you are using social share from your website.\n"/>





        </LinearLayout>
    </ScrollView>
</LinearLayout>