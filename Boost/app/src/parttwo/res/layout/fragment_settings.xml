<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/screen_bg"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/account_info_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_screen_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:visibility="visible"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitCenter"
                android:layout_height="@dimen/textview_height_business_profile"
                android:src="@drawable/account_info_icon"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                android:padding="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="Account Details" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:orientation="horizontal"></LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/change_password_Layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_screen_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/firstrow_ImageView_ProfileV2"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitCenter"
                android:layout_height="@dimen/textview_height_business_profile"
                android:src="@drawable/icon_change_password"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                android:padding="5dp"
                />

            <TextView
                android:id="@+id/firstrow_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/setting_change_pwd" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal"></LinearLayout>
</FrameLayout>
        <FrameLayout
            android:id="@+id/feedback_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_screen_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/feedback_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/icon_feedback"
                android:padding="5dp"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                />



            <TextView
                android:id="@+id/secondRow_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/feedback" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:orientation="horizontal"></LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/faq_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_screen_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/faq_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/icon_info"
                android:padding="5dp"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                />

            <TextView
                android:id="@+id/faq_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/faq" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:orientation="horizontal"></LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/rate_us_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_screen_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/rate_us_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/icon_rateus"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                />

            <TextView
                android:id="@+id/rate_us_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/setting_rate_us_on_play_store" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:orientation="horizontal"></LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/like_us_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_screen_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/like_us_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/icon_fb"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                />

            <TextView
                android:id="@+id/like_us_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/Setting_like_us_on_facebook" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:orientation="horizontal"></LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/about_us_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_screen_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/fifthRow_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/icon_info"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                />

            <TextView
                android:id="@+id/fifthRow_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/setting_about_us" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:orientation="horizontal"></LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/logout_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_screen_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/logout_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/icon_logout"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                />

            <TextView
                android:id="@+id/logout_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/setting_logout" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:orientation="horizontal"></LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/versionCodeName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"

            android:layout_marginBottom="2dp"
            android:layout_marginTop="40dp">

            <com.nowfloats.CustomWidget.roboto_lt_36_565656

                android:id="@+id/version_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"

                android:text="Version "



                />

            <com.nowfloats.CustomWidget.roboto_lt_36_565656

                android:id="@+id/version_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.nowfloats.CustomWidget.roboto_lt_36_565656
                android:id="@+id/poweredBy"
                android:layout_below="@+id/versionCodeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Powered By"



                />

            <com.nowfloats.CustomWidget.roboto_md_36__565656
                android:layout_width="wrap_content"
                android:layout_below="@+id/versionCodeName"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/poweredBy"
                android:text=" NowFloats"
                />
        </LinearLayout>

    </LinearLayout>
</ScrollView>