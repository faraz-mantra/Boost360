<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/screen_bg"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/screen_bg"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:background="@color/screen_bg"
            android:orientation="vertical"
            android:paddingTop="3dp"


            >
            <ImageView
                android:id="@+id/firstrow_ImageView_ProfileV2"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitCenter"
                android:layout_height="@dimen/textview_height_business_profile"
                android:background="?android:selectableItemBackground"
                android:src="@drawable/address_grey"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                android:padding="5dp"
                />


            <ImageView
                android:id="@+id/secondrow_ImageView_ProfileV2"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitCenter"
                android:src="@drawable/contact_grey"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                android:layout_height="@dimen/textview_height_business_profile"
                android:padding="5dp"


                />

            <ImageView
                android:id="@+id/thirdrow_ImageView_ProfileV2"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/textview_height_business_profile"
                android:scaleType="fitCenter"
                android:src="@drawable/time_grey"
                android:visibility="visible"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                android:padding="5dp"


                />


            <ImageView
                android:id="@+id/fourth_ImageView_ProfileV2"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/textview_height_business_profile"
                android:src="@drawable/logo_grey"

                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                android:padding="5dp"

                />

            <ImageView
                android:id="@+id/fifth_ImageView_ProfileV2"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/textview_height_business_profile"
                android:scaleType="fitCenter"
                android:src="@drawable/share_grey"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin"
                android:padding="5dp"

                />
        </LinearLayout>

        <LinearLayout

            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:background="@color/screen_bg"
            android:orientation="vertical"

            >

            <TextView
                android:id="@+id/businessAddress_Layout_ProfileV2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_height_business_profile"
                android:textSize="@dimen/cell_text_size"
                android:background="?android:selectableItemBackground"
                android:textColor="@color/cell_text_color"
                android:text="@string/business__address"
                android:gravity="center_vertical" />

            <View
                android:layout_width="288dp"
                android:layout_height="1dp"
                android:background="#d3d3d3"
                />

            <TextView
                android:id="@+id/contactInformation_Layout_ProfileV2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_height_business_profile"
                android:textSize="14sp"
                android:background="?android:selectableItemBackground"
                android:layout_marginTop="1dp"
                android:textColor="@color/cell_text_color"
                android:text="@string/contact__info"
                android:gravity="center_vertical"/>

            <View
                android:layout_width="288dp"
                android:layout_height="1dp"
                android:background="#d3d3d3"
                />
<LinearLayout
    android:id="@+id/businessHoursLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/textview_height_business_profile"
    android:orientation="horizontal"
    android:background="?android:selectableItemBackground">
            <TextView
                android:id="@+id/businessHours_Layout_ProfileV2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/textview_height_business_profile"

                android:textSize="@dimen/cell_text_size"
                android:visibility="visible"
                android:textColor="@color/cell_text_color"
                android:text="@string/title_activity_business__hours_"
                android:gravity="center_vertical"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="47dp"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:gravity="right|center_vertical">
                <ImageView
                    android:id="@+id/lock_widget_business_hours"
                    android:layout_width="@dimen/icon_size"
                    android:scaleType="fitXY"
                    android:layout_height="@dimen/icon_size"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:background="?android:selectableItemBackground"
                    android:src="@drawable/lock_widget"
                    android:layout_marginLeft="@dimen/icon_left_margin"
                    android:layout_marginRight="@dimen/icon_right_margin"
                    />
            </LinearLayout>
</LinearLayout>

            <View
                android:layout_width="288dp"
                android:layout_height="1dp"
                android:background="#d3d3d3"
                />

            <TextView
                android:id="@+id/businessLogo_Layout_ProfileV2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_height_business_profile"
                android:textSize="@dimen/cell_text_size"
                android:background="?android:selectableItemBackground"
                android:textColor="@color/cell_text_color"
                android:text="@string/title_activity_business__logo_"
                android:gravity="center_vertical"/>
            <View
                android:layout_width="288dp"
                android:layout_height="1dp"
                android:background="#d3d3d3"
                />



            <TextView
                android:id="@+id/socialSharing_Layout_ProfileV2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/textview_height_business_profile"
                android:textSize="@dimen/cell_text_size"
                android:background="?android:selectableItemBackground"
                android:textColor="@color/cell_text_color"
                android:text="@string/title_activity_social__sharing_"
                android:gravity="center_vertical"/>

        </LinearLayout>



    </LinearLayout>


</LinearLayout>


