<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#D1D1D1">


    <include
        android:id="@+id/app_bar"
        layout="@layout/new_app_bar" />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="2dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            card_view:cardCornerRadius="1dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/social_sharing_facebook_profile_image"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/facebook_icon_inactive"
                        android:layout_marginLeft="20dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/facebookProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Facebook Profile"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/social_sharing_facebook_profile_flag_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disconnected"
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right"
                        android:layout_marginRight="10dp">
                        <CheckBox
                            android:id="@+id/social_sharing_facebook_profile_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/social_sharing_facebook_page_image"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/facebookpage_icon_inactive"

                        android:layout_marginLeft="20dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/facebookPage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Facebook Page"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/social_sharing_facebook_page_flag_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disconnected"
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right"
                        android:layout_marginRight="10dp">
                        <CheckBox
                            android:id="@+id/social_sharing_facebook_page_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/social_sharing_twitter_image"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/twitter_icon_inactive"

                        android:layout_marginLeft="20dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/twitterProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Twitter"
                            android:textSize="18sp"
                            android:layout_marginLeft="10dp"/>
                        <TextView
                            android:id="@+id/social_sharing_twitter_flag_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Disconnected"
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="right"
                        android:layout_marginRight="10dp">
                        <CheckBox
                            android:id="@+id/social_sharing_twitter_checkbox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"

                            />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>


        <TextView
            android:id="@+id/connectTextView"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="By Connecting your accounts,whatever you post to your Website will also reflect on your social accounts"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            card_view:cardCornerRadius="1dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/autoPostTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="Auto Post Facebook Updates"
                    android:textSize="14sp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="right"
                    android:layout_marginRight="10dp">
                    <CheckBox
                        android:id="@+id/social_sharing_facebook_page_auto_post"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/bottomFeatureText"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enable this feature to automatically post all future Facebook Page updates to your website. You can disable this feature any time. Updates will reflect on your website one hour after getting posted on Facebook Page"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>