<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#E0E0E0"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:ignore="MissingPrefix">

    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="31dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <android.support.v7.widget.CardView
            android:id="@+id/websiteTitleCardView"
            android:layout_width="340dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            card_view:cardCornerRadius="1dp"
            >

            <EditText
                android:id="@+id/websiteTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:gravity="center_horizontal"
                android:layout_marginTop="41dp"
                android:layout_gravity="center_horizontal"
                android:textColor="#FFB900"
                fontPath="Roboto-Light.ttf"
                android:text="website_name"
                android:background="#00000000"/>


            <TextView
                android:id="@+id/domainNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tag_for_partners"
                android:layout_marginBottom="18dp"
                android:layout_gravity="center|bottom"
                android:textSize="13sp"
                fontPath="Roboto-Light.ttf"
                android:textColor="#858585"/>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="22dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/domainCheckStatus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleType="fitXY"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Dont like it? Tap on card to change"
                android:textSize="12sp"
                fontPath="Roboto-Light.ttf"
                android:gravity="bottom"
                android:textColor="#606060"
                android:id="@+id/domainAvailable" />

        </LinearLayout>

        <Button
            android:id="@+id/createButton"
            android:layout_marginTop="180dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            fontPath="Roboto-Medium.ttf"
            android:text="CREATE MY WEBSITE"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:background="@color/primaryColor"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textSize="12sp"

            fontPath="Roboto-Light.ttf"
            android:textColor="#545454"
            android:text="By Pressing above button,You agree to our"/>

            <TextView
                android:id="@+id/policyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="12sp"
                android:textStyle="bold"

                fontPath="Roboto-Light.ttf"
                android:textColor="#545454"
                android:text=" Policy and Terms"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
