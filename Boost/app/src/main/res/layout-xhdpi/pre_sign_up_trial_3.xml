<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:gravity="bottom|center|center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/business_address_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_layout_height"
        android:background="@color/primaryColor">

        <TextView
            fontPath="Roboto-Medium.ttf"
            android:id="@+id/business_address_top_bar_store_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Details"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_margin="15dp"
            tools:ignore="MissingPrefix" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"

            >

            <ImageView
                android:id="@+id/forward_button_signup_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:src="@drawable/ic_action_forward"

                />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            >
            <LinearLayout
                android:id="@+id/businessNameLayout"
                style="@style/SignUp_LinearLayout_Style"
                >

                <ImageView
                    android:id="@+id/businessNameImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/businessname_xhdpi"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="4dp"
                    />


                <EditText
                    fontPath="Roboto-Light.ttf"
                    android:id="@+id/editText_businessName"
                    style="@style/SignUp_EditText_Style"
                    android:inputType="textCapWords"
                    android:hint="Business Name"
                    tools:ignore="MissingPrefix"
                   />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/businessCategoryLayout"
                style="@style/SignUp_LinearLayout_Style"

                >

                <ImageView
                    android:id="@+id/businessCategoryImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/catagry_xhdpi"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="4dp"
                    />

                <EditText
                    fontPath="Roboto-Light.ttf"
                    android:id="@+id/editText_businessCategory"
                    style="@style/SignUp_EditText_Style"
                    android:editable="false"
                    android:drawableRight="@drawable/dropselect"
                    android:focusableInTouchMode="false"
                    tools:ignore="MissingPrefix"
                    android:hint="Category"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cityLayout"
                style="@style/SignUp_LinearLayout_Style"
                >
                <ImageView
                    android:id="@+id/cityImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/city_xhdpi"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="4dp"
                    />

                <EditText
                    fontPath="Roboto-Light.ttf"
                    android:id="@+id/editText_city"
                    style="@style/SignUp_EditText_Style"
                    android:inputType="textCapWords"
                    android:hint="City"
                    tools:ignore="MissingPrefix" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/countryLayout"
                style="@style/SignUp_LinearLayout_Style"

                >

                <ImageView
                    android:id="@+id/countryImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/country_xhdpi"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="4dp"
                    />

                <EditText
                    android:id="@+id/editText_Country"
                    tools:ignore="MissingPrefix"
                    style="@style/SignUp_EditText_Style"
                    android:editable="false"
                    android:drawableRight="@drawable/dropselect"
                    android:drawablePadding="5dp"
                    android:focusableInTouchMode="false"
                    android:hint="Country"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/emailAddressLayout"
                style="@style/SignUp_LinearLayout_Style">

                <ImageView
                    android:id="@+id/emailImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/mail_xhdpi"
                    android:layout_marginBottom="4dp"
                    />

                <EditText
                    android:id="@+id/editText_Email"
                    tools:ignore="MissingPrefix"
                    style="@style/SignUp_EditText_Style"
                    android:inputType="text"
                    android:hint="Email Address"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phoneLayout"
                style="@style/SignUp_LinearLayout_Style"
                >

                <ImageView
                    android:id="@+id/phoneImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/phone_xhdpi"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="4dp"
                    />

                <TextView
                    android:id="@+id/countrycode_signupscreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="+91"
                    tools:ignore="MissingPrefix"
                    android:layout_marginLeft="28dp"
                    android:textColor="#B6B6B6"/>

                <EditText
                    android:id="@+id/editText_Phone"
                    tools:ignore="MissingPrefix"
                    style="@style/SignUp_EditText_Style"
                    android:layout_marginLeft="2dp"
                    android:inputType="number"
                    android:hint="Phone Number"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>