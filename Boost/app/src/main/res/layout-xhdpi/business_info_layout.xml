<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">

    <include
        android:id="@+id/app_bar"
        layout="@layout/tool_bar_business_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingLeft="16dp"
        android:layout_marginLeft="2dp">

        <com.makeramen.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/businessProfileIcon_ProfileV2"
            android:src="@drawable/username_icon"
            android:layout_marginTop="26dp"
            android:layout_marginBottom="26dp"
            android:layout_width="105dp"
            android:layout_height="105dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:riv_corner_radius="30dip"
            app:riv_border_width="2dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            app:riv_oval="true" />

        <EditText
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:gravity="bottom"
            android:hint="Your Name"
            android:textSize="14sp"
            android:textColor="#575757"/>

        <EditText
            android:id="@+id/businessName"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Business Name"
            android:textSize="14sp"
            android:gravity="bottom"
            android:textColor="#575757"
            />


        <EditText
            android:id="@+id/businessCategory"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Business Category"
            android:gravity="bottom"
            android:textColor="#575757"
            android:textSize="14sp"/>

        <EditText
            android:id="@+id/businessDesciption"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Business Description"
            android:gravity="bottom"
            android:textColor="#575757"
            android:textSize="14sp"/>

    </LinearLayout>







</LinearLayout>