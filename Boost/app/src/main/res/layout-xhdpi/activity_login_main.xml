<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#fafafa"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix">

    <include
        android:id="@+id/app_bar"
        layout="@layout/actionbar_login_screen" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#fafafa">

        <LinearLayout
            android:id="@+id/mainContainer"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                >

                <ImageView
                    android:id="@+id/userNameIcon"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/username_icon"
                    android:scaleType="fitXY"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="14dp"
                    />

                <EditText
                    fontPath="Roboto-Light.ttf"
                    android:textColor="@color/text_color_roboto_lt_30_edittext"
                    android:textColorHint="@color/hint_color_roboto_lt_30_edittext"
                    android:textSize="17sp"
                    android:id="@+id/userNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:inputType="text"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/username"

                    />


            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="52dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:gravity="bottom"
                >

                <ImageView
                    android:id="@+id/passwordIcon"
                    android:layout_width="31dp"
                    android:layout_height="31dp"
                    android:src="@drawable/password_icon"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="30dp"
                    />

                <EditText
                    fontPath="Roboto-Light.ttf"
                    android:textColor="@color/text_color_roboto_lt_30_edittext"
                    android:textColorHint="@color/hint_color_roboto_lt_30_edittext"
                    android:textSize="17sp"
                    android:drawableRight="@drawable/pwd_show"
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:inputType="textPassword"
                    android:hint="@string/password"
                    android:tag="pwd"/>
            </LinearLayout>

            <Button
                android:layout_width="320dp"
                android:layout_height="50dp"
                android:text="LOG IN"
                android:textSize="6sp"
                fontPath="Roboto-Medium.ttf"
                android:layout_marginTop="40dp"
                android:elevation="5dp"
                android:visibility="gone"
                android:background="@color/primaryColor"
                android:layout_gravity="center_horizontal"
                />

            <android.support.v7.widget.CardView
                android:id="@+id/loginButton"
                android:layout_width="328dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:layout_gravity="center_horizontal"
                app:cardBackgroundColor="@color/primaryColor">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_gravity="center"
                        android:text="@string/log_in"
                        fontPath="Roboto-Medium.ttf"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="?android:selectableItemBackground"
                        android:orientation="horizontal"></LinearLayout>
                </FrameLayout>
            </android.support.v7.widget.CardView>
            <TextView
                fontPath="Roboto-LightItalic.ttf"
                android:id="@+id/forgotPwdTextView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/forgot_your_password"
                android:textSize="13sp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textColor="#969696"/>

            <TextView
                fontPath="Roboto-Light.ttf"
                android:id="@+id/loginStatus"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/primaryColor"
                android:layout_marginTop="30dp"
                android:gravity="center"
                />


