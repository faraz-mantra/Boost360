<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/do_you_have_opc"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="20dp">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/opcInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_opc_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/opc_hint_text"/>

    <RelativeLayout
        android:id="@+id/rl_opc_dialog_confirmation_container"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="45dp">
        <Button
            android:id="@+id/btn_opc_confirm_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main"
            android:textColor="@color/white"
            android:text="@string/cancel"/>
        <Button
            android:id="@+id/btn_opc_confirm__yes"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_main"
            android:textColor="@color/white"
            android:text="@string/proceed"/>
    </RelativeLayout>

</LinearLayout>