<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nowfloats.SiteAppearance.SiteAppearanceFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@color/screen_bg"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            xmlns:card="http://schemas.android.com/apk/res-auto"
            card:cardCornerRadius="3dp"
            card:cardBackgroundColor="@color/white"
            card:cardElevation="3dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <com.nowfloats.CustomWidget.roboto_md_34_primarycolor
                    android:id="@+id/tv_help_header"
                    android:layout_marginTop="5dp"
                    android:text="@string/site_appearance_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_help_body"
                    android:text="@string/site_appearance_text"
                    android:layout_marginTop="10dp"
                    android:textColor="#505050"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_help_footer"
                    android:layout_marginTop="10dp"
                    android:text="@string/site_appearance_warn"
                    android:textColor="#505050"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_learn_kitsune"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:text="LEARN MORE ABOUT NEW VERSION"
                android:padding="5dp"
                android:elevation="3dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"
                android:background="@drawable/button_bg"
                android:layout_height="40dp" />
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/ll_kitsune"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <TextView
                    android:text="ENABLE NEW VERSION"
                    android:id="@+id/tv_kitsune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <Switch
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/primaryColor"
                    android:id="@+id/sv_kitsune"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
