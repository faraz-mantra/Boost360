<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDDDDD"
    tools:context=".VisitsPage">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_default_height_material"
        android:background="#FFC326"
        android:layout_alignParentTop="true"
        android:id="@+id/ab">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#FFC326"
            android:padding="10dp"
            android:src="@drawable/ic_action_back"
            android:id="@+id/homeButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/homeButton"
            android:padding="10dp"
            style="@android:style/TextAppearance.Medium"
            android:textColor="#FFFFFF"
            android:text="Visits"
            android:id="@+id/abTitle"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/curved_grey_background"
        android:layout_below="@+id/ab"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:padding="5dp">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text=""
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/currentNumber"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@+id/currentNumber"
            android:text=""
            android:id="@+id/dottedLine" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chart"
            android:layout_width="fill_parent"
            android:layout_below="@+id/dottedLine"
            android:layout_above="@+id/totalNumber"
            android:layout_height="wrap_content" />






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="#000000"
            style="@android:style/TextAppearance.Medium"
            android:id="@+id/totalNumber" />

    </RelativeLayout>




</RelativeLayout>
