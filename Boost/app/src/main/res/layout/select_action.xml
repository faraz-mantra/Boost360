<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="210dp"
    android:layout_height="wrap_content"

    android:orientation="vertical" >

    <com.nowfloats.CustomWidget.roboto_md_60_212121
        android:id="@+id/textview_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/select_action_dialog_title"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="26dp"
        android:textColor="#878787"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="33dp"
        android:id="@+id/replace_image">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >


            <ImageView
                android:id="@+id/pop_up_replace_img"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/circle_bakground"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_restore_white_24dp"
                />
        </FrameLayout>
        <com.nowfloats.CustomWidget.roboto_lt_24_212121
            android:id="@+id/alert_message_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:text="@string/text_replace_image"
            android:textColor="#878787"

            android:layout_weight=".6"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/delete_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            >


            <ImageView
                android:id="@+id/pop_up_delete_img"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/circle_bakground"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_delete_white_24dp"
                />
        </FrameLayout>

        <com.nowfloats.CustomWidget.roboto_lt_24_212121
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:text="@string/text_delete_image"
            android:textColor="#878787"

            android:layout_weight=".6"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/deletebackgroundImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="20dp"
        android:visibility="gone"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">


            <ImageView
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:src="@drawable/circle_bakground"/>

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center"
                android:src="@drawable/delete_dustbin_button" />
        </FrameLayout>
        <com.nowfloats.CustomWidget.roboto_lt_24_212121
            android:id="@+id/deleteBackgroundImageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="18dp"
            android:text="Delete"
            android:textColor="#878787"
            android:layout_weight=".6"/>

    </LinearLayout>
</LinearLayout>