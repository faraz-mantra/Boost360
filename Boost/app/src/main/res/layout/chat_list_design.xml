<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="5dp"
    android:orientation="vertical">
<LinearLayout
    android:id="@+id/rec_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/chat_male"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/customer"
        android:visibility="gone"
        android:textColor="@color/primaryColor"
        android:textSize="14sp"
       />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/rec_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_color_brown"
            android:textSize="17sp"
            fontPath="Roboto-Light.ttf"
            tools:ignore="MissingPrefix" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="8dp"
                android:src="@drawable/tiny_time"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"
                fontPath="Roboto-Italic.ttf"
                android:textColor="@color/grey"
                android:textSize="10sp"
                android:layout_marginRight="3dp"
                tools:ignore="MissingPrefix" />
        <TextView
            android:id="@+id/rec_time_stamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:30 am"
            fontPath="Roboto-Italic.ttf"
            android:textColor="@color/grey"
            android:textSize="10sp"
            tools:ignore="MissingPrefix" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="8dp"
                android:src="@drawable/tiny_tick"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:id="@+id/send_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me"
            android:textColor="@color/primaryColor"
            android:textSize="14sp"
            android:visibility="gone"
            />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/send_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/message"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_color_brown"
            android:textSize="17sp"
            fontPath="Roboto-Light.ttf"
            tools:ignore="MissingPrefix"
            />
</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="8dp"
                android:src="@drawable/tiny_time"
                android:layout_gravity="center"
                android:layout_marginRight="3dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/today"
                fontPath="Roboto-Italic.ttf"
                android:textColor="@color/grey"
                android:textSize="10sp"
                android:layout_marginRight="3dp"
                tools:ignore="MissingPrefix" />
            <TextView
                android:id="@+id/send_time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:30 am"
                fontPath="Roboto-Italic.ttf"
                android:textColor="@color/grey"
                android:textSize="10sp"
                tools:ignore="MissingPrefix" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="8dp"
                android:src="@drawable/tiny_tick"
                android:layout_gravity="center"
                android:layout_marginLeft="3dp"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/chat_merchant"/>
</LinearLayout>
</LinearLayout>