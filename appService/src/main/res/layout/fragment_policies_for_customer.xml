<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/match_match">

        <com.framework.views.customViews.CustomCardView
            android:id="@+id/customCardView3"
            style="@style/match_wrap"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                style="@style/wrap_wrap"
                android:layout_marginVertical="@dimen/size_16"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/size_16">

                <com.framework.views.customViews.CustomImageView
                    style="@style/wrap_wrap"
                    android:layout_marginEnd="@dimen/size_8"
                    android:src="@drawable/ic_info_circle" />

                <com.framework.views.customViews.CustomTextView
                    style="@style/match_wrap"
                    android:layout_gravity="center"
                    android:text="@string/select_how_you_want_to_recieve_money_for_all_your_online_appointments"
                    android:textSize="12sp" />
            </LinearLayout>

        </com.framework.views.customViews.CustomCardView>

        <androidx.core.widget.NestedScrollView
            style="@style/match_wrap"
            android:layout_height="@dimen/size_0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customCardView3">

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/match_match"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/size_16"
                android:paddingVertical="@dimen/size_16">

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/match_wrap"
                    android:layout_marginTop="@dimen/size_20"
                    android:background="@drawable/bg_rect_white_rounded_4"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="@dimen/size_10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.framework.views.customViews.CustomTextView
                            style="@style/AppointmentSetting_Text_Heading"
                            android:text="@string/refund_policy" />

                        <com.framework.views.customViews.CustomTextView
                            style="@style/Appointment_Text_Subheading"
                            android:text="@string/last_updated_on_24_jan_2020" />

                    </LinearLayout>

                    <com.framework.views.customViews.CustomImageView
                        style="@style/wrap_wrap"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_arrow_right_grey_staff" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btn_other_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:background="@drawable/bg_rect_white_rounded_4"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="@dimen/size_10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/iv_otherInfo"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.framework.views.customViews.CustomTextView
                            style="@style/AppointmentSetting_Text_Heading"
                            android:text="@string/cancellation_policy" />

                        <com.framework.views.customViews.CustomTextView
                            style="@style/Appointment_Text_Subheading"
                            android:text="@string/not_updated_since_start_of_website" />

                    </LinearLayout>

                    <com.framework.views.customViews.CustomImageView
                        android:id="@+id/iv_otherInfo"
                        style="@style/wrap_wrap"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_arrow_right_grey_staff" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/match_wrap"
                    android:layout_marginTop="@dimen/size_20"
                    android:background="@drawable/bg_rect_white_rounded_4"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="@dimen/size_10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.framework.views.customViews.CustomTextView
                            style="@style/AppointmentSetting_Text_Heading"
                            android:text="@string/privacy_policy" />

                        <com.framework.views.customViews.CustomTextView
                            style="@style/Appointment_Text_Subheading"
                            android:text="@string/default_policy" />

                    </LinearLayout>

                    <com.framework.views.customViews.CustomImageView
                        style="@style/wrap_wrap"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_arrow_right_grey_staff" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    style="@style/match_wrap"
                    android:layout_marginTop="@dimen/size_20"
                    android:background="@drawable/bg_rect_white_rounded_4"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:padding="@dimen/size_10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.framework.views.customViews.CustomTextView
                            style="@style/AppointmentSetting_Text_Heading"
                            android:text="@string/term_of_condition" />

                        <com.framework.views.customViews.CustomTextView
                            style="@style/Appointment_Text_Subheading"
                            android:text="@string/default_policy" />

                    </LinearLayout>

                    <com.framework.views.customViews.CustomImageView
                        style="@style/wrap_wrap"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_arrow_right_grey_staff" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>