<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_time_dropdown_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_18"
                android:layout_marginEnd="@dimen/size_4"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/from"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="@dimen/size_8"
                    android:textStyle="normal" />

                <LinearLayout
                    style="@style/SpinnerWithNoArrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/size_5"
                    android:orientation="horizontal">

                    <com.framework.views.customViews.customSpinner.SonicSpinner
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_30"
                        android:layout_weight=".7"
                        android:background="@null"
                        android:entries="@array/Time"
                        android:paddingStart="@dimen/size_4"
                        android:paddingEnd="@dimen/size_4" />

                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/size_8"
                        app:srcCompat="@drawable/ic_dropdown_arrow" />

                </LinearLayout>
            </LinearLayout>

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/size_5"
                android:alpha="0.2"
                android:text="@string/to"
                android:textColor="@color/black_2A2A2A"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_4"
                android:layout_marginEnd="@dimen/size_18"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans"
                    android:text="@string/from"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="8sp"
                    android:textStyle="normal" />

                <LinearLayout
                    style="@style/SpinnerWithNoArrow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/size_5"
                    android:orientation="horizontal">

                    <com.framework.views.customViews.customSpinner.SonicSpinner
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_30"
                        android:layout_weight=".7"
                        android:background="@null"
                        android:entries="@array/Time"
                        android:paddingStart="@dimen/size_4"
                        android:paddingEnd="@dimen/size_4" />

                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/size_8"
                        app:srcCompat="@drawable/ic_dropdown_arrow" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/ctv_add_session"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_time_dropdown_group"
            android:layout_marginStart="@dimen/size_18"
            android:layout_marginTop="@dimen/size_8"
            tools:text="@string/u_add_session_u"
            android:textColor="#4889F8" />

        <com.framework.views.customViews.CustomCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ctv_add_session"
            android:layout_alignStart="@id/ctv_add_session"
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginBottom="@dimen/size_8"
            android:alpha="0.8"
            android:fontFamily="@font/open_sans"
            android:text="@string/apply_same_on_all_days"
            android:textAlignment="center"
            android:textColor="@color/black_4a4a4a"
            android:textFontWeight="600"
            android:textSize="13sp"
            android:textStyle="normal" />
    </RelativeLayout>
</layout>