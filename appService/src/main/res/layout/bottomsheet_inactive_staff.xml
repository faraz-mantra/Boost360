<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_top_white_2"
            android:backgroundTint="#D03F3F"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomImageView
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_30"
                android:src="@drawable/ic_info_transparent" />

            <com.framework.views.customViews.CustomTextView
                style="@style/StaffProfileTextContent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_8"
                android:textColor="@color/white"
                android:fontFamily="@font/open_sans_semibold"
                android:text="@string/this_staff_is_marked_inactive"
               />

            <com.framework.views.customViews.CustomButton
                android:layout_width="wrap_content"
                android:text="@string/activate_staff_profile"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:id="@+id/btn_activate_staff"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/black_4a4a4a"
                android:paddingHorizontal="@dimen/size_16"
                android:textSize="10sp"
                android:stateListAnimator="@null"
                android:background="@drawable/pop_window_background"
                android:layout_marginBottom="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_marginTop="@dimen/size_8" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>