<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_business_emails_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_active_domain_details">

            <LinearLayout
                android:id="@+id/linear_upper_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_active_domain_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_24"
                    android:layout_marginTop="@dimen/size_22"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/vw_yellow_bg">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="8dp">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="@dimen/size_58"
                            android:layout_height="@dimen/size_58"
                            android:layout_marginStart="@dimen/size_12"
                            android:layout_marginTop="@dimen/size_16"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_globe_www" />

                        <View
                            android:id="@+id/vw_ticket_line_dotted"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_marginTop="@dimen/size_18"
                            android:background="@drawable/line_dotted"
                            app:layout_constraintTop_toBottomOf="@+id/imageView" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tv_domain_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_18"
                            android:gravity="center"
                            android:text="thinkwalls.net"
                            android:fontFamily="@font/bold"
                            android:textStyle="bold"
                            android:textColor="@color/black_4a4a4a"
                            android:textSize="@dimen/text_16"
                            app:fontFamily="@font/regular"
                            app:layout_constraintStart_toEndOf="@+id/imageView"
                            app:layout_constraintTop_toTopOf="@+id/imageView" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tv_domain_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_4"
                            android:background="@color/green_light_1"
                            android:gravity="center"
                            android:padding="@dimen/size_2"
                            android:text="Active"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_8"
                            app:cornerRadius="@dimen/size_8"
                            app:fontFamily="@font/regular"
                            app:layout_constraintStart_toStartOf="@+id/tv_domain_value"
                            app:layout_constraintTop_toBottomOf="@+id/tv_domain_value" />


                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tv_booked_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_12"
                            android:layout_marginTop="@dimen/size_8"
                            android:gravity="center"
                            android:text="Booked On"
                            android:textColor="@color/gray_text_hint"
                            android:textSize="@dimen/text_10"
                            app:fontFamily="@font/regular"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/vw_ticket_line_dotted" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tv_booked_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_4"
                            android:layout_marginBottom="@dimen/size_8"
                            android:gravity="center"
                            android:text="15-05-2017"
                            android:textColor="@color/black_4a4a4a"
                            android:textSize="@dimen/text_12"
                            app:fontFamily="@font/regular"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="@+id/tv_booked_title"
                            app:layout_constraintTop_toBottomOf="@+id/tv_booked_title" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tv_expire_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/size_12"
                            android:gravity="center"
                            android:text="Expire On"
                            android:textColor="@color/gray_text_hint"
                            android:textSize="@dimen/text_10"
                            app:fontFamily="@font/regular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/tv_booked_title" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tv_expire_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_4"
                            android:layout_marginBottom="@dimen/size_8"
                            android:gravity="center"
                            android:text="15-05-2017"
                            android:textColor="@color/black_4a4a4a"
                            android:textSize="@dimen/text_12"
                            app:fontFamily="@font/regular"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="@+id/tv_expire_title"
                            app:layout_constraintTop_toBottomOf="@+id/tv_expire_title" />


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_renew_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_36"
                    android:layout_marginTop="@dimen/size_28"
                    android:gravity="center"
                    android:text="Your domain will be automatically renewed based\non your active BOOST package"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_12"
                    app:fontFamily="@font/regular"
                    app:layout_constraintBottom_toBottomOf="@+id/vw_yellow_bg"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_active_domain_details" />


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="@dimen/size_68"
                app:cardCornerRadius="@dimen/size_40"
                app:layout_constraintEnd_toEndOf="@+id/btn_buy_addon"
                app:layout_constraintStart_toStartOf="@+id/btn_buy_addon"
                app:layout_constraintTop_toBottomOf="@+id/linear_upper_section">

                <com.framework.views.customViews.CustomImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_lock_grey" />

            </androidx.cardview.widget.CardView>

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/customTextView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/business_emails"
                android:textSize="@dimen/text_20"
                android:textColor="@color/black_4a4a4a"
                android:layout_marginTop="@dimen/size_22"
                app:fontFamily="@font/regular"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/btn_buy_addon"
                app:layout_constraintStart_toStartOf="@+id/btn_buy_addon"
                app:layout_constraintTop_toBottomOf="@+id/cardView3" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/customTextView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/size_8"
                android:textColor="@color/black_747474"
                android:text="@string/looks_like_this_add_on_is_not_added_to_your_current_plan_add_it_now_to_start_using_it"
                app:layout_constraintEnd_toEndOf="@+id/btn_buy_addon"
                app:layout_constraintStart_toStartOf="@+id/btn_buy_addon"
                app:layout_constraintTop_toBottomOf="@+id/customTextView5" />

            <com.framework.views.customViews.CustomMaterialButton
                android:id="@+id/btn_buy_addon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60"
                android:layout_marginHorizontal="@dimen/size_22"
                android:layout_marginTop="@dimen/size_24"
                android:backgroundTint="@color/colorPrimary"
                android:text="@string/view_in_add_on_store"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14"
                android:textStyle="bold"
                app:cornerRadius="@dimen/size_15"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customTextView6" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tv_note"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/active_domain_note"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/text_12"
                app:fontFamily="@font/regular"
                app:layout_constraintEnd_toEndOf="@+id/btn_buy_addon"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/btn_buy_addon"
                app:layout_constraintTop_toBottomOf="@+id/btn_buy_addon" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>