<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/size_20">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      app:layout_constraintBottom_toTopOf="@+id/btn_start_pan_card"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_editor_absoluteX="14dp">

      <com.framework.views.customViews.CustomImageView
        android:layout_width="@dimen/size_90"
        android:layout_height="@dimen/size_90"
        app:srcCompat="@drawable/ic_real_state_kyc" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:includeFontPadding="false"
        android:text="@string/with_business_kyc"
        android:textColor="@color/greyish_brown"
        app:fontFamily="@font/regular"
        app:textType="HEADING_4" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/verify_business"
        android:textColor="@color/greyish_brown"
        app:fontFamily="@font/semi_bold"
        app:textType="HEADING_4" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/on_boost360"
        android:textColor="@color/greyish_brown"
        app:fontFamily="@font/regular"
        app:textType="HEADING_4" />

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/txt_desc_kyc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_30"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginEnd="@dimen/size_30"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:text="@string/business_verification_allows_customers_trust"
        android:textAlignment="gravity"
        android:textColor="@color/greyish_brown"
        app:textType="BODY_1" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/btn_start_pan_card"
      style="@style/ButtonStyle.Rounded"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:paddingVertical="@dimen/size_14"
      android:text="@string/start_with_pan_card"
      app:layout_constraintBottom_toBottomOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>