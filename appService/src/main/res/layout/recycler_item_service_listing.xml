<?xml version="1.0" encoding="utf-8"?>
<com.framework.views.customViews.CustomCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:elevation="@dimen/size_5"
    app:cardUseCompatPadding="true"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="5dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/item_category_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="@dimen/size_15"
        android:paddingTop="@dimen/size_15"
        android:paddingRight="@dimen/size_15"
        android:paddingBottom="@dimen/size_10">

        <com.framework.views.roundedimageview.RoundedImageView
            android:id="@+id/card_thumbnail"
            android:layout_width="@dimen/size_70"
            android:layout_height="@dimen/size_70"
            android:layout_marginRight="@dimen/size_10"
            app:riv_border_color="@color/gray_ligh_3"
            app:riv_border_width="1dp"
            app:riv_mutate_background="true"
            app:riv_oval="false" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_70"
            android:layout_toEndOf="@+id/card_thumbnail"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingBottom="4dp">

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:drawableEnd="@drawable/ic_clock_gray"
                android:drawablePadding="@dimen/size_5"
                android:drawableTint="@color/secondary_text"
                tools:text="30min"
                android:textColor="@color/secondary_text" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/label_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:maxLines="2"
                android:paddingBottom="3dp"
                android:text="Watch by Fastrack"
                android:textColor="@color/primary_text"
                android:textSize="14sp"
                android:textStyle="normal" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/label_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/label_brand"
                android:fontFamily="@font/regular"
                android:maxLines="2"
                android:text="Fastrack Bare Basic Watch"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/label_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_thumbnail"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="This is a wedding makeup description"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_description"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/label_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Price: "
                android:textColor="@color/secondary_text"
                android:textSize="13sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/ll_share_buttons"
                android:orientation="horizontal">

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/label_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingEnd="4dp"
                    android:text="INR 0"
                    android:textColor="@color/primary_text"
                    android:textSize="12sp" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/label_base_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:paddingStart="2dp"
                    android:paddingEnd="8dp"
                    android:text="INR 0"
                    android:textColor="@color/secondary_text"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_share_buttons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/shareData"
                    android:layout_width="30dp"
                    android:src="@drawable/ic_share_normal"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:padding="@dimen/size_4"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/rounded_stroke_grey_4_solid_gray"
                    app:iconPadding="@dimen/size_3" />


                <com.framework.views.customViews.CustomButton
                    android:id="@+id/share_whatsapp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_button_proceed_4"
                    android:backgroundTint="#6BC95C"
                    android:drawableStart="@drawable/ic_whatsapp_for_business_active"
                    android:drawablePadding="@dimen/size_2"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/size_16"
                    android:text="@string/share"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</com.framework.views.customViews.CustomCardView>
