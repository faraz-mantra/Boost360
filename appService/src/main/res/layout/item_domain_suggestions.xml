<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_54">

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_suggest_domain_select"
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/size_10"
            app:cardUseCompatPadding="true"
            app:cardMaxElevation="1dp"
            app:cardElevation="1dp"
            android:layout_height="match_parent">

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tv_domain_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:drawableStart="@drawable/ic_globe_yellow"
                android:drawableEnd="@drawable/ic_arrow_right_black"
                android:drawablePadding="8dp"
                android:drawableTint="@color/colorAccent"
                android:gravity="center_vertical|start"
                android:textAlignment="gravity"
                android:paddingHorizontal="@dimen/size_12"
                tools:text="samplebusinesswebsite.com"
                android:textColor="@color/black_4a4a4a"
                android:textSize="@dimen/text_14" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>