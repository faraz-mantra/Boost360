<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_suggest_domain_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/view_background_1"
        app:cardCornerRadius="20dp">

    <com.framework.views.customViews.CustomTextView
        android:id="@+id/tv_domain_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_40"
        android:background="@color/white"
        android:text="samplebusinesswebsite.com"
        android:layout_margin="2dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:gravity="center_vertical|start"
        android:drawablePadding="8dp"
        android:drawableStart="@drawable/ic_globe_yellow"
        android:drawableEnd="@drawable/ic_arrow_right_black"
        android:drawableTint="@color/colorPrimary"
        android:textColor="@color/black_4a4a4a"
        android:textSize="@dimen/text_14"
        android:elevation="8dp"/>

    </androidx.cardview.widget.CardView>

</androidx.appcompat.widget.LinearLayoutCompat>
</layout>