<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_400"
                android:background="#60000000"
                android:gravity="center"
                >
                <com.theartofdev.edmodo.cropper.CropImageView
                    android:id="@+id/crop_img"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_200"
                    android:layout_marginStart="@dimen/size_25"
                    android:layout_marginEnd="@dimen/size_25"
                    android:layout_marginTop="8dp"
                    app:cropScaleType="fitCenter" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_smaller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toTopOf="@id/tv_note"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_info_red"
                android:layout_marginTop="3dp"
                />

            <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_8"
                android:textColor="@color/smaller_background_red"
                android:fontFamily="@font/bold"
                android:text="@string/smaller_image_selected_331x159px" />
        </LinearLayout>
        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_note"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:layout_constraintStart_toStartOf="@id/layout_smaller"
            app:layout_constraintEnd_toEndOf="@id/layout_smaller"
            app:layout_constraintBottom_toTopOf="@id/btn_done"
            android:text="@string/image_should_be_in_jpeg_or_png_format_with_minimum_size_of_1600x700_pixels" />
        <com.framework.views.customViews.CustomMaterialButton
            android:id="@+id/btn_done"
            style="@style/ButtonStyle.Rounded.Solid.Red.BottomSheet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_46"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:enabled="true"
            android:includeFontPadding="false"
            android:text="@string/change_image"
            android:textColor="@color/white"
            app:backgroundTint="#E39595"
            app:iconGravity="textStart"
            app:iconTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
