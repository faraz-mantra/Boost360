<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_160"
            android:background="@color/orange"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/instamojoAccountLimitCard"
            app:cardBackgroundColor="@color/white"
            android:layout_width="@dimen/size_360"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/size_10"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            android:layout_marginHorizontal="@dimen/size_20">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/size_40"
                android:paddingHorizontal="@dimen/size_50"
                android:orientation="vertical"
                >
            <com.framework.views.customViews.CustomImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/instamojo_logo"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/size_40"/>

            <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/currently_you_re_having_a_limit_of"
                android:gravity="center"
                app:textType="HEADING_6"
                android:fontFamily="@font/regular"
                android:textColor="@color/warm_grey"
                />
            <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rs_10_000_per_month"
                android:gravity="center"
                app:textType="HEADING_4"
                android:textStyle="bold"
                android:fontFamily="@font/regular"
                android:textColor="@color/warm_grey"
                />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/ll_add_on_not_active"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/instamojoAccountLimitCard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:paddingHorizontal="@dimen/size_24">

            <com.framework.views.customViews.CustomCardView
                android:layout_width="@dimen/size_100"
                android:layout_height="@dimen/size_100"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/size_60"
                android:layout_marginVertical="@dimen/size_20">
            <com.framework.views.customViews.CustomImageView
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:src="@drawable/docs_verification"
                android:layout_gravity="center"/>
            </com.framework.views.customViews.CustomCardView>
            <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/you_have_already_submitted_your_documents_for_verification"
                android:gravity="center"
                android:fontFamily="@font/regular"
                android:textSize="@dimen/size_16"
                android:textColor="@color/warm_grey"
                />
            <com.framework.views.customViews.CustomTextView
                android:id="@+id/btnCheckDocsStatus"
                style="@style/ButtonStyle.Rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/check_status"
                android:textAllCaps="true"
                android:paddingVertical="@dimen/size_8"
                android:paddingHorizontal="@dimen/size_30"
                android:layout_marginVertical="@dimen/size_10"
                android:gravity="center"
                />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>