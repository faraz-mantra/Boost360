<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/size_8"
    android:layout_marginVertical="@dimen/size_16"
    android:background="@drawable/rounded_button_yellow"
    android:backgroundTint="@color/yellow_ffb900"
    android:paddingHorizontal="@dimen/size_16"
    android:paddingVertical="@dimen/size_2">

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/ctv_staff_status"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:fontFamily="@font/open_sans"
      android:textSize="13sp"
      tools:text="All"
      tools:textColor="@color/white" />

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/ctv_staff_status_count"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size_8"
      android:layout_toEndOf="@id/ctv_staff_status"
      android:background="@drawable/rounded_button_yellow"
      android:fontFamily="@font/open_sans"
      android:padding="@dimen/size_2"
      android:textAlignment="center"
      android:textColor="@color/black"
      tools:text="10" />
  </RelativeLayout>
</layout>