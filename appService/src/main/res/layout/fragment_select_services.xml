<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.framework.views.customViews.CustomTextView
        android:id="@+id/tv_services_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fontFamily="@font/open_sans"
        android:padding="15sp"
        android:textFontWeight="600"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="4/8 services selected" />

    <com.framework.views.customViews.CustomTextView
        android:id="@+id/ctv_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_16"
        tools:text="@string/select_what_services_that_the_staff"
        app:layout_constraintTop_toBottomOf="@+id/tv_services_count"/>

    <com.framework.views.viewgroups.BaseRecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/size_16"
        android:id="@+id/rv_service_provided"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_16"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/btn_take_to_listing"
        app:layout_constraintTop_toBottomOf="@+id/ctv_heading"
        tools:itemCount="7"
        tools:listitem="@layout/recycler_item_service" />

    <FrameLayout
        android:id="@+id/btn_take_to_listing"
        style="@style/ButtonStyle.Rounded.Solid"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/ctv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            tools:text="Confirm 4 services"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textFontWeight="600"
            app:textType="BODY_1" />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>