<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
    android:id="@+id/verification_ui"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_top_stroke_gray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/size_18">

    <com.airbnb.lottie.LottieAnimationView
      android:layout_width="@dimen/size_60"
      android:layout_height="@dimen/size_60"
      android:layout_gravity="center_horizontal"
      app:lottie_autoPlay="true"
      app:lottie_loop="true"
      app:lottie_rawRes="@raw/green_success" />

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/text_verification"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size_10"
      android:drawablePadding="@dimen/size_8"
      android:gravity="center"
      android:text="@string/bank_account_verified"
      android:textAlignment="gravity"
      android:textColor="@color/green_27AE60"
      app:textType="HEADING_5" />

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/text_desc"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size_20"
      android:layout_marginTop="@dimen/size_10"
      android:layout_marginEnd="@dimen/size_20"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center"
      android:text="@string/this_account_is_being_used_to_send_you_money_collected_from_your_customers_who_are_making_payments_on_your_boost_business_website"
      android:textAlignment="gravity"
      android:textColor="@color/we_are_currently_"
      app:fontFamily="@font/regular"
      app:textType="CAPTION" />
  </LinearLayout>

</layout>