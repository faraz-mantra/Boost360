<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingStart="@dimen/size_20"
          android:paddingEnd="@dimen/size_20">

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_36"
              android:drawablePadding="@dimen/size_4"
              android:drawableTint="@color/orange"
              android:includeFontPadding="false"
              android:text="Digital channels syncing"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

          <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="Select the channels where you want to sync this service"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              android:visibility="gone"
              app:fontFamily="@font/regular" />

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:paddingLeft="@dimen/size_10"
            android:paddingTop="@dimen/size_8"
            android:paddingRight="@dimen/size_10"
            android:paddingBottom="@dimen/size_8">

            <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_10"
                android:includeFontPadding="false"
                android:text="JioLocal"
                android:textColor="@color/warm_grey"
                android:textSize="14sp"
                app:drawableLeftCompat="@drawable/ic_jio"
                app:fontFamily="@font/regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomCheckBox
                android:id="@+id/cbJioLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/ActiveTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_10"
              android:background="@drawable/shape_grey_stroke_rect_bkg"
              android:paddingLeft="@dimen/size_10"
              android:paddingTop="@dimen/size_8"
              android:paddingRight="@dimen/size_10"
              android:paddingBottom="@dimen/size_8">

            <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_10"
                android:includeFontPadding="false"
                android:text="Facebook Page Shop"
                android:textColor="@color/warm_grey"
                android:textSize="14sp"
                app:drawableLeftCompat="@drawable/ic_facebook_flag"
                app:fontFamily="@font/regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomCheckBox
                android:id="@+id/cbFacebookPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/ActiveTheme"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_10"
              android:background="@drawable/shape_grey_stroke_rect_bkg"
              android:paddingLeft="@dimen/size_4"
              android:paddingTop="@dimen/size_8"
              android:paddingRight="@dimen/size_10"
              android:paddingBottom="@dimen/size_8">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

              <com.framework.views.customViews.CustomImageView
                  android:layout_width="@dimen/size_30"
                  android:layout_height="@dimen/size_32"
                  app:srcCompat="@drawable/ic_google_business_n" />

              <com.framework.views.customViews.CustomTextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/size_3"
                  android:includeFontPadding="false"
                  android:text="Google Merchant Center"
                  android:textColor="@color/warm_grey"
                  android:textSize="14sp"
                  app:fontFamily="@font/regular" />
            </LinearLayout>


            <com.framework.views.customViews.CustomCheckBox
              android:id="@+id/cbGoogleMerchantCenter"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:theme="@style/ActiveTheme"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:paddingLeft="@dimen/size_10"
            android:paddingTop="@dimen/size_8"
            android:paddingRight="@dimen/size_10"
            android:paddingBottom="@dimen/size_8">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_10"
              android:includeFontPadding="false"
              android:text="Twitter Page"
              android:textColor="@color/warm_grey"
              android:textSize="14sp"
              app:drawableLeftCompat="@drawable/ic_twiter_page"
              app:fontFamily="@font/regular"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomCheckBox
              android:id="@+id/cbTwitterPage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:theme="@style/ActiveTheme"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_36"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="Secondary images"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_2"
                android:drawablePadding="@dimen/size_4"
                android:drawableTint="@color/orange"
                android:includeFontPadding="false"
                android:text="(8 max, Jpeg/png, 800x800px)"
                android:textColor="@color/warm_grey"
                android:textSize="12sp"
                app:drawableEndCompat="@drawable/ic_question_circular_blue"
                app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.viewgroups.BaseRecyclerView
            android:id="@+id/rvAdditionalDocs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_preview_image" />

          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_click_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:background="@drawable/shape_blue_stroke_rect_title_bkg"
            android:padding="@dimen/size_14">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="Add secondary images"
              android:textColor="@color/dodger_blue_two"
              app:drawableLeftCompat="@drawable/ic_small_add_images"
              app:fontFamily="@font/semi_bold"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:textAllCaps="true"
              app:textType="BODY_1" />


          </androidx.constraintlayout.widget.ConstraintLayout>


          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_4"
                android:includeFontPadding="false"
                android:text="Associated brand name (if any)"
                android:textColor="@color/black_4a4a4a"
                app:fontFamily="@font/semi_bold"
                app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                android:text="In case this service is associated with/certified by any brand."
                android:textColor="@color/warm_grey"
                android:textSize="12sp"
                android:visibility="gone"
                app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextField
              android:id="@+id/edt_brand"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_5"
              android:background="@drawable/bg_rect_edit_txt"
              android:hint="Dry Balanese Massage"
              android:inputType="textCapWords"
              android:padding="@dimen/size_12"
              android:singleLine="true"
              android:textColor="@color/warm_grey_10"
              android:textColorHint="@color/primary_grey"
              tools:ignore="UnusedAttribute" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/size_4"
                android:drawableTint="@color/orange"
                android:includeFontPadding="false"
                android:text="Service Tags"
                android:textColor="@color/black_4a4a4a"
                app:drawableEndCompat="@drawable/ic_question_circular_blue"
                app:fontFamily="@font/semi_bold"
                app:textType="BODY_3" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipsService"
            style="@style/Widget.MaterialComponents.ChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacing="8dp"
            app:singleSelection="false">

          </com.google.android.material.chip.ChipGroup>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/bg_rect_edit_txt">

            <com.framework.views.customViews.CustomTextField
              android:id="@+id/edt_service_tag"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:background="@null"
              android:hint="Type a tag and press 'ADD'"
              android:inputType="textCapWords"
              android:maxEms="3"
              android:padding="@dimen/size_12"
              android:singleLine="true"
              android:textColor="@color/warm_grey_10"
              android:textColorHint="@color/primary_grey"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@id/btn_add_tag"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="UnusedAttribute" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/btn_add_tag"
                android:layout_width="@dimen/size_80"
                android:layout_height="0dp"
                android:background="@drawable/shape_blue_stroke_rect_title_bkg"
                android:clickable="true"
                android:gravity="center"
                android:text="Add"
                android:textColor="@color/dodger_blue_two"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toBottomOf="@id/edt_service_tag"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/edt_service_tag"
                app:textAllCaps="true"
                app:textType="BODY_1" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_26"
              android:drawablePadding="@dimen/size_4"
              android:drawableTint="@color/orange"
              android:includeFontPadding="false"
              android:text="Key specifications"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="It appears at the end of the service name as it’s variant"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              android:visibility="gone"
              app:fontFamily="@font/regular" />

          <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="@dimen/size_38"
              android:layout_marginTop="@dimen/size_5"
              android:layout_marginBottom="@dimen/size_5"
              android:background="@drawable/shape_grey_stroke_rect_bkg"
              android:gravity="center_vertical"
              android:orientation="horizontal">

            <com.framework.views.customViews.CustomEditText
                android:id="@+id/type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:background="@android:color/transparent"
                android:hint="e.g. Color"
                android:maxLines="1"
                android:paddingStart="@dimen/size_8"
                android:singleLine="true"
                android:textColor="@color/greyish_brown"
                android:textColorHint="@color/primary_grey"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/placeholder_bg" />

            <com.framework.views.customViews.CustomEditText
                android:id="@+id/value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Yellow and Orange"
                android:maxLines="1"
                android:paddingStart="@dimen/size_8"
                android:singleLine="true"
                android:textColor="@color/greyish_brown"
                android:textColorHint="@color/primary_grey"
                android:textSize="14sp" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_26"
              android:drawablePadding="@dimen/size_4"
              android:drawableTint="@color/orange"
              android:includeFontPadding="false"
              android:text="Service specifications"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

          <com.framework.views.viewgroups.BaseRecyclerView
            android:id="@+id/rvSpecification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:itemCount="2"
            tools:listitem="@layout/row_layout_added_specs" />

          <com.framework.views.customViews.CustomTextView
              android:id="@+id/btn_add_specification"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_10"
              android:background="@drawable/shape_blue_stroke_rect_title_bkg"
              android:clickable="true"
              android:gravity="center"
              android:minWidth="@dimen/size_100"
              android:padding="@dimen/size_10"
              android:text="Add specification"
              android:textColor="@color/dodger_blue_two"
              app:fontFamily="@font/semi_bold"
              app:layout_constraintBottom_toBottomOf="@id/edt_service_tag"
              app:layout_constraintRight_toRightOf="@id/edt_service_tag"
              app:layout_constraintTop_toTopOf="@id/edt_service_tag"
              app:textAllCaps="true"
              app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_26"
              android:drawablePadding="@dimen/size_4"
              android:drawableTint="@color/orange"
              android:includeFontPadding="false"
              android:text="External URL"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="If this item is also listed on some other website, enter the URL below"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />

          <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="@dimen/size_38"
              android:layout_marginTop="@dimen/size_5"
              android:layout_marginBottom="@dimen/size_5"
              android:background="@drawable/shape_grey_stroke_rect_bkg"
              android:gravity="center_vertical"
              android:orientation="horizontal">

            <com.framework.views.customViews.CustomEditText
                android:id="@+id/cet_website"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:background="@android:color/transparent"
                android:hint="Website name"
                android:maxLines="1"
                android:paddingLeft="@dimen/size_8"
                android:singleLine="true"
                android:textColor="@color/greyish_brown"
                android:textColorHint="@color/primary_grey"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/placeholder_bg" />

            <com.framework.views.customViews.CustomEditText
                android:id="@+id/cet_website_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Paste your URL here…"
                android:maxLines="1"
                android:paddingStart="@dimen/size_8"
                android:singleLine="true"
                android:textColor="@color/greyish_brown"
                android:textColorHint="@color/primary_grey"
                android:textSize="14sp" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_26"
              android:drawablePadding="@dimen/size_4"
              android:drawableTint="@color/orange"
              android:includeFontPadding="false"
              android:text="Payment collection and max quantity"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/_6dp"
              android:includeFontPadding="false"
              android:text="@string/this_information_is_required_if_you_select"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              android:visibility="gone"
              app:fontFamily="@font/regular" />

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_marginTop="@dimen/size_16"
              android:layout_height="wrap_content"
              android:background="@drawable/rounded_stroke_grey"
              android:paddingHorizontal="@dimen/size_16"
              android:paddingVertical="@dimen/size_10">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_6dp"
                android:orientation="horizontal">

              <com.framework.views.customViews.CustomTextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="start|bottom"
                  android:layout_marginStart="@dimen/size_4"
                  android:layout_weight="1"
                  android:drawablePadding="4dp"
                  android:includeFontPadding="false"
                  android:text="Accept online payment"
                  android:textColor="@color/warm_grey"
                  android:textSize="12sp"
                  app:fontFamily="@font/regular" />

              <Space
                  android:layout_width="@dimen/size_0"
                  android:layout_height="@dimen/size_0"
                  android:layout_weight=".1" />

              <com.framework.views.customViews.CustomTextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="start|bottom"
                  android:layout_marginStart="@dimen/size_4"
                  android:layout_weight="1"
                  android:drawablePadding="4dp"
                  android:includeFontPadding="false"
                  android:text="Max quantity per order"
                  android:textColor="@color/warm_grey"
                  android:textSize="12sp"
                  app:fontFamily="@font/regular" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/cet_cod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_btop"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="@dimen/size_4"
                android:layout_marginTop="@dimen/_6dp"
                android:drawablePadding="4dp"
                android:includeFontPadding="false"
                android:text="Accept COD payment"
                android:textColor="@color/warm_grey"
                android:textSize="12sp"
                app:fontFamily="@font/regular" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cet_cod"
                android:layout_marginTop="@dimen/_6dp"
                android:orientation="horizontal">

              <LinearLayout
                  android:layout_width="@dimen/size_0"
                  android:layout_height="@dimen/size_40"
                  android:layout_weight="1"
                  android:background="@drawable/rounded_edit_stroke"
                  android:orientation="horizontal">

                <com.framework.views.customViews.CustomImageView
                    android:layout_width="@dimen/size_10"
