<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingStart="@dimen/size_20"
          android:paddingEnd="@dimen/size_20">

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_36"
            android:drawablePadding="@dimen/size_4"
            android:drawableTint="@color/orange"
            android:includeFontPadding="false"
            android:text="Digital channels syncing"
            android:textColor="@color/black_4a4a4a"
            android:visibility="gone"
            app:drawableEndCompat="@drawable/ic_question_circular_blue"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_3" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Select the channels where you want to sync this service"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            android:visibility="gone"
            app:fontFamily="@font/regular" />

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:paddingStart="@dimen/size_10"
            android:paddingTop="@dimen/size_8"
            android:paddingRight="@dimen/size_10"
            android:paddingBottom="@dimen/size_8"
            android:visibility="gone">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_10"
              android:includeFontPadding="false"
              android:text="JioLocal"
              android:textColor="@color/warm_grey"
              android:textSize="14sp"
              app:drawableLeftCompat="@drawable/ic_jio"
              app:fontFamily="@font/regular"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomCheckBox
              android:id="@+id/cbJioLocal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:theme="@style/ActiveTheme"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:paddingStart="@dimen/size_10"
            android:paddingTop="@dimen/size_8"
            android:paddingRight="@dimen/size_10"
            android:paddingBottom="@dimen/size_8"
            android:visibility="gone">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_10"
              android:includeFontPadding="false"
              android:text="Facebook Page Shop"
              android:textColor="@color/warm_grey"
              android:textSize="14sp"
              app:drawableLeftCompat="@drawable/ic_facebook_flag"
              app:fontFamily="@font/regular"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomCheckBox
              android:id="@+id/cbFacebookPage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:theme="@style/ActiveTheme"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:paddingStart="@dimen/size_4"
            android:paddingTop="@dimen/size_8"
            android:paddingRight="@dimen/size_10"
            android:paddingBottom="@dimen/size_8"
            android:visibility="gone">

            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent">

              <com.framework.views.customViews.CustomImageView
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_32"
                app:srcCompat="@drawable/ic_google_business_n" />

              <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_3"
                android:includeFontPadding="false"
                android:text="Google Merchant Center"
                android:textColor="@color/warm_grey"
                android:textSize="14sp"
                app:fontFamily="@font/regular" />
            </LinearLayout>


            <com.framework.views.customViews.CustomCheckBox
              android:id="@+id/cbGoogleMerchantCenter"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:theme="@style/ActiveTheme"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:paddingStart="@dimen/size_10"
            android:paddingTop="@dimen/size_8"
            android:paddingRight="@dimen/size_10"
            android:paddingBottom="@dimen/size_8"
            android:visibility="gone">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_10"
              android:includeFontPadding="false"
              android:text="Twitter Page"
              android:textColor="@color/warm_grey"
              android:textSize="14sp"
              app:drawableLeftCompat="@drawable/ic_twiter_page"
              app:fontFamily="@font/regular"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomCheckBox
              android:id="@+id/cbTwitterPage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:theme="@style/ActiveTheme"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_20"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="@string/secondary_images"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/size_2"
              android:includeFontPadding="false"
              android:text="@string/_8_max_jpeg_png_800x800px"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_click_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:background="@drawable/shape_blue_stroke_rect_title_bkg"
            android:padding="@dimen/size_12">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="@string/add_secondary_images"
              android:textColor="@color/yellow_ffb900"
              app:drawableLeftCompat="@drawable/ic_small_add_images"
              app:fontFamily="@font/semi_bold"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:textAllCaps="true"
              app:textType="BODY_1" />


          </androidx.constraintlayout.widget.ConstraintLayout>

          <com.framework.views.viewgroups.BaseRecyclerView
            android:id="@+id/rvAdditionalDocs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_preview_image" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_4"
              android:includeFontPadding="false"
              android:text="@string/associated_brand_name_if_any"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="@string/in_case_this_service_is_associated_with_certified_by_any_brand"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              android:visibility="gone"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextField
            android:id="@+id/edt_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/bg_rect_edit_txt"
            android:hint="@string/dry_balanese_massage"
            android:inputType="textCapWords"
            android:padding="@dimen/size_12"
            android:singleLine="true"
            android:textColor="@color/warm_grey_10"
            android:textColorHint="@color/primary_grey"
            tools:ignore="UnusedAttribute" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_4"
              android:drawableTint="@color/orange"
              android:includeFontPadding="false"
              android:text="@string/service_tags"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipsService"
            style="@style/Widget.MaterialComponents.ChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacing="8dp"
            app:singleSelection="false">

          </com.google.android.material.chip.ChipGroup>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/bg_rect_edit_txt">

            <com.framework.views.customViews.CustomTextField
              android:id="@+id/edt_service_tag"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:background="@null"
              android:hint="@string/type_a_tag_and_press_add_s_info"
              android:inputType="textCapWords"
              android:maxEms="3"
              android:padding="@dimen/size_12"
              android:singleLine="true"
              android:textColor="@color/warm_grey_10"
              android:textColorHint="@color/primary_grey"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@id/btn_add_tag"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="UnusedAttribute" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/btn_add_tag"
              android:layout_width="@dimen/size_80"
              android:layout_height="0dp"
              android:layout_margin="@dimen/size_4"
              android:background="@drawable/shape_blue_stroke_rect_title_bkg"
              android:clickable="true"
              android:gravity="center"
              android:text="@string/add"
              android:textColor="@color/yellow_ffb900"
              app:fontFamily="@font/semi_bold"
              app:layout_constraintBottom_toBottomOf="@id/edt_service_tag"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="@id/edt_service_tag"
              app:textAllCaps="true"
              app:textType="BODY_1" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:drawablePadding="@dimen/size_4"
            android:drawableTint="@color/orange"
            android:includeFontPadding="false"
            android:text="@string/key_specifications"
            android:textColor="@color/black_4a4a4a"
            app:drawableEndCompat="@drawable/ic_question_circular_blue"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_3" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/it_appears_at_the_end_of_the_service_name_as_it_s_variant"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            android:visibility="gone"
            app:fontFamily="@font/regular" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40"
            android:layout_marginTop="@dimen/size_5"
            android:layout_marginBottom="@dimen/size_5"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomEditText
              android:id="@+id/cet_spec_key"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.3"
              android:background="@android:color/transparent"
              android:hint="@string/e_g_color"
              android:maxLines="1"
              android:paddingStart="@dimen/size_8"
              android:singleLine="true"
              android:textColor="@color/greyish_brown"
              android:textColorHint="@color/primary_grey"
              android:textSize="14sp" />

            <View
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="@color/placeholder_bg" />

            <com.framework.views.customViews.CustomEditText
              android:id="@+id/cet_spec_value"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@android:color/transparent"
              android:hint="@string/yellow_and_orange"
              android:maxLines="1"
              android:paddingStart="@dimen/size_8"
              android:singleLine="true"
              android:textColor="@color/greyish_brown"
              android:textColorHint="@color/primary_grey"
              android:textSize="14sp" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:drawablePadding="@dimen/size_4"
            android:drawableTint="@color/orange"
            android:includeFontPadding="false"
            android:text="@string/service_specifications"
            android:textColor="@color/black_4a4a4a"
            app:drawableEndCompat="@drawable/ic_question_circular_blue"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_3" />

          <com.framework.views.viewgroups.BaseRecyclerView
            android:id="@+id/rvSpecification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:itemCount="2"
            tools:listitem="@layout/row_layout_added_specs" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/btn_add_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_blue_stroke_rect_title_bkg"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="@dimen/size_100"
            android:padding="@dimen/size_8"
            android:text="@string/add_specification"
            android:textColor="@color/yellow_ffb900"
            app:fontFamily="@font/semi_bold"
            app:layout_constraintBottom_toBottomOf="@id/edt_service_tag"
            app:layout_constraintRight_toRightOf="@id/edt_service_tag"
            app:layout_constraintTop_toTopOf="@id/edt_service_tag"
            app:textAllCaps="true"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:drawablePadding="@dimen/size_4"
            android:drawableTint="@color/orange"
            android:includeFontPadding="false"
            android:text="@string/external_url"
            android:textColor="@color/black_4a4a4a"
            android:visibility="visible"
            app:drawableEndCompat="@drawable/ic_question_circular_blue"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_3" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/if_this_item_is_also_listed_on_some_other_website_enter_the_url_below"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            android:visibility="visible"
            app:fontFamily="@font/regular" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_38"
            android:layout_marginTop="@dimen/size_5"
            android:layout_marginBottom="@dimen/size_5"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <com.framework.views.customViews.CustomEditText
              android:id="@+id/cet_website"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.5"
              android:background="@android:color/transparent"
              android:hint="@string/website_name"
              android:maxLines="1"
              android:paddingStart="@dimen/size_8"
              android:singleLine="true"
              android:textColor="@color/greyish_brown"
              android:textColorHint="@color/primary_grey"
              android:textSize="14sp" />

            <View
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="@color/placeholder_bg" />

            <com.framework.views.customViews.CustomEditText
              android:id="@+id/cet_website_value"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@android:color/transparent"
              android:hint="@string/paste_your_url_here"
              android:maxLines="1"
              android:paddingStart="@dimen/size_8"
              android:singleLine="true"
              android:textColor="@color/greyish_brown"
              android:textColorHint="@color/primary_grey"
              android:textSize="14sp" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:drawablePadding="@dimen/size_4"
            android:drawableTint="@color/orange"
            android:includeFontPadding="false"
            android:text="@string/payment_collection_and_max_quantity"
            android:textColor="@color/black_4a4a4a"
            android:visibility="gone"
            app:drawableEndCompat="@drawable/ic_question_circular_blue"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_3" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_6dp"
            android:includeFontPadding="false"
            android:text="@string/this_information_is_required_if_you_select"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            android:visibility="gone"
            app:fontFamily="@font/regular" />

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:background="@drawable/rounded_stroke_grey"
            android:paddingHorizontal="@dimen/size_16"
            android:paddingVertical="@dimen/size_10"
            android:visibility="gone">

            <androidx.appcompat.widget.LinearLayoutCompat
              android:id="@+id/ll_top"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

              <com.framework.views.customViews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="@dimen/size_4"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:includeFontPadding="false"
                android:text="@string/accept_online_payment"
                android:textColor="@color/warm_grey"
                android:textSize="12sp"
                android:visibility="visible"
                app:fontFamily="@font/regular" />

              <Space
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_0"
                android:layout_weight=".1"
                android:visibility="visible" />

              <com.framework.views.customViews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="@dimen/size_4"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="@string/max_quantity_per_order"
                android:textColor="@color/warm_grey"
                android:textSize="12sp"
                app:fontFamily="@font/regular" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/cet_cod"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/ll_btop"
              android:layout_gravity="start|bottom"
              android:layout_marginStart="@dimen/size_4"
              android:layout_marginTop="@dimen/_6dp"
              android:drawablePadding="4dp"
              android:includeFontPadding="false"
              android:text="@string/accept_cod_payment"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              android:visibility="visible"
              app:fontFamily="@font/regular" />

            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/cet_cod"
              android:orientation="horizontal"
              android:visibility="visible">

              <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_cod"
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:background="@drawable/spinner_catalog" />

              <Space
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_0"
                android:layout_weight="1.1"
                android:visibility="visible" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
              android:id="@+id/ll_btop"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/ll_top"
              android:orientation="horizontal"
              android:visibility="visible">

              <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_online_payment"
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:background="@drawable/spinner_catalog" />

              <Space
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_0"
                android:layout_weight=".1" />

              <LinearLayout
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:background="@drawable/bg_white_solid_grey_rounded"
                android:backgroundTint="#f6f6f6"
                android:orientation="horizontal">

                <com.framework.views.customViews.CustomImageView
                  android:id="@+id/civ_decrese_quantity_order"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:clickable="true"
                  android:focusable="true"
                  android:foreground="?android:attr/selectableItemBackground"
                  android:paddingHorizontal="@dimen/size_20"
                  android:src="@drawable/ic_minus" />

                <com.framework.views.customViews.CustomTextView
                  android:id="@+id/ctv_quantity_order_status"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_marginStart="-5dp"
                  android:layout_marginEnd="-5dp"
                  android:layout_weight="1.3"
                  android:background="@drawable/bg_text_rounded"
                  android:gravity="center"
                  android:textColor="@color/gray_text_hint"
                  android:textSize="12.57sp" />

                <com.framework.views.customViews.CustomImageView
                  android:id="@+id/civ_increase_quantity_order"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:clickable="true"
                  android:foreground="?android:attr/selectableItemBackground"
                  android:paddingHorizontal="@dimen/size_20"
                  android:src="@drawable/ic_plus_btn" />
              </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>
          </RelativeLayout>

          <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_gst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="@string/applicable_gst_slab"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/size_4"
              android:drawablePadding="4dp"
              android:drawableTint="@color/orange"
              android:gravity="center"
              android:includeFontPadding="false"
              android:text="@string/for_invoice"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextField
            android:id="@+id/edt_gst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/bg_rect_edit_txt"
            android:clickable="true"
            android:focusable="false"
            android:hint="@string/_0"
            android:padding="@dimen/size_12"
            android:singleLine="true"
            android:textColor="@color/warm_grey_10"
            android:textColorHint="@color/primary_grey"
            tools:ignore="UnusedAttribute" />

          <RelativeLayout
            android:id="@+id/weekly_appointment_schedule"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/size_26"
            android:background="@drawable/rounded_stroke_grey"
            android:foreground="?selectableItemBackground"
            android:paddingHorizontal="@dimen/size_10"
            android:paddingVertical="@dimen/size_16"
            android:visibility="visible">

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/tv_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawableEnd="@drawable/ic_arrow_right_grey_staff"
              android:drawablePadding="@dimen/size_4"
              android:includeFontPadding="false"
              android:text="@string/weekly_appointment_schedule"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/tv_subtitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_title"
              android:includeFontPadding="false"
              android:text="@string/customise_the_weekly_timings_when_all_appointment_for_this_servive_can_be_booked"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/txt_days_active"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/tv_subtitle"
              android:layout_marginTop="@dimen/size_10"
              android:includeFontPadding="false"
              android:text="@string/mon_tue_wed_thu_fri"
              android:textColor="@color/cerulean_blue"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />
          </RelativeLayout>

          <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_14"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <com.framework.views.customViews.CustomButton
              android:id="@+id/btn_confirm"
              android:layout_width="match_parent"
              android:layout_height="@dimen/size_44"
              android:layout_gravity="center_horizontal"
              android:background="@drawable/bg_button_proceed"
              android:fontFamily="@font/semi_bold"
              android:gravity="center"
              android:padding="@dimen/size_12"
              android:stateListAnimator="@null"
              android:text="@string/confirm"
              android:textAllCaps="true"
              android:textColor="@color/white"
              app:textType="HEADING_6" />
          </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

      </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>


  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>