<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.framework.views.customViews.CustomCardView
    style="@style/wrap_wrap"
        app:cardCornerRadius="@dimen/size_6"
        app:cardUseCompatPadding="true">

        <LinearLayout
           style="@style/wrap_wrap"
            android:paddingHorizontal="@dimen/size_16"
            android:gravity="center"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/ctv_share"
                style="@style/wrap_wrap"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/semi_bold"
                android:gravity="center"
                android:padding="@dimen/size_16"
                android:text="@string/share"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginHorizontal="@dimen/size_20"
                android:background="@color/gray_light_3" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/ctv_rename"
                style="@style/wrap_match"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/semi_bold"
                android:gravity="center"
                android:padding="@dimen/size_16"
                android:textAllCaps="true"
                android:text="@string/rename"
                android:textColor="@color/black"
                android:textSize="12sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:layout_marginHorizontal="@dimen/size_20"
                android:background="@color/gray_light_3" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/ctv_delete"
            style="@style/wrap_match"
                android:background="?android:selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/semi_bold"
                android:gravity="center"
                android:padding="@dimen/size_16"
                android:text="@string/delete_"
                android:textAllCaps="true"
                android:textColor="@color/red_F40000"
                android:textSize="12sp" />

        </LinearLayout>

    </com.framework.views.customViews.CustomCardView>
</layout>