<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/app_bar">

            <com.framework.views.customViews.CustomToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                app:title=""
                android:layout_height="?attr/actionBarSize"
                app:navigationIcon="@drawable/ic_back_arrow_new"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:textSize="18sp"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/white"
                    android:text="@string/business_logo"
                    android:layout_height="wrap_content"/>

            </com.framework.views.customViews.CustomToolbar>


        </com.google.android.material.appbar.AppBarLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.core.widget.NestedScrollView
                android:background="@color/grey_f8f8f8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/footer"
                android:fillViewport="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    >


                    <com.framework.views.customViews.CustomCardView
                        android:id="@+id/card_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:translationY="-10dp"
                        app:cardCornerRadius="10dp">


                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/label_logo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginHorizontal="16dp"
                            android:layout_marginTop="26dp"
                            android:layout_marginBottom="@dimen/size_16"
                            android:text="@string/business_logo_info_text_app_service"
                            android:textSize="12sp" />
                    </com.framework.views.customViews.CustomCardView>


                    <com.framework.views.customViews.CustomCardView
                        android:id="@+id/card_view"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_below="@+id/card_logo"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginStart="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginBottom="20dp"
                        app:cardElevation="5dp"
                        app:contentPadding="15dp"
                        app:cardCornerRadius="@dimen/size_10">

                        <com.framework.views.customViews.CustomCardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardElevation="0dp"
                            card_view:cardCornerRadius="8dp">

                            <com.framework.views.customViews.CustomImageView
                                android:id="@+id/logoimageView"

                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/logo_default_image"
                                android:tag="com.userexperior.ueSecureView" />

                        </com.framework.views.customViews.CustomCardView>

                    </com.framework.views.customViews.CustomCardView>

                    <com.framework.views.customViews.CustomMaterialButton
                        android:id="@+id/addLogoButton"
                        style="@style/PrimaryButtonNonGra"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@+id/card_view"
                        android:layout_centerHorizontal="true"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/regular"
                        android:text="@string/change_logo"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        app:cornerRadius="@dimen/size_10" />

                    <RelativeLayout
                        android:background="@drawable/btn_rounded_orange_border"
                        android:id="@+id/create_logo_logtron"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/addLogoButton"
                        android:layout_marginHorizontal="24dp"
                        android:layout_marginTop="16dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <com.framework.views.customViews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/regular"
                                android:text="@string/create_a_new_logo"
                                android:textColor="@color/colorPrimary"
                                android:textSize="13sp" />

                            <com.framework.views.customViews.CustomImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:src="@drawable/ic_free_tag" />
                        </LinearLayout>
                    </RelativeLayout>

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/tv_build_my_logo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/create_logo_logtron"
                        android:layout_marginVertical="8dp"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/regular"
                        android:gravity="center"
                        android:text="@string/free_1_logo_png_powered_by_buildmylogo"
                        android:textSize="10sp" />

                </RelativeLayout>

            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/size_20">

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="match_parent"
                    android:id="@+id/tv_inst_1"
                    android:layout_height="wrap_content"
                    android:text="@string/business_logo_instructions_1"
                    android:textSize="12sp" />

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_inst_2"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/semi_bold"
                    android:text="@string/business_logo_instructions_2"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>