<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/main_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white">

      <View
        android:id="@+id/shadow1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_3"
        android:background="@drawable/down_shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/shadow1">

        <androidx.appcompat.widget.LinearLayoutCompat
          android:id="@+id/content"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

          <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_blue_stroke_rect_title_bkg_no_boarder_radius">

              <com.framework.views.customViews.CustomImageView
                android:id="@+id/service_image_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_180"
                android:layout_marginTop="@dimen/size_1"
                android:layout_marginBottom="@dimen/size_1"
                android:scaleType="centerCrop"
                android:visibility="gone"
                app:srcCompat="@color/placeholder_bg" />

              <com.framework.views.customViews.CustomImageView
                android:id="@+id/clear_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="@dimen/size_14"
                android:tint="@color/dodger_blue_two"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_close_round" />

              <LinearLayout
                android:id="@+id/image_add_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_180"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical">

                <com.framework.views.customViews.CustomImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:srcCompat="@drawable/ic_add_image" />

                <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/size_5"
                  android:includeFontPadding="false"
                  android:text="@string/jpeg_png"
                  android:textColor="@color/warm_grey"
                  app:fontFamily="@font/regular"
                  app:textType="BODY_1" />

                <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:includeFontPadding="false"
                  android:text="@string/_800x800px"
                  android:textColor="@color/warm_grey"
                  app:fontFamily="@font/regular"
                  app:textType="BODY_1" />

                <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/size_20"
                  android:text="@string/add_service_image"
                  android:textColor="@color/dodger_blue_two"
                  app:fontFamily="@font/semi_bold"
                  app:textAllCaps="true"
                  app:textType="BODY_1" />
              </LinearLayout>

            </FrameLayout>

          </androidx.appcompat.widget.LinearLayoutCompat>

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_20"
            android:orientation="vertical"
            android:paddingEnd="@dimen/size_20">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/size_3"
              android:layout_marginTop="@dimen/size_36"
              android:text="Service Name*"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextField
                android:id="@+id/tv_service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:background="@drawable/bg_rect_edit_txt"
                android:hint="Write the name of your service"
                android:inputType="textCapWords"
                android:padding="@dimen/size_12"
                android:singleLine="true"
                android:textColor="@color/warm_grey_10"
                android:textColorHint="@color/primary_grey"
                tools:ignore="UnusedAttribute" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_26"
                android:orientation="vertical">

              <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawablePadding="@dimen/size_4"
                  android:includeFontPadding="false"
                  android:text="Service category*"
                  android:textColor="@color/black_4a4a4a"
                  app:drawableEndCompat="@drawable/ic_question_circular_blue"
                  app:drawableTint="@color/orange"
                  app:fontFamily="@font/semi_bold"
                  app:textType="BODY_3" />

              <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:includeFontPadding="false"
                  android:text="This will help you group multiple services under this category"
                  android:textColor="@color/warm_grey"
                  android:textSize="12sp"
                  android:visibility="gone"
                  app:fontFamily="@font/regular" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.framework.views.customViews.CustomTextField
                android:id="@+id/edt_service_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:clickable="true"
                android:hint="Create a service category"
                android:inputType="textCapWords"
                android:padding="@dimen/size_12"
                android:singleLine="true"
                android:background="@drawable/bg_rect_edit_txt"
                android:textColor="@color/warm_grey_10"
                android:textColorHint="@color/primary_grey"
                tools:ignore="UnusedAttribute"
                android:focusable="true" />

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_3"
                android:layout_marginTop="@dimen/size_20"
                android:text="Service description*"
                android:textColor="@color/black_4a4a4a"
                app:fontFamily="@font/semi_bold"
                app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextField
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:background="@drawable/bg_rect_edit_txt"
                android:hint="Describe this service in around 2000 characters at max..."
                android:inputType="textMultiLine"
                android:padding="@dimen/size_12"
                android:textColor="@color/warm_grey_10"
                android:textColorHint="@color/primary_grey"
                tools:ignore="UnusedAttribute" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_26"
                android:orientation="vertical">

              <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:drawablePadding="@dimen/size_4"
                  android:includeFontPadding="false"
                  android:text="Service duration (minutes)*"
                  android:textColor="@color/black_4a4a4a"
                  app:fontFamily="@font/semi_bold"
                  app:textType="BODY_3" />

              <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:includeFontPadding="false"
                  android:text="This will help you group multiple services under this category"
                  android:textColor="@color/warm_grey"
                  android:textSize="12sp"
                  android:visibility="gone"
                  app:fontFamily="@font/regular" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.framework.views.customViews.CustomTextField
                android:id="@+id/edt_service_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:background="@drawable/bg_rect_edit_txt"
                android:drawableStart="@drawable/ic_clock_gray"
                android:drawablePadding="@dimen/size_8"
                android:hint="Enter duration in minutes"
                android:inputType="number"
                android:padding="@dimen/size_12"
                android:singleLine="true"
                android:textColor="@color/warm_grey_10"
                android:textColorHint="@color/primary_grey"
                tools:ignore="UnusedAttribute" />

            <com.framework.views.customViews.CustomCheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:visibility="gone"
                android:text="Add buffer time before and after"
                android:textColor="@color/primary_grey"
                android:theme="@style/ActiveTheme" />



            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_20"
              android:drawablePadding="@dimen/size_4"
                android:includeFontPadding="false"
                android:text="Pricing info"
                android:drawableTint="@color/orange"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="Select, how do you want to give this service to your clients."
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />

            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_10"
              android:background="@drawable/shape_grey_stroke_rect_bkg"
              android:orientation="vertical">

              <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@drawable/shape_blue_rect_title_bkg"
                android:padding="@dimen/size_10">

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Appointment for this service is paid?"
                    android:textColor="@color/black_4f4f4f"
                    android:textSize="12sp"
                    app:fontFamily="@font/semi_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/toggle_service"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.appservice.views.toggle.widget.LabeledSwitch
                  android:id="@+id/toggle_service"
                  android:layout_width="@dimen/size_54"
                  android:layout_height="@dimen/size_24"
                  app:colorBorder="@android:color/transparent"
                  app:colorOff="@color/light_lemon"
                  app:colorOn="@color/light_green_1"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintRight_toRightOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  app:textOff="NO"
                  app:textOn="YES"
                  app:txtColorOff="@color/white"
                  app:txtColorOn="@color/white" />


              </androidx.constraintlayout.widget.ConstraintLayout>
              <com.framework.views.customViews.CustomCheckBox
                  android:layout_width="match_parent"
                  android:textColor="@color/primary_grey"
                  android:id="@+id/ccb_payextra"
                  android:theme="@style/ActiveTheme"
                  android:visibility="gone"
                  android:text="Price includes taxes"
                  android:layout_height="wrap_content"/>

              <LinearLayout
                android:id="@+id/pay_service_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingLeft="@dimen/size_8"
                  android:paddingTop="@dimen/size_10"
                  android:paddingRight="@dimen/size_5"
                  android:paddingBottom="@dimen/size_10">

                  <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.framework.views.customViews.CustomTextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Price with tax (INR)"
                      android:textColor="@color/black_4a4a4a"
                      android:textSize="12sp"
                      app:fontFamily="@font/light" />

                    <com.framework.views.customViews.CustomTextField
                      android:id="@+id/amount_edt"
                      android:layout_width="@dimen/size_110"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/size_5"
                      android:background="@drawable/bg_rect_edit_txt"
                      android:hint="XX,XXX"
                      android:inputType="number"
                      android:maxLength="7"
                      android:padding="@dimen/size_8"
                      android:singleLine="true"
                      android:textColor="@color/warm_grey_10"
                      android:textColorHint="@color/primary_grey"
                      android:textSize="13sp"
                      tools:ignore="UnusedAttribute" />

                  </androidx.appcompat.widget.LinearLayoutCompat>

                  <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                  <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.framework.views.customViews.CustomTextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:singleLine="true"
                      android:text="Discount amt. (INR)"
                      android:textColor="@color/black_4a4a4a"
                      android:textSize="12sp"
                      app:fontFamily="@font/light" />

                    <com.framework.views.customViews.CustomTextField
                      android:id="@+id/discount_edt"
                      android:layout_width="@dimen/size_110"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/size_5"
                      android:background="@drawable/bg_rect_edit_txt"
                      android:hint="XXX"
                      android:inputType="number"
                      android:maxLength="6"
                      android:padding="@dimen/size_8"
                      android:singleLine="true"
                      android:textColor="@color/warm_grey_10"
                      android:textColorHint="@color/primary_grey"
                      android:textSize="13sp"
                      tools:ignore="UnusedAttribute" />

                  </androidx.appcompat.widget.LinearLayoutCompat>

                  <View
                    android:layout_width="5dp"
                    android:layout_height="match_parent" />

                  <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:orientation="vertical">

                    <com.framework.views.customViews.CustomTextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Final Price"
                      android:textColor="@color/black_4a4a4a"
                      android:textSize="12sp"
                      app:fontFamily="@font/light" />

                    <com.framework.views.customViews.CustomTextField
                      android:id="@+id/final_price_txt"
                      android:layout_width="@dimen/size_110"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/size_5"
                      android:background="@null"
                      android:enabled="false"
                      android:hint="INR XX,XXX"
                      android:inputType="number"
                      android:paddingTop="@dimen/size_8"
                      android:paddingRight="@dimen/size_8"
                      android:paddingBottom="@dimen/size_8"
                      android:singleLine="true"
                      android:textColor="@color/warm_grey_10"
                      android:textColorHint="@color/primary_grey"
                      android:textSize="13sp"
                      tools:ignore="UnusedAttribute" />

                  </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.framework.views.customViews.CustomTextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/size_8"
                  android:layout_marginTop="@dimen/size_10"
                  android:includeFontPadding="false"
                  android:text="Select, how you want to receive money for your bookings."
                  android:textColor="@color/warm_grey"
                  android:textSize="12sp"
                  app:fontFamily="@font/regular" />

                <androidx.appcompat.widget.LinearLayoutCompat
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/size_8"
                  android:layout_marginRight="@dimen/size_10"
                  android:layout_marginBottom="@dimen/size_10"
                  android:background="@drawable/shape_grey_stroke_rect_bkg"
                  android:orientation="vertical">

                  <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_blue_stroke_rect_title_bkg"
                    android:padding="@dimen/size_10">

                    <com.framework.views.customViews.CustomTextView
                      android:id="@+id/txt_payment_type"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/boost_payment_gateway"
                      android:textColor="@color/black_4f4f4f"
                      android:textSize="12sp"
                      app:fontFamily="@font/semi_bold"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintLeft_toLeftOf="parent"
                      app:layout_constraintTop_toTopOf="parent" />

                    <com.framework.views.customViews.CustomTextView
                      android:id="@+id/vw_paymentConfig"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="@string/change"
                      android:textColor="@color/cerulean_blue"
                      android:textSize="10sp"
                      app:fontFamily="@font/semi_bold"
                      app:layout_constraintBottom_toBottomOf="parent"
                      app:layout_constraintRight_toRightOf="parent"
                      app:layout_constraintTop_toTopOf="parent"
                      app:textAllCaps="true" />

                  </androidx.constraintlayout.widget.ConstraintLayout>

                  <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/size_10">

                    <LinearLayout
                      android:id="@+id/bank_account_view"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">

                      <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                          android:id="@+id/title_bank_added"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:drawablePadding="@dimen/size_4"
                          android:includeFontPadding="false"
                          android:text="@string/bank_account_not_added"
                          android:textColor="@color/warm_grey"
                          android:textSize="12sp"
                          app:drawableStartCompat="@drawable/ic_info_circular_orange"
                          app:fontFamily="@font/regular" />

                        <com.framework.views.customViews.CustomTextView
                          android:id="@+id/bank_account_name"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginStart="@dimen/size_1"
                          android:layout_marginTop="@dimen/size_3"
                          android:drawablePadding="@dimen/size_4"
                          android:includeFontPadding="false"
                          android:text="Kotak Mahindra Bnak - 345547684878"
                          android:textColor="@color/light_blue"
                          android:textSize="12sp"
                          android:visibility="gone"
                          app:fontFamily="@font/semi_bold"
                          tools:visibility="visible" />
                      </LinearLayout>

                      <com.framework.views.customViews.CustomImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_arrow_right_grey" />
                    </LinearLayout>

                    <LinearLayout
                      android:id="@+id/external_url_view"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="@dimen/size_6"
                      android:orientation="vertical"
                      android:visibility="gone"
                      tools:visibility="visible">

                      <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/size_4"
                        android:includeFontPadding="false"
                        android:text="Add External URL"
                        android:textColor="@color/warm_grey"
                        android:textSize="12sp"
                        app:fontFamily="@font/regular" />

                      <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_38"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_marginBottom="@dimen/size_5"
                        android:background="@drawable/shape_grey_stroke_rect_bkg"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/btn_remove_view"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.framework.views.customViews.CustomEditText
                          android:id="@+id/edt_name_desc"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1.5"
                          android:background="@android:color/transparent"
                          android:hint="Website name"
                          android:maxLines="1"
                          android:paddingLeft="@dimen/size_8"
                          android:singleLine="true"
                          android:textColor="@color/greyish_brown"
                          android:textColorHint="@color/primary_grey"
                          android:textSize="14sp" />

                        <View
                          android:layout_width="1dp"
                          android:layout_height="match_parent"
                          android:background="@color/placeholder_bg" />

                        <com.framework.views.customViews.CustomEditText
                          android:id="@+id/edt_url"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:background="@android:color/transparent"
                          android:hint="Paste your URL here"
                          android:maxLines="1"
                          android:paddingLeft="@dimen/size_8"
                          android:singleLine="true"
                          android:textColor="@color/greyish_brown"
                          android:textColorHint="@color/primary_grey"
                          android:textSize="14sp" />

                      </androidx.appcompat.widget.LinearLayoutCompat>

                    </LinearLayout>

                  </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>
              </LinearLayout>

              <com.framework.views.customViews.CustomTextView
                android:id="@+id/free_service_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_8"
                android:layout_marginTop="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_14"
                android:includeFontPadding="false"
                android:text="Clients can book this service for FREE."
                android:textColor="@color/warm_grey"
                android:textSize="12sp"
                android:visibility="gone"
                app:fontFamily="@font/regular" />

            </androidx.appcompat.widget.LinearLayoutCompat>
            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:drawablePadding="@dimen/size_4"
                android:includeFontPadding="false"
                android:visibility="gone"
                android:text="@string/service_delivery_configuration"
                android:textColor="@color/black_4a4a4a"
                app:fontFamily="@font/semi_bold"
                app:textType="BODY_3" />
