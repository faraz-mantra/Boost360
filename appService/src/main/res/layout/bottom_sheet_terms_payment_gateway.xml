<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_top_strock"
        app:behavior_hideable="true"
        app:behavior_peekHeight="@dimen/size_0"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="@dimen/size_30"
                android:paddingVertical="@dimen/size_40"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/self_branded_payment_gateway_camel_case"
                    android:textSize="12sp"
                    android:textColor="@color/black_4a4a4a"
                    android:fontFamily="@font/regular"/>
                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_on_terms_and_condition"
                    app:textType="HEADING_4"
                    android:textColor="@color/orange"/>
                <View
                    android:layout_marginVertical="@dimen/size_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:textColor="@color/black_4a4a4a"/>
                <androidx.core.widget.NestedScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_gateway_terms_content"
                        android:textColor="#787878"/>
                </androidx.core.widget.NestedScrollView>

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/understoodBtnPaymentGateway"
                    style="@style/ButtonStyle.Rounded"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_60"
                    android:gravity="center"
                    android:paddingVertical="@dimen/size_14"
                    android:text="@string/i_understand"
                    android:textAllCaps="true" />

            </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>