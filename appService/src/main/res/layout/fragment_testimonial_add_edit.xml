<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/size_8"
            app:layout_constraintBottom_toTopOf="@+id/btn_save"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_8"
                android:orientation="vertical"
                android:paddingVertical="@dimen/size_20">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.framework.views.roundedimageview.RoundedImageView
                            android:id="@+id/civ_testimonial_image"
                            android:layout_width="@dimen/size_146"
                            android:layout_height="@dimen/size_146"
                            android:scaleType="centerCrop"
                            android:background="@color/white"
                            app:riv_border_color="@color/tw__light_gray"
                            app:riv_border_width="1.5dp"
                            app:riv_corner_radius="@dimen/size_4"
                            app:riv_mutate_background="true"
                            app:riv_oval="false" />

                        <com.framework.views.customViews.CustomImageView
                            android:id="@+id/riv_delete_image"
                            android:layout_width="@dimen/size_30"
                            android:layout_height="@dimen/size_30"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_close_rounded" />

                        <com.framework.views.customViews.CustomImageView
                            android:id="@+id/riv_change_image"
                            android:layout_width="@dimen/size_80"
                            android:layout_height="@dimen/size_80"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_change_image_testimonial" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/size_16"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            style="@style/TextStaffHeading"
                            android:text="@string/customer_name" />

                        <com.framework.views.customViews.CustomTextField
                            android:id="@+id/etv_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_6"
                            android:background="@drawable/bg_rect_edit_txt"
                            android:hint="@string/full_name"
                            android:inputType="textCapWords"
                            android:padding="@dimen/size_10"
                            android:singleLine="true"
                            android:textColor="@color/warm_grey_10"
                            android:textColorHint="@color/primary_grey"
                            android:textSize="14sp"
                            tools:ignore="UnusedAttribute" />

                        <com.framework.views.customViews.CustomTextView
                            style="@style/TextStaffHeading"
                            android:layout_marginTop="@dimen/size_5"
                            android:text="@string/customer_designation" />

                        <com.framework.views.customViews.CustomTextField
                            android:id="@+id/etv_designation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_6"
                            android:background="@drawable/bg_rect_edit_txt"
                            android:hint="@string/enter_company_designation_title"
                            android:inputType="textCapWords"
                            android:padding="@dimen/size_10"
                            android:singleLine="true"
                            android:textColor="@color/warm_grey_10"
                            android:textColorHint="@color/primary_grey"
                            android:textSize="14sp"
                            tools:ignore="UnusedAttribute" />
                    </LinearLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/size_16"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_16"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            style="@style/TextStaffHeading"
                            android:text="@string/testimonial_title_" />

                        <com.framework.views.customViews.CustomTextField
                            android:id="@+id/etv_testimonial_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_6"
                            android:background="@drawable/bg_rect_edit_txt"
                            android:hint="@string/enter_testimonial_title"
                            android:inputType="textCapWords"
                            android:padding="@dimen/size_10"
                            android:singleLine="true"
                            android:textColor="@color/warm_grey_10"
                            android:textColorHint="@color/primary_grey"
                            android:textSize="14sp"
                            tools:ignore="UnusedAttribute" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_16"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            style="@style/TextStaffHeading"
                            android:text="@string/customer_s_review" />

                        <com.framework.views.customViews.CustomTextField
                            android:id="@+id/etv_review_"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_5"
                            android:background="@drawable/bg_rect_edit_txt"
                            android:gravity="start"
                            android:hint="@string/enter_your_review_here"
                            android:inputType="textMultiLine"
                            android:minLines="5"
                            android:padding="@dimen/size_10"
                            android:textColor="@color/warm_grey_10"
                            android:textSize="14sp" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.framework.views.customViews.CustomButton
            android:id="@+id/btn_save"
            android:layout_margin="@dimen/size_8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_36"
            android:background="@drawable/rounded_stroke_orange_4_transparent"
            android:fontFamily="@font/semi_bold"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:text="@string/save"
            android:textAllCaps="true"
            android:textColor="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>