<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_8"
    android:background="@drawable/rounded_stroke_grey"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/_6dp"
    android:paddingStart="@dimen/size_6"
    android:paddingEnd="@dimen/size_4">

    <com.framework.views.customViews.CustomCardView
      android:id="@+id/customCardView2"
      android:layout_width="@dimen/size_34"
      android:layout_height="@dimen/size_34"
      android:layout_gravity="start"
      app:cardBackgroundColor="@color/white_smoke_1"
      app:cardCornerRadius="@dimen/size_2">

      <com.framework.views.customViews.CustomImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/placeholder_image_n" />
    </com.framework.views.customViews.CustomCardView>

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="0dp"
      android:layout_height="@dimen/size_26"
      android:layout_marginHorizontal="@dimen/size_4"
      android:layout_weight="1"
      android:background="@drawable/rounded_stroke_grey_service_information"
      android:orientation="horizontal"
      android:paddingVertical="@dimen/size_2"
      android:paddingEnd="@dimen/size_8"
      tools:ignore="RtlSymmetry">

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/ctv_size"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center|center_vertical"
        android:maxLines="1"
        android:textColor="@color/warm_grey_two"
        app:autoSizeMaxTextSize="14sp"
        app:autoSizeMinTextSize="10sp"
        app:autoSizeStepGranularity="1sp"
        app:autoSizeTextType="uniform"
        tools:text="Dr. John Doe.jpg (512kb)" />

      <com.framework.views.customViews.CustomCardView
        android:id="@+id/crossIcon"
        android:layout_width="@dimen/size_16"
        android:layout_height="@dimen/size_16"
        android:layout_gravity="center_vertical|end"
        android:layout_margin="@dimen/size_1"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_8">

        <com.framework.views.customViews.CustomImageView
          android:layout_width="@dimen/size_6"
          android:layout_height="@dimen/size_6"
          android:layout_gravity="center"
          app:srcCompat="@drawable/ic_cross_grey"
          app:tint="@color/black_4a4a4a" />
      </com.framework.views.customViews.CustomCardView>

    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.framework.views.customViews.CustomButton
      android:id="@+id/cb_change"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/size_26"
      android:background="@drawable/rounded_stroke_grey_service_information"
      android:gravity="center_vertical|center"
      android:paddingHorizontal="@dimen/size_4"
      android:stateListAnimator="@null"
      android:text="@string/change"
      android:textAllCaps="false"
      android:textColor="@color/warm_grey_two"
      app:textType="OVERLINE" />
  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>