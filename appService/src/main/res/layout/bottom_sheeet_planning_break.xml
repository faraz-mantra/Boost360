<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/black">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="@dimen/size_60"
      android:background="@drawable/bg_rounded_top_white"
      android:clipToPadding="false"
      android:elevation="@dimen/size_10"
      android:gravity="center_vertical"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:layout_marginTop="30dp">

      <com.framework.views.customViews.CustomTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_32"
        android:layout_weight="1"
        android:text="@string/planning_a_break"
        app:fontFamily="@font/semi_bold"
        app:textType="BODY_2" />

      <com.framework.views.customViews.CustomImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size_10"
        android:padding="@dimen/size_10"
        android:tint="@color/warm_grey"
        app:srcCompat="@drawable/ic_close_black" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="vertical"
      android:paddingHorizontal="@dimen/size_32"
      android:paddingVertical="@dimen/size_32"
      app:layout_constraintTop_toBottomOf="@id/toolbar">


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/size_4"
          android:layout_weight="1"
          android:orientation="vertical">

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/starting_from"
            android:textColor="@color/gray_979797"
            android:textStyle="normal"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:layout_marginTop="@dimen/size_5"
            android:drawableEnd="@drawable/ic_calendar"
            android:paddingStart="@dimen/size_10"
            android:paddingEnd="@dimen/size_10"
            android:textColorHint="@color/black"
            tools:hint="22 Jul 2020" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_4"
          android:layout_weight="1"
          android:orientation="vertical">

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="@string/start_time"
            android:textColor="@color/gray_979797"
            android:textStyle="normal"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:layout_marginTop="@dimen/size_5"
            android:drawableEnd="@drawable/ic_time"
            android:paddingStart="@dimen/size_10"
            android:paddingEnd="@dimen/size_10"
            android:textColorHint="@color/black"
            tools:hint="10:00 AM" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/size_4"
          android:layout_weight="1"
          android:orientation="vertical">

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="@string/till"
            android:textColor="@color/gray_979797"
            android:textStyle="normal"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:layout_marginTop="@dimen/size_5"
            android:drawableEnd="@drawable/ic_calendar"
            android:paddingStart="@dimen/size_10"
            android:paddingEnd="@dimen/size_10"
            android:textColorHint="@color/black"
            tools:hint="28 Jul 2020" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_4"
          android:layout_weight="1"
          android:orientation="vertical">

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:text="@string/time"
            android:textColor="@color/gray_979797"
            android:textStyle="normal"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_30"
            android:layout_marginTop="@dimen/size_5"
            android:drawableEnd="@drawable/ic_time"
            android:paddingStart="@dimen/size_10"
            android:paddingEnd="@dimen/size_10"
            android:textColorHint="@color/black"
            tools:hint="8:00 PM" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/size_5"
          android:fontFamily="@font/open_sans"
          android:text="@string/additional_break_info_optional"
          android:textColor="#979797"
          android:textStyle="normal"
          app:textType="BODY_1" />

        <com.framework.views.customViews.CustomEditText
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="start"
          android:hint="@string/e_g_a_name_for_this_break_for_easy_identification_by_your_admin"
          android:inputType="textMultiLine"
          android:maxHeight="@dimen/size_64"
          android:maxLines="3"
          android:minHeight="@dimen/size_64" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/size_5"
          android:fontFamily="@font/open_sans"
          android:text="@string/break_duration"
          android:textColor="@color/gray_979797"
          android:textStyle="normal"
          app:textType="BODY_1" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="start"
          android:textColor="#666666"
          android:textSize="16sp"
          tools:text="6 days 8 hrs" />
      </LinearLayout>

      <com.framework.views.customViews.CustomButton
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_proceed"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:text="@string/confirm_block_calender"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textFontWeight="600" />
    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>