<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_3"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_step_identity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="@dimen/size_42"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/step_1_4"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/colorLightBlack"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_step_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginStart="@dimen/size_22"
                    android:layout_marginEnd="@dimen/size_22"
                    app:cardBackgroundColor="@color/view_background_1"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_step_identity">

                    <LinearLayout
                        android:id="@+id/linear_step_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/all_side_curve_bg"
                        android:elevation="8dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/size_16"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tv_suggested_domain_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_24"
                            android:layout_marginStart="@dimen/size_22"
                            android:layout_marginEnd="@dimen/size_22"
                            android:gravity="start"
                            app:fontFamily="@font/regular"
                            android:textAlignment="gravity"
                            android:text="@string/login_to_your_provider"
                            android:textSize="@dimen/text_24"
                            android:textColor="@color/colorPrimary"/>

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tv_suggested_domain_value"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_16"
                            android:layout_marginStart="@dimen/size_22"
                            android:layout_marginEnd="@dimen/size_22"
                            android:gravity="start"
                            app:fontFamily="@font/regular"
                            android:textAlignment="gravity"
                            android:fontFamily="@font/barlow_regular"
                            android:text="@string/step_1_instructions"
                            android:textSize="@dimen/text_14"
                            android:textColor="@color/colorLightBlack" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_step_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginStart="@dimen/size_22"
                    android:layout_marginEnd="@dimen/size_22"
                    app:cardBackgroundColor="@color/view_background_1"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_step_identity">

                    <LinearLayout
                        android:id="@+id/linear_step_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/all_side_curve_bg"
                        android:elevation="8dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="@dimen/size_16"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_24"
                            android:layout_marginStart="@dimen/size_22"
                            android:layout_marginEnd="@dimen/size_22"
                            android:gravity="start"
                            app:fontFamily="@font/regular"
                            android:textAlignment="gravity"
                            android:text="@string/login_to_your_provider"
                            android:textSize="@dimen/text_24"
                            android:textColor="@color/colorPrimary"/>

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_16"
                            android:layout_marginStart="@dimen/size_22"
                            android:layout_marginEnd="@dimen/size_22"
                            android:gravity="start"
                            app:fontFamily="@font/regular"
                            android:textAlignment="gravity"
                            android:fontFamily="@font/barlow_regular"
                            android:text="@string/step_2_instructions"
                            android:textSize="@dimen/text_14"
                            android:textColor="@color/colorLightBlack" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier_cards"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="card_step_1, card_step_2"/>

                <com.framework.views.customViews.CustomMaterialButton
                    android:id="@+id/btn_book_old_domain"
                    style="@style/ButtonStyleRoundedColorPrimary"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="@dimen/size_42"
                    android:text="@string/add_a_domain_you_own"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/barrier_cards"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

</layout>
