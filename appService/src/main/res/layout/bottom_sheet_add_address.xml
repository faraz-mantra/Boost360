<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.framework.views.customViews.CustomImageView
      android:id="@+id/iv_close"
      android:layout_width="@dimen/size_40"
      android:layout_height="@dimen/size_40"
      android:src="@drawable/ic_close_dark_gray" />

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size_16"
      android:background="@drawable/bg_rounded_top_white"
      android:orientation="vertical"
      android:paddingHorizontal="@dimen/size_20"
      android:paddingVertical="@dimen/size_30">

      <com.framework.views.customViews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add business address..."
        android:textColor="@color/black_4a4a4a"
        app:fontFamily="@font/semi_bold"
        app:textType="HEADING_7" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:drawableStart="@drawable/ic_add_location_n"
        android:drawablePadding="@dimen/size_8"
        android:paddingVertical="@dimen/size_8"
        android:id="@+id/btn_add_location"
        android:text="Use your device location"
        android:textColor="@color/black_4a4a4a"
        app:fontFamily="@font/regular"
        app:textType="BODY_1" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_6"
        android:drawableStart="@drawable/ic_edit_address"
        android:drawablePadding="@dimen/size_8"
        android:id="@+id/btn_enter_manually"
        android:paddingVertical="@dimen/size_8"
        android:text="Enter address manually"
        android:textColor="@color/black_4a4a4a"
        app:fontFamily="@font/regular"
        app:textType="BODY_1" />

    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
