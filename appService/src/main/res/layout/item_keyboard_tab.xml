<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_70"
    android:layout_marginTop="@dimen/size_2"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/size_12">

    <com.framework.views.customViews.CustomImageView
      android:layout_width="@dimen/size_32"
      android:layout_height="@dimen/size_32"
      app:srcCompat="@drawable/ic_equals_keyboard" />

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/size_10"
      android:layout_weight="1"
      android:orientation="vertical">

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        tools:text="Business card"
        android:textColor="@color/black_4a4a4a"
        app:fontFamily="@font/semi_bold"
        app:textType="BODY_1" />

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        tools:text="Share your digital businesses card in single tap"
        android:textColor="@color/black_4a4a4a"
        app:textType="CAPTION" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.framework.views.customViews.CustomImageView
      android:id="@+id/btn_eye"
      android:layout_width="@dimen/size_26"
      android:layout_height="@dimen/size_26"
      tools:srcCompat="@drawable/ic_eye_active" />
  </androidx.appcompat.widget.LinearLayoutCompat>

</layout>