<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/match_wrap"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/match_wrap"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size_10">

            <androidx.appcompat.widget.LinearLayoutCompat
                style="@style/match_wrap"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginBottom="@dimen/size_6"
                android:orientation="vertical">

                <com.framework.views.customViews.CustomTextView
                    style="@style/wrap_wrap"
                    android:includeFontPadding="false"
                    android:text="@string/confirming_change"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    app:fontFamily="@font/semi_bold"
                    tools:textColor="@color/black_4a4a4a" />

                <com.framework.views.customViews.CustomTextView
                    style="@style/wrap_wrap"
                    android:includeFontPadding="false"
                    android:text="@string/this_will_reflact_on_your_website_instantly"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    app:fontFamily="@font/open_sans"
                    tools:textColor="@color/black_4a4a4a" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>


        <androidx.appcompat.widget.LinearLayoutCompat
            style="@style/match_wrap"
            android:background="@drawable/bg_rounded_top_white_2"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
                style="@style/wrap_wrap"
                android:layout_marginHorizontal="@dimen/size_20"
                android:layout_marginTop="@dimen/size_20"
                android:includeFontPadding="false"
                android:text="@string/new_display_text_packages"
                android:textColor="@color/black_4a4a4a"
                android:textSize="13sp"
                app:fontFamily="@font/open_sans" />

            <com.framework.views.customViews.CustomTextView
                style="@style/wrap_wrap"
                android:layout_marginHorizontal="@dimen/size_20"
                android:layout_marginTop="@dimen/size_20"
                android:includeFontPadding="false"
                android:text="@string/new_page_url_https_sravansclinics_com_packages"
                android:textColor="@color/black_4a4a4a"
                android:textSize="13sp"
                app:fontFamily="@font/open_sans" />

            <com.framework.views.customViews.CustomCheckBox
                android:id="@+id/ccb_agree"
               style="@style/wrap_wrap"
                android:layout_below="@id/ctv_about_heading"
                android:layout_marginHorizontal="@dimen/size_15"
                android:layout_marginTop="@dimen/size_20"
                android:fontFamily="@font/open_sans"
                android:gravity="start"
                android:checked="true"
                android:paddingStart="@dimen/size_8"
                app:buttonTint="@color/yellow_ffb900"
                android:paddingTop="@dimen/size_4"
                android:text="@string/i_understand_that_url_change_may_have_a_negative_impact_on_the_search"
                android:textColor="@color/black_4a4a4a"
                android:textFontWeight="400"
                android:textSize="12sp"
                android:textStyle="normal" />

            <androidx.constraintlayout.widget.ConstraintLayout
               style="@style/match_wrap"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginBottom="@dimen/size_20"
                android:paddingEnd="@dimen/size_10">

                <com.framework.views.customViews.CustomButton
                    android:id="@+id/btn_yes_change"
                    style="@style/ButtonStyle.Rounded.Solid.BottomSheet"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="@dimen/size_20"
                    android:text="@string/yes_change"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.framework.views.customViews.CustomButton
                    android:id="@+id/btn_go_back"
                    style="@style/ButtonStyle.Rounded.Solid.BottomSheet"
                    android:layout_width="wrap_content"
                    android:background="@color/white"
                    android:text="@string/go_back"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/btn_yes_change"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>


