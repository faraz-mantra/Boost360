<layout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <data></data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_time_dropdown_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_11"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/size_18">

            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_4"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_2"
                android:fontFamily="@font/open_sans"
                android:text="@string/from"
                android:textColor="@color/black_4a4a4a"
                android:textSize="9sp"
                android:textStyle="normal" />

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinner_start_timing"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_40"
                    android:background="@drawable/spinner_catalog"
                    android:entries="@array/business_hours_arrays" />
        </LinearLayout>

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_40"
                android:layout_gravity="center_vertical|bottom"
                android:alpha="0.2"
                android:gravity="center_vertical"
                android:text="@string/to"
                android:textColor="@color/black_2A2A2A"
                android:textSize="14sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_4"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans"
                android:layout_marginBottom="@dimen/size_2"
                android:text="@string/from"
                android:textColor="@color/black_4a4a4a"
                android:textSize="9sp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_end_timing"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:background="@drawable/spinner_catalog"
                android:entries="@array/business_hours_arrays" />
        </LinearLayout>
    </LinearLayout>

    <com.framework.views.customViews.CustomTextView
        android:id="@+id/ctv_add_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_time_dropdown_group"
        android:layout_marginStart="@dimen/size_18"
        android:layout_marginTop="@dimen/size_8"
        android:text="@string/u_add_session_u"
        android:textColor="#4889F8" />

    <com.framework.views.customViews.CustomCheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ccb_all_day"
        android:layout_below="@id/ctv_add_session"
        android:layout_alignStart="@id/ctv_add_session"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_8"
        android:theme="@style/ActiveTheme"
        android:fontFamily="@font/open_sans"
        android:text="@string/apply_same_on_all_days"
        android:textAlignment="center"
        android:alpha="0.8"
        android:textColor="@color/black_4a4a4a"
        android:textFontWeight="600"
        android:textSize="13sp"
        android:textStyle="normal" />
    </RelativeLayout>
</layout>