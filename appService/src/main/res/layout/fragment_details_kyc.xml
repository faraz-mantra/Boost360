<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_snow">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/main_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_10">

          <com.framework.views.customViews.CustomCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_16"
            android:layout_marginBottom="@dimen/size_10"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/size_10">

            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_100"
              android:orientation="vertical">

              <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Your Self Branded\nPayment gateway is LIVE!"
                android:textAlignment="gravity"
                android:textColor="@color/greyish_brown"
                app:fontFamily="@font/semi_bold"
                app:textType="HEADING_5" />

              <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2"
                android:layout_marginTop="@dimen/size_18"
                android:background="@drawable/line_dotted" />

              <com.framework.views.customViews.CustomTextView
                android:id="@+id/tv_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_18"
                android:gravity="center_horizontal"
                android:text="A/c No. 34565XXXXX45465"
                android:textAlignment="gravity"
                android:textColor="@color/greyish_brown"
                app:textType="HEADING_5" />

              <com.framework.views.customViews.CustomTextView
                android:id="@+id/tv_branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_18"
                android:gravity="center_horizontal"
                android:text="Kotak Mahindra Bank - Cannaught Place Branch"
                android:textAlignment="gravity"
                android:textColor="@color/light_blue"
                app:textType="CAPTION" />
            </androidx.appcompat.widget.LinearLayoutCompat>
          </com.framework.views.customViews.CustomCardView>
        </LinearLayout>

        <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_54"
          android:background="@color/colorPrimary" />

        <FrameLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal">

          <com.framework.views.customViews.CustomImageView
            android:layout_width="@dimen/size_110"
            android:layout_height="@dimen/size_110"
            android:clipToPadding="false"
            app:srcCompat="@drawable/kyc_gateway_rupee" />

          <com.framework.views.customViews.CustomCardView
            android:layout_width="@dimen/size_18"
            android:layout_height="@dimen/size_18"
            android:layout_gravity="end"
            android:layout_margin="@dimen/size_6"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/size_10">

            <View
              android:layout_width="@dimen/size_14"
              android:layout_height="@dimen/size_14"
              android:layout_gravity="center"
              android:background="@drawable/ic_circle_green" />
          </com.framework.views.customViews.CustomCardView>

        </FrameLayout>

      </FrameLayout>

      <com.framework.views.customViews.CustomCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginEnd="@dimen/size_16"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_10">

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_8"
          android:orientation="vertical"
          android:padding="@dimen/size_12">

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="₹"
              android:textColor="@color/colorAccent"
              app:textType="BODY_1" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="0"
              android:textColor="@color/colorAccent"
              app:textType="HEADING_5"
              tools:text="12,564" />
          </LinearLayout>

          <com.framework.views.customViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total money collected till date"
            android:textColor="@color/greyish_brown"
            app:textType="BODY_1" />
        </androidx.appcompat.widget.LinearLayoutCompat>

      </com.framework.views.customViews.CustomCardView>

      <com.framework.views.customViews.CustomCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_14"
        android:layout_marginEnd="@dimen/size_16"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_10">

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_8"
          android:orientation="vertical"
          android:padding="@dimen/size_12">

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="₹"
              android:textColor="@color/colorAccent"
              app:textType="BODY_1" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="0"
              android:textColor="@color/colorAccent"
              app:textType="HEADING_5"
              tools:text="3,564" />
          </LinearLayout>

          <com.framework.views.customViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Latest deposit"
            android:textColor="@color/greyish_brown"
            app:textType="BODY_1"
            tools:text="Latest deposit on 23rd July 2020, 3:45PM" />
        </androidx.appcompat.widget.LinearLayoutCompat>

      </com.framework.views.customViews.CustomCardView>

      <com.framework.views.customViews.CustomCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_14"
        android:layout_marginEnd="@dimen/size_16"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_10">

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_8"
          android:orientation="vertical"
          android:padding="@dimen/size_12">

          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="₹"
              android:textColor="@color/colorAccent"
              app:textType="BODY_1" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="0"
              android:textColor="@color/colorAccent"
              app:textType="HEADING_5"
              tools:text="675" />
          </LinearLayout>

          <com.framework.views.customViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Money refund till date"
            android:textColor="@color/greyish_brown"
            app:textType="BODY_1" />
        </androidx.appcompat.widget.LinearLayoutCompat>

      </com.framework.views.customViews.CustomCardView>

      <com.framework.views.customViews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:paddingStart="@dimen/size_30"
        android:paddingEnd="@dimen/size_30"
        android:paddingBottom="@dimen/size_10"
        android:text="All payment on your Boost website are processed through this payment gateway instead of default Boost Payment Gateway. When you add a new product service on your business website please make sure to select this payment gateway."
        android:textAlignment="gravity"
        android:textColor="@color/warm_grey"
        app:textType="BODY_1" />
    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>