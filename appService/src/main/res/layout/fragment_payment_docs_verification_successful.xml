<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/size_20"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tv_kyc_docs_verification_success"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/successful"
                app:textType="HEADING_4"
                android:textColor="@color/light_green_6dca07"
                android:fontFamily="@font/regular"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/size_10"
                android:visibility="visible"
                />


            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tv_kyc_docs_verification_success_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/your_profile_has_been_verified_successfully_for_any_changes_in_the_account_request_below_to_edit"
                app:textType="BODY_1"
                android:textColor="@color/warm_grey"
                android:fontFamily="@font/regular"
                android:textStyle="bold"
                />
        </LinearLayout>

        <com.framework.views.customViews.CustomTextView
            style="@style/ButtonStyle.Rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_for_edit"
            android:textAllCaps="true"
            android:paddingVertical="@dimen/size_8"
            android:layout_marginVertical="@dimen/size_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:gravity="center"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>