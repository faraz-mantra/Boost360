<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginEnd="@dimen/size_16"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fl_add_staff_img"
                    android:layout_width="wrap_content"
                    android:background="@drawable/button_rounded_corner_blue"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_16">

                    <com.framework.views.customViews.CustomImageView
                        android:id="@+id/civ_staff_img"
                        android:layout_width="153dp"
                        android:scaleType="fitXY"
                        android:layout_height="163dp"
                        android:src="@drawable/ic_staff_img_blue" />

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="153dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ctv_img_change"
                        android:padding="@dimen/size_4"
                        android:layout_gravity="bottom"
                        android:gravity="center"
                        android:fontFamily="@font/open_sans"
                        android:text="@string/add_staff_image"
                        android:textColor="@color/light_blue_one"
                        android:textFontWeight="600"
                        app:textAllCaps="true"
                        app:textType="BODY_1" />
                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/size_4"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.framework.views.customViews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:text="@string/select_gender"
                                android:textColor="@color/black_4a4a4a"
                                android:textStyle="normal"
                                app:textType="BODY_1" />

                            <com.framework.views.customViews.CustomEditText
                                style="@style/EditTextStyle"
                                android:id="@+id/etv_name"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_40"
                                android:layout_marginTop="@dimen/size_5"
                                android:hint="@string/full_name" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_4"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.framework.views.customViews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:text="@string/select_gender"
                                android:textColor="@color/black_4a4a4a"
                                android:textStyle="normal"
                                app:textType="BODY_1" />

                            <LinearLayout
                                style="@style/SpinnerWithNoArrow"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/size_40"
                                android:layout_marginTop="@dimen/size_5"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatSpinner
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".7"
                                    android:id="@+id/cs_gender"
                                    android:background="@null"
                                    android:entries="@array/gender"
                                    android:paddingStart="@dimen/size_4"
                                    android:paddingEnd="@dimen/size_4" />

                                <com.framework.views.customViews.CustomImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/size_8"
                                    app:srcCompat="@drawable/ic_dropdown_arrow" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_16"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_5"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/specialization"
                            android:textColor="@color/black_4a4a4a"
                            android:textStyle="normal"
                            app:textType="BODY_1" />

                        <com.framework.views.customViews.CustomEditText
                            style="@style/EditTextStyle"
                            android:id="@+id/etv_specialization"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/write_the_this_staff_specialises_in" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_16"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_5"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/staff_description_optional"
                            android:textColor="@color/black_4a4a4a"
                            android:textStyle="normal"
                            app:textType="BODY_1" />

                        <com.framework.views.customViews.CustomEditText
                            style="@style/EditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:id="@+id/etv_staff_description"
                            android:hint="@string/describe_this_staff_in_around_2000_characters_at_max"
                            android:inputType="textMultiLine"
                            android:maxHeight="@dimen/size_64"
                            android:minHeight="@dimen/size_64" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_16"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_5"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/years_of_experience"
                            android:textColor="@color/black_4a4a4a"
                            android:textStyle="normal"
                            app:textType="BODY_1" />

                        <LinearLayout
                            style="@style/SpinnerWithNoArrow"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:layout_width="0dp"
                                android:layout_height="@dimen/size_40"
                                android:layout_weight=".7"
                                android:background="@null"
                                android:id="@+id/cs_experience"
                                android:entries="@array/Years"
                                android:paddingStart="@dimen/size_10"
                                android:paddingEnd="@dimen/size_10" />

                            <com.framework.views.customViews.CustomImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/size_8"
                                app:srcCompat="@drawable/ic_dropdown_arrow" />

                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_service_provided"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_16"
                        android:background="@drawable/rounded_gray_border_8dp"
                        android:padding="@dimen/size_8">

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/ctv_service_provided_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_5"
                            android:fontFamily="@font/open_sans"
                            android:maxLines="1"
                            android:text="@string/services_provided"
                            android:textColor="@color/black_4a4a4a"
                            android:textStyle="normal"
                            app:textType="BODY_1"
                            tools:ignore="RelativeOverlap" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:id="@+id/ctv_services_subheading"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ctv_service_provided_heading"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/map_the_employee_to_one_or_multiple_services"
                            android:textFontWeight="600"
                            android:textSize="10sp" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@id/ctv_services"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ctv_services_subheading"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/size_8"
                            android:fontFamily="@font/open_sans"
                            android:textColor="@color/blue_4a90e2"
                            android:textFontWeight="600"
                            android:textSize="10sp" />

                        <com.framework.views.customViews.CustomImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_arrow_right_grey" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_16"
                        android:layout_marginBottom="@dimen/size_16"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_5"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/is_available"
                            android:textColor="@color/black_4a4a4a"
                            android:textStyle="normal"
                            app:textType="BODY_1" />

                        <com.framework.views.customViews.CustomCardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_40"
                            android:backgroundTint="#1A4889F8"
                            app:cardElevation="0dp"
                            app:corner_radius="RADIUS_6">

                            <com.framework.views.customViews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/size_8"
                                android:fontFamily="@font/open_sans"
                                android:text="@string/is_the_staff_available_for_home_service"
                                android:textFontWeight="600"
                                android:textSize="10sp" />

                            <com.appservice.staffs.ui.customviews.LabeledToggle
                                android:id="@+id/toggle_yes_no"
                                android:layout_width="@dimen/size_45"
                                android:layout_height="@dimen/size_20"
                                android:layout_gravity="center_vertical|end"
                                android:layout_marginEnd="@dimen/size_8"
                                android:textSize="8sp"
                                app:colorBorder="#0DC920"
                                app:colorOn="#0DC920"
                                app:on="false"
                                app:textOff="No"
                                app:textOn="Yes" />
                        </com.framework.views.customViews.CustomCardView>


                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/rl_staff_timing"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_16"
                        android:background="@drawable/rounded_gray_border_8dp"
                        android:padding="@dimen/size_8">

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tv_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="@dimen/size_5"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/staff_timing"
                            android:textColor="@color/black_4a4a4a"
                            android:textStyle="normal"
                            app:textType="BODY_1"
                            tools:ignore="RelativeOverlap" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_heading"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/is_the_staff_available_for_home_service"
                            android:textFontWeight="600"
                            android:textSize="10sp" />

                        <com.framework.views.customViews.CustomImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_arrow_right_grey" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rl_scheduled_breaks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/size_16"
                        android:background="@drawable/rounded_gray_border_8dp"
                        android:padding="@dimen/size_8">

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tv_scheduled_break_heading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/size_5"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/scheduled_break"
                            android:textColor="@color/black_4a4a4a"
                            android:textStyle="normal"
                            app:textType="BODY_1"
                            tools:ignore="RelativeOverlap" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_scheduled_break_heading"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/open_sans"
                            android:text="@string/leaves_to_be_taken_by_the_staff"
                            android:textFontWeight="600"
                            android:textSize="10sp" />

                        <com.framework.views.customViews.CustomImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="end"
                            android:src="@drawable/ic_arrow_right_grey" />

                    </RelativeLayout>
                </LinearLayout>

                <FrameLayout
                    style="@style/ButtonStyle.Rounded.Solid"
                    android:id="@+id/fl_save_publish"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/size_16">

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/ctv_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:text="@string/save_and_publish"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textFontWeight="600"
                        app:textType="BODY_1" />
                </FrameLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>