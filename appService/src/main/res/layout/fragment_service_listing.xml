<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data></data>

  <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.framework.views.viewgroups.BaseRecyclerView
      android:id="@+id/baseRecyclerView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:clipToPadding="false"
      android:orientation="vertical"
      android:paddingBottom="@dimen/size_80"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_behavior="@string/appbar_scrolling_view_behavior"
      tools:itemCount="10"
      tools:listitem="@layout/recycler_item_service_listing" />

<!--    <include-->
<!--      android:id="@+id/service_listing_empty"-->
<!--      layout="@layout/fragment_service_listing_empty"-->
<!--      android:visibility="gone" />-->

    <LinearLayout
      android:id="@+id/ll_action_buttons"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:layout_marginHorizontal="16dp"
      android:orientation="horizontal"
      android:paddingBottom="@dimen/size_14"
      android:visibility="visible">

      <com.framework.views.customViews.CustomButton
        android:id="@+id/cb_add_service"
        style="@style/ButtonStyle.Rounded.Solid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_44"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="@string/add_service" />
      <!--            <com.framework.views.customViews.CustomButton-->
      <!--                android:layout_width="0dp"-->
      <!--                android:layout_height="@dimen/size_40"-->
      <!--                android:id="@+id/cb_sort_and_filter"-->
      <!--                android:layout_weight="1"-->
      <!--                android:background="@drawable/rounded_stroke_orange_4_transparent"-->
      <!--                android:gravity="center"-->
      <!--                android:text="@string/sort_and_filter"-->
      <!--                android:textAllCaps="true"-->
      <!--                android:textColor="@color/yellow_ffb900" />-->

    </LinearLayout>

    <ProgressBar
      android:id="@+id/progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:indeterminate="true"
      android:theme="@style/progressBar" />
  </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>