<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/empty_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <com.framework.views.customViews.CustomImageView
        android:id="@+id/iv_staff_image"
        android:layout_width="@dimen/size_140"
        android:layout_height="@dimen/size_140"
        android:src="@drawable/ic_staff_image" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:text="@string/no_staff_member_listed_yet"
        android:textColor="@color/black_4a4a4a"
        app:textType="HEADING_4" />

      <com.framework.views.customViews.CustomTextView
        style="@style/TextDescription"
        android:layout_marginTop="@dimen/size_6"
        android:gravity="center"
        android:text="@string/staff_listing_paragraph"
        app:textType="BODY_1" />

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_50"
        android:layout_marginTop="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_50">

        <com.framework.views.customViews.CustomButton
          android:id="@+id/btn_add_staff"
          style="@style/ButtonStyle.Rounded.Solid"
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_42"
          android:background="@drawable/bg_transparent_orange"
          android:gravity="center"
          android:stateListAnimator="@null"
          android:text="@string/add_a_staff"
          android:textAllCaps="false"
          android:textColor="@color/colorAccentLight" />
      </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size_36"
      android:layout_marginBottom="@dimen/size_6"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

      <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/size_80"
        android:layout_height="@dimen/size_86"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/lotty_ripple" />

      <com.framework.views.customViews.CustomCardView
        android:id="@+id/btn_how_work"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/size_26"
        android:layout_marginEnd="@dimen/size_42"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@color/colorAccentLight"
        app:cardCornerRadius="@dimen/size_24"
        app:cardElevation="0dp">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <com.framework.views.customViews.CustomImageView
            android:layout_width="@dimen/size_34"
            android:layout_height="@dimen/size_34"
            android:layout_marginStart="@dimen/size_8"
            app:srcCompat="@drawable/ic_ria_circle" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/see_how_it_works"
            android:paddingEnd="@dimen/size_4"
            android:textColor="@color/white"
            app:fontFamily="@font/semi_bold"
            app:textType="HEADING_6" />
        </LinearLayout>
      </com.framework.views.customViews.CustomCardView>
    </FrameLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>