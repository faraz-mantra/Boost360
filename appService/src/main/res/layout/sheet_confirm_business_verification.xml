<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:orientation="vertical">

    <com.framework.views.customViews.CustomImageView
        android:id="@+id/iv_close"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:src="@drawable/ic_close_dark_gray" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:background="@drawable/bg_rounded_top_strock"
        android:orientation="vertical"
        android:padding="@dimen/size_24">


      <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_account"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/semi_bold"
          android:text="Please confirm the information\nbelow"
          android:textColor="@color/black_4a4a4a"
          app:textType="HEADING_7" />

      <com.framework.views.customViews.CustomTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Information once confirmed will be sent for\ninternal verification."
          android:textColor="@color/gray_828282"
          app:textType="CAPTION" />

      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_16"
          android:orientation="horizontal">

        <com.framework.views.customViews.CustomCardView
            android:layout_width="@dimen/size_140"
            android:layout_height="@dimen/size_80"
            app:cardCornerRadius="@dimen/size_8"
            app:cardElevation="0dp">

          <com.framework.views.customViews.CustomImageView
              android:id="@+id/iv_pan_card_image"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scaleType="fitXY"
              android:src="@drawable/pan_card_dummy" />
        </com.framework.views.customViews.CustomCardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/size_20"
            android:orientation="vertical">

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="@string/pan_number"
              android:textColor="@color/warm_grey"
              app:fontFamily="@font/regular"
              app:textType="CAPTION" />

          <com.framework.views.customViews.CustomTextView
              android:id="@+id/heading_pan_number"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="AAGCP768M"
              android:textColor="@color/greyish_brown"
              app:fontFamily="@font/regular"
              app:textType="HEADING_5" />
        </androidx.appcompat.widget.LinearLayoutCompat>
      </androidx.appcompat.widget.LinearLayoutCompat>


      <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_20"
          android:includeFontPadding="false"
          android:text="Name on PAN Card"
          android:textColor="@color/warm_grey"
          app:fontFamily="@font/regular"
          app:textType="CAPTION" />

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/heading_pan_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:includeFontPadding="false"
          android:text="PROPIZIO REAL ESTATE PRIVATE LIMITED"
          android:textColor="@color/greyish_brown"
          app:fontFamily="@font/regular"
          app:textType="HEADING_5" />

      <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_20"
          android:includeFontPadding="false"
          android:text="GST details"
          android:textColor="@color/warm_grey"
          app:fontFamily="@font/regular"
          app:textType="CAPTION" />

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/gst_detail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:includeFontPadding="false"
          android:text="Not available"
          android:textColor="@color/greyish_brown"
          app:fontFamily="@font/regular"
          app:textType="HEADING_5" />


      <com.framework.views.customViews.CustomButton
          android:id="@+id/btn_submit_submit"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_26"
          android:background="@drawable/bg_button_proceed"
          android:fontFamily="@font/semi_bold"
          android:gravity="center"
          android:paddingVertical="@dimen/size_12"
          android:stateListAnimator="@null"
          android:text="@string/confirm_and_submit"
          android:textAllCaps="false"
          android:textColor="@color/white"
          app:textType="HEADING_6" />

    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>