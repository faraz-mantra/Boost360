<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data></data>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottoms_sheet_top20dp_white"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@android:color/transparent"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/size_10">


      <com.framework.views.customViews.CustomImageView
        android:id="@+id/civ_cancel"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:includeFontPadding="false"
        android:padding="@dimen/size_6"
        android:tint="@color/grey_dark_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cross_grey" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <com.framework.views.customViews.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_success" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/txt_message"
        android:fontFamily="@font/open_sans"
        android:text="@string/successfully_saved"
        android:textAllCaps="true"
        android:textColor="@color/yellow_ffb900"
        android:textSize="20sp"
        android:textStyle="bold" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_20"
        android:layout_marginTop="@dimen/size_8"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="Your product is successfully saved and published live on your website. Click on below button to see it live or share with in your connections."
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="12sp"
        tools:textColor="@color/warm_grey" />

      <com.framework.views.customViews.CustomButton
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_36"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_8"
        android:background="@drawable/bg_button_proceed_4"
        android:drawableEnd="@drawable/ic_arrow_top_right"
        android:drawablePadding="@dimen/size_8"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:paddingHorizontal="@dimen/size_20"
        android:stateListAnimator="@null"
        android:text="@string/view_on_website"
        android:textAllCaps="true"
        android:id="@+id/visit_website"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_20"
        android:padding="@dimen/size_10">

        <com.framework.views.roundedimageview.RoundedImageView
          android:id="@+id/btn_fb"
          android:layout_width="27dp"
          android:layout_height="27dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginStart="@dimen/size_30"
          android:gravity="center"
          android:src="@drawable/ic_facebook"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintStart_toEndOf="@+id/btn_cancel"
          app:layout_constraintTop_toTopOf="parent"
          app:riv_oval="true" />

        <com.framework.views.roundedimageview.RoundedImageView
          android:id="@+id/btn_twitter"
          android:layout_width="27dp"
          android:layout_height="27dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginStart="@dimen/size_10"
          android:gravity="center"
          android:src="@drawable/ic_twitter_service"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintStart_toEndOf="@+id/btn_fb"
          app:layout_constraintTop_toTopOf="parent"
          app:riv_oval="true" />

        <com.framework.views.roundedimageview.RoundedImageView
          android:id="@+id/btn_whatsapp"
          android:layout_width="27dp"
          android:layout_height="27dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginStart="@dimen/size_10"
          android:gravity="center"
          android:src="@drawable/ic_whats_app_service"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintStart_toEndOf="@+id/btn_twitter"
          app:layout_constraintTop_toTopOf="parent"
          app:riv_oval="true" />

        <com.framework.views.roundedimageview.RoundedImageView
          android:id="@+id/btn_linkedin"
          android:layout_width="27dp"
          android:layout_height="27dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginStart="@dimen/size_10"
          android:gravity="center"
          android:src="@drawable/ic_linkedin_service"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintStart_toEndOf="@+id/btn_whatsapp"
          app:layout_constraintTop_toTopOf="parent"
          app:riv_oval="true" />

        <com.framework.views.roundedimageview.RoundedImageView
          android:id="@+id/btn_mail"
          android:layout_width="27dp"
          android:layout_height="27dp"
          android:layout_gravity="center_horizontal"
          android:layout_marginStart="@dimen/size_10"
          android:gravity="center"
          android:src="@drawable/ic_email_service"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintStart_toEndOf="@+id/btn_linkedin"
          app:layout_constraintTop_toTopOf="parent"
          app:riv_oval="true" />

        <com.framework.views.customViews.CustomTextView
          android:id="@id/btn_cancel"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/size_36"
          android:layout_gravity="center_horizontal"
          android:fontFamily="@font/semi_bold"
          android:gravity="center"
          android:text="@string/share_"
          android:textSize="12sp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.248"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintVertical_bias="0.2" />


      </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

  </androidx.appcompat.widget.LinearLayoutCompat>

</layout>