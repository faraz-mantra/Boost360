<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="@color/white_e5e5e5">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_160"
        android:background="@color/toolbar_grey"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/aboutPaymentGatewayCard"
        app:cardBackgroundColor="@color/white"
        android:layout_width="@dimen/size_360"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/size_10"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view"
        android:layout_marginHorizontal="@dimen/size_20">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/size_16">
            <!--        Heading with icon     -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <com.framework.views.customViews.CustomImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_info_circular_orange_filled"/>
                <View
                    android:layout_width="@dimen/size_4"
                    android:layout_height="@dimen/size_2"/>
                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_this_add_on"
                    android:textColor="@color/black_4a4a4a"
                    android:fontFamily="@font/regular"
                    app:textType="SUBHEADING_1"/>
            </LinearLayout>
            <com.framework.views.customViews.CustomTextView
                android:paddingHorizontal="@dimen/size_30"
                android:paddingVertical="@dimen/size_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gateway_description"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:textColor="@color/grey_text_color"
                app:textType="BODY_3"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1"
                android:background="@color/gray_cecece"/>

            <LinearLayout
                android:id="@+id/inactive_payment_gateway_terms_toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/size_8"
                android:paddingHorizontal="@dimen/size_20"
                android:paddingBottom="@dimen/size_16"
                android:gravity="center">
                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/important_colon"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/grey_text_color"
                    android:fontFamily="@font/regular"
                    android:layout_weight="0.35"/>
                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_on_terms_and_conditions"
                    android:textColor="@color/grey_text_color"
                    android:fontFamily="@font/regular"
                    android:layout_weight="0.35"/>
                <com.framework.views.customViews.CustomImageView
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    app:srcCompat="@drawable/ic_grey_drop_down"
                    android:paddingLeft="@dimen/size_2"
                    android:paddingTop="@dimen/size_2"
                    android:layout_weight="0.30"/>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

      <LinearLayout
          android:id="@+id/ll_add_on_not_active"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          app:layout_constraintTop_toBottomOf="@+id/aboutPaymentGatewayCard"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:gravity="center"
          android:paddingHorizontal="@dimen/size_24">
          <androidx.constraintlayout.widget.ConstraintLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              >
              <com.framework.views.customViews.CustomImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  app:srcCompat="@drawable/ic_circle_white"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:elevation="@dimen/size_4"/>
              <com.framework.views.customViews.CustomImageView
                  android:layout_width="@dimen/size_40"
                  android:layout_height="@dimen/size_30"
                  app:srcCompat="@drawable/ic_custom_payment_lock"
                  app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:elevation="@dimen/size_6"/>
          </androidx.constraintlayout.widget.ConstraintLayout>
          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/add_on_not_active"
              app:textType="HEADING_5"
              android:fontFamily="@font/regular"
              android:textColor="@color/black_4a4a4a"
              android:textStyle="bold"/>
          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/boost_not_added_message"
              android:textColor="@color/warm_grey"
              android:textStyle="bold"
              android:fontFamily="@font/regular"
              android:gravity="center"
              android:layout_marginTop="@dimen/size_8"
              android:layout_marginBottom="@dimen/size_14"/>
          <com.framework.views.customViews.CustomTextView
              style="@style/ButtonStyle.Rounded"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/view_in_add_on_store"
              android:textAllCaps="true"
              android:paddingVertical="@dimen/size_8"
              android:paddingHorizontal="@dimen/size_30"
              />
      </LinearLayout>

<!--    <include layout="@layout/bottom_sheet_terms_payment_gateway"-->
<!--        android:id="@+id/bottom_sheet_gateway_terms"-->
<!--        app:layout_constraintTop_toBottomOf="@id/ll_add_on_not_active"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintLeft_toLeftOf="@id/ll_add_on_not_active"-->
<!--        app:layout_constraintRight_toRightOf="@id/ll_add_on_not_active"/>-->
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>