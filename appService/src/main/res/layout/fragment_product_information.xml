<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
      android:id="@+id/nestedScrollView"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:background="@color/white"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingStart="@dimen/size_20"
          android:paddingEnd="@dimen/size_20">

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:drawablePadding="@dimen/size_4"
            android:includeFontPadding="false"
            android:text="@string/stock_availability"
            android:textColor="@color/black_4a4a4a"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_3" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/manage_your_product_s_availability_on_your_website"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            app:fontFamily="@font/regular" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatSpinner
              android:id="@+id/spinner_stock"
              android:layout_width="@dimen/size_0"
              android:layout_height="@dimen/size_40"
              android:layout_weight="1"
              android:background="@drawable/spinner_catalog" />

            <Space
              android:layout_width="@dimen/size_0"
              android:layout_height="@dimen/size_0"
              android:layout_weight=".1" />

            <LinearLayout
              android:id="@+id/ll_stock_change"
              android:layout_width="@dimen/size_0"
              android:layout_height="@dimen/size_40"
              android:layout_weight="1"
              android:background="@drawable/bg_white_solid_grey_rounded"
              android:backgroundTint="#f6f6f6"
              android:orientation="horizontal">


              <com.framework.views.customViews.CustomImageView
                android:id="@+id/civ_decrese_stock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingHorizontal="@dimen/size_20"
                android:src="@drawable/ic_minus"
                app:tint="#FF4200" />

              <com.framework.views.customViews.CustomTextView
                android:id="@+id/ctv_current_stock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-5dp"
                android:layout_marginEnd="-5dp"
                android:layout_weight="1.3"
                android:background="@drawable/bg_text_rounded"
                android:gravity="center"
                android:text="10"
                android:textSize="12.57sp" />

              <com.framework.views.customViews.CustomImageView
                android:id="@+id/civ_increase_stock"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:paddingHorizontal="@dimen/size_20"
                android:src="@drawable/ic_plus_btn"
                app:tint="@color/light_green" />
            </LinearLayout>
          </androidx.appcompat.widget.LinearLayoutCompat>

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_4"
              android:includeFontPadding="false"
              android:text="@string/brand_name_if_available"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="@string/add_the_brand_name_associated_with_this_product"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextField
            android:id="@+id/edt_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/bg_rect_edit_txt"
            android:hint="@string/type_a_brand_name"
            android:inputType="textCapWords"
            android:padding="@dimen/size_12"
            android:singleLine="true"
            android:textColor="@color/warm_grey_10"
            android:textColorHint="@color/primary_grey"
            tools:ignore="UnusedAttribute" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_36"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="@string/secondary_images"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/tvCustomerAddress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/size_2"
              android:drawablePadding="@dimen/size_4"
              android:includeFontPadding="false"
              android:text="@string/_8_max_jpeg_png_800x800px"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/add_more_images_for_the_product"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            app:fontFamily="@font/regular" />

          <com.framework.views.viewgroups.BaseRecyclerView
            android:id="@+id/rvAdditionalDocs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="3"
            tools:listitem="@layout/item_preview_image" />

          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_click_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:background="@drawable/shape_blue_stroke_rect_title_bkg"
            android:padding="@dimen/size_14">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="@string/add_secondary_images"
              android:textColor="@color/dodger_blue_two"
              app:drawableLeftCompat="@drawable/ic_small_add_images"
              app:fontFamily="@font/semi_bold"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:textAllCaps="true"
              app:textType="BODY_1" />


          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="@string/applicable_gst_slab"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/size_4"
              android:drawablePadding="4dp"
              android:gravity="center"
              android:includeFontPadding="false"
              android:text="@string/for_invoice"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextField
            android:id="@+id/edt_gst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/bg_rect_edit_txt"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_grey_drop_down"
            android:drawableTint="@color/pinkish_grey"
            android:editable="false"
            android:focusable="false"
            android:hint="@string/_0"
            android:padding="@dimen/size_12"
            android:singleLine="true"
            android:textColor="@color/warm_grey_10"
            android:textColorHint="@color/primary_grey"
            tools:ignore="UnusedAttribute" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_4"
              android:drawableTint="@color/orange"
              android:includeFontPadding="false"
              android:text="@string/product_tags"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="@string/tags_help_site_visitors_filter_products_in_your_catalogue"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipsproduct"
            style="@style/Widget.MaterialComponents.ChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacing="8dp"
            app:singleSelection="false">

          </com.google.android.material.chip.ChipGroup>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/bg_rect_edit_txt">

            <com.framework.views.customViews.CustomTextField
              android:id="@+id/edt_product_tag"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:background="@null"
              android:hint="@string/type_a_tag_and_press_add"
              android:inputType="textCapWords"
              android:maxEms="3"
              android:padding="@dimen/size_12"
              android:singleLine="true"
              android:textColor="@color/warm_grey_10"
              android:textColorHint="@color/primary_grey"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@id/btn_add_tag"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="UnusedAttribute" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/btn_add_tag"
              android:layout_width="@dimen/size_80"
              android:layout_height="0dp"
              android:background="@drawable/shape_blue_stroke_rect_title_bkg"
              android:clickable="true"
              android:gravity="center"
              android:text="@string/add"
              android:textColor="@color/dodger_blue_two"
              app:fontFamily="@font/semi_bold"
              app:layout_constraintBottom_toBottomOf="@id/edt_product_tag"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="@id/edt_product_tag"
              app:textAllCaps="true"
              app:textType="BODY_1" />

          </androidx.constraintlayout.widget.ConstraintLayout>


          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:drawablePadding="@dimen/size_4"
            android:drawableTint="@color/orange"
            android:includeFontPadding="false"
            android:text="@string/key_specifications"
            android:textColor="@color/black_4a4a4a"
            app:drawableEndCompat="@drawable/ic_question_circular_blue"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_3" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/it_appears_at_the_end_of_the_product_name_as_it_s_variant"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            app:fontFamily="@font/regular" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_38"
            android:layout_marginTop="@dimen/size_5"
            android:layout_marginBottom="@dimen/size_5"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomEditText
              android:id="@+id/spec_key"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.3"
              android:background="@android:color/transparent"
              android:hint="@string/e_g_color"
              android:maxLines="1"
              android:paddingStart="@dimen/size_8"
              android:singleLine="true"
              android:textColor="@color/greyish_brown"
              android:textColorHint="@color/primary_grey"
              android:textSize="14sp" />

            <View
              android:layout_width="1dp"
              android:layout_height="match_parent"
              android:background="@color/placeholder_bg" />

            <com.framework.views.customViews.CustomEditText
              android:id="@+id/spec_value"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:background="@android:color/transparent"
              android:hint="@string/yellow_and_orange"
              android:maxLines="1"
              android:paddingStart="@dimen/size_8"
              android:singleLine="true"
              android:textColor="@color/greyish_brown"
              android:textColorHint="@color/primary_grey"
              android:textSize="14sp" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:drawablePadding="@dimen/size_4"
            android:drawableTint="@color/orange"
            android:includeFontPadding="false"
            android:text="@string/other_specifications"
            android:textColor="@color/black_4a4a4a"
            app:drawableEndCompat="@drawable/ic_question_circular_blue"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_3" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="@string/this_list_appears_inside_the_product_details_page_on_your_website"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            app:fontFamily="@font/regular" />

          <com.framework.views.viewgroups.BaseRecyclerView
            android:id="@+id/rvSpecification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:scrollbars="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:itemCount="2"
            tools:listitem="@layout/row_layout_added_specs" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/btn_add_specification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_blue_stroke_rect_title_bkg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minWidth="@dimen/size_100"
            android:padding="@dimen/size_10"
            android:text="@string/add_specification"
            android:textColor="@color/dodger_blue_two"
            app:fontFamily="@font/semi_bold"
            app:layout_constraintBottom_toBottomOf="@id/edt_product_tag"
            app:layout_constraintRight_toRightOf="@id/edt_product_tag"
            app:layout_constraintTop_toTopOf="@id/edt_product_tag"
            app:textAllCaps="true"
            app:textType="BODY_1" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_4"
              android:includeFontPadding="false"
              android:text="Product Packing dimensions"
              android:textColor="@color/black_4a4a4a"
              android:visibility="visible"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="@string/this_information_is_required_if_you_select"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              android:visibility="visible"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/rounded_stroke_grey"
            android:paddingHorizontal="@dimen/size_16"
            android:paddingVertical="@dimen/size_10"
            android:visibility="visible">

            <androidx.appcompat.widget.LinearLayoutCompat
              android:id="@+id/ll_top_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_6dp"
              android:orientation="horizontal">

              <com.framework.views.customViews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="@dimen/size_4"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:includeFontPadding="false"
                android:text="@string/package_weight"
                android:textColor="@color/warm_grey"
                android:textSize="12sp"
                app:fontFamily="@font/regular" />

              <Space
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_0"
                android:layout_weight=".1" />

              <com.framework.views.customViews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="@dimen/size_4"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:includeFontPadding="false"
                android:inputType="numberDecimal"
                android:text="@string/package_length"
                android:textColor="@color/warm_grey"
                android:textSize="12sp"
                app:fontFamily="@font/regular" />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
              android:id="@+id/dropdown_wl"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/ll_top_title"
              android:layout_marginTop="@dimen/_6dp"
              android:orientation="horizontal">

              <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:background="@drawable/rounded_stroke_grey"
                android:orientation="horizontal">

                <com.framework.views.customViews.CustomTextView
                  android:id="@+id/spinner_weight"
                  android:layout_width="0dp"
                  android:layout_height="@dimen/size_40"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="0.3"
                  android:background="@drawable/bg_spinner_gray"
                  android:gravity="start|center_vertical"
                  android:paddingStart="@dimen/size_16"
                  android:text="@string/kgs"
                  android:textSize="12sp" />


                <com.framework.views.customViews.CustomEditText
                  android:id="@+id/cet_weight"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="0.3"
                  android:background="@android:color/transparent"
                  android:gravity="center"
                  android:hint="@string/_0_12"
                  android:inputType="numberDecimal"
                  android:maxLines="1"
                  android:paddingStart="@dimen/size_8"
                  android:singleLine="true"
                  android:textColor="@color/greyish_brown"
                  android:textColorHint="@color/primary_grey"
                  android:textSize="14sp" />

              </LinearLayout>


              <Space
                android:layout_width="@dimen/size_0"
                android:layout_height="@dimen/size_0"
                android:layout_weight="0.1" />

              <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40"
                android:layout_weight="1"
                android:background="@drawable/rounded_stroke_grey"
                android:orientation="horizontal">

                <com.framework.views.customViews.CustomTextView
                  android:id="@+id/spinner_length"
                  android:layout_width="0dp"
                  android:layout_height="@dimen/size_40"
                  android:layout_gravity="center_vertical"
                  android:layout_weight="0.3"
                  android:background="@drawable/bg_spinner_gray"
                  android:gravity="start|center_vertical"
                  android:paddingStart="@dimen/size_16"
                  android:text="@string/inch"
                  android:textSize="12sp" />


                <com.framework.views.customViews.CustomEditText
                  android:id="@+id/cet_length"
                  android:layout_width="0dp"
                  android:layout_height="match_parent"
                  android:layout_weight="0.3"
                  android:background="@android:color/transparent"
                  android:gravity="center"
                  android:hint="@string/_9"
                  android:inputType="numberDecimal"
                  android:maxLines="1"
                  android:paddingStart="@dimen/size_8"
                  android:singleLine="true"
                  android:textColor="@color/greyish_brown"
                  android:textColorHint="@color/primary_grey"
                  android:textSize="14sp" />

              </LinearLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
              android:id="@+id/ll_bottom_title"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/dropdown_wl"
              android:layout_marginTop="@dimen/_6dp"
              android:orientation="horizontal">

              <com.framework.views.customViews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start|bottom"
                android:layout_marginStart="@dimen/size_4"
                android:layout_weight="1"
                android:drawablePadding="4dp"
                android:includeFontPadding="false"
                android:text="@string/package_height"
                android:textColor="@color/warm_grey"
                android:textSize="12sp"
                app:fontFamily="@font/regular" />

              <Space
                android:layout_width="@dimen/size_0"
