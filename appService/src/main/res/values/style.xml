<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppTheme.cataloge" parent="Theme.MaterialComponents.NoActionBar.Bridge">
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryDark">@color/color_primary_dark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlNormal">@color/colorAccent</item>
    <item name="android:windowDisablePreview">true</item>
    <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
    <item name="android:homeAsUpIndicator">@drawable/ic_arrow_left_30</item>
    <item name="searchViewStyle">@style/SearchView</item>
  </style>

  <style name="AppTheme.account" parent="AppTheme.cataloge">
    <item name="android:editTextColor">@color/black</item>
    <item name="android:textColorHint">@color/light_grey_two</item>
  </style>

  <style name="AppTheme_payment_dark" parent="AppTheme.cataloge">
    <item name="android:editTextColor">@color/black</item>
  </style>

  <style name="AppTheme.payment" parent="AppTheme.cataloge">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="android:editTextColor">@color/black</item>
  </style>

  <style name="AppTheme_add_account" parent="AppTheme.account">
    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryDark">@color/white</item>
  </style>

  <style name="AppTheme_payment_gateway" parent="AppTheme.account">
    <item name="colorPrimary">@color/orange</item>
    <item name="colorPrimaryDark">@color/orange</item>
  </style>

  <style name="CustomBottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="BottomSheetTheme" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
  </style>

  <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
    <item name="submitBackground">@android:color/transparent</item>
    <item name="queryBackground">@android:color/transparent</item>
    <item name="searchHintIcon">@null</item>
  </style>

  <style name="ActiveTheme" parent="Base.Theme.AppCompat">
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlNormal">@color/placeholder_bg</item>
    <item name="colorControlActivated">@color/colorAccent</item>
  </style>

  <style name="TextFieldStyle">
    <item name="fontFamily">@font/regular</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/greyish_brown</item>
    <item name="android:layout_marginBottom">@dimen/size_16</item>
    <item name="textType">HEADING_6</item>
    <item name="android:maxLines">1</item>
    <item name="android:inputType">text</item>
    <item name="android:drawablePadding">@dimen/size_8</item>
  </style>
  
  <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
    <item name="android:colorPrimary">@color/white</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlNormal">@color/colorAccent</item>
    <item name="colorSurface">@color/white</item>
    <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertTitleTextStyle</item>
    <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertBodyTextStyle</item>
    <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertPositiveButtonStyle</item>
    <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertNegativeButtonStyle</item>
  </style>

  <style name="MaterialAlertTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
    <item name="android:textColor">@color/black_2A2A2A</item>
<!--    <item name="android:textStyle">bold</item>-->
    <item name="android:textSize">20sp</item>
  </style>
  <style name="MaterialAlertBodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
    <item name="android:textColor">@color/grey_text_color</item>
    <item name="android:textSize">14sp</item>
  </style>
  <style name="MaterialAlertPositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
    <item name="android:textColor">@color/grey_text_color</item>
  </style>
  <style name="MaterialAlertNegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
    <item name="android:textColor">@color/colorAccent</item>
  </style>

</resources>