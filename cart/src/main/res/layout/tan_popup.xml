<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/tan_popup_outer_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#1d000000"
  android:clickable="true"
  android:focusable="true"
  android:orientation="vertical">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/enter_tan_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_top_bg"
    android:paddingStart="@dimen/_15sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingEnd="@dimen/_15sdp"
    android:paddingBottom="@dimen/_10sdp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <TextView
      android:id="@+id/tan_layout_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:fontFamily="@font/semi_bold"
      android:paddingTop="@dimen/_5sdp"
      android:paddingEnd="@dimen/_5sdp"
      android:paddingBottom="@dimen/_15sdp"
      android:text="Fill in your TAN number"
      android:textColor="@color/common_text_color"
      android:textSize="@dimen/_15sdp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <EditText
      android:id="@+id/entered_tan_value"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/edittext_bottom_line_bg"
      android:focusable="true"
      android:hint="Type your TAN here"
      android:imeOptions="actionDone"
      android:inputType="text"
      android:paddingBottom="@dimen/_5sdp"
      android:textColorHint="#bbbbbb"
      android:textCursorDrawable="@drawable/color_cursor"
      android:textSize="@dimen/_12sdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tan_layout_title" />

    <TextView
      android:id="@+id/tan_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/_10sdp"
      android:paddingEnd="@dimen/_10sdp"
      android:text="This Section is for filling your TAN information."
      android:textColor="@color/dot_grey"
      android:textSize="@dimen/_8sdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/entered_tan_value" />


    <TextView
      android:id="@+id/tan_submit"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/_30sdp"
      android:background="@drawable/orange_button_click_effect"
      android:fontFamily="@font/semi_bold"
      android:gravity="center"
      android:paddingTop="@dimen/_10sdp"
      android:paddingBottom="@dimen/_10sdp"
      android:text="Save and Continue"
      android:textAllCaps="true"
      android:textColor="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/tan_description" />


  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>