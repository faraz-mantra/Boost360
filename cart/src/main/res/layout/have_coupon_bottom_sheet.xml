<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/curve_top_bg"
  android:orientation="vertical">

  <androidx.appcompat.widget.AppCompatTextView
    android:id="@+id/coupon_code_header_tv"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="25dp"
    android:fontFamily="@font/semi_bold"
    android:text="Have a coupon code?"
    android:textColor="#4A4A4A"
    android:textSize="@dimen/txt_16sp" />

  <androidx.appcompat.widget.AppCompatImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="25dp"
    android:layout_marginEnd="22dp"
    android:src="@drawable/ic_cart_applied_coupon_dialog_close" />

  <com.google.android.material.textfield.TextInputLayout
    android:id="@+id/cart_filled_Text_Field"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/coupon_code_header_tv"
    android:layout_marginStart="15dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="15dp"
    android:hint="@string/enter_coupon_code"
    app:boxBackgroundColor="@color/light_grey_2">

    <com.google.android.material.textfield.TextInputEditText
      android:id="@+id/cart_coupon_edit_text"
      android:layout_width="match_parent"
      android:layout_height="48dp"
      android:hint="Enter Coupon Code" />

  </com.google.android.material.textfield.TextInputLayout>

  <androidx.appcompat.widget.AppCompatTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/cart_filled_Text_Field"
    android:layout_marginTop="25dp"
    android:background="#FFB900"
    android:fontFamily="@font/semi_bold"
    android:gravity="center"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:text="Apply coupon"
    android:textColor="@color/white"
    android:textSize="@dimen/txt_14sp" />


</RelativeLayout>