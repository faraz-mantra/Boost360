<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/selectWebsiteLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/curve_top_white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/curve_top_white"
        android:paddingStart="@dimen/dimen_24dp"
        android:paddingEnd="@dimen/dimen_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="@dimen/dimen_24dp"
        >

        <TextView
            android:id="@+id/tv_title_select_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/bold"
            android:gravity="center_horizontal"
            android:lineHeight="26dp"
            android:text="Select your website address"
            android:textColor="@color/main_color_gray_dk"
            android:textFontWeight="700"
            android:textSize="@dimen/txt_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle_select_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/regular"
            android:lineHeight="22dp"
            android:lineSpacingExtra="6dp"
            android:text="Custom domain with Free SSL Security"
            android:textColor="#333333"
            android:textFontWeight="400"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_select_website" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle_select_website">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/browser_background" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_24dp"
                        android:layout_marginTop="90dp"
                        android:elevation="2dp"
                        android:src="@drawable/green_tick"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_empty_selected_website"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginTop="100dp"
                        android:background="@drawable/round_corner_grey"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:lineHeight="21.79dp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="yourbusiness.com"
                        android:textColor="#4A4A4A"
                        android:textFontWeight="700"
                        android:textSize="30sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_explore_select_website1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="24dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="@font/regular"
                        android:lineHeight="22dp"
                        android:lineSpacingExtra="6dp"
                        android:text="Explore more suggestions"
                        android:textColor="@color/colorAccent1"
                        android:textFontWeight="400"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_empty_selected_website" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/yellow_down_arrow"
                        app:layout_constraintBottom_toBottomOf="@id/tv_explore_select_website1"
                        app:layout_constraintStart_toEndOf="@id/tv_explore_select_website1"
                        app:layout_constraintTop_toTopOf="@id/tv_explore_select_website1" />

                    <TextView
                        android:id="@+id/selectWebsiteSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="@dimen/pad_20dp"
                        android:layout_marginBottom="@dimen/pad_20dp"
                        android:background="@drawable/disabled_button"
                        android:fontFamily="@font/semi_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/_30sdp"
                        android:paddingTop="10dp"
                        android:paddingEnd="@dimen/_30sdp"
                        android:paddingBottom="10dp"
                        android:text="Above domain selected"
                        android:textColor="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_explore_select_website1" />

                    <TextView
                        android:id="@+id/selectedWebsiteContinueButton"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/cta_button_hollow"
                        android:fontFamily="@font/regular"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Continue"
                        android:textColor="@color/colorAccent1"
                        android:textFontWeight="700"
                        android:textSize="@dimen/txt_16sp"
                        app:layout_constraintTop_toBottomOf="@id/selectWebsiteSubmit" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
