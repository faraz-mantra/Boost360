<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="4dp"
            android:backgroundTint="#FFF0C9">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


    <TextView
        android:id="@+id/popup_gst_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/copy_coupon_text_color"
        android:textStyle="normal"
        android:fontFamily="@font/regular"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="12dp"
        android:textFontWeight="400"
        android:text="Pre-tax price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/price1"
        app:layout_constraintTop_toTopOf="parent"/>

      <TextView
          android:id="@+id/price1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="12sp"
          android:textColor="@color/main_color_gray_dk"
          android:textStyle="normal"
          android:layout_marginStart="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_20sdp"
          android:layout_marginTop="12dp"
          android:text="3,500"
          android:textFontWeight="400"
          android:fontFamily="@font/regular"
          app:layout_constraintStart_toEndOf="@+id/popup_gst_value"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/popup_discount_value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/copy_coupon_text_color"
        android:fontFamily="@font/regular"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textFontWeight="400"
        android:text="Discount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/price2"
        app:layout_constraintTop_toBottomOf="@+id/popup_gst_value"/>

            <TextView
                android:id="@+id/price2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/main_color_gray_dk"
                android:textStyle="normal"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="12dp"
                android:text="-500"
                android:textFontWeight="400"
                android:fontFamily="@font/regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/popup_discount_value1"
                app:layout_constraintTop_toBottomOf="@+id/price1"/>


            <TextView
                android:id="@+id/popup_gst_value1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/copy_coupon_text_color"
                android:fontFamily="@font/regular"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textFontWeight="400"
                android:text="18% IGST"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/price3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/popup_discount_value1"/>

            <TextView
                android:id="@+id/price3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/main_color_gray_dk"
                android:textStyle="normal"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="12dp"
                android:text="3,000"
                android:textFontWeight="400"
                android:fontFamily="@font/regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/popup_gst_value1"
                app:layout_constraintTop_toBottomOf="@+id/price2"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

     <ImageView
         android:layout_width="10dp"
         android:layout_height="8dp"
         android:src="@drawable/ic_poly"
         android:scaleType="fitXY"
         android:elevation="5dp"
         android:backgroundTint="#FFF0C9"
         android:layout_marginStart="10dp"
         app:layout_constraintTop_toBottomOf="@+id/cv1"
         app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>