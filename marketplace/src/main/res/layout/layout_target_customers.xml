<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tan_popup_outer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/transparent"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_curve_bg"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/ll1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingStart="16dp"
           android:paddingEnd="16dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/radio_button1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent">

               <androidx.appcompat.widget.AppCompatImageView
                   android:id="@+id/img1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_marginTop="22dp"
                   android:layout_marginEnd="2dp"
                   android:layout_marginLeft="16dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:src="@drawable/ic_radio_buttons_grey" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="14dp"
                   android:text="In my city only "
                   android:fontFamily="@font/regular"
                   android:textColor="@color/colorPrimary1"
                   android:textFontWeight="400"
                   android:textSize="16sp"
                   app:layout_constraintTop_toTopOf="@+id/img1"
                   app:layout_constraintBottom_toBottomOf="@+id/img1"
                   app:layout_constraintStart_toEndOf="@+id/img1"/>

           </androidx.constraintlayout.widget.ConstraintLayout>



           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/radio_button2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/radio_button1">

               <androidx.appcompat.widget.AppCompatImageView
                   android:id="@+id/img2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_marginTop="22dp"
                   android:layout_marginEnd="2dp"
                   android:layout_marginLeft="16dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:src="@drawable/ic_radio_buttons_grey" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="14dp"
                   android:text="In my state only "
                   android:textColor="@color/colorPrimary1"
                   android:fontFamily="@font/regular"
                   android:textFontWeight="400"
                   android:textSize="16sp"
                   app:layout_constraintTop_toTopOf="@+id/img2"
                   app:layout_constraintBottom_toBottomOf="@+id/img2"
                   app:layout_constraintStart_toEndOf="@+id/img2"/>



           </androidx.constraintlayout.widget.ConstraintLayout>

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/radio_button3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/radio_button2"
               app:layout_constraintStart_toStartOf="parent">

               <androidx.appcompat.widget.AppCompatImageView
                   android:id="@+id/img3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_marginTop="22dp"
                   android:layout_marginEnd="2dp"
                   android:layout_marginLeft="16dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:src="@drawable/ic_radio_buttons_grey" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="14dp"
                   android:text="PAN India"
                   android:textColor="@color/colorPrimary1"
                   android:fontFamily="@font/regular"
                   android:textFontWeight="400"
                   android:textSize="16sp"
                   app:layout_constraintTop_toTopOf="@+id/img3"
                   app:layout_constraintBottom_toBottomOf="@+id/img3"
                   app:layout_constraintStart_toEndOf="@+id/img3"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/radio_button4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toStartOf="parent"

               app:layout_constraintTop_toBottomOf="@+id/radio_button3">

               <androidx.appcompat.widget.AppCompatImageView
                   android:id="@+id/img4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_marginTop="22dp"
                   android:layout_marginEnd="2dp"
                   android:layout_marginLeft="16dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:src="@drawable/ic_radio_buttons_grey" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="14dp"
                   android:text="Other location(s) "
                   android:fontFamily="@font/regular"
                   android:textFontWeight="400"
                   android:textColor="@color/colorPrimary1"
                   android:textSize="16sp"
                   app:layout_constraintTop_toTopOf="@+id/img4"
                   app:layout_constraintBottom_toBottomOf="@+id/img4"
                   app:layout_constraintStart_toEndOf="@+id/img4"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/hide_layut"
               android:layout_width="280dp"
               android:layout_height="wrap_content"
               android:visibility="gone"
               tools:visibility="visible"
               app:layout_constraintTop_toBottomOf="@+id/radio_button4"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:id="@+id/layout_keywords1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@drawable/edittext_selector2"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_marginTop="6dp">

                   <EditText
                       android:id="@+id/edt_places_tag"
                       android:layout_width="match_parent"
                       android:layout_height="44dp"
                       android:background="@drawable/dictate_edittext"
                       android:hint="@string/edittext_hint"
                       android:textSize="12sp"
                       android:inputType="textCapWords"
                       android:maxEms="3"
                       android:singleLine="true"
                       android:textColor="@color/warm_grey_10"
                       android:textColorHint="@color/primary_grey"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent"/>

                   <TextView
                       android:id="@+id/btn_add_tag1"
                       android:layout_width="@dimen/size_80"
                       android:layout_height="44dp"
                       android:layout_gravity="end"
                       android:background="@drawable/cta_button_hollow"
                       android:clickable="true"
                       android:gravity="center"
                       android:text="@string/add"
                       android:textColor="@color/ButtoncolorAccent"
                       app:fontFamily="@font/semi_bold"
                       app:textAllCaps="false"
                       app:textType="BODY_1"
                       app:layout_constraintTop_toTopOf="parent"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintBottom_toTopOf="@+id/chipsPlaces"/>


                   <com.google.android.material.chip.ChipGroup
                       android:id="@+id/chipsPlaces"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="10dp"
                       app:chipSpacing="8dp"
                       android:visibility="gone"
                       style="@style/Widget.MaterialComponents.ChipGroup"
                       android:layout_gravity="bottom"
                       app:singleSelection="false"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintBottom_toBottomOf="parent"
                       app:layout_constraintTop_toBottomOf="@+id/btn_add_tag1"
                       app:layout_constraintStart_toStartOf="parent">

                   </com.google.android.material.chip.ChipGroup>


               </androidx.constraintlayout.widget.ConstraintLayout>

           </androidx.constraintlayout.widget.ConstraintLayout>

       </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ll1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cta_button_click_effect"
                android:enabled="false"
                android:clickable="false"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/_12sdp"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>