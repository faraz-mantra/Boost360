<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tan_popup_outer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/transparent"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_curve_bg"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:id="@+id/ll1"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingStart="16dp"
           android:paddingEnd="16dp"
           app:layout_constraintTop_toTopOf="parent"
           app:layout_constraintStart_toStartOf="parent">

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/radio_button1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent">

               <androidx.appcompat.widget.AppCompatImageView
                   android:id="@+id/img1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_marginTop="22dp"
                   android:layout_marginEnd="2dp"
                   android:layout_marginLeft="16dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:src="@drawable/ic_radio_buttons_grey" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="14dp"
                   android:text="In my city only "
                   android:fontFamily="@font/regular"
                   android:textColor="@color/colorPrimary1"
                   android:textFontWeight="400"
                   android:textSize="16sp"
                   app:layout_constraintTop_toTopOf="@+id/img1"
                   app:layout_constraintBottom_toBottomOf="@+id/img1"
                   app:layout_constraintStart_toEndOf="@+id/img1"/>

           </androidx.constraintlayout.widget.ConstraintLayout>



           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/radio_button2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"

               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/radio_button1">

               <androidx.appcompat.widget.AppCompatImageView
                   android:id="@+id/img2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_marginTop="22dp"
                   android:layout_marginEnd="2dp"
                   android:layout_marginLeft="16dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:src="@drawable/ic_radio_buttons_grey" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="14dp"
                   android:text="In my state only "
                   android:textColor="@color/colorPrimary1"
                   android:fontFamily="@font/regular"
                   android:textFontWeight="400"
                   android:textSize="16sp"
                   app:layout_constraintTop_toTopOf="@+id/img2"
                   app:layout_constraintBottom_toBottomOf="@+id/img2"
                   app:layout_constraintStart_toEndOf="@+id/img2"/>



           </androidx.constraintlayout.widget.ConstraintLayout>

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/radio_button3"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintTop_toBottomOf="@+id/radio_button2"
               app:layout_constraintStart_toStartOf="parent">

               <androidx.appcompat.widget.AppCompatImageView
                   android:id="@+id/img3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_marginTop="22dp"
                   android:layout_marginEnd="2dp"
                   android:layout_marginLeft="16dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:src="@drawable/ic_radio_buttons_grey" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="14dp"
                   android:text="PAN India"
                   android:textColor="@color/colorPrimary1"
                   android:fontFamily="@font/regular"
                   android:textFontWeight="400"
                   android:textSize="16sp"
                   app:layout_constraintTop_toTopOf="@+id/img3"
                   app:layout_constraintBottom_toBottomOf="@+id/img3"
                   app:layout_constraintStart_toEndOf="@+id/img3"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/radio_button4"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               app:layout_constraintStart_toStartOf="parent"

               app:layout_constraintTop_toBottomOf="@+id/radio_button3">

               <androidx.appcompat.widget.AppCompatImageView
                   android:id="@+id/img4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignParentStart="true"
                   android:layout_marginTop="22dp"
                   android:layout_marginEnd="2dp"
                   android:layout_marginLeft="16dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"
                   android:src="@drawable/ic_radio_buttons_grey" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="14dp"
                   android:text="Other location(s) "
                   android:fontFamily="@font/regular"
                   android:textFontWeight="400"
                   android:textColor="@color/colorPrimary1"
                   android:textSize="16sp"
                   app:layout_constraintTop_toTopOf="@+id/img4"
                   app:layout_constraintBottom_toBottomOf="@+id/img4"
                   app:layout_constraintStart_toEndOf="@+id/img4"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

           <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/hide_layut"
               android:layout_width="280dp"
               android:layout_height="wrap_content"
               android:visibility="gone"
               tools:visibility="visible"
               app:layout_constraintTop_toBottomOf="@+id/radio_button4"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent">

               <androidx.appcompat.widget.AppCompatEditText
                   android:id="@+id/et_keywords"
                   android:layout_width="match_parent"
                   android:layout_height="75dp"
                   android:layout_marginTop="10dp"
                   android:hint="Enter prefer location "
                   android:background="@drawable/edittext_selector1"
                   android:focusable="true"
                   android:focusableInTouchMode="true"
                   android:fontFamily="@font/regular"
                   android:gravity="start"
                   android:textColor="@color/common_text_color"
                   android:textColorHint="@color/grey_BBBBBB"
                   android:textFontWeight="400"
                   android:textSize="@dimen/txt_14sp"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

       </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ll1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/btn1"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:background="@drawable/cta_button_click_effect"
                android:enabled="false"
                android:clickable="false"
                android:fontFamily="@font/bold"
                android:textSize="@dimen/_12sdp"
                android:text="Done"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>