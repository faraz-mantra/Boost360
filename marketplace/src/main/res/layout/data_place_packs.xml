    <LinearLayout
        android:id="@+id/layout_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/padding_10"
        android:orientation="vertical">

        <View
