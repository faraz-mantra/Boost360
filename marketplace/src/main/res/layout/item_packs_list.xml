<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="@dimen/_103sdp"
        android:layout_height="@dimen/_166sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:background="@drawable/clinic"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:lineSpacingExtra="1.3sp"
                    android:text="Customer Testimonials"
                    android:textColor="#4A4A4A"
                    android:textSize="@dimen/txt_13sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:text="60/month"
                    android:textColor="#4A4A4A"
                    android:textFontWeight="600"
                    android:textSize="@dimen/txt_12sp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>