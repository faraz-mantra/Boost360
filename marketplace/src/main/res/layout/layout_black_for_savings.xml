<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/pad_30dp"
        android:text="You are "
        android:layout_marginTop="42dp"
        android:textColor="@color/white"
        android:fontFamily="@font/regular"
        android:textFontWeight="600"
        android:textSize="@dimen/txt_18sp"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/tv1"
        android:text=" saving 35%"
        android:textColor="@color/white"
        android:textSize="@dimen/txt_18sp"
        android:textFontWeight="700"
        android:textAllCaps="true"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/regular"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:id="@+id/iv_green_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_green_bg_saving"
        app:layout_constraintTop_toTopOf="@id/tv2"
        app:layout_constraintStart_toStartOf="@id/tv2"
        app:layout_constraintEnd_toEndOf="@id/tv2"
        app:layout_constraintBottom_toBottomOf="@id/tv2"
        android:layout_marginStart="@dimen/pad_15dp"
        />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="on this pack "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        android:layout_marginStart="@dimen/pad_30dp"
        android:textColor="@color/white"
        android:fontFamily="@font/regular"
        android:textSize="@dimen/txt_18sp"
        android:textFontWeight="600"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="@dimen/pad_30dp"
        android:layout_marginTop="@dimen/pad_30dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#4A4A4A"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            >
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="â‚¹735"
               android:textColor="@color/white"
                android:textSize="@dimen/txt_16sp"
                android:textFontWeight="700"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/month"
                app:layout_constraintStart_toEndOf="@id/tv_price"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="#50FFFFFF"
                />
            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_price"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="parent"
                android:textColor="@color/white"
                android:text="If you buy 4 \nfeatures seperately"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bg_black_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/pad_30dp"
        app:layout_constraintTop_toBottomOf="@id/tv3"
        android:src="@drawable/ic_corner_bottom_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>