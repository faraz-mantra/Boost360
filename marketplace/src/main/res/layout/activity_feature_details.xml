<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/globalText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/transparent_black"
                app:expandedTitleTextAppearance="@color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="Facebook Lead Ads"
                app:titleEnabled="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/details_image_bg"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/transparent_black"
                        android:scaleType="centerCrop"
                        android:src="@drawable/feature_details_bg"
                        app:layout_constraintDimensionRatio="2:1.2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_details"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@color/transparent"
                    android:contentInsetStart="0dp"
                    android:contentInsetEnd="0dp"
                    app:contentInsetEnd="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/details_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent">

                        <LinearLayout
                            android:id="@+id/details_title_image_layout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/_4sdp"
                            android:background="@color/transparent"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintLeft_toRightOf="@+id/imageView121"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/title_image"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/imageViewCart121"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:id="@+id/featureDetailsCartIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/upgrade_nav_icon_background"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/cart48" />
                            </LinearLayout>


                            <com.nex3z.notificationbadge.NotificationBadge
                                android:id="@+id/badge121"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                app:nbMaxTextLength="2" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/title_appbar"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/open_sans_semibold"
                            android:paddingStart="@dimen/_10sdp"
                            android:text="@string/facebook_lead_ads_upto_75_leads"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_11sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageViewCart121"
                            app:layout_constraintStart_toEndOf="@+id/details_title_image_layout"
                            app:layout_constraintTop_toTopOf="parent" />

                        <LinearLayout
                            android:id="@+id/imageView121"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <!--                    <LinearLayout-->
                            <!--                        android:layout_width="wrap_content"-->
                            <!--                        android:layout_height="wrap_content"-->
                            <!--                        android:layout_centerInParent="true"-->
                            <!--                        android:background="@drawable/upgrade_nav_icon_background"-->
                            <!--                        android:gravity="center"></LinearLayout>-->

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/upgrade_nav_icon_background"
                                android:src="@drawable/arrow_white" />
                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:behavior_overlapTop="104dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/imageView1212"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        android:background="@drawable/ic_shopping_cart_white_24dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/back"
                        android:visibility="invisible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <View
                            android:id="@+id/imagexx"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/transparent" />


                        <androidx.cardview.widget.CardView
                            android:id="@+id/card"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_below="@+id/imagexx"
                            android:layout_marginStart="22dp"
                            android:layout_marginTop="-39dp"
                            app:cardCornerRadius="15dp"
                            app:cardElevation="@dimen/_3sdp">

                            <ImageView
                                android:id="@+id/image1222"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:textSize="@dimen/txt_14sp" />

                            <ImageView
                                android:id="@+id/image1222Copy"
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:layout_gravity="center"
                                android:scaleType="fitCenter"
                                android:src="@drawable/addons"
                                android:textSize="@dimen/txt_14sp" />


                        </androidx.cardview.widget.CardView>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imagexx"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="12dp"
                            android:background="@color/white"
                            android:padding="@dimen/_15sdp">

                            <TextView
                                android:id="@+id/title_top_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableLeft="@drawable/tag"
                                android:drawablePadding="@dimen/_5sdp"
                                android:fontFamily="@font/open_sans"
                                android:text="Business Identity"
                                android:textColor="#747474"
                                android:textFontWeight="400"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/people_brought"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:text="32,000+ people bought"
                                android:textColor="#747474"
                                android:textFontWeight="400"
                                android:textSize="12sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/title_top_1" />

                            <TextView
                                android:id="@+id/addons_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_50sdp"
                                android:fontFamily="@font/open_sans"
                                android:text="Staff profile"
                                android:textColor="@color/common_text_color"
                                android:textSize="@dimen/_20sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/create_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:text="Create email accounts for your employees."
                                android:textColor="@color/common_text_color"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/addons_title" />


                            <TextView
                                android:id="@+id/view_details"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/open_sans"
                                android:text="View Details"
                                android:textColor="#2F80ED"
                                android:textFontWeight="600"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/create_account" />

                            <androidx.cardview.widget.CardView
                                android:id="@+id/base_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_17sdp"
                                app:cardCornerRadius="@dimen/_5sdp"
                                app:cardElevation="0dp"
                                app:layout_constraintTop_toBottomOf="@id/view_details">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:id="@+id/live_container"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/rounded_border_gray"
                                        app:layout_constraintTop_toTopOf="parent">

                                        <TextView
                                            android:id="@+id/live_title"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="@color/light_grey"
                                            android:drawableStart="@drawable/ic_checked_grey"
                                            android:drawablePadding="@dimen/_5sdp"
                                            android:paddingStart="@dimen/_10sdp"
                                            android:paddingTop="@dimen/_8sdp"
                                            android:paddingEnd="@dimen/_10sdp"
                                            android:paddingBottom="@dimen/_8sdp"
                                            android:text="Only 5 of 8 purchased emails are active"
                                            android:textFontWeight="600"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="@dimen/_10sdp"
                                            android:text="To manage bought email accounts go to in-app page. In case you need more emails add more by clicking on the button below."
                                            android:textFontWeight="600"
                                            app:layout_constraintTop_toBottomOf="@id/live_title" />


                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <TextView
                                        android:id="@+id/deactivated"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:background="@drawable/rounded_border_red"
                                        android:drawableStart="@drawable/ic_error_red"
                                        android:drawablePadding="@dimen/_10sdp"
                                        android:fontFamily="@font/open_sans"
                                        android:paddingStart="@dimen/_10sdp"
                                        android:paddingTop="@dimen/_8sdp"
                                        android:paddingEnd="@dimen/_10sdp"
                                        android:paddingBottom="@dimen/_8sdp"
                                        android:text="8 email accounts expired on Aug 23, 2021"
                                        android:textColor="@color/red"
                                        android:textFontWeight="600"
                                        app:layout_constraintTop_toBottomOf="@id/live_container" />

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:id="@+id/error_container"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:background="@drawable/rounded_border_gray"
                                        app:layout_constraintTop_toBottomOf="@id/deactivated">


                                        <TextView
                                            android:id="@+id/error_title"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:drawableStart="@drawable/ic_error_red"
                                            android:drawablePadding="@dimen/_10sdp"
                                            android:fontFamily="@font/open_sans"
                                            android:paddingStart="@dimen/_10sdp"
                                            android:paddingTop="@dimen/_8sdp"
                                            android:paddingEnd="@dimen/_10sdp"
                                            android:paddingBottom="@dimen/_8sdp"
                                            android:text="Action required"
                                            android:textColor="@color/red"
                                            android:textFontWeight="600"
                                            app:layout_constraintTop_toTopOf="parent" />


                                        <TextView
                                            android:id="@+id/error_description"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:background="#F8F8F8"
                                            android:drawablePadding="@dimen/_10sdp"
                                            android:fontFamily="@font/open_sans"
                                            android:padding="@dimen/_10sdp"
                                            android:text="You need to take action to activate this add-on.Go to in-app page."
                                            android:textFontWeight="600"
                                            app:layout_constraintTop_toBottomOf="@id/error_title" />
                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:id="@+id/delay_container"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="2dp"
                                        android:background="@drawable/rounded_border_gray"
                                        app:layout_constraintTop_toBottomOf="@id/error_container">


                                        <TextView
                                            android:id="@+id/delay_title"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:drawableStart="@drawable/ic_sync_blue"
                                            android:drawablePadding="@dimen/_10sdp"
                                            android:fontFamily="@font/open_sans"
                                            android:paddingStart="@dimen/_10sdp"
                                            android:paddingTop="@dimen/_8sdp"
                                            android:paddingEnd="@dimen/_10sdp"
                                            android:paddingBottom="@dimen/_8sdp"
                                            android:text="Syncing info..."
                                            android:textColor="#56CCF2"
                                            android:textFontWeight="600"
                                            app:layout_constraintTop_toTopOf="parent" />


                                        <TextView
                                            android:id="@+id/delay_description"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="2dp"
                                            android:background="#F8F8F8"
                                            android:drawablePadding="@dimen/_10sdp"
                                            android:fontFamily="@font/open_sans"
                                            android:padding="@dimen/_10sdp"
                                            android:text="We are working on syncing your information with this add-on. It may take some time to get updated.Contact support for help"
                                            android:textFontWeight="600"
                                            app:layout_constraintTop_toBottomOf="@id/delay_title" />
                                    </androidx.constraintlayout.widget.ConstraintLayout>
                                </androidx.constraintlayout.widget.ConstraintLayout>
                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:id="@+id/unit_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/base_container">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:layout_marginEnd="@dimen/_25sdp"
                                        android:layout_marginBottom="@dimen/_15sdp"
                                        android:layout_weight="1"
                                        android:background="@drawable/rounded_border_gray"
                                        android:gravity="center"
                                        android:padding="@dimen/_15sdp"
                                        android:text="₹165/unit/month" />

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_margin="@dimen/_9sdp"
                                        android:background="@drawable/rounded_border_gray" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:layout_marginEnd="@dimen/_25sdp"
                                        android:layout_marginBottom="@dimen/_15sdp"
                                        android:layout_weight="1"
                                        android:background="@drawable/rounded_stroke_orange_4"
                                        android:gravity="center"
                                        android:padding="@dimen/_15sdp"
                                        android:text="₹165/unit/month" />

                                    <ImageView
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_marginStart="@dimen/_9sdp"
                                        android:layout_marginTop="@dimen/_9sdp"
                                        android:layout_marginEnd="@dimen/_9sdp"
                                        android:layout_marginBottom="@dimen/_9sdp"
                                        android:background="@drawable/ic_checked" />
                                </RelativeLayout>

                            </LinearLayout>

                            <TextView
                                android:id="@+id/add_item_to_cart"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/orange_button_click_effect"
                                android:fontFamily="@font/open_sans_semibold"
                                android:gravity="center"
                                android:paddingStart="@dimen/_30sdp"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_30sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:text="Add To Cart"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/unit_container" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </RelativeLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_10sdp"
                    android:background="#d8d8d8"
                    app:layout_constraintTop_toBottomOf="@id/header" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pack_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F8F8F8"
                    app:layout_constraintTop_toBottomOf="@id/divider">

                    <TextView
                        android:id="@+id/pack_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F8F8F8"
                        android:fontFamily="@font/open_sans"
                        android:padding="@dimen/_15sdp"
                        android:text="Save more with pack having this feature"
                        android:textColor="@color/common_text_color"
                        android:textFontWeight="600"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/pack_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        tools:itemCount="2"
                        android:orientation="vertical"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:listitem="@layout/item_features_details"
                        app:layout_constraintTop_toBottomOf="@id/pack_title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/facebook_ads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d8d8d8"
                    android:drawableStart="@drawable/ic_filetext"
                    android:drawableEnd="@drawable/ic_arrow_right_grey"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/open_sans"
                    android:padding="@dimen/_15sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:text="Learn why running a facebook ad campaign is always a good idea."
                    android:textColor="@color/common_text_color"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintTop_toBottomOf="@id/pack_container" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/about_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    app:layout_constraintTop_toBottomOf="@id/facebook_ads">


                    <TextView
                        android:id="@+id/about_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F8F8F8"
                        android:fontFamily="@font/open_sans"
                        android:padding="@dimen/_15sdp"
                        android:text="About this feature"
                        android:textColor="@color/common_text_color"
                        android:textFontWeight="600"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/image_about_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_10sdp"
                        app:layout_constraintTop_toBottomOf="@id/about_title">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
