<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F8FD"
        android:clickable="true"
        android:focusable="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/colorPrimary1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="@color/colorTransparentPrimary1"
                app:expandedTitleTextAppearance="@color/colorTransparentPrimary1"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:title="Facebook Lead Ads"
                app:titleEnabled="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/details_image_bg"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:background="@color/colorPrimary1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/feature_details_bg"
                        app:layout_constraintDimensionRatio="1.64:1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_details"
                    android:layout_width="match_parent"
                    android:layout_height="?android:attr/actionBarSize"
                    android:background="@color/transparent"
                    android:contentInsetStart="0dp"
                    android:contentInsetEnd="0dp"
                    app:contentInsetEnd="0dp"
                    app:contentInsetStart="0dp"
                    app:layout_collapseMode="pin">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/details_header"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/transparent">

                        <TextView
                            android:id="@+id/title_appbar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:fontFamily="@font/bold"
                            android:paddingStart="@dimen/_50sdp"
                            android:paddingEnd="@dimen/_50sdp"
                            android:maxLines="1"
                            android:gravity="center_vertical"
                            android:background="@color/colorTransparentPrimary1"
                            android:text="@string/facebook_lead_ads_upto_75_leads"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageViewCart121"
                            app:layout_constraintStart_toEndOf="@+id/imageView121"
                            app:layout_constraintTop_toTopOf="parent" />


                        <RelativeLayout
                            android:id="@+id/imageViewCart121"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:id="@+id/featureDetailsCartIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/mp_nav_icon_background"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_margin="4dp"
                                    android:src="@drawable/ic_cart" />
                            </LinearLayout>


                            <com.nex3z.notificationbadge.NotificationBadge
                                android:id="@+id/badge121"
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentEnd="true"
                                app:nbMaxTextLength="2" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/imageView121"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_3sdp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:gravity="center"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/mp_nav_icon_background"
                                android:src="@drawable/arrow_white" />
                        </LinearLayout>


                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:behavior_overlapTop="104dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <ImageView
                        android:id="@+id/imageView1212"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        android:background="@drawable/ic_shopping_cart_white_24dp"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/back"
                        android:visibility="invisible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@color/transparent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <View
                            android:id="@+id/imagexx"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:background="@color/transparent" />


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imagexx"
                            android:layout_alignParentStart="true"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/rounded_curve_bg"
                            android:padding="@dimen/_15sdp">


                            <ImageView
                                android:id="@+id/image1222"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                android:textSize="@dimen/txt_14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:src="@drawable/addons" />

                            <ImageView
                                android:id="@+id/addon_icon"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:scaleType="fitXY"
                                android:textSize="@dimen/txt_14sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:src="@drawable/addons" />

                            <TextView
                                android:id="@+id/title_top_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:drawableLeft="@drawable/tag"
                                android:drawablePadding="@dimen/_5sdp"
                                android:fontFamily="@font/regular"
                                android:text="Business Identity"
                                android:textColor="@color/copy_coupon_text_color"
                                android:textFontWeight="400"
                                android:textSize="12sp"
                                app:layout_constraintStart_toEndOf="@id/image1222"
                                app:layout_constraintTop_toTopOf="parent" />


                            <TextView
                                android:id="@+id/title_bottom2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="19dp"
                                android:drawableStart="@drawable/ic_used_by"
                                android:fontFamily="@font/regular"
                                android:text="32,000+ people bought"
                                android:textColor="@color/offer_border"
                                android:textFontWeight="400"
                                android:textSize="12sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/pricing_layout" />

                            <TextView
                                android:id="@+id/title_top"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/semi_bold"
                                android:text="Unlimited Content Update"
                                android:textColor="@color/common_text_color"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@id/image1222"
                                app:layout_constraintTop_toBottomOf="@id/title_top_1" />

                            <LinearLayout
                                android:id="@+id/pricing_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginTop="@dimen/_10sdp"
                                app:layout_constraintStart_toEndOf="@id/image1222"
                                app:layout_constraintTop_toBottomOf="@id/title_top">

                                <TextView
                                    android:id="@+id/price"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹2,999"
                                    android:fontFamily="@font/bold"
                                    android:textColor="#333333"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/mrpPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="₹2,999"
                                    android:textColor="@color/globalLight"
                                    android:textSize="14sp" />

                            </LinearLayout>


                            <TextView
                                android:id="@+id/title_bottom3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="19dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/regular"
                                android:maxLines="2"
                                android:text="Create email accounts for your employees."
                                android:textColor="@color/common_text_color"
                                android:textSize="@dimen/_12sdp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/title_bottom2" />

                            <TextView
                                android:id="@+id/learn_more_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:fontFamily="@font/bold"
                                android:paddingStart="10dp"
                                android:text="@string/learn_more_feature_details"
                                android:textColor="@color/colorAccent1"
                                android:textSize="12dp"
                                app:layout_constraintBottom_toBottomOf="@id/title_bottom3"
                                app:layout_constraintEnd_toEndOf="@id/title_bottom3" />

                            <TextView
                                android:id="@+id/learn_less_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_10sdp"
                                android:background="@color/white"
                                android:fontFamily="@font/bold"
                                android:padding="5dp"
                                android:paddingStart="10dp"
                                android:text="@string/show_less"
                                android:textColor="@color/colorAccent1"
                                android:textSize="12dp"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="@id/title_bottom3"
                                app:layout_constraintTop_toBottomOf="@id/title_bottom3" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </RelativeLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/edge_cases_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_border_red_white_bg"
                    android:layout_marginStart="16dp"
                    android:padding="16dp"
                    android:layout_marginEnd="16dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/header">

                    <TextView
                        android:id="@+id/edge_case_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Something went wrong!"
                        android:textColor="@color/red"
                        android:drawableStart="@drawable/ic_error_red"
                        app:layout_constraintStart_toStartOf="parent"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textFontWeight="600"
                        android:fontFamily="@font/semi_bold"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/edge_case_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="There is an internal error inside Boost 360. We are working to resolve this issue."
                        android:paddingStart="22dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:textFontWeight="600"
                        android:fontFamily="@font/semi_bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edge_case_title"/>

                    <TextView
                        android:id="@+id/edge_case_hyperlink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/action_required"
                        android:textSize="12sp"
                        android:fontFamily="@font/semi_bold"
                        android:textFontWeight="600"
                        android:textColor="@color/orange"
                        android:paddingStart="22dp"
                        android:paddingEnd="5dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edge_case_desc"/>


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/benefit_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    tools:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@id/edge_cases_layout">

                    <TextView
                        android:id="@+id/benefit_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:padding="16dp"
                        android:text="Benefits For Your Business"
                        android:textColor="@color/main_color_gray_dk"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/benefits_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/benefit_title" />


                    <com.framework.views.dotsindicator.DotsIndicator
                        android:id="@+id/benefits_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:dotsColor="@color/btn_bg_color_disabled"
                        app:dotsCornerRadius="8dp"
                        app:dotsSize="6dp"
                        app:dotsSpacing="6dp"
                        app:dotsWidthFactor="2.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/benefits_viewpager"
                        app:progressMode="false"
                        app:selectedDotColor="@color/colorAccent1" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/query_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/rounded_curve_bg"
                    android:drawableStart="@drawable/ic_help_white"
                    android:drawablePadding="@dimen/_6sdp"
                    android:fontFamily="@font/semi_bold"
                    android:padding="@dimen/_10sdp"
                    android:text="Have a query? Call an expert"
                    android:textColor="@color/colorPrimary1"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/benefit_container" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/pack_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintTop_toBottomOf="@id/query_text">

                    <TextView
                        android:id="@+id/pack_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:padding="16dp"
                        android:maxLines="1"
                        android:text="Packs with “Staff Management”"
                        android:textColor="@color/main_color_gray_dk"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/pack_recycler"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/pack_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:nestedScrollingEnabled="false"
                        android:orientation="vertical"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@id/pack_title"
                        tools:itemCount="3"
                        tools:listitem="@layout/item_features_details" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/widgetLearnMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:background="@drawable/rounded_curve_bg"
                    android:drawableStart="@drawable/ic_filetext"
                    android:drawableEnd="@drawable/ic_arrow_right_grey"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/regular"
                    android:padding="16dp"
                    android:text="Learn how custom domain names can increase your credibility.   "
                    android:textColor="@color/common_text_color"
                    android:textFontWeight="600"
                    android:textSize="@dimen/_11sdp"
                    app:layout_constraintTop_toBottomOf="@id/pack_container" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/how_to_use_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:background="@drawable/rounded_curve_bg"
                    app:layout_constraintTop_toBottomOf="@id/widgetLearnMore">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/how_to_use_title_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:visibility="visible"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_how_to_use_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:maxLines="1"
                            android:fontFamily="@font/semi_bold"
                            android:padding="16dp"
                            tools:text="How To Use Staff Management?"
                            android:textColor="@color/main_color_gray_dk"
                            android:textFontWeight="600"
                            android:textSize="16sp"
                            app:layout_constraintEnd_toStartOf="@id/how_to_use_arrow"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/how_to_use_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:padding="@dimen/_10sdp"
                            android:src="@drawable/ic_arrow_down_gray"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/how_to_use_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/how_to_use_item"
                        android:visibility="gone"
                        tools:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@id/how_to_use_title_layout" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/what_our_customer_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:visibility="visible"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/how_to_use_container">

                    <TextView
                        android:id="@+id/what_our_customer_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/semi_bold"
                        android:padding="16dp"
                        android:text="What our customers say"
                        android:textColor="#191919"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/what_our_customer_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/what_our_customer_title" />


                    <com.framework.views.dotsindicator.DotsIndicator
                        android:id="@+id/what_our_customer_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        app:dotsColor="@color/gray_light"
                        app:dotsCornerRadius="8dp"
                        app:dotsSize="6dp"
                        app:dotsSpacing="4dp"
                        app:dotsWidthFactor="2.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/what_our_customer_viewpager"
                        app:progressMode="false"
                        app:selectedDotColor="@color/colorAccent1" />

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/faq_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:visibility="visible"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@+id/terms"
                    app:layout_constraintTop_toBottomOf="@id/what_our_customer_container">

                    <TextView
                        android:id="@+id/faq_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bold"
                        android:padding="16dp"
                        android:text="Frequently asked questions"
                        android:textColor="@color/main_color_gray_dk"
                        android:textFontWeight="600"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toTopOf="@+id/faq_recycler"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/faq_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_curve_bg"
                        android:layout_margin="16dp"
                        tools:listitem="@layout/faq_item"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/faq_title" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/terms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/rounded_curve_bg"
                    android:fontFamily="@font/regular"
                    android:padding="16dp"
                    android:text="This feature is provided by “Reseller Club” and is subject to their terms and conditions.Read T&amp;C"
                    android:textColor="@color/common_text_color"
                    android:textFontWeight="600"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/faq_container" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/bottom_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="bottom"
            android:visibility="gone"
            tools:visibility="visible"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_15sdp"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/final_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹2,999"
                    android:fontFamily="@font/semi_bold"
                    android:textFontWeight="600"
                    android:textSize="18sp"
                    android:textColor="@color/color_1919"/>

                <TextView
                    android:id="@+id/mrp_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/staff/month"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/add_item_to_cart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textSize="16sp"
                android:background="@drawable/cta_button_click_effect"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:paddingStart="@dimen/_30sdp"
                android:paddingTop="10dp"
                android:paddingEnd="@dimen/_30sdp"
                android:paddingBottom="10dp"
                android:text="Add to cart"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_bottom3" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottom_box_only_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:layout_gravity="bottom"
            android:visibility="visible"
            tools:visibility="gone"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/add_item_to_cart_new"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/cta_button_click_effect"
                android:fontFamily="@font/semi_bold"
                android:gravity="center"
                android:paddingStart="@dimen/_30sdp"
                android:paddingTop="10dp"
                android:paddingEnd="@dimen/_30sdp"
                android:paddingBottom="10dp"
                android:text="Add To Cart"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title_bottom3" />

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>