<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>


  </data>



  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/home_screen_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

      <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/general_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
          android:id="@+id/home_screen_toolbar"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:shape="ring"
              app:cardCornerRadius="75dp"
              app:cardElevation="0dp"
              android:layout_margin="10dp"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent">

              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingTop="3dp"
                android:paddingStart="2dp"
                android:background="#EFEFEF">

                <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/ic_back_button_black" />

              </LinearLayout>


            </androidx.cardview.widget.CardView>




            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

      </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:background="#5E5E5E"
          android:orientation="vertical">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/curve_gray_bg"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
              android:layout_width="@dimen/size_60"
              android:layout_height="@dimen/size_60"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="35dp"
              android:background="@color/white"
              app:cardCornerRadius="5dp"
              app:cardElevation="4dp">

              <ImageView
                android:layout_width="@dimen/size_30"
                android:layout_height="@dimen/size_30"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@drawable/ic_boost_logo_arrow" />


            </androidx.cardview.widget.CardView>

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="10dp"
              android:fontFamily="@font/regular"
              android:text="@string/welcome_to_boost_360"
              android:textColor="@color/black"
              android:textSize="14sp" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="5dp"
              android:fontFamily="@font/regular"
              android:text="@string/feature_marketplace"
              android:textColor="@color/black"
              android:textSize="23sp"
              android:textStyle="bold" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginTop="20dp"
              android:includeFontPadding="false"
              android:text="@string/my_current_plan"
              android:textColor="#FFB900"
              android:textSize="14sp"
              android:textStyle="bold"
              android:drawablePadding="10dp"
              android:drawableEnd="@drawable/ic_my_cuurent_plan_arrow"/>


            <RelativeLayout
              android:id="@+id/mp_banner_rl_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/header">


              <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mp_banner_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:visibility="gone"
                tools:ignore="TouchTargetSizeCheck"
                tools:visibility="visible">

                <androidx.viewpager2.widget.ViewPager2
                  android:id="@+id/mp_banner_viewpager"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:clipChildren="false"
                  android:clipToPadding="false"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"
                  tools:listitem="@layout/item_promo_banner" />

                <com.framework.views.dotsindicator.DotsIndicator
                  android:id="@+id/mp_banner_dot_indicator"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="10dp"
                  app:dotsColor="@color/gray_light"
                  app:dotsCornerRadius="8dp"
                  app:dotsSize="6dp"
                  app:dotsSpacing="4dp"
                  app:dotsWidthFactor="2.5"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@id/mp_banner_viewpager"
                  app:progressMode="false"
                  app:selectedDotColor="@color/orange" />


              </androidx.constraintlayout.widget.ConstraintLayout>
            </RelativeLayout>

          </LinearLayout>
        </LinearLayout>


        <RelativeLayout
          android:id="@+id/mp_package_rl_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/mp_banner_rl_layout"
          android:background="#5E5E5E">


          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mp_package_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            tools:visibility="visible">

            <TextView
              android:id="@+id/mp_package_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="15dp"
              android:fontFamily="@font/regular"
              android:text="Save upto 60% with feature packs"
              android:textColor="@color/white"
              android:textFontWeight="600"
              android:textSize="16sp"
              android:textStyle="bold"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


            <androidx.viewpager2.widget.ViewPager2
              android:id="@+id/mp_package_viewpager"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clipChildren="false"
              android:clipToPadding="false"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/mp_package_name"
              tools:listitem="@layout/marketplace_snippet_item" />

            <com.framework.views.dotsindicator.DotsIndicator
              android:id="@+id/mp_package_indicator"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              app:dotsColor="@color/gray_light"
              app:dotsCornerRadius="8dp"
              app:dotsSize="6dp"
              app:dotsSpacing="4dp"
              app:dotsWidthFactor="2.5"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/mp_package_viewpager"
              app:progressMode="false"
              app:selectedDotColor="@color/orange" />
          </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/orange"
          android:orientation="vertical">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/mp_home_curve_packs_gray"
            android:gravity="center">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="EXPLORE ALL PACKS"
              android:textColor="@color/white"
              android:textStyle="bold" />
          </LinearLayout>

          <LinearLayout
            android:id="@+id/mp_home_recommended_features_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:visibility="visible">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="15dp"
              android:layout_marginTop="15dp"
              android:fontFamily="@font/regular"
              android:text="Top Manufacturing Features"
              android:textColor="@color/white"
              android:textFontWeight="600"
              android:textSize="16sp"
              android:textStyle="bold" />


          </LinearLayout>


          <RelativeLayout
            android:id="@+id/mp_home_recommended_addons_rl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mp_home_recommended_features_rl_layout">


            <LinearLayout
              android:id="@+id/mp_home_recommended_addons_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:orientation="vertical"
              android:paddingTop="10dp">


              <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mp_home_recommended_features_section"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:overScrollMode="never" />


            </LinearLayout>
          </RelativeLayout>


        </LinearLayout>


        <LinearLayout
          android:id="@+id/mp_home_features_video_ll"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:background="@color/white"
          android:orientation="vertical">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/mp_home_curve_features_orange"
            android:gravity="center">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="EXPLORE ALL FEATURES"
              android:textColor="@color/white"
              android:textStyle="bold" />
          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:fontFamily="@font/regular"
              android:text="Watch Boost 360 features in action."
              android:textColor="@color/black"
              android:textSize="16sp"
              android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/mp_home_features_video_rv"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              tools:itemCount="10" />
          </LinearLayout>


        </LinearLayout>

        <LinearLayout
          android:id="@+id/mp_home_partner_offerings_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/white"
          android:orientation="vertical">


          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/regular"
            android:text="Partner Offerings"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />

          <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/mp_home_partner_viewpager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/marketplace_snippet_item" />

          <com.framework.views.dotsindicator.DotsIndicator
            android:id="@+id/mp_home_partner_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            app:dotsColor="@color/gray_light"
            app:dotsCornerRadius="8dp"
            app:dotsSize="6dp"
            app:dotsSpacing="4dp"
            app:dotsWidthFactor="2.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mp_home_partner_viewpager"
            app:progressMode="false"
            app:selectedDotColor="@color/yellow_orange_22" />

        </LinearLayout>

        <LinearLayout
          android:id="@+id/mp_home_addons_category_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginBottom="8dp"
          android:background="@color/white"
          android:orientation="vertical">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/bold"
            android:text="Find features by category"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="16sp"
            android:textStyle="bold" />

          <FrameLayout

            android:id="@+id/mp_home_fl_addon_cat_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
              android:id="@+id/addons_category_recycler"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="15dp"
              android:layout_marginTop="5dp"
              android:layout_marginEnd="15dp"
              android:layout_marginBottom="5dp"
              android:background="@drawable/mp_home_all_side_curve_bg"
              android:elevation="2dp"
              android:overScrollMode="never" />
          </FrameLayout>


        </LinearLayout>

        <RelativeLayout
          android:id="@+id/expert_guidence_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/mp_home_addons_category_layout"
          android:layout_marginTop="15dp">

          <TextView
            android:id="@+id/expert_title"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/bold"
            android:text="Expert Guidance"
            android:textColor="@color/black"
            android:textFontWeight="600"
            android:textSize="17sp" />


          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expert_title"
            android:background="@drawable/ic_expert_call_bg">


            <LinearLayout
              android:id="@+id/mp_home_expert_guidance_image_ll"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_marginStart="40dp"
              android:orientation="vertical">


              <ImageView
                android:id="@+id/callnow_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:visibility="visible"
                app:srcCompat="@drawable/ic_mp_home_expert_guidance_person"
                tools:visibility="visible" />

            </LinearLayout>

            <LinearLayout
              android:id="@+id/callnow_layout"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="10dp"
              android:layout_toEndOf="@+id/mp_home_expert_guidance_image_ll"
              android:layout_marginEnd="40dp"
              android:layout_marginTop="19dp"
              android:orientation="vertical">

              <TextView
                android:id="@+id/callnow_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need help to decide?"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

              <TextView
                android:id="@+id/callnow_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Speak to our expert!"
                android:textColor="#FFFFFF"
                android:textFontWeight="700"
                android:textSize="16sp"
                android:textStyle="bold" />


              <TextView
                android:id="@+id/callnow_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:drawableStart="@drawable/ic_baseline_call_24"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:background="@drawable/ic_callnowbg"
                android:text="Call Now"
                android:textAllCaps="true"
                android:textColor="@color/orange"
                android:textSize="11sp"
                android:textStyle="bold" />

            </LinearLayout>

          </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/video_addons_layout"
          android:background="@drawable/mp_home_refer_bg"
          android:gravity="center"
          android:orientation="vertical">


          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottom_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp">

            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginStart="16sp"
              android:layout_marginTop="16dp"
              android:layout_marginEnd="16sp"
              android:background="@color/transparent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent">

              <LinearLayout
                android:id="@+id/ll_refer_banner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_margin="8dp"
                  android:scaleType="centerCrop"
                  android:src="@drawable/ic_mp_home_referral_banner"
                  android:textSize="14sp" />

                <TextView
                  android:id="@+id/textView6"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="REFER\nBOOST 360\n GET\n 20% OFF."
                  android:textColor="#FF9F00"
                  android:textSize="24sp"
                  android:textStyle="bold" />

              </LinearLayout>


            </RelativeLayout>
          </androidx.constraintlayout.widget.ConstraintLayout>


          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bottom_box">


            <TextView
              android:id="@+id/refer_and_earn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginEnd="36dp"
              android:layout_marginBottom="16dp"
              android:layout_marginStart="36dp"
              android:background="@drawable/mp_home_orange_btn_click_effect"
              android:clickable="true"
              android:focusable="true"
              android:fontFamily="@font/bold"
              android:gravity="center"
              android:paddingStart="20dp"
              android:paddingTop="10dp"
              android:paddingEnd="20dp"
              android:paddingBottom="10dp"
              android:text="Start referring"
              android:textColor="@color/white"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <TextView
              android:id="@+id/view_referal_btn"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/refer_and_earn"
              android:layout_marginStart="36dp"
              android:layout_marginEnd="36dp"
              android:layout_marginTop="10dp"
              android:background="@drawable/mp_home_share_click_effect"
              android:clickable="true"
              android:focusable="true"
              android:fontFamily="@font/bold"
              android:gravity="center"
              android:paddingStart="30dp"
              android:paddingTop="10dp"
              android:paddingEnd="30dp"
              android:paddingBottom="10dp"
              android:text="View referral items"
              android:textColor="#FFB900"
              android:textFontWeight="700"
              android:textSize="13sp"
              android:textStyle="bold"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/refer_and_earn"
              />


          </androidx.constraintlayout.widget.ConstraintLayout>

          <LinearLayout
            android:id="@+id/footer_helper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/footer"
            android:layout_marginStart="25dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="30dp"
            android:elevation="2dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:orientation="horizontal">

              <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:srcCompat="@drawable/ic_mp_home_feedback" />

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/bold"
                android:text="Help us make\nBoost better"
                android:textSize="18sp" />

            </LinearLayout>

            <TextView
              android:id="@+id/share_feedback_button"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="10dp"
              android:layout_marginTop="16dp"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="30dp"
              android:background="@drawable/mp_home_share_click_effect"
              android:clickable="true"
              android:focusable="true"
              android:fontFamily="@font/semi_bold"
              android:gravity="center"
              android:paddingStart="30dp"
              android:paddingTop="10dp"
              android:paddingEnd="30dp"
              android:paddingBottom="10dp"
              android:text="Give feedback"
              android:textColor="#FFB900"
              android:textFontWeight="700"
              android:textSize="14sp"
              android:textStyle="bold" />

          </LinearLayout>

        </RelativeLayout>


      </LinearLayout>


    </androidx.core.widget.NestedScrollView>


  </androidx.constraintlayout.widget.ConstraintLayout>


</layout>