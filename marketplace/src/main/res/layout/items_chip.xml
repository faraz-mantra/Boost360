<com.google.android.material.chip.Chip xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:fontFamily="@font/regular"
  android:gravity="center"
  android:text="mumbai"
  app:chipStrokeColor="#DDDDDD"
  android:paddingStart="@dimen/size_4"
  android:paddingRight="@dimen/size_4"
  app:chipSpacingVertical="0dp"
    app:closeIconSize="20dp"
    app:closeIconEndPadding="0dp"
  app:chipStrokeWidth="1dp"
    app:ensureMinTouchTargetSize="false"
  android:textAppearance="?android:attr/textAppearance"
  android:textColor="@color/primary_text"
  app:chipBackgroundColor="#F8F8F8"
  app:closeIcon="@drawable/ic_close_circle"
  app:closeIconEnabled="true" />

