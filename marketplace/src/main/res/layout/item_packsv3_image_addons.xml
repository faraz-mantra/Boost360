<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bundle_layout"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            tools:visibility="visible"
            android:visibility="gone">

            <ImageView
                android:id="@+id/packs_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:src="@drawable/classic_pack"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/pack_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/regular"
                android:text="Online Basic"
                android:textColor="@color/main_color_gray_dk"
                android:textFontWeight="600"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="16dp"
                android:textSize="12sp"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/packs_image" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/imageStatus"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_margin="30dp"
            tools:visibility="gone"
            android:visibility="gone"
            android:src="@drawable/ic_pack_tick" />

        <ImageView
            android:id="@+id/imageStatus1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_margin="30dp"
            tools:visibility="gone"
            android:visibility="gone"
            android:src="@drawable/ic_nopack" />

        <TextView
            android:id="@+id/count"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:gravity="center"
            tools:text="100"
            tools:visibility="visible"
            android:visibility="gone"
            android:fontFamily="@font/bold"
            android:textColor="@color/black"/>
    </LinearLayout>
</layout>

