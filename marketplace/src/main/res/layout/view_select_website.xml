<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selectWebsiteLayout"
    android:background="#f0f0f0"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shimmer_anim"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        android:layout_marginTop="10dp"
        android:background="@drawable/curve_top_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer_view_domainv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <include layout="@layout/data_place_domain" />


            </LinearLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/curve_top_white"
        android:paddingStart="@dimen/dimen_24dp"
        android:paddingTop="16dp"
        android:paddingEnd="@dimen/dimen_24dp"
        android:paddingBottom="@dimen/dimen_24dp"
        app:layout_constraintTop_toBottomOf="@id/topImageView"
        tools:ignore="NotSibling">

        <TextView
            android:id="@+id/tv_title_select_website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:lineHeight="26dp"
            android:text="Select your website address"
            android:textColor="@color/main_color_gray_dk"
            android:textFontWeight="700"
            android:textSize="@dimen/txt_20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_subtitle_select_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="24dp"
            android:fontFamily="@font/regular"
            android:lineHeight="22dp"
            android:lineSpacingExtra="6dp"
            android:text="Custom domain with Free SSL Security"
            android:textColor="#333333"
            android:textFontWeight="400"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_select_website" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle_select_website">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/browser_background" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/tv_empty_select_website"
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginTop="100dp"
                        android:background="@drawable/green_border_view"
                        android:fontFamily="@font/bold"
                        android:gravity="center"
                        android:text=""
                        android:lineHeight="21.79dp"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingTop="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_10sdp"
                        android:paddingBottom="@dimen/_10sdp"
                        android:textColor="#7ED321"
                        android:textFontWeight="700"
                        android:textSize="30sp"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_explore_select_website"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:fontFamily="@font/regular"
                        android:drawablePadding="@dimen/_10sdp"
                        android:drawableEnd="@drawable/yellow_down_arrow"
                        android:lineHeight="22dp"
                        android:lineSpacingExtra="6dp"
                        android:text="Explore domain options"
                        android:textColor="@color/colorAccent1"
                        android:textFontWeight="400"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_empty_select_website" />

                    <TextView
                        android:id="@+id/selectWebsiteSubmit"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginHorizontal="@dimen/pad_20dp"
                        android:layout_marginBottom="@dimen/pad_20dp"
                        android:background="@drawable/cta_button_click_effect"
                        android:fontFamily="@font/semi_bold"
                        android:gravity="center"
                        android:paddingStart="@dimen/_30sdp"
                        android:paddingTop="15dp"
                        android:paddingEnd="@dimen/_30sdp"
                        android:paddingBottom="15dp"
                        android:text="Select above domain"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_explore_select_website" />

                    <TextView
                        android:id="@+id/selectWebsiteIwillDoItLater"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/cta_button_hollow"
                        android:fontFamily="@font/regular"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="Iâ€™ll do it later"
                        android:textColor="@color/colorAccent1"
                        android:textFontWeight="700"
                        android:textSize="@dimen/txt_16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/selectWebsiteSubmit" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>