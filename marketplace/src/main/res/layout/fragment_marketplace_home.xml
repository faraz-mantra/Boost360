<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
          android:layout_width="@dimen/size_60"
          android:layout_height="@dimen/size_60"
          android:layout_gravity="center_horizontal"
          android:background="@color/white"
          app:cardCornerRadius="5dp"
          app:cardElevation="4dp">

          <ImageView
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:src="@drawable/ic_mp_home_arrow" />


        </androidx.cardview.widget.CardView>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="10dp"
          android:fontFamily="@font/regular"
          android:text="Welcome to Boost 360"
          android:textColor="@color/black"
          android:textSize="14sp" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="5dp"
          android:fontFamily="@font/regular"
          android:text="Feature Marketplace"
          android:textColor="@color/black"
          android:textSize="23sp"
          android:textStyle="bold" />

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"
          android:includeFontPadding="false"
          android:text="MY CURRENT PLAN "
          android:textColor="#FFB900"
          android:textSize="14sp"
          android:textStyle="bold"
          app:drawableEndCompat="@drawable/ic_mp_home_arrow_right" />


        <androidx.cardview.widget.CardView
          android:id="@+id/brochureUploadCardView"
          android:layout_width="360dp"
          android:layout_height="158dp"
          android:layout_margin="18dp"
          android:layout_gravity="center"
          android:background="@color/white"
          android:elevation="5dp"
          app:cardCornerRadius="10dp">

          <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
              android:id="@+id/brochureUploadRL"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentTop="true"
              android:layout_marginStart="10dp"
              android:layout_marginTop="10dp"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp">

              <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:elevation="5dp"
                app:cardCornerRadius="4dp">

                <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentStart="true"
                  android:elevation="4dp"
                  android:src="@drawable/ic_mp_home_brochure_image"/>


              </androidx.cardview.widget.CardView>



              <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:orientation="vertical">

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/regular"
                  android:text="Brochure Upload"
                  android:textColor="@color/black"
                  android:textStyle="bold"
                  android:textSize="16sp"></TextView>

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center"
                  android:text="Recommended for you"
                  android:background="@drawable/ic_mp_home_recommended_bg"
                  android:textColor="#219653"
                  android:textStyle="bold"
                  android:textSize="11sp"></TextView>
              </LinearLayout>

              <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_mp_home_brochure_close"></ImageView>

            </RelativeLayout>

            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/brochureUploadRL"
              android:layout_alignParentEnd="true"
              android:layout_marginStart="10dp"
              android:layout_marginTop="10dp"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp">

              <TextView
                android:id="@+id/bUtxtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:text="Showcase your products with great detail and reach out to more customers with downloadable brochures."
                android:textColor="#888888"
                android:textSize="11sp"></TextView>

              <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/bUtxtView"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/regular"
                android:text="VIEW DETAILS"
                android:textStyle="bold"
                android:textColor="#FFB900"
                ></TextView>
            </RelativeLayout>
          </RelativeLayout>


        </androidx.cardview.widget.CardView>


      </LinearLayout>


    </androidx.core.widget.NestedScrollView>


  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>