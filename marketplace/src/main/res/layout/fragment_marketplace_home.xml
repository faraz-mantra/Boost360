<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="#5E5E5E"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:background="@drawable/mp_home_curve_bg_grey"
          android:orientation="vertical">

          <androidx.cardview.widget.CardView
            android:layout_width="@dimen/size_60"
            android:layout_height="@dimen/size_60"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            app:cardCornerRadius="5dp"
            app:cardElevation="4dp">

            <ImageView
              android:layout_width="@dimen/size_30"
              android:layout_height="@dimen/size_30"
              android:layout_gravity="center"
              android:layout_margin="5dp"
              android:src="@drawable/ic_mp_home_arrow" />


          </androidx.cardview.widget.CardView>

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/regular"
            android:text="Welcome to Boost 360"
            android:textColor="@color/black"
            android:textSize="14sp" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/regular"
            android:text="Feature Marketplace"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:text="MY CURRENT PLAN "
            android:textColor="#FFB900"
            android:textSize="14sp"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/ic_mp_home_arrow_right" />


          <androidx.cardview.widget.CardView
            android:id="@+id/brochureUploadCardView"
            android:layout_width="360dp"
            android:layout_height="158dp"
            android:layout_gravity="center"
            android:layout_margin="18dp"
            android:background="@color/white"
            android:elevation="5dp"
            app:cardCornerRadius="10dp">

            <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <RelativeLayout
                android:id="@+id/brochureUploadRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">

                <androidx.cardview.widget.CardView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:elevation="5dp"
                  app:cardCornerRadius="4dp">

                  <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:elevation="4dp"
                    android:src="@drawable/ic_mp_home_brochure_image" />


                </androidx.cardview.widget.CardView>


                <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="50dp"
                  android:orientation="vertical">

                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:text="Brochure Upload"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"></TextView>

                  <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_mp_home_recommended_bg"
                    android:gravity="center"
                    android:text="Recommended for you"
                    android:textColor="#219653"
                    android:textSize="11sp"
                    android:textStyle="bold"></TextView>
                </LinearLayout>

                <ImageView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"
                  android:layout_alignParentEnd="true"
                  android:src="@drawable/ic_mp_home_brochure_close"></ImageView>

              </RelativeLayout>

              <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/brochureUploadRL"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                  android:id="@+id/bUtxtView"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/regular"
                  android:text="Showcase your products with great detail and reach out to more customers with downloadable brochures."
                  android:textColor="#888888"
                  android:textSize="11sp"></TextView>

                <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@id/bUtxtView"
                  android:layout_marginTop="13dp"
                  android:fontFamily="@font/regular"
                  android:text="VIEW DETAILS"
                  android:textColor="#FFB900"
                  android:textStyle="bold"></TextView>
              </RelativeLayout>
            </RelativeLayout>


          </androidx.cardview.widget.CardView>

          <RelativeLayout
            android:id="@+id/mp_banner_rl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header">

            <com.facebook.shimmer.ShimmerFrameLayout
              android:id="@+id/mp_shimmer_view_banner"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:layout_gravity="center"
              android:layout_margin="10dp"
              android:background="@color/white"
              android:orientation="vertical"
              tools:visibility="visible">

              <!-- Adding 7 rows of placeholders -->
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/banner_data_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />


              </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
              android:id="@+id/mp_banner_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:clickable="true"
              android:focusable="true"
              android:visibility="gone"
              tools:ignore="TouchTargetSizeCheck"
              tools:visibility="visible">

              <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/mp_banner_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/marketplace_snippet_item" />

              <com.framework.views.dotsindicator.DotsIndicator
                android:id="@+id/mp_banner_dot_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                app:dotsColor="@color/gray_light"
                app:dotsCornerRadius="8dp"
                app:dotsSize="6dp"
                app:dotsSpacing="4dp"
                app:dotsWidthFactor="2.5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mp_banner_viewpager"
                app:progressMode="false"
                app:selectedDotColor="@color/orange" />


            </androidx.constraintlayout.widget.ConstraintLayout>
          </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
          android:id="@+id/mp_package_rl_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/mp_banner_rl_layout"
          android:background="#5E5E5E">

          <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/mp_shimmer_view_package"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible">

            <!-- Adding 7 rows of placeholders -->
            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <include layout="@layout/banner_data_placeholder_layout" />

              <include layout="@layout/banner_data_placeholder_layout" />

              <include layout="@layout/banner_data_placeholder_layout" />

              <include layout="@layout/banner_data_placeholder_layout" />

              <include layout="@layout/banner_data_placeholder_layout" />

              <include layout="@layout/banner_data_placeholder_layout" />

              <include layout="@layout/banner_data_placeholder_layout" />

              <include layout="@layout/banner_data_placeholder_layout" />

              <include layout="@layout/banner_data_placeholder_layout" />


            </LinearLayout>

          </com.facebook.shimmer.ShimmerFrameLayout>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mp_package_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
              android:id="@+id/mp_package_name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="15dp"
              android:fontFamily="@font/regular"
              android:text="Save upto 60% with feature packs"
              android:textColor="@color/white"
              android:textFontWeight="600"
              android:textSize="16sp"
              android:textStyle="bold"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


            <androidx.viewpager2.widget.ViewPager2
              android:id="@+id/mp_package_viewpager"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:clipChildren="false"
              android:clipToPadding="false"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/mp_package_name"
              tools:listitem="@layout/marketplace_snippet_item" />

            <com.framework.views.dotsindicator.DotsIndicator
              android:id="@+id/mp_package_indicator"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="10dp"
              app:dotsColor="@color/gray_light"
              app:dotsCornerRadius="8dp"
              app:dotsSize="6dp"
              app:dotsSpacing="4dp"
              app:dotsWidthFactor="2.5"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/mp_package_viewpager"
              app:progressMode="false"
              app:selectedDotColor="@color/orange" />
          </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/mp_home_curve_packs_gray"
            android:gravity="center">

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="EXPLORE ALL PACKS"
              android:textColor="@color/white"
              android:textStyle="bold" />
          </LinearLayout>


          <RelativeLayout
            android:id="@+id/recommended_addons_rl_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mp_home_recommended_features_rl_layout">

            <com.facebook.shimmer.ShimmerFrameLayout
              android:id="@+id/shimmer_view_recomm_addons"
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:layout_gravity="center"
              android:layout_margin="10dp"
              android:background="@color/white"
              android:orientation="vertical"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              tools:visibility="visible">

              <!-- Adding 7 rows of placeholders -->
              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/banner_data_placeholder_layout" />

                <include layout="@layout/banner_data_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />

                <include layout="@layout/banner_placeholder_layout" />


              </LinearLayout>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <LinearLayout
              android:id="@+id/mp_home_recommended_addons_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="16dp"
              android:orientation="vertical"
              android:paddingTop="10dp">


              <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recommended_features_section"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/transparent"
                android:overScrollMode="never" />

              <TextView
                android:id="@+id/all_recommended_addons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/recycler"
                android:layout_marginStart="10dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/bold"
                android:gravity="center"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="View All"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            </LinearLayout>
          </RelativeLayout>


        </LinearLayout>


      </LinearLayout>


    </androidx.core.widget.NestedScrollView>


  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>