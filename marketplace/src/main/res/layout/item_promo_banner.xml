<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>


  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
      android:id="@+id/home_promo_banner_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:fontFamily="@font/open_sans"
      android:paddingStart="5dp"
      android:paddingBottom="5dp"
      android:layout_marginStart="@dimen/size_15"
      android:textColor="@color/common_text_color"
      android:textSize="16sp"
      android:textStyle="bold"
      android:text="Here's a colorful treat!" />


    <com.framework.views.customViews.CustomCardView
      android:id="@+id/maim_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginStart="@dimen/size_15"
      android:layout_marginTop="@dimen/size_2"
      android:layout_marginEnd="@dimen/size_15"
      app:cardBackgroundColor="@android:color/transparent"
      app:cardCornerRadius="@dimen/size_10"
      app:cardElevation="0dp"
      app:cardUseCompatPadding="true">

      <com.framework.views.customViews.CustomImageView
        android:id="@+id/package_primary_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/promo_banner_placeholder"
        android:scaleType="fitXY" />
    </com.framework.views.customViews.CustomCardView>

  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>