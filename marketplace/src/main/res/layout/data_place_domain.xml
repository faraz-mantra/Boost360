<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="30dp"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/browser_background" />

    <View
        android:id="@+id/view_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="@dimen/activityPadding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/edit_text_shimmer_bg" />


    <View
        android:id="@+id/view_et1"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="@dimen/activityPadding"
        app:layout_constraintStart_toStartOf="@id/view_et"
        app:layout_constraintEnd_toEndOf="@id/view_et"
        app:layout_constraintTop_toBottomOf="@+id/view_et"
        android:background="@drawable/edit_text_shimmer_bg" />

    <View
        android:id="@+id/view_et2"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/activityPadding"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="@id/view_et1"
        app:layout_constraintEnd_toEndOf="@id/view_et1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_et1"
        android:background="@drawable/edit_text_shimmer_bg" />


</androidx.constraintlayout.widget.ConstraintLayout>

