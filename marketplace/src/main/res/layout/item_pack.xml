<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:layout_width="10dp"
        android:layout_height="8dp"
        android:elevation="2dp"
        android:src="@drawable/ic_fold"
        android:layout_marginEnd="@dimen/_21sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/discount"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_package_saving"
        android:elevation="2dp"
        android:gravity="center"
        android:text="@string/discount_saving"
        android:padding="5dp"
        android:fontFamily="@font/semi_bold"
        android:layout_marginEnd="@dimen/_25sdp"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </TextView>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/rounded_curve_bg"
    android:paddingStart="@dimen/dimen_16dp"
    android:paddingEnd="@dimen/pad_20dp"
    android:paddingBottom="@dimen/dimen_16dp"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/package_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/addons" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pad_8dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:text="Online Pack"
        android:textColor="@color/main_color_gray_dk"
        android:textFontWeight="600"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/package_img"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pad_8dp"
        android:layout_marginTop="@dimen/pad_8dp"
        android:fontFamily="@font/regular"
        android:text="₹481/month"
        android:textColor="@color/main_color_gray_dk"
        android:textFontWeight="700"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/package_img"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/mrpPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/pad_8dp"
        android:layout_marginTop="9.5dp"
        android:fontFamily="@font/regular"
        android:text="₹481/month"
        android:textColor="@color/copy_coupon_text_color"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/price"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/regular"
        android:text="Everything in “Online Classic” plus"
        android:textColor="@color/common_text_color"
        android:textFontWeight="600"
        android:textSize="@dimen/txt_12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mrpPrice"

        />

    <LinearLayout
        android:id="@+id/layout_icons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_heading">

        <ImageView
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:src="@drawable/ic_globe_yellow_pack_details" />

        <ImageView
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginStart="@dimen/pad_8dp"
            android:src="@drawable/ic_desktop_yellow_pack_details" />

        <ImageView
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginStart="@dimen/pad_8dp"
            android:src="@drawable/ic_msg_yellow_pack_details" />

        <ImageView
            android:layout_width="@dimen/dimen_24dp"
            android:layout_height="@dimen/dimen_24dp"
            android:layout_marginStart="@dimen/pad_8dp"
            android:src="@drawable/ic_faq_yellow" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/layout_icons">

        <TextView
            android:id="@+id/btn_add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/yellow_btn_bg"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:paddingStart="@dimen/pad_30dp"
            android:paddingTop="@dimen/pad_8dp"
            android:paddingEnd="@dimen/pad_30dp"
            android:paddingBottom="@dimen/pad_8dp"
            android:text="Add to cart"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="@dimen/txt_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_icons" />

        <TextView
            android:id="@+id/btn_compare_packs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dimen_16dp"
            android:layout_weight="1"
            android:background="@drawable/white_yellow_border_bg"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:paddingStart="@dimen/pad_15dp"
            android:paddingTop="@dimen/pad_8dp"
            android:paddingEnd="@dimen/pad_15dp"
            android:paddingBottom="@dimen/pad_8dp"
            android:text="Compare packs"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textFontWeight="700"
            android:textSize="@dimen/txt_14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layout_icons" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
