<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp">



    <LinearLayout
        android:id="@+id/tv_layout"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="@dimen/padding_10"
        android:orientation="vertical">

        <View
            android:layout_width="100dp"
            android:layout_height="@dimen/placeholderTextHeight"
            android:layout_marginTop="5dp"
            android:background="@color/background2" />

        <View
            android:layout_width="70dp"
            android:layout_height="@dimen/placeholderTextHeight"
            android:layout_marginTop="10dp"
            android:background="@color/background2" />

        <View
            android:layout_width="100dp"
            android:layout_height="@dimen/placeholderTextHeight"
            android:layout_marginTop="10dp"
            android:background="@color/background2" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_toEndOf="@id/layout_tv"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginEnd="@dimen/activityPadding"
                android:background="@color/background2" />
            <View
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/layout_tv"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginEnd="@dimen/activityPadding"
                android:background="@color/background2" />
            <View
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/layout_tv"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginEnd="@dimen/activityPadding"
                android:background="@color/background2" />
        </LinearLayout>
        <View
            android:layout_width="100dp"
            android:layout_height="@dimen/placeholderTextHeight"
            android:layout_marginTop="@dimen/pad_20dp"
            android:background="@color/background2" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/tv_layout"
        android:layout_marginTop="@dimen/padding_10"
        android:orientation="vertical">

            <View
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@id/layout_tv"
                android:layout_marginTop="@dimen/padding_10"
                android:layout_marginEnd="@dimen/activityPadding"
                android:background="@color/background2" />
    </LinearLayout>

</RelativeLayout>

