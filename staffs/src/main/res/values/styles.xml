<resources>
  <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- customize the color palette -->
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="colorPrimaryDark">@color/primaryColorDark</item>
    <item name="colorAccent">@color/primaryColor</item>
    <item name="colorControlActivated">@color/accentColor</item>
    <item name="colorControlHighlight">@color/accentColor</item>
    <item name="colorControlNormal">#eeeeee</item>
    <item name="android:windowDisablePreview">true</item>
  </style>

  <style name="FooterButtonStyle">
    <item name="android:layout_width">0dp</item>
    <item name="android:textAlignment">gravity</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_height">@dimen/footer_button_height</item>
    <item name="android:fontFamily">@font/semi_bold</item>
    <item name="fontFamily">@font/semi_bold</item>
    <item name="android:background">@drawable/bg_button_orange</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:drawableEnd">@drawable/ic_right_arrow_white</item>
    <item name="android:paddingRight">@dimen/size_32</item>
    <item name="android:paddingStart">@dimen/size_32</item>
    <item name="android:foreground">@null</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="ButtonStyle">
    <item name="android:fontFamily">@font/semi_bold</item>
    <item name="fontFamily">@font/semi_bold</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:paddingRight">@dimen/_6sdp</item>
    <item name="android:paddingStart">@dimen/_6sdp</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:drawableEnd">@null</item>
    <item name="android:layout_height">@dimen/_46sdp</item>
    <item name="android:foreground">@null</item>
  </style>
  <style name="GenderSpinnerStyle" parent="@style/ThemeOverlay.AppCompat.Light">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/black_2A2A2A</item>
    <item name="android:maxLines">1</item>
    <item name="android:spinnerMode">dropdown</item>
  </style>
  <style parent="@android:style/Widget.Spinner" name="SpinnerWithNoArrow">
    <item name="android:background">@drawable/input_background</item>
  </style>
  <style name="ButtonStyle.Rounded" parent="ButtonStyle">
    <item name="android:background">@drawable/bg_button_rounded_orange</item>
  </style>
  <style name="ButtonStyle.Rounded.Solid" parent="ButtonStyle.Rounded">
    <item name="android:background">@drawable/bg_button_rounded_primary</item>
    <item name="android:paddingStart">@dimen/_30sdp</item>
    <item name="android:textSize">12.89sp</item>
    <item name="android:paddingTop">@dimen/_8sdp</item>
    <item name="android:paddingBottom">@dimen/_8sdp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingEnd">@dimen/_30sdp</item>
  </style>
  <style name="EditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/primaryTextColor</item>
    <item name="android:padding">10dp</item>
    <item name="android:maxLines">1</item>
    <item name="android:inputType">textCapSentences</item>
    <item name="android:textColorHint">@color/hintTextColor</item>
    <item name="android:background">@drawable/input_background</item>
  </style>
  <style name="TextDescription">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:paddingStart">30dp</item>
    <item name="android:paddingEnd">30dp</item>
    <item name="android:textFontWeight">400</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:textColor">@color/warm_light</item>
    <item name="android:textSize">@dimen/_12sdp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:textAlignment">center</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="BottomDialog" parent="Theme.MaterialComponents.Light.Dialog">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="colorPrimaryDark">@color/colorAccent</item>
    <item name="android:windowBackground">@color/transparent</item>
    <item name="bd_bg_color">@color/color_dialog_bg</item>
    <item name="android:textColorPrimary">#212121</item>
  </style>

  <style name="ButtonStyle.Rounded.Outlined">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_marginStart">@dimen/size_30</item>
    <item name="android:layout_marginBottom">@dimen/size_30</item>
    <item name="android:layout_marginEnd">@dimen/size_30</item>
    <item name="android:fontFamily">@font/regular</item>
    <item name="android:textColor">@color/greyish_brown</item>
    <item name="android:background">@drawable/bg_button_rounded_greyish_brown_outlined</item>
  </style>

  <!-- media picker -->
  <style name="Theme.AppCompat.Translucent" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:colorBackgroundCacheHint">@null</item>
    <item name="android:windowIsTranslucent">true</item>
    <!--        <item name="android:windowAnimationStyle">@android:style/Animation</item>-->
  </style>

  <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
    <item name="android:fontFamily">@font/bold</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/primary_text</item>
    <item name="android:gravity">center_vertical</item>
    <item name="android:includeFontPadding">false</item>
  </style>

  <style name="ActiveTheme" parent="Base.Theme.AppCompat">
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlNormal">@color/warm_grey</item>
    <item name="colorControlActivated">@color/colorAccent</item>
  </style>

  <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlNormal">@color/warm_grey</item>
    <item name="colorControlActivated">@color/colorAccent</item>
  </style>
</resources>
