<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.framework.views.customViews.CustomTextView
        android:id="@+id/ctv_text_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingStart="@dimen/_20sdp"
        android:paddingTop="@dimen/_19sdp"
        android:paddingEnd="@dimen/_20sdp"
        android:paddingBottom="@dimen/_19sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/clinic_businesses_hour" />

    <com.framework.views.viewgroups.BaseRecyclerView
        android:id="@+id/rv_staff_timing"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/size_16"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@+id/btn_save"
        app:layout_constraintTop_toBottomOf="@+id/ctv_text_header"
        tools:itemCount="7"
        tools:listitem="@layout/recycler_item_session" />


    <FrameLayout
        android:id="@+id/btn_save"
        style="@style/ButtonStyle.Rounded.Solid"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/size_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/ctv_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:text="@string/save"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textFontWeight="600"
            app:textType="BODY_1" />
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>