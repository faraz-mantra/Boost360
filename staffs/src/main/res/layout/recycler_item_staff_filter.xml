<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_button_yellow"
    android:paddingHorizontal="@dimen/size_16"
    android:backgroundTint="@color/yellow_ffb900"
    android:layout_marginVertical="@dimen/size_16"
    android:layout_centerInParent="true"
    android:layout_marginHorizontal="@dimen/size_8"
    android:paddingVertical="@dimen/_2sdp">

    <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:id="@+id/ctv_staff_status"
        android:layout_centerVertical="true"
        android:fontFamily="@font/open_sans"
        tools:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        android:layout_height="wrap_content"
        tools:text="All" />

    <com.framework.views.customViews.CustomTextView
        android:id="@+id/ctv_staff_status_count"
        android:layout_width="wrap_content"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/size_8"
        android:layout_toEndOf="@id/ctv_staff_status"
        android:layout_height="wrap_content"
        android:padding="@dimen/_2sdp"
        android:textAlignment="center"
        tools:text="10"
        android:background="@drawable/rounded_button_yellow"/>
</RelativeLayout>
