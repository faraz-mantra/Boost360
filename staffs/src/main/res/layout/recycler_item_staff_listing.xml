<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/size_8"
    android:background="@color/white"
    android:paddingHorizontal="@dimen/size_16"
    android:paddingVertical="@dimen/size_8">

    <com.framework.views.CircularImageView
        android:id="@+id/civ_image"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_staff_image" />

    <com.framework.views.customViews.CustomTextView
        android:id="@+id/ctv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:layout_toEndOf="@id/civ_image"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black"
        android:textFontWeight="600"
        android:textSize="@dimen/_17sdp"
        android:textStyle="normal"
        tools:text="Sukhran Singh" />

    <com.framework.views.customViews.CustomTextView
        android:id="@+id/ctv_specialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ctv_name"
        android:layout_alignStart="@id/ctv_name"
        android:fontFamily="@font/open_sans"
        android:textColor="#828282"
        android:textFontWeight="600"
        android:textSize="@dimen/_12sdp"
        android:textStyle="normal"
        tools:text="Anti-aging Expert" />

    <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ctv_specialization"
        android:layout_alignStart="@id/ctv_name"
        android:letterSpacing="0.2"
        tools:text="Have leaves this week"
        tools:textColor="@color/blue_4a90e2" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_button_yellow">

        <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingHorizontal="@dimen/size_16"
            android:shadowColor="@color/home_yellow"
            android:text="@string/view_profile"
            android:textColor="@color/yellow_ffb900" />
    </FrameLayout>

</RelativeLayout>