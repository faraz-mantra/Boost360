<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nowfloats.bubblebutton">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application android:allowBackup="true" android:label="@string/app_name"
        android:supportsRtl="true">
        <service android:name="nowfloats.bubblebutton.FloatingViewService"
            android:exported="true"/>

        <service android:name=".ProductService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service"/>
        </service>
        <service android:name=".bubble.BubblesService"/>
        <activity android:name=".activityDialogs.ProductSuggestions"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.AppCompat.Dialog"/>

        <activity
            android:name=".bubble.BubbleDialog"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.custom"></activity>
    </application>

</manifest>
