<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyCustomToolBarTheme" parent="ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
    </style>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="AVLoadingIndicatorView">
        <item name="minWidth">30dip</item>
        <item name="maxWidth">30dip</item>
        <item name="minHeight">30dip</item>
        <item name="maxHeight">30dip</item>
        <item name="indicatorName">BallPulseSyncIndicator</item>
    </style>
</resources>