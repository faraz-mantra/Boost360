<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:attrs="http://schemas.android.com/tools"
    android:id="@+id/cv_confirmation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="@dimen/margin_20"
    android:layout_marginRight="@dimen/margin_20"
    android:layout_marginTop="8dp"
    android:visibility="visible"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="7dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_crousal"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:nestedScrollingEnabled="true"
            android:layout_gravity="bottom"/>
        <com.rd.PageIndicatorView
            android:id="@+id/ps_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            attrs:piv_viewPager="@id/viewPager"
            attrs:piv_animationType="slide"
            attrs:piv_unselectedColor="@color/business_button_gray"
            attrs:piv_selectedColor="@color/business_button_black"
            attrs:piv_radius="4dp"
            attrs:piv_count="4"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_5"
            android:background="#e3e3e3" />


        <LinearLayout
            android:splitMotionEvents="false"
            android:id="@+id/llConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_edit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text="None of these"
                android:textColor="#80000000" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#e3e3e3" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="@android:color/black" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
