<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/address_main_bg"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/mapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/container_toolbar"
        android:layout_weight="1">

        <fragment
            android:layout_marginTop="20dp"
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/imageMarker"
            android:layout_marginBottom="15dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/add_marker" />

    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:orientation="vertical">
        <TextView
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/house_plot_num"/>
        <EditText
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:id="@+id/et_house_plot_num"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:minHeight="35dp"
            android:maxLines="1"
            android:inputType="text"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/street_address"/>
        <EditText
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:id="@+id/et_street_address"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:minHeight="35dp"
            android:maxLines="1"
            android:inputType="text"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/locality"/>
        <EditText
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:id="@+id/et_locality"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:minHeight="35dp"
            android:maxLines="1"
            android:inputType="text"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/land_mark"/>
        <EditText
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:id="@+id/et_landmark"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:minHeight="35dp"
            android:maxLines="1"
            android:inputType="text"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_width="wrap_content"
            android:maxLines="1"
            android:layout_height="wrap_content"
            android:text="@string/city"/>
        <EditText
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:id="@+id/et_city"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:minHeight="35dp"
            android:maxLines="1"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/country"/>
        <EditText
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:id="@+id/et_country"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:minHeight="35dp"
            android:maxLines="1"/>
        <TextView
            android:textSize="12sp"
            android:textColor="#808080"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pincode"/>
        <EditText
            android:textSize="12sp"
            android:paddingLeft="10dp"
            android:id="@+id/et_pincode"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:minHeight="35dp"
            android:maxLines="1"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRM"
        android:textColor="#ffb900"
        android:background="@drawable/place_pick_dialog_bg"
        android:layout_gravity="right"/>

</LinearLayout>