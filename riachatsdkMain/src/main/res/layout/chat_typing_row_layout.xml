<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:gravity="left"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_layout_bg">
        <com.nowfloats.riachatsdk.CustomWidget.LoadingDots
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            app:LoadingDots_auto_play="true"
            app:LoadingDots_dots_color="#808080"
            app:LoadingDots_dots_count="4"
            app:LoadingDots_dots_size="4dp"
            app:LoadingDots_dots_space="2dp"

            app:LoadingDots_loop_duration="800"
            app:LoadingDots_loop_start_delay="100"

            app:LoadingDots_jump_duration="200"
            app:LoadingDots_jump_height="4dp" />
    </LinearLayout>

</LinearLayout>