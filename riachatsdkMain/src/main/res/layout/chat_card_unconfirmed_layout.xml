<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cv_confirmation"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginStart="@dimen/margin_20"
  android:layout_marginTop="8dp"
  android:layout_marginEnd="@dimen/margin_20"
  android:layout_marginBottom="8dp"
  android:visibility="visible"
  app:cardBackgroundColor="@color/white"
  app:cardCornerRadius="7dp">


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv_confirmation_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="11dp"
      android:gravity="center"
      android:paddingStart="15dp"
      android:paddingRight="15dp"
      android:text="@string/confirm_business_name"
      android:textColor="#908A8A8A"
      android:textSize="12sp"
      android:visibility="visible" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_15"
      android:orientation="vertical"
      android:paddingStart="15dp"
      android:paddingTop="13dp"
      android:paddingRight="15dp"
      android:paddingBottom="@dimen/margin_40">

      <TextView
        android:id="@+id/tv_confirmation_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="hfushfhksdhf"
        android:textColor="@android:color/black"
        android:textSize="22sp" />

      <TextView
        android:id="@+id/tv_confirmation_sub_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text=".nowfloats.com"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:visibility="gone" />
    </LinearLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="1dp"
      android:layout_marginTop="@dimen/margin_5"
      android:background="#e3e3e3" />


    <LinearLayout
      android:id="@+id/llConfirm"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:splitMotionEvents="false"
      android:visibility="visible">

      <TextView
        android:id="@+id/tv_edit"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:text="Edit"
        android:textColor="#80000000" />


      <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#e3e3e3" />

      <TextView
        android:id="@+id/tv_confirm"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="center"
        android:text="Confirm"
        android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
      android:id="@+id/tvSubmit"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_centerInParent="true"
      android:background="?attr/selectableItemBackground"
      android:clickable="true"
      android:gravity="center"
      android:text="Confirming..."
      android:textColor="#60000000"
      android:visibility="gone" />
  </LinearLayout>


  <com.github.ybq.android.spinkit.SpinKitView
    android:id="@+id/progressBar"
    style="@style/SpinKitView.Wave"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_alignParentEnd="true"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/margin_10"
    android:layout_marginEnd="@dimen/margin_10"
    android:visibility="gone"
    app:SpinKit_Color="@color/gray" />


</androidx.cardview.widget.CardView>
