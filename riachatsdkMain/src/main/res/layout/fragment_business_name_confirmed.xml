<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nowfloats.riachatsdk.fragments.BusinessNameConfirmedFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_confirmation"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:visibility="visible"
        app:cardBackgroundColor="#727272"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/ll_bubble_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_confirmed_business_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/white"
                android:lineSpacingExtra="2dp"
                android:textSize="27sp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginRight="@dimen/margin_10"
                android:src="@drawable/sent_check"
                android:tint="@color/white" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
