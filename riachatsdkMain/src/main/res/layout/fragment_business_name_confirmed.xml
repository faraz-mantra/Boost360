<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nowfloats.riachatsdk.fragments.BusinessNameConfirmedFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="40dp"
        android:visibility="visible"
        app:cardBackgroundColor="#727272"
        app:cardCornerRadius="7dp">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/ll_bubble_container"
            android:layout_width="match_parent"
            android:background="@drawable/card_bg"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/margin_10"
                android:layout_marginTop="@dimen/margin_10"
                android:src="@drawable/green_check" />

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/tv_confirmed_business_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:paddingTop="20dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:lineSpacingExtra="2dp"
                android:textColor="@color/white"
                android:textSize="25sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="#e3e3e3" />
            <TextView
                android:layout_marginTop="7dp"
                android:layout_marginBottom="21dp"
                android:textSize="12sp"
                android:fontFamily="sans-serif-light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirmed_business_name"
                android:textColor="#e3e3e3"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>
