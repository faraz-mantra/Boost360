<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="50dp"
  android:layout_marginBottom="50dp"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
      android:id="@+id/iv_agent_icon"
      android:layout_width="70dp"
      android:layout_height="70dp"
      android:layout_marginStart="20dp"
      android:background="@drawable/ria_round_icon_bg"
      android:elevation="3dp"
      android:src="@drawable/ria_circle_image" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:layout_marginStart="20dp"
      android:orientation="vertical">

      <TextView
        android:id="@+id/tv_agent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/chat_agent_name"
        android:textSize="40sp" />

      <TextView
        android:id="@+id/tv_agent_full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/chat_agent_name_full"
        android:textSize="16sp" />
    </LinearLayout>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp">

    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:background="#aeaeae" />

    <TextView
      android:id="@+id/tv_date_time"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/date_text_bg"
      android:paddingStart="20dp"
      android:paddingTop="3dp"
      android:paddingRight="20dp"
      android:paddingBottom="3dp"
      android:text="Mon, 24 March"
      android:textColor="#aeaeae"
      android:textSize="12sp" />

    <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:background="#aeaeae" />

  </LinearLayout>
</LinearLayout>