<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.framework.views.customViews.CustomImageView
            android:id="@+id/customImageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_instagram"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.framework.views.customViews.CustomTextView
            android:id="@+id/customTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            android:text="@string/create_your_instagram_page"
            android:textColor="@color/black_333333"
            android:textSize="18sp"
            app:fontFamily="@font/semi_bold"
            app:layout_constraintBottom_toBottomOf="@+id/customImageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/customImageView2"
            app:layout_constraintTop_toTopOf="@+id/customImageView2" />


        <com.framework.views.customViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:fontFamily="@font/regular"
            android:textSize="@dimen/size_12"
            android:text="@string/create_your_instagram_account_or_log_in_if_you_already_have_one"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customTextView" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white_f8f8f8"
            app:layout_constraintHeight_percent="0.6"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/customTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/watch_video_for_instructions"
                android:textColor="@color/black_747474"
                android:textSize="@dimen/size_12"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.exoplayer2.ui.PlayerView
                android:id="@+id/player"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_170"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                app:layout_constraintVertical_bias="0"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toTopOf="@+id/materialButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customTextView2" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButton2"
                android:layout_width="@dimen/size_50"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_height="@dimen/size_50"
                android:layout_marginStart="24dp"
                app:strokeColor="@color/colorPrimary"
                android:layout_marginBottom="24dp"
                app:icon="@drawable/ic_arrow_left"
                app:cornerRadius="@dimen/size_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/materialButton"
                android:layout_width="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/colorPrimary"
                app:cornerRadius="@dimen/size_10"
                android:textAllCaps="false"
                android:layout_height="@dimen/size_50"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                android:text="@string/get_started"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/materialButton2" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
