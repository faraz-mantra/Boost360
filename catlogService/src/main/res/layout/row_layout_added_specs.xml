<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="@dimen/size_38"
        android:layout_marginTop="@dimen/size_5"
        android:layout_marginRight="@dimen/size_14"
        android:layout_marginBottom="@dimen/size_5"
        android:background="@drawable/shape_grey_stroke_rect_bkg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/imgVw_remove"
        app:layout_constraintTop_toTopOf="parent">

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/type"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1.5"
          android:hint="e.g. Served by"
          android:paddingLeft="@dimen/size_8" />

      <View
          android:layout_width="1dp"
          android:layout_height="match_parent"
          android:background="@color/placeholder_bg" />

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/value"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:hint="Ms. Shruti"
          android:paddingLeft="@dimen/size_8" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.framework.views.customViews.CustomImageView
        android:id="@+id/imgVw_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_cross_grey" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>