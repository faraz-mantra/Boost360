<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/size_10">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/size_4"
                    android:includeFontPadding="false"
                    android:text="Payment Configuration"
                    android:textColor="@color/black_4a4a4a"
                    app:fontFamily="@font/semi_bold"
                    app:textType="HEADING_4" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tvCustomerAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Select, how you want to receive money for your bookings."
                    android:textColor="@color/warm_grey"
                    android:textSize="12sp"
                    app:fontFamily="@font/regular" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <!-- <View
             android:layout_width="match_parent"
             android:layout_height="@dimen/size_1"
             android:background="@color/view_background_color" />-->

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_rounded_top_white_2"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_20">

                    <com.framework.views.customViews.CustomRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10"
                        android:orientation="vertical">


                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Boost payment gateway"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:fontFamily="@font/semi_bold" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="A premium service by Boost for secure payment collection (Learn more here)"
                            android:textColor="@color/black_4a4a4a"
                            android:textSize="12sp"
                            app:fontFamily="@font/regular" />


                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_5"
                    android:background="@drawable/shape_grey_dotted_line" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_20">

                    <com.framework.views.customViews.CustomRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10"
                        android:orientation="vertical">


                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="My custom payment gateway"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:fontFamily="@font/semi_bold" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="Get direct payment in your bank account instantly"
                            android:textColor="@color/black_4a4a4a"
                            android:textSize="12sp"
                            app:fontFamily="@font/regular" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_5"
                    android:background="@drawable/shape_grey_dotted_line" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_20">

                    <com.framework.views.customViews.CustomRadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10"
                        android:orientation="vertical">


                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="External URL"
                            android:textColor="@color/black"
                            android:textSize="19sp"
                            app:fontFamily="@font/semi_bold" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="The service can be offerred either at the business location or at clientâ€™s location."
                            android:textColor="@color/black_4a4a4a"
                            android:textSize="12sp"
                            app:fontFamily="@font/regular" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_5"
                    android:background="@drawable/shape_grey_dotted_line" />

            </RadioGroup>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_20"
                android:layout_marginBottom="@dimen/size_20"
                android:paddingRight="@dimen/size_10">

                <com.framework.views.customViews.CustomButton
                    android:id="@+id/btn_done"
                    android:layout_width="@dimen/size_110"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button_proceed"
                    android:fontFamily="@font/semi_bold"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Done"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textType="HEADING_6" />

                <com.framework.views.customViews.CustomButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="@dimen/size_110"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="@dimen/size_20"
                    android:background="@null"
                    android:fontFamily="@font/semi_bold"
                    android:gravity="center"
                    android:padding="15dp"
                    android:text="Cancel"
                    android:textAllCaps="true"
                    android:textColor="@color/pinkish_grey"
                    app:layout_constraintRight_toLeftOf="@id/btn_done"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textType="HEADING_6" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>