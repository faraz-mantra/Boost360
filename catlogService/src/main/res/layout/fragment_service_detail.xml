<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            tools:context=".ui.InventoryOrderDetailActivity">

            <View
                android:id="@+id/shadow1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_3"
                android:background="@drawable/down_shadow"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/shadow1">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:id="@+id/ll_top"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_200"
                            android:background="#E9F0FB"
                            android:gravity="center"
                            android:orientation="vertical">

                            <com.framework.views.customViews.CustomImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_add_image" />

                            <com.framework.views.customViews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_5"
                                android:includeFontPadding="false"
                                android:text="@string/jpeg_png"
                                android:textColor="@color/warm_grey"
                                app:fontFamily="@font/regular"
                                app:textType="BODY_1" />

                            <com.framework.views.customViews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:text="@string/_800x800px"
                                android:textColor="@color/warm_grey"
                                app:fontFamily="@font/regular"
                                app:textType="BODY_1" />

                            <com.framework.views.customViews.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/size_20"
                                android:text="@string/add_service_image"
                                android:textColor="@color/greyish_brown"
                                app:fontFamily="@font/semi_bold"
                                app:textAllCaps="true"
                                app:textType="BODY_1" />


                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/size_6"
                            android:background="@color/lightest_grey" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1"
                        android:background="@color/view_background_color" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="@dimen/size_20"
                        android:paddingEnd="@dimen/size_20">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_3"
                            android:layout_marginTop="@dimen/size_16"
                            android:text="Service Name*"
                            android:textColor="@color/black_4a4a4a"
                            app:fontFamily="@font/semi_bold"
                            app:textType="BODY_3" />

                        <com.framework.views.customViews.CustomTextField
                            android:id="@+id/eTName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_5"
                            android:background="@drawable/bg_rect_edit_txt"
                            android:hint="Write the name of your service"
                            android:inputType="textCapWords"
                            android:padding="@dimen/size_12"
                            android:singleLine="true"
                            android:textColor="@color/warm_grey_10"
                            android:textColorHint="@color/primary_grey"
                            tools:ignore="UnusedAttribute" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_3"
                            android:layout_marginTop="@dimen/size_16"
                            android:text="Service Description*"
                            android:textColor="@color/black_4a4a4a"
                            app:fontFamily="@font/semi_bold"
                            app:textType="BODY_3" />

                        <com.framework.views.customViews.CustomTextField
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_5"
                            android:background="@drawable/bg_rect_edit_txt"
                            android:hint="Describe this service in around 2000 character at max..."
                            android:inputType="textMultiLine"
                            android:padding="@dimen/size_12"
                            android:textColor="@color/warm_grey_10"
                            android:textColorHint="@color/primary_grey"
                            tools:ignore="UnusedAttribute" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_16"
                            android:drawableEnd="@drawable/ic_question_circular_blue"
                            android:drawablePadding="@dimen/size_4"
                            android:includeFontPadding="false"
                            android:text="Service Delivery Configuration"
                            android:textColor="@color/black_4a4a4a"
                            app:fontFamily="@font/semi_bold"
                            app:textType="BODY_3" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tvCustomerAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="Select, how do you want to give this service to your clients."
                            android:textColor="@color/warm_grey"
                            android:textSize="12sp"
                            app:fontFamily="@font/regular" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_10"
                            android:background="@drawable/shape_grey_stroke_rect_bkg"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:background="@color/dodger_blue_ED73FE"
                                android:padding="@dimen/size_10">

                                <com.framework.views.customViews.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Both online and in-person"
                                    android:textColor="@color/black_4f4f4f"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/semi_bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <com.framework.views.customViews.CustomTextView
                                    android:id="@+id/vw_changeDeliverConfig"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Change"
                                    android:textColor="@color/cerulean_blue"
                                    android:textSize="10sp"
                                    app:fontFamily="@font/semi_bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:textAllCaps="true" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/vw_changeDeliverLocation"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/size_10">

                                <com.framework.views.customViews.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableStart="@drawable/ic_delivery_business_location"
                                    android:drawablePadding="@dimen/size_4"
                                    android:includeFontPadding="false"
                                    android:text="Delivery at my business location"
                                    android:textColor="@color/warm_grey"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/regular"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <com.framework.views.customViews.CustomImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:srcCompat="@drawable/ic_grey_drop_down" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_16"
                            android:drawableEnd="@drawable/ic_question_circular_blue"
                            android:drawablePadding="@dimen/size_4"
                            android:includeFontPadding="false"
                            android:text="Pricing &amp; payment info"
                            android:textColor="@color/black_4a4a4a"
                            app:fontFamily="@font/semi_bold"
                            app:textType="BODY_3" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="Select, how do you want to give this service to your clients."
                            android:textColor="@color/warm_grey"
                            android:textSize="12sp"
                            app:fontFamily="@font/regular" />

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_10"
                            android:background="@drawable/shape_grey_stroke_rect_bkg"
                            android:orientation="vertical">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="1dp"
                                android:background="@color/dodger_blue_ED73FE"
                                android:padding="@dimen/size_10">

                                <com.framework.views.customViews.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Want your clients to pay for this service?"
                                    android:textColor="@color/black_4f4f4f"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/semi_bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <Switch
                                    android:backgroundTint="@color/dodger_blue_two"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="@dimen/size_5">

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <com.framework.views.customViews.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/size_3"
                                        android:text="Price incl. tax (INR)"
                                        android:textColor="@color/black_4a4a4a"
                                        android:textSize="12sp"
                                        app:fontFamily="@font/light" />

                                    <com.framework.views.customViews.CustomTextField
                                        android:layout_width="@dimen/size_115"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/size_5"
                                        android:background="@drawable/bg_rect_edit_txt"
                                        android:hint="XX,XXX"
                                        android:inputType="textCapWords"
                                        android:padding="@dimen/size_12"
                                        android:singleLine="true"
                                        android:textColor="@color/warm_grey_10"
                                        android:textColorHint="@color/primary_grey"
                                        tools:ignore="UnusedAttribute" />

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <com.framework.views.customViews.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/size_3"
                                        android:text="Discount amt. (INR)"
                                        android:textColor="@color/black_4a4a4a"
                                        android:textSize="12sp"
                                        app:fontFamily="@font/light" />

                                    <com.framework.views.customViews.CustomTextField
                                        android:layout_width="@dimen/size_115"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/size_5"
                                        android:background="@drawable/bg_rect_edit_txt"
                                        android:hint="XX,XXX"
                                        android:inputType="textCapWords"
                                        android:padding="@dimen/size_12"
                                        android:singleLine="true"
                                        android:textColor="@color/warm_grey_10"
                                        android:textColorHint="@color/primary_grey"
                                        tools:ignore="UnusedAttribute" />

                                </androidx.appcompat.widget.LinearLayoutCompat>

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <com.framework.views.customViews.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/size_3"
                                        android:text="Final Price"
                                        android:textColor="@color/black_4a4a4a"
                                        android:textSize="12sp"
                                        app:fontFamily="@font/light" />

                                    <com.framework.views.customViews.CustomTextView
                                        android:layout_width="@dimen/size_115"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/size_5"
                                        android:padding="@dimen/size_12"
                                        android:text="INR XX,XXX"
                                        android:textColor="@color/primary_grey"
                                        tools:ignore="UnusedAttribute" />

                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <com.framework.views.customViews.CustomTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/size_5"
                                android:layout_marginTop="@dimen/size_14"
                                android:includeFontPadding="false"
                                android:text="Select, how do you want to receive money for yor bookings."
                                android:textColor="@color/warm_grey"
                                android:textSize="10sp"
                                app:fontFamily="@font/regular" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/shape_grey_stroke_rect_bkg"
                                android:orientation="vertical">

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/size_1"
                                    android:background="@color/dodger_blue_ED73FE"
                                    android:padding="@dimen/size_10">

                                    <com.framework.views.customViews.CustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Boost Payment gateway"
                                        android:textColor="@color/black_4f4f4f"
                                        android:textSize="12sp"
                                        app:fontFamily="@font/semi_bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />

                                    <com.framework.views.customViews.CustomTextView
                                        android:id="@+id/vw_paymentConfig"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Change"
                                        android:textColor="@color/cerulean_blue"
                                        android:textSize="10sp"
                                        app:fontFamily="@font/semi_bold"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:textAllCaps="true" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/size_10">

                                    <com.framework.views.customViews.CustomTextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawableStart="@drawable/ic_info_circular_orange"
                                        android:drawablePadding="@dimen/size_4"
                                        android:includeFontPadding="false"
                                        android:text="Bank Account not added"
                                        android:textColor="@color/warm_grey"
                                        android:textSize="12sp"
                                        app:fontFamily="@font/regular"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />


                                    <com.framework.views.customViews.CustomImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintRight_toRightOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:srcCompat="@drawable/ic_arrow_right_grey" />

                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_16">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <com.framework.views.customViews.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawableEnd="@drawable/ic_question_circular_blue"
                                    android:drawablePadding="@dimen/size_4"
                                    android:includeFontPadding="false"
                                    android:text="Other Information"
                                    android:textColor="@color/black_4a4a4a"
                                    app:fontFamily="@font/semi_bold"
                                    app:textType="BODY_3" />

                                <com.framework.views.customViews.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:text="Select, how do you want to give this service to your clients."
                                    android:textColor="@color/warm_grey"
                                    android:textSize="12sp"
                                    app:fontFamily="@font/regular" />

                            </LinearLayout>

                            <com.framework.views.customViews.CustomImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/ic_arrow_right_grey" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/size_20"
                            android:orientation="vertical"
                            android:paddingTop="@dimen/size_16"
                            android:paddingBottom="@dimen/size_16">

                            <com.framework.views.customViews.CustomButton
                                android:id="@+id/buttonConfirmOrder"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/button_proceed"
                                android:fontFamily="@font/semi_bold"
                                android:gravity="center"
                                android:padding="15dp"
                                android:text="Save &amp; Publish"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                app:textType="HEADING_6" />
                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.core.widget.NestedScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>