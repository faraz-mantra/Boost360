<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:paddingStart="@dimen/size_20"
          android:paddingEnd="@dimen/size_20">

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_36"
            android:drawablePadding="@dimen/size_4"
            android:includeFontPadding="false"
            android:text="Configure the digital channels"
            android:textColor="@color/black_4a4a4a"
            app:drawableEndCompat="@drawable/ic_question_circular_blue"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_3" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Select the channels where you want to sync this service"
            android:textColor="@color/warm_grey"
            android:textSize="12sp"
            app:fontFamily="@font/regular" />

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:paddingLeft="@dimen/size_10"
            android:paddingTop="@dimen/size_8"
            android:paddingRight="@dimen/size_10"
            android:paddingBottom="@dimen/size_8">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_10"
              android:includeFontPadding="false"
              android:text="Facebook Page Shop"
              android:textColor="@color/warm_grey"
              android:textSize="14sp"
              app:drawableLeftCompat="@drawable/ic_facebook_flag"
              app:fontFamily="@font/regular"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomCheckBox
              android:id="@+id/cbFacebookPage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:theme="@style/ActiveTheme"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:paddingLeft="@dimen/size_10"
            android:paddingTop="@dimen/size_8"
            android:paddingRight="@dimen/size_10"
            android:paddingBottom="@dimen/size_8">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_10"
              android:includeFontPadding="false"
              android:text="Google Merchant Center"
              android:textColor="@color/warm_grey"
              android:textSize="14sp"
              app:drawableLeftCompat="@drawable/ic_facebook_flag"
              app:fontFamily="@font/regular"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomCheckBox
              android:id="@+id/cbGoogleMerchantCenter"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:theme="@style/ActiveTheme"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:paddingLeft="@dimen/size_10"
            android:paddingTop="@dimen/size_8"
            android:paddingRight="@dimen/size_10"
            android:paddingBottom="@dimen/size_8">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_10"
              android:includeFontPadding="false"
              android:text="Twitter Page"
              android:textColor="@color/warm_grey"
              android:textSize="14sp"
              app:drawableLeftCompat="@drawable/ic_twiter_page"
              app:fontFamily="@font/regular"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomCheckBox
              android:id="@+id/cbTwitterPage"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:theme="@style/ActiveTheme"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_36"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="Secondary images"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/tvCustomerAddress"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/size_2"
              android:drawablePadding="@dimen/size_4"
              android:includeFontPadding="false"
              android:text="(8 max, Jpeg, 800x800px)"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:background="@drawable/shape_blue_stroke_rect_title_bkg"
            android:padding="@dimen/size_14">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:gravity="center"
              android:text="Add secondary images"
              android:textColor="@color/dodger_blue_two"
              app:drawableLeftCompat="@drawable/ic_small_add_images"
              app:fontFamily="@font/semi_bold"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:textAllCaps="true"
              app:textType="BODY_1" />


          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_36"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_4"
              android:includeFontPadding="false"
              android:text="Secondary images"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="Maximum 8 images, 800x800px, "
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextField
            android:id="@+id/eTName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/bg_rect_edit_txt"
            android:hint="Type/select a service category"
            android:inputType="textCapWords"
            android:padding="@dimen/size_12"
            android:singleLine="true"
            android:textColor="@color/warm_grey_10"
            android:textColorHint="@color/primary_grey"
            tools:ignore="UnusedAttribute" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_4"
              android:includeFontPadding="false"
              android:text="Service category"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="This will help you group multiple services under this category"
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/bg_rect_edit_txt"
            android:hint="Type/select a service category"
            android:inputType="textCapWords"
            android:padding="@dimen/size_12"
            android:singleLine="true"
            android:textColor="@color/warm_grey_10"
            android:textColorHint="@color/primary_grey"
            tools:ignore="UnusedAttribute" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_4"
              android:includeFontPadding="false"
              android:text="Brand Name"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="In case this service is associated with/certified by any brand."
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.framework.views.customViews.CustomTextField
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/bg_rect_edit_txt"
            android:hint="Type a brand name"
            android:inputType="textCapWords"
            android:padding="@dimen/size_12"
            android:singleLine="true"
            android:textColor="@color/warm_grey_10"
            android:textColorHint="@color/primary_grey"
            tools:ignore="UnusedAttribute" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_4"
              android:includeFontPadding="false"
              android:text="Service Tags"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipsService"
            style="@style/Widget.MaterialComponents.ChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacing="8dp"
            app:singleSelection="false">

          </com.google.android.material.chip.ChipGroup>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/bg_rect_edit_txt">

            <com.framework.views.customViews.CustomTextField
              android:id="@+id/edtTxt_addServiceTag"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:background="@null"
              android:hint="Type a tag and press 'ADD'"
              android:inputType="textCapWords"
              android:maxEms="3"
              android:padding="@dimen/size_12"
              android:singleLine="true"
              android:textColor="@color/warm_grey_10"
              android:textColorHint="@color/primary_grey"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintRight_toLeftOf="@id/vw_add"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              tools:ignore="UnusedAttribute" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/vw_add"
              android:layout_width="@dimen/size_80"
              android:layout_height="0dp"
              android:background="@drawable/shape_blue_stroke_rect_title_bkg"
              android:clickable="true"
              android:gravity="center"
              android:text="Add"
              android:textColor="@color/dodger_blue_two"
              app:fontFamily="@font/semi_bold"
              app:layout_constraintBottom_toBottomOf="@id/edtTxt_addServiceTag"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="@id/edtTxt_addServiceTag"
              app:textAllCaps="true"
              app:textType="BODY_1" />

          </androidx.constraintlayout.widget.ConstraintLayout>

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:drawablePadding="@dimen/size_4"
            android:includeFontPadding="false"
            android:text="Service specifications"
            android:textColor="@color/black_4a4a4a"
            app:drawableEndCompat="@drawable/ic_question_circular_blue"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_3" />

          <com.framework.views.viewgroups.BaseRecyclerView
            android:id="@+id/service_specification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:itemCount="6"
            tools:listitem="@layout/row_layout_added_specs" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/shape_blue_stroke_rect_title_bkg"
            android:clickable="true"
            android:gravity="center"
            android:minWidth="@dimen/size_100"
            android:padding="@dimen/size_10"
            android:text="Add specification"
            android:textColor="@color/dodger_blue_two"
            app:fontFamily="@font/semi_bold"
            app:layout_constraintBottom_toBottomOf="@id/edtTxt_addServiceTag"
            app:layout_constraintRight_toRightOf="@id/edtTxt_addServiceTag"
            app:layout_constraintTop_toTopOf="@id/edtTxt_addServiceTag"
            app:textAllCaps="true"
            app:textType="BODY_1" />

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_26"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawablePadding="@dimen/size_4"
              android:includeFontPadding="false"
              android:text="Invoice GST details"
              android:textColor="@color/black_4a4a4a"
              app:drawableEndCompat="@drawable/ic_question_circular_blue"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_3" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:text="Select the appropriate GST slab at which this service is taxable."
              android:textColor="@color/warm_grey"
              android:textSize="12sp"
              app:fontFamily="@font/regular" />

          </androidx.appcompat.widget.LinearLayoutCompat>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:background="@drawable/shape_grey_stroke_rect_bkg"
            android:padding="@dimen/size_10">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:clickable="true"
              android:gravity="center"
              android:text="18%"
              android:textColor="@color/warm_grey"
              android:textSize="15sp"
              app:fontFamily="@font/semi_bold"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:textAllCaps="true"
              app:textType="BODY_2" />

            <com.framework.views.customViews.CustomImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:srcCompat="@drawable/ic_grey_drop_down" />

          </androidx.constraintlayout.widget.ConstraintLayout>


          <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_80" />

        </androidx.appcompat.widget.LinearLayoutCompat>

      </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size_20"
      android:layout_marginEnd="@dimen/size_20"
      android:layout_marginBottom="@dimen/size_12"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent">

      <com.framework.views.customViews.CustomButton
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_proceed"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:padding="15dp"
        android:stateListAnimator="@null"
        android:text="Confirm"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:textType="HEADING_6" />
    </androidx.appcompat.widget.LinearLayoutCompat>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>