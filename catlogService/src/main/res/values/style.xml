<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppTheme.cataloge" parent="Theme.MaterialComponents.NoActionBar.Bridge">
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryDark">@color/color_primary_dark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlNormal">@color/colorAccent</item>
    <item name="android:windowAnimationStyle">@null</item>
    <item name="android:windowDisablePreview">true</item>
    <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
    <item name="android:homeAsUpIndicator">@drawable/ic_arrow_left_30</item>
    <item name="searchViewStyle">@style/SearchView</item>
  </style>

  <style name="CustomBottomSheet" parent="Theme.MaterialComponents.BottomSheetDialog">
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="BottomSheetTheme" parent="@style/Theme.MaterialComponents.BottomSheetDialog">
    <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
  </style>

  <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
    <item name="submitBackground">@android:color/transparent</item>
    <item name="queryBackground">@android:color/transparent</item>
    <item name="searchHintIcon">@null</item>
  </style>

  <style name="ActiveTheme" parent="Base.Theme.AppCompat">
    <item name="colorAccent">@color/colorAccent</item>
    <item name="colorControlNormal">@color/placeholder_bg</item>
    <item name="colorControlActivated">@color/colorAccent</item>
  </style>
</resources>