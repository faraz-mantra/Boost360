<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.festive.poster">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:name=".FestivePosterApplication">
        <activity
            android:screenOrientation="portrait"
            android:theme="@style/PosterTheme"
            android:name=".ui.festivePoster.FestivePosterContainerActivity"/>

        <activity
            android:screenOrientation="portrait"
            android:name="com.festive.poster.ui.promoUpdates.PromoUpdatesActivity"
            android:exported="true"/>

        <activity
            android:theme="@style/TemplateTheme"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:name="com.festive.poster.ui.promoUpdates.edit_post.EditPostActivity"
            android:screenOrientation="portrait"/>
    </application>
</manifest>