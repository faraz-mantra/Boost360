<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data></data>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_fposter_white_top_rounded_rect"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bottoms_sheet_top20dp_white"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:padding="@dimen/size_20">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/customTextView7"
          style="@style/BusinessProfile_Text_Title"
          android:text="@string/company_name"
          android:textSize="@dimen/size_10"
          android:textColor="@color/black_747474"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/ctv_business_name_count"
          style="@style/BusinessProfile_Text_Title"
          android:layout_gravity="end"
          android:text="8"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          tools:text="8" />
      </androidx.constraintlayout.widget.ConstraintLayout>


      <com.framework.views.customViews.CustomEditText
        android:id="@+id/cet_company_name"
        style="@style/BusinessProfileTextField"
        android:drawableEnd="@null"
        android:background="@drawable/bg_edit_txt"
        android:gravity="top|left"
        android:inputType="textMultiLine|textCapWords"
        android:lines="3"
        android:maxLength="40"
        android:minLines="1"
        android:padding="@dimen/size_10"
        android:scrollbars="vertical"
        android:singleLine="true"
        android:textSize="14sp"
          android:textColor="@color/black_4f4f4f"
        tools:ignore="UnusedAttribute" />

      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_10"
          android:orientation="horizontal">

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/customTextView8"
            style="@style/BusinessProfile_Text_Title"
            android:text="@string/secondary_text"
            android:textSize="@dimen/size_10"
            android:textColor="@color/black_747474"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/ctv_secondary_name_count"
            style="@style/BusinessProfile_Text_Title"
            android:layout_gravity="end"
            android:text="8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="10" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <com.framework.views.customViews.CustomEditText
          android:id="@+id/cet_secondary_name"
          style="@style/BusinessProfileTextField"
          android:drawableEnd="@null"
          android:background="@drawable/bg_edit_txt"
          android:gravity="top|left"
          android:inputType="textMultiLine|textCapWords"
          android:lines="3"
          android:textColor="@color/black_4f4f4f"
          android:maxLength="40"
          android:minLines="1"
          android:padding="@dimen/size_10"
          android:scrollbars="vertical"
          android:singleLine="true"
          android:textSize="14sp"
          tools:ignore="UnusedAttribute" />


      <androidx.constraintlayout.widget.ConstraintLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_10"
          android:orientation="horizontal">

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/customTextView"
            style="@style/BusinessProfile_Text_Title"
            android:text="@string/business_description"
            android:textSize="@dimen/size_12"
            android:textColor="@color/black_4a4a4a"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>


      <com.framework.views.customViews.CustomEditText
          android:id="@+id/cet_business_desc"
          style="@style/BusinessProfileTextField"
          android:drawableEnd="@null"
          android:gravity="top|left"
          android:background="@drawable/bg_edit_txt"
          android:inputType="textMultiLine|textCapWords"
          android:lines="10"
          android:textColor="@color/bg_dark_grey"
          android:minLines="6"
          android:scrollbars="vertical"
          android:textSize="14sp" />

      <com.framework.views.customViews.CustomButton
        android:id="@+id/btn_publish"
        style="@style/ButtonStyle.Rounded.Solid.BottomSheet"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/size_16"
        android:enabled="true"
        android:text="@string/save"
        android:textColor="@color/white" />
    </androidx.appcompat.widget.LinearLayoutCompat>

  </androidx.appcompat.widget.LinearLayoutCompat>

</layout>