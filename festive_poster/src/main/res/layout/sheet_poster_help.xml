<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.framework.views.customViews.CustomImageView
      android:id="@+id/riv_close_bottomSheet"
      android:layout_width="@dimen/size_40"
      android:layout_height="@dimen/size_40"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="@dimen/size_15"
      android:src="@drawable/ic_help_bsheet_close" />

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/shape_fposter_white_top_rounded_rect"
      android:orientation="vertical"
      android:padding="@dimen/size_24">

      <com.framework.views.customViews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:fontFamily="@font/semi_bold"
        android:text="@string/what_are_the_festival_posters"
        android:textColor="@color/black_4a4a4a"
        app:textType="HEADING_5" />


      <com.framework.views.customViews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:fontFamily="@font/regular"
        android:lineSpacingExtra="3dp"
        android:text="@string/festive_poster_help_msg"
        android:textColor="@color/color_747474"
        android:textSize="@dimen/size_14" />

      <com.framework.views.customViews.CustomMaterialButton
        android:id="@+id/btn_confirm"
        style="@style/PrimaryButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:layout_marginTop="@dimen/size_24"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:stateListAnimator="@null"
        android:text="@string/done"
        android:textSize="@dimen/body_1" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:paddingVertical="@dimen/size_16"
        android:text="@string/contact_support"
        android:id="@+id/support_btn"
        android:textColor="@color/colorAccentLight"
        android:textSize="@dimen/body_1" />

    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
