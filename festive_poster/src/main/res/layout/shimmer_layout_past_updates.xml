<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/parentShimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shimmer_auto_start="true"
        app:shimmer_duration="700">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_38"
                android:background="@color/black_4a4a4a"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="@dimen/size_110"
                        android:layout_height="@dimen/size_20"
                        android:background="@drawable/ic_rectangle_sharp_grey"
                        android:backgroundTint="@color/placeholder_bg" />

                    <View
                        android:layout_width="@dimen/size_110"
                        android:layout_marginHorizontal="@dimen/size_6"
                        android:layout_height="@dimen/size_4"
                        android:layout_marginTop="@dimen/size_2"
                        android:background="@color/white" />

                </LinearLayout>

                <View
                    android:layout_width="@dimen/size_110"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginHorizontal="@dimen/size_6"
                    android:layout_marginVertical="@dimen/size_6"
                    android:background="@drawable/ic_rectangle_sharp_grey"
                    android:backgroundTint="@color/placeholder_bg" />

                <View
                    android:layout_width="@dimen/size_110"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginHorizontal="@dimen/size_6"
                    android:layout_marginVertical="@dimen/size_6"
                    android:background="@drawable/ic_rectangle_sharp_grey"
                    android:backgroundTint="@color/placeholder_bg" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_38"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingVertical="@dimen/size_4">

                <View
                    android:layout_width="@dimen/size_110"
                    android:layout_height="@dimen/size_26"
                    android:layout_marginHorizontal="@dimen/size_5"
                    android:background="@drawable/rounded_rectangle_grey"
                    android:backgroundTint="@color/placeholder_bg" />

                <View
                    android:layout_width="@dimen/size_110"
                    android:layout_height="@dimen/size_26"
                    android:layout_marginHorizontal="@dimen/size_5"
                    android:background="@drawable/rounded_rectangle_grey"
                    android:backgroundTint="@color/placeholder_bg" />

                <View
                    android:layout_width="@dimen/size_110"
                    android:layout_height="@dimen/size_26"
                    android:layout_marginHorizontal="@dimen/size_5"
                    android:background="@drawable/rounded_rectangle_grey"
                    android:backgroundTint="@color/placeholder_bg" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <include
                layout="@layout/shimmer_past_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/shimmer_past_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_12" />

            <include
                layout="@layout/shimmer_past_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_12" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.facebook.shimmer.ShimmerFrameLayout>
</layout>