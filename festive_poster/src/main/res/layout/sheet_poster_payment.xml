<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

  <androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_fposter_white_top_rounded_rect"
    android:orientation="vertical">

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="@dimen/size_12">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_heading"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/bold"
          android:text="@string/paying_"
          android:textColor="@color/black_4a4a4a"
          android:textSize="@dimen/heading_6"
          app:fontFamily="@font/semi_bold" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_subheading"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/regular"
          android:textSize="@dimen/caption"
          tools:text="Test" />
      </LinearLayout>


      <com.framework.views.customViews.CustomImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_fposter_bsheet_close" />


    </RelativeLayout>

    <View
      android:layout_width="match_parent"
      android:layout_height="0.2dp"
      android:background="@color/grey_dark_1" />

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:padding="@dimen/size_24">

      <androidx.appcompat.widget.LinearLayoutCompat

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:enabled="false"
          android:fontFamily="@font/regular"
          android:minWidth="0dp"
          android:minHeight="0dp"
          android:text="@string/pay_using_debit_credit_card"
          android:textColor="@color/color_BBBBBB"
          android:textSize="@dimen/heading_6" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_25"
          android:fontFamily="@font/regular"
          android:text="@string/currently_unavailable"
          android:textColor="@color/red_300"
          android:textSize="@dimen/caption" />

      </androidx.appcompat.widget.LinearLayoutCompat>

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:orientation="vertical">

        <RadioButton
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:enabled="false"
          android:fontFamily="@font/regular"
          android:minWidth="0dp"
          android:minHeight="0dp"
          android:text="@string/pay_using_upi"
          android:textColor="@color/color_BBBBBB"
          android:textSize="@dimen/heading_6" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_25"
          android:fontFamily="@font/regular"
          android:text="@string/currently_unavailable"
          android:textColor="@color/red_300"
          android:textSize="@dimen/caption" />

      </androidx.appcompat.widget.LinearLayoutCompat>

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:orientation="vertical">

        <RadioButton
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:buttonTint="@color/colorPrimary"
          android:checked="true"
          android:fontFamily="@font/semi_bold"
          android:minWidth="0dp"
          android:minHeight="0dp"
          android:text="@string/pay_later"
          android:textColor="@color/black_4a4a4a"
          android:textSize="@dimen/heading_6" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_pay_later"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_25"
          android:fontFamily="@font/semi_bold"
          android:textColor="@color/black_4a4a4a"
          android:textSize="@dimen/caption" />

      </androidx.appcompat.widget.LinearLayoutCompat>

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/tv_pay_later_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:background="@drawable/shape_fposter_grey_stroke_grey_rect"
        android:fontFamily="@font/regular"
        android:paddingHorizontal="@dimen/size_16"
        android:paddingVertical="@dimen/size_8"
        android:textColor="@color/color_747474"
        android:textSize="@dimen/caption" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.framework.views.customViews.CustomTextView
      android:id="@+id/btn_confirm"
      android:layout_width="match_parent"
      android:layout_height="@dimen/size_50"
      android:background="@drawable/bg_button_orange_gradient"
      android:fontFamily="@font/semi_bold"
      android:gravity="center"
      android:text="@string/confirm_order"
      android:textColor="@color/white"
      app:textType="HEADING_6" />
  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
