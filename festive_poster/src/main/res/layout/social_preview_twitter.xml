<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_margin="@dimen/size_24"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.framework.views.customViews.CustomCardView
                android:id="@+id/customCardView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="@dimen/size_15"
                app:layout_constraintBottom_toBottomOf="@+id/customTextView12"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomImageView
                android:id="@+id/customImageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_down_grey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="#BDC5CD" />


            <com.framework.views.customViews.CustomTextView
                android:id="@+id/customTextView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/bold"
                tools:text="Payal Jain"
                android:textColor="@color/black_4a4a4a"
                android:textSize="@dimen/size_16"
                app:layout_constraintStart_toEndOf="@+id/customCardView"
                app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomTextView
                android:id="@+id/customTextView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                tools:text="payaljain"
                app:layout_constraintBottom_toBottomOf="@+id/customTextView9"
                app:layout_constraintStart_toEndOf="@+id/customTextView9"
                app:layout_constraintTop_toTopOf="@+id/customTextView9" />


            <com.framework.views.customViews.CustomTextView
                android:id="@+id/customTextView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/bold"
                android:text="\u00b7"
                android:textSize="@dimen/size_20"
                app:layout_constraintBottom_toBottomOf="@+id/customTextView10"
                app:layout_constraintStart_toEndOf="@+id/customTextView10"
                app:layout_constraintTop_toTopOf="@+id/customTextView10" />

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/now"
                android:fontFamily="@font/regular"
                app:layout_constraintBottom_toBottomOf="@+id/customTextView11"
                app:layout_constraintStart_toEndOf="@+id/customTextView11"
                app:layout_constraintTop_toTopOf="@+id/customTextView11" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/customTextView12"
                android:textSize="@dimen/size_12"
                android:fontFamily="@font/regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Bangalore"
                app:layout_constraintStart_toStartOf="@+id/customTextView9"
                app:layout_constraintTop_toBottomOf="@+id/customTextView9" />


            <com.framework.views.customViews.CustomTextView
                android:id="@+id/customTextView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:fontFamily="@font/regular_medium"
                app:layout_constraintTop_toBottomOf="@+id/customCardView"
                tools:text="50 to 60 percent off the entire site and store for Black Friday. Above that, you have free shipiing on all orders, plus an extra 20.

#bigbilliondays #smile #2020 " />

            <com.framework.views.customViews.CustomImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                app:layout_constraintHeight_percent="0.5"
                app:layout_constraintTop_toBottomOf="@+id/customTextView13" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
