<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_34"
        android:paddingHorizontal="@dimen/size_12"
        android:background="@color/black_4a4a4a"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            tools:text="Promotional posts (20)"
            android:textColor="@color/white"
            android:textSize="@dimen/text_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/vw_select_indicator"
            android:layout_width="0dp"
            android:visibility="gone"
            android:background="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_category_name"
            app:layout_constraintEnd_toEndOf="@+id/tv_category_name"
            android:layout_height="2dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>