<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_f8f8f8">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:elevation="@dimen/size_4"
            android:paddingHorizontal="@dimen/size_16"
            android:paddingVertical="@dimen/size_16"
            android:background="@color/greyish_brown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.framework.views.customViews.CustomImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_fposter_back_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/size_16"
                android:layout_toEndOf="@+id/iv_back"
                android:ellipsize="end"
                android:fontFamily="@font/bold"
                android:maxLines="1"
                android:text="@string/search_ads_dashboard"
                android:textColor="@color/white"
                android:textSize="@dimen/size_18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linearLayout"
                app:layout_constraintStart_toEndOf="@+id/iv_back"
                app:layout_constraintTop_toTopOf="parent" />


            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/iv_download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/size_16"
                    android:src="@drawable/ic_bell" />

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/iv_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_ques" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_f8f8f8"
            app:layout_constraintEnd_toEndOf="@+id/descr"
            app:layout_constraintStart_toEndOf="@+id/descr">

            <View
                android:id="@+id/main_view"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_380"
                android:background="@color/greyish_brown"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_26"
                android:elevation="@dimen/size_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.framework.views.roundedimageview.RoundedImageView
                    android:id="@+id/riv_back"
                    android:layout_width="@dimen/size_20"
                    android:layout_height="@dimen/size_20"
                    android:layout_marginTop="@dimen/size_8"
                    android:layout_marginEnd="@dimen/size_16"
                    android:src="@drawable/ic_back"
                    android:elevation="@dimen/size_16"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_25"
                    android:textStyle="normal"
                    android:fontFamily="@font/semi_bold"
                    android:elevation="@dimen/size_16"
                    android:textColor="@color/white_green_light"
                    android:textSize="@dimen/size_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="Last 7 days" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.framework.views.customViews.CustomImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/size_70"
                android:layout_height="@dimen/size_70"
                android:src="@drawable/ad_logo"
                android:layout_marginTop="@dimen/size_26"
                android:layout_marginBottom="@dimen/size_16"
                android:layout_marginStart="@dimen/size_25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/csl"
                app:layout_constraintBottom_toTopOf="@+id/rc"/>

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/visit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginBottom="@dimen/size_16"
                android:layout_marginStart="@dimen/size_15"
                android:textSize="@dimen/size_60"
                android:text=" 10 "
                android:textColor="@color/white_green_light"
                app:layout_constraintBottom_toTopOf="@+id/rc"
                app:layout_constraintTop_toBottomOf="@+id/csl"
                app:layout_constraintStart_toEndOf="@+id/iv_logo"/>

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/txt"
                android:layout_width="@dimen/size_180"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="@string/google_search_ad_campaigns"
                android:textColor="@color/white_green_light"
                android:textSize="@dimen/size_20"
                app:layout_constraintBottom_toBottomOf="@+id/visit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/visit"
                app:layout_constraintTop_toTopOf="@+id/visit" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/size_16"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/rc1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:itemCount="3"
                tools:listitem="@layout/list_dashboard" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_12"
                android:layout_marginBottom="@dimen/size_16"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/descr"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:listitem="@layout/list_dashboard" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/descr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size_25"
                android:layout_marginTop="@dimen/size_25"
                android:layout_marginBottom="@dimen/size_25"
                android:text="@string/all_numbers_on_this_page_are_last_updated_on_24_jul_12_34_pm_ist"
                android:textColor="@color/pinkish_grey"
                android:textSize="@dimen/size_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        <TextView
            android:id="@+id/cam_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginStart="@dimen/size_18"
            android:text="@string/my_search_ads"
            android:textSize="@dimen/size_16"
            android:textStyle="bold"
            android:textColor="@color/bg_dark_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/quant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_5"
            android:layout_marginLeft="@dimen/size_18"
            android:textSize="@dimen/size_12"
            android:text="Showing 1-5 of all 26 campaigns "
            android:textColor="@color/black_747474"
            app:layout_constraintTop_toBottomOf="@+id/cam_id"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.framework.views.customViews.CustomImageView
            android:id="@+id/sorting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sorting"
            android:layout_marginTop="@dimen/size_18"
            android:layout_marginEnd="@dimen/size_15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_f8f8f8"
            tools:listitem="@layout/list_item_campaign"
            tools:itemCount="5" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="@dimen/size_15"
            app:corner_radius="RADIUS_0"
            app:cardElevation="1dp">

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tv_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/load_more_campaigns"
                android:layout_gravity="center"
                android:textColor="#FFB900"
                android:textSize="@dimen/size_14" />

        </androidx.cardview.widget.CardView>

        <com.framework.views.customViews.CustomButton
            android:id="@+id/btn_dashboard"
            style="@style/ButtonStyle.Rounded.Solid.BottomSheet"
            android:layout_width="@dimen/size_320"
            android:layout_height="@dimen/size_40"
            android:layout_marginTop="@dimen/size_26"
            android:layout_marginBottom="@dimen/size_16"
            android:layout_gravity="center"
            android:text="@string/create_new_ad_campaign"
            android:textColor="@color/white" />

    </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</layout>


