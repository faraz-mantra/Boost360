<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="imageExist"
            type="Boolean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/size_190"
        android:layout_marginTop="@dimen/size_19"
        android:layout_marginBottom="@dimen/size_25"
        android:layout_marginHorizontal="@dimen/size_8"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_130"
            app:cardUseCompatPadding="true"
            app:cardElevation="@dimen/size_4"
            app:cardCornerRadius="@dimen/size_8"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="10dp">

                <com.framework.views.customViews.CustomCardView
                    android:id="@+id/customCardView"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    app:cardCornerRadius="@dimen/size_8"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >

                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="match_parent"
                        android:src="@drawable/ic_fposter_profile_img_placeholder"
                        android:layout_height="match_parent"/>
                </com.framework.views.customViews.CustomCardView>


                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/customImageView2"
                    android:layout_width="@dimen/size_10"
                    android:layout_height="@dimen/size_10"
                    android:src="@drawable/ic_three_dot_horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/customTextView5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/customTextView5"
                    app:tint="#BDC5CD" />


                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="8dp"
                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintBottom_toBottomOf="@+id/customCardView"
                    app:layout_constraintStart_toEndOf="@+id/customCardView"
                    app:layout_constraintTop_toTopOf="@+id/customCardView"
                    tools:text="Payal Jain" />


                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/customTextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:textSize="@dimen/size_7"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_title"
                    app:layout_constraintStart_toEndOf="@+id/tv_title"
                    app:layout_constraintTop_toTopOf="@+id/tv_title"
                    tools:text="dsfsdf" />


                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/customTextView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/regular"

                    android:text="\u00b7"
                    android:textSize="@dimen/size_16"
                    app:layout_constraintBottom_toBottomOf="@+id/customTextView10"
                    app:layout_constraintStart_toEndOf="@+id/customTextView10"
                    app:layout_constraintTop_toTopOf="@+id/customTextView10" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/customTextView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/regular"
                    android:text="@string/_4m"
                    android:textSize="@dimen/size_7"
                    app:layout_constraintBottom_toBottomOf="@+id/customTextView11"
                    app:layout_constraintStart_toEndOf="@+id/customTextView11"
                    app:layout_constraintTop_toTopOf="@+id/customTextView11" />


                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_caption"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineHeight="@dimen/size_10"
                    android:maxLines="7"
                    android:layout_marginTop="@dimen/_6dp"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="6sp"
                    app:fontFamily="@font/regular_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/customCardView"
                    tools:text="50 to 60 percent off the entire site and store for Black Friday. Above that, you have free shipiing on all orders, plus an extra 20.

#bigbilliondays #smile #2020 " />


                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toStartOf="@+id/customImageView4"
                    app:layout_constraintStart_toStartOf="@+id/tv_caption"
                    app:layout_constraintTop_toBottomOf="@+id/tv_caption">

                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:src="@drawable/ic_twitter_comment" />

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_2"
                        android:text="2"
                        android:textSize="6sp"
                        app:fontFamily="@font/regular" />


                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:layout_marginStart="@dimen/size_20"
                        android:src="@drawable/ic_twitter_retweet" />

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_2"
                        android:text="2"
                        android:textSize="6sp"
                        app:fontFamily="@font/regular" />


                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="@dimen/size_8"
                        android:layout_height="@dimen/size_8"
                        android:layout_marginStart="@dimen/size_20"
                        android:src="@drawable/ic_twitter_heart" />

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_2"
                        android:text="2"
                        android:textSize="6sp"
                        app:fontFamily="@font/regular" />

                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:layout_marginStart="@dimen/size_20"
                        android:src="@drawable/ic_twitter_share"
                        android:textSize="6sp"
                        app:fontFamily="@font/regular" />


                </LinearLayout>

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/customImageView4"
                    android:layout_width="@dimen/size_5"
                    android:layout_height="@dimen/size_8"
                    android:src="@drawable/ic_twitter_activity"
                    android:textSize="6sp"
                    app:fontFamily="@font/regular"
                    app:layout_constraintBottom_toBottomOf="@+id/linearLayout2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/linearLayout2" />



            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


        <com.framework.views.customViews.CustomCardView
            android:layout_width="40dp"
            app:cardCornerRadius="@dimen/size_20"
            android:layout_height="@dimen/size_40"
            app:layout_constraintBottom_toBottomOf="@+id/materialCardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView"
            app:cardElevation="@dimen/size_4"
            android:translationY="-4dp">

            <com.framework.views.customViews.CustomImageView
                android:id="@+id/customImageView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_twitter_social_preview"
                />
        </com.framework.views.customViews.CustomCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
