<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <com.framework.views.customViews.CustomCardView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="@dimen/size_4"
      app:cardCornerRadius="@dimen/size_20"
      app:cardElevation="0dp">

    <com.framework.views.customViews.CustomCardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/size_10"
        app:cardCornerRadius="@dimen/size_10"
        app:cardElevation="0dp">

      <FrameLayout
          android:id="@+id/relativeLayout"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

        <com.festive.poster.customviews.CustomSvgImageView
            android:id="@+id/iv_svg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />

        <com.framework.views.customViews.CustomImageView
            android:id="@+id/iv_watermark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginTop="@dimen/size_8"
            android:layout_marginEnd="@dimen/size_8"
            android:layout_marginBottom="@dimen/size_8"
            android:src="@drawable/ic_fposter_boost_360_watermark" />

        <com.framework.views.customViews.CustomMaterialButton
            android:id="@+id/btn_tap_edit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_50"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginTop="@dimen/size_10"
            android:fontFamily="@font/semi_bold"
            android:text="@string/tap_to_edit"
            android:textAllCaps="false"
            android:textSize="@dimen/caption"
            app:backgroundTint="@color/black_opacity30"
            app:cornerRadius="@dimen/size_20"
            app:icon="@drawable/ic_tap_to_edit" />
      </FrameLayout>
    </com.framework.views.customViews.CustomCardView>
  </com.framework.views.customViews.CustomCardView>
</layout>
