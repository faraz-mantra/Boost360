<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.framework.views.customViews.CustomCardView
            app:cardCornerRadius="@dimen/size_20"

            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >


            <com.framework.views.customViews.CustomCardView
                android:layout_margin="@dimen/size_16"
                app:cardCornerRadius="@dimen/size_20"
                app:cardElevation="0dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.framework.views.customViews.CustomMaterialButton
                        android:id="@+id/btn_tap_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/size_50"
                        android:layout_marginStart="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_8"
                        android:backgroundTint="@color/black_opacity30"
                        android:fontFamily="@font/regular"
                        android:text="@string/tap_to_edit"
                        android:textAllCaps="false"
                        android:textSize="@dimen/size_12"
                        app:cornerRadius="@dimen/size_20"
                        app:icon="@drawable/ic_tap_to_edit"
                        app:layout_constraintStart_toStartOf="@id/iv_svg"
                        app:layout_constraintTop_toTopOf="@id/iv_svg" />

                    <com.festive.poster.customviews.CustomSvgImageView
                        android:id="@+id/iv_svg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.framework.views.customViews.CustomImageView
                        android:id="@+id/iv_watermark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/size_8"
                        android:layout_marginTop="@dimen/size_8"
                        android:layout_marginEnd="@dimen/size_8"
                        android:layout_marginBottom="@dimen/size_8"
                        android:src="@drawable/ic_fposter_boost_360_watermark"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.framework.views.customViews.CustomCardView>
        </com.framework.views.customViews.CustomCardView>


    </RelativeLayout>
</layout>
