<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="@dimen/size_8"
        android:layout_height="wrap_content"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/customCardView9"
            app:cardElevation="4dp"
            app:strokeWidth="@dimen/size_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="10dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.framework.views.customViews.CustomCardView
                    android:id="@+id/customCardView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="10dp"
                    app:cardElevation="@dimen/size_0"
                    app:cardCornerRadius="12dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.festive.poster.customviews.SquareImageView
                        android:id="@+id/iv_svg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@color/colorPrimary" />


                </com.framework.views.customViews.CustomCardView>

                <LinearLayout
                    android:id="@+id/btn_edit"
                    android:gravity="center"
                    android:paddingVertical="4dp"
                    android:paddingHorizontal="8dp"
                    android:layout_width="67dp"
                    android:layout_height="@dimen/size_31"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/ic_pencil_edit_bg"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@+id/customCardView6"
                    app:layout_constraintTop_toTopOf="@+id/customCardView6">

                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="@dimen/size_13"
                        android:src="@drawable/ic_pencil_edit"
                        android:layout_height="@dimen/size_13"/>


                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:text="@string/edit"
                        android:layout_marginStart="4dp"
                        android:textAllCaps="true"
                        style="@style/WhiteSemiBoldSS"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <com.framework.views.customViews.CustomCardView
                    android:id="@+id/card_love"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginEnd="32dp"
                    app:cardCornerRadius="19dp"
                    app:cardElevation="4dp"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintBottom_toBottomOf="@+id/customCardView6"
                    app:layout_constraintEnd_toEndOf="@+id/customCardView6"
                    app:layout_constraintTop_toBottomOf="@+id/customCardView6">

                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/iv_love"
                        android:src="@drawable/ic_love_filled" />
                </com.framework.views.customViews.CustomCardView>


                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_template_desc"
                    style="@style/BlackRegularSS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="19dp"
                    android:ellipsize="end"
                    android:minHeight="@dimen/size_46"
                    android:lineHeight="@dimen/size_22"
                    android:maxLines="2"
                    app:layout_constraintEnd_toStartOf="@+id/card_love"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/customCardView6"
                    tools:text="Black friday sale upto 50% discount on our post selected merchandise, only " />


                <View
                    app:layout_constraintVertical_bias="1"
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="0.15dp"
                    android:layout_marginTop="@dimen/size_17"
                    android:background="@color/colorDBDBDB"
                    app:layout_constraintTop_toBottomOf="@+id/tv_template_desc" />


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_56"
                    android:paddingVertical="16dp"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view2"
                    app:layout_constraintWidth_percent="0.5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.framework.views.customViews.CustomImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_whatsapp_fposter" />

                        <com.framework.views.customViews.CustomTextView
                            style="@style/BlackRegularSS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/share"
                            android:textAllCaps="true" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btn_post"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_56"
                    android:background="@drawable/post_btn_bg"
                    android:paddingVertical="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/btn_share"
                    app:layout_constraintTop_toBottomOf="@+id/view2"
                    app:layout_constraintVertical_bias="1"
                    app:layout_constraintWidth_percent="0.5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.framework.views.customViews.CustomImageView
                            android:layout_width="@dimen/size_18"
                            android:layout_height="@dimen/size_18"
                            android:src="@drawable/ic_telegram" />

                        <com.framework.views.customViews.CustomTextView
                            style="@style/WhiteBoldSS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/post"
                            android:textAllCaps="true" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.framework.views.customViews.CustomImageView
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_new"
            android:elevation="8dp"
            android:id="@+id/is_new"
            android:translationX="-6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
