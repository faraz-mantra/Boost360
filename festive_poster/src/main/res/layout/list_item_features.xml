<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_10"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cs1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.framework.views.roundedimageview.RoundedImageView
                    android:id="@+id/riv_icon"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginTop="@dimen/size_8"
                    android:layout_marginStart="@dimen/size_13"
                    android:src="@drawable/ic_enquire"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/ctv_heading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5"
                    android:layout_marginTop="@dimen/size_8"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:fontFamily="@font/semi_bold"
                    android:maxLines="1"
                    android:textColor="#747474"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/riv_icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"
                    android:text="32" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/ctv_subheading"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_2"
                    android:layout_marginStart="@dimen/size_5"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:fontFamily="@font/regular"
                    android:maxLines="2"
                    android:textColor="#747474"
                    android:textSize="12sp"
                    android:text="@string/enquiries"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/riv_icon"
                    app:layout_constraintTop_toBottomOf="@+id/ctv_heading"
                    app:layout_constraintVertical_bias="0" />


                <com.framework.views.roundedimageview.RoundedImageView
                    android:id="@+id/riv_icon2"
                    android:layout_width="@dimen/size_50"
                    android:layout_height="@dimen/size_50"
                    android:layout_marginTop="@dimen/size_8"
                    android:src="@drawable/ic_calls"
                    app:layout_constraintStart_toEndOf="@+id/ctv_subheading"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/ctv_heading2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5"
                    android:layout_marginTop="@dimen/size_8"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:fontFamily="@font/semi_bold"
                    android:maxLines="1"
                    android:textColor="#747474"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/riv_icon2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"
                    android:text="12" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/ctv_subheading2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_2"
                    android:layout_marginStart="@dimen/size_5"
                    android:ellipsize="end"
                    android:textStyle="normal"
                    android:fontFamily="@font/regular"
                    android:maxLines="2"
                    android:textColor="#747474"
                    android:textSize="12sp"
                    android:text="@string/calls"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@+id/riv_icon2"
                    app:layout_constraintTop_toBottomOf="@+id/ctv_heading2"
                    app:layout_constraintVertical_bias="0" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>