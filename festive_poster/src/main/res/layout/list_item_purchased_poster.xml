<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <com.framework.views.customViews.CustomCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/size_16"
    android:layout_marginTop="@dimen/size_16"
    app:cardCornerRadius="@dimen/size_20"
    app:cardElevation="0dp">


    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <com.framework.views.customViews.CustomCardView
          android:layout_width="wrap_content"
          android:layout_height="@dimen/size_430"
          android:layout_gravity="center"
          android:layout_margin="@dimen/size_14"
          app:cardCornerRadius="@dimen/size_20"
          app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

          <com.festive.poster.customviews.CustomSvgImageView
              android:id="@+id/iv_svg_purchased"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:adjustViewBounds="true"
              android:scaleType="fitCenter" />

          <com.framework.views.customViews.CustomMaterialButton
              android:id="@+id/btn_tap_edit"
              android:layout_width="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_height="@dimen/size_50"
              android:layout_marginStart="@dimen/size_10"
              android:layout_marginTop="@dimen/size_10"
              android:backgroundTint="@color/black_opacity30"
              android:fontFamily="@font/semi_bold"
              android:text="@string/tap_to_edit"
              android:textAllCaps="false"
              android:textSize="@dimen/caption"
              app:cornerRadius="@dimen/size_20"
              app:icon="@drawable/ic_tap_to_edit" />

        </RelativeLayout>

      </com.framework.views.customViews.CustomCardView>

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/tv_greeting_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_14"
        android:background="@drawable/shape_fposter_grey_stroke_rect"
        android:fontFamily="@font/regular"
        android:padding="@dimen/size_8"
        android:textSize="@dimen/body_1" />

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_14"
        android:layout_marginTop="@dimen/size_16"
        android:orientation="horizontal">

        <View
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_centerVertical="true"
          android:layout_toEndOf="@+id/txt"
          android:background="@color/bg_grey_light" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/txt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:layout_marginHorizontal="@dimen/size_6"
          android:fontFamily="@font/regular"
          android:gravity="center"
          android:text="@string/share_via"
          android:textColor="@color/color_888888"
          app:textType="BODY_3" />

        <View
          android:layout_width="match_parent"
          android:layout_height="2dp"
          android:layout_centerVertical="true"
          android:layout_toStartOf="@+id/txt"
          android:background="@color/bg_grey_light" />
      </RelativeLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_14"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_16"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">


          <com.framework.views.customViews.CustomImageView
            android:id="@+id/iv_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fposter_whatsapp" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:fontFamily="@font/regular"
            android:text="@string/whatsapp"
            android:textColor="@color/color_888888" />

        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">


          <com.framework.views.customViews.CustomImageView
            android:id="@+id/iv_instagram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fposter_instagram" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:fontFamily="@font/regular"
            android:text="@string/insta_dm"
            android:textColor="@color/color_888888" />

        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">


          <com.framework.views.customViews.CustomImageView
            android:id="@+id/iv_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fposter_share" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:fontFamily="@font/regular"
            android:text="@string/others"
            android:textColor="@color/color_888888" />

        </LinearLayout>

        <LinearLayout
          android:id="@+id/iv_download"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="center"
          android:orientation="vertical">


          <com.framework.views.customViews.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_fposter_download_poster" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:fontFamily="@font/regular"
            android:text="@string/download"
            android:textColor="@color/color_888888" />

        </LinearLayout>

      </LinearLayout>

    </LinearLayout>


  </com.framework.views.customViews.CustomCardView>

</layout>

