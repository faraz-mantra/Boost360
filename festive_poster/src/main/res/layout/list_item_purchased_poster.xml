<?xml version="1.0" encoding="utf-8"?>
<layout>
    <com.framework.views.customViews.CustomCardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginVertical="@dimen/size_8"
        android:layout_marginHorizontal="@dimen/size_24"
        app:cardCornerRadius="@dimen/size_20"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.framework.views.customViews.CustomCardView
                android:layout_height="@dimen/size_400"
                android:layout_margin="@dimen/size_16"
                android:layout_width="match_parent"
                app:cardCornerRadius="@dimen/size_20">

                <RelativeLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent">

                    <com.framework.views.customViews.CustomMaterialButton
                        android:backgroundTint="@color/black_opacity30"
                        android:layout_height="@dimen/size_50"
                        android:layout_marginStart="@dimen/size_16"
                        android:layout_marginTop="@dimen/size_8"
                        android:layout_width="wrap_content"
                        android:text="@string/tap_to_edit"
                        android:textAllCaps="false"
                        android:id="@+id/btn_tap_edit"
                        android:textSize="@dimen/size_12"
                        app:cornerRadius="@dimen/size_20"
                        app:icon="@drawable/ic_tap_to_edit" />

                    <com.festive.poster.customviews.CustomSvgImageView
                        android:id="@+id/iv_svg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter" />

                </RelativeLayout>

            </com.framework.views.customViews.CustomCardView>

            <com.framework.views.customViews.CustomTextView
                app:textType="BODY_2"
                android:text="Happy Navratri. Enjoy black friday sale upto 50% discount on our postselected merchandise."
                android:layout_marginHorizontal="@dimen/size_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/size_16"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <View
                    android:layout_weight="0.38"
                    android:layout_marginStart="@dimen/size_16"
                    android:background="@color/bg_grey_light"
                    android:layout_width="0dp"
                    android:layout_height="2dp"/>

                <com.framework.views.customViews.CustomTextView
                    app:textType="BODY_3"
                    android:layout_weight="0.24"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/_14dp"
                    android:text="@string/share_via"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginEnd="@dimen/size_16"
                    android:layout_weight="0.38"
                    android:background="@color/bg_grey_light"
                    android:layout_width="0dp"
                    android:layout_height="2dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/size_16"
                android:layout_marginHorizontal="@dimen/size_16"
                android:layout_marginTop="@dimen/size_16"
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_fposter_instagram"
                        android:layout_height="wrap_content"/>

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/size_4"
                        android:text="@string/insta_dm"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_fposter_instagram"
                        android:layout_height="wrap_content"/>

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/size_4"
                        android:text="@string/insta_dm"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/iv_other"
                        android:src="@drawable/ic_fposter_share"
                        android:layout_height="wrap_content"/>

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/size_4"
                        android:text="@string/others"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">


                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_fposter_download_poster"
                        android:layout_height="wrap_content"/>

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/size_4"
                        android:text="@string/download"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </com.framework.views.customViews.CustomCardView>

</layout>

