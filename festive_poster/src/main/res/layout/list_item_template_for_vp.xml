<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.framework.views.customViews.CustomCardView
            android:id="@+id/customCardView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <com.framework.views.customViews.CustomCardView
                    android:id="@+id/customCardView6"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    app:cardCornerRadius="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.framework.views.customViews.CustomImageView
                        android:id="@+id/iv_svg"
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@color/colorPrimary" />


                </com.framework.views.customViews.CustomCardView>

                <LinearLayout
                    android:id="@+id/btn_edit"
                    android:gravity="center"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/ic_pencil_edit_bg"
                    android:elevation="4dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@+id/customCardView6"
                    app:layout_constraintTop_toTopOf="@+id/customCardView6">

                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_pencil_edit"
                        android:layout_height="wrap_content"/>


                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:text="@string/edit"
                        android:layout_marginStart="8dp"
                        android:textAllCaps="true"
                        style="@style/WhiteSemiBoldS"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <com.framework.views.customViews.CustomCardView
                    android:id="@+id/card_love"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginEnd="32dp"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintBottom_toBottomOf="@+id/customCardView6"
                    app:layout_constraintEnd_toEndOf="@+id/customCardView6"
                    app:layout_constraintTop_toBottomOf="@+id/customCardView6">

                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/iv_love"
                        android:src="@drawable/ic_love_filled" />
                </com.framework.views.customViews.CustomCardView>


                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_template_desc"
                    style="@style/BlackRegularS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginVertical="@dimen/size_16"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_love"
                    tools:text="Black friday sale upto 50% discount on our post selected merchandise, only " />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:background="@color/textGrey"
                    app:layout_constraintBottom_toTopOf="@+id/btn_share" />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_template_desc"
                    app:layout_constraintWidth_percent="0.5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.framework.views.customViews.CustomImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_whatsapp_fposter" />

                        <com.framework.views.customViews.CustomTextView
                            style="@style/BlackMediumS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/share"
                            android:textAllCaps="true" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:id="@+id/btn_post"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:paddingVertical="16dp"
                    app:layout_constraintStart_toEndOf="@+id/btn_share"
                    app:layout_constraintTop_toTopOf="@+id/btn_share"
                    app:layout_constraintWidth_percent="0.5">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.framework.views.customViews.CustomImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_telegram" />

                        <com.framework.views.customViews.CustomTextView
                            style="@style/WhiteBoldS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="@string/post"
                            android:textAllCaps="true" />
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.framework.views.customViews.CustomCardView>

        <com.framework.views.customViews.CustomImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:visibility="gone"
            android:src="@drawable/ic_new"
            android:elevation="8dp"
            android:translationX="-6dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
