<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:paddingHorizontal="@dimen/size_26"
        android:background="@drawable/top_round_corner"
        android:layout_height="wrap_content">


        <com.framework.views.customViews.CustomTextView
            android:id="@+id/customTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/edit_template_text"
            android:textColor="@color/black_4a4a4a"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/size_25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_header1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/header_1"
            android:textColor="@color/black_4a4a4a"
            android:textSize="@dimen/text_14"
            app:layout_constraintStart_toStartOf="@+id/customTextView4"
            app:layout_constraintTop_toBottomOf="@+id/customTextView4" />

        <com.framework.views.customViews.CustomEditText
            android:id="@+id/et_header1"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_54"
            android:layout_marginTop="8dp"
            android:background="@drawable/grey_rounded_et_bg"
            android:hint="Beautiful Smiles"
            android:maxLength="17"
            android:padding="@dimen/size_8"
            android:textColorHint="@color/black_4a4a4a_40"
            app:layout_constraintEnd_toEndOf="@+id/tv_title_count"
            app:layout_constraintStart_toStartOf="@+id/tv_header1"
            app:layout_constraintTop_toBottomOf="@+id/tv_header1" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_title_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/black_4a4a4a"
            android:textSize="@dimen/text_12"
            app:layout_constraintBottom_toBottomOf="@+id/tv_header1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_header1"
            tools:text="10/17" />


        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_header2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/inter_regular"
            android:text="@string/header_2"
            android:textColor="@color/black_4a4a4a"
            android:textSize="@dimen/text_14"
            app:layout_constraintStart_toStartOf="@+id/et_header1"
            app:layout_constraintTop_toBottomOf="@+id/et_header1" />

        <com.framework.views.customViews.CustomEditText
            android:id="@+id/et_header2"
            android:layout_width="0dp"
            android:layout_height="@dimen/size_86"
            android:layout_marginTop="8dp"
            android:background="@drawable/grey_rounded_et_bg"
            android:hint="Straighten your teeth with Invisible braces starting at Rs.399/-"
            android:maxLength="80"
            android:paddingHorizontal="@dimen/size_16"
            android:paddingVertical="@dimen/size_17"
            android:textColorHint="@color/black_4a4a4a_40"
            app:layout_constraintEnd_toEndOf="@+id/tv_subtitle_count"
            app:layout_constraintStart_toStartOf="@+id/tv_header2"
            app:layout_constraintTop_toBottomOf="@+id/tv_header2" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_subtitle_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="10/80"
            android:textColor="@color/black_4a4a4a"
            android:textSize="@dimen/text_12"
            app:layout_constraintBottom_toBottomOf="@+id/tv_header2"
            app:layout_constraintEnd_toEndOf="@+id/et_header1"
            app:layout_constraintTop_toTopOf="@+id/tv_header2" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_medium"
            android:text="@string/action_cancel"
            android:textAllCaps="true"
            android:textColor="@color/black_4a4a4a"
            android:textSize="@dimen/text_14"
            app:layout_constraintBottom_toBottomOf="@+id/btn_done"
            app:layout_constraintStart_toStartOf="@+id/et_header2"
            app:layout_constraintTop_toTopOf="@+id/btn_done" />

        <com.framework.views.customViews.CustomImageView
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/size_18"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_done_edit_template"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/et_header2"
            app:layout_constraintTop_toBottomOf="@+id/et_header2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
