<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/const_alert_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_E39595">

        <com.framework.views.customViews.CustomImageView
            android:id="@+id/iv_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_7"
            android:layout_marginTop="@dimen/size_9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_warning_octagon_white_bg"/>

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_logo_missing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bold"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginStart="@dimen/size_6"
            android:textSize="@dimen/text_12"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_warning"
            android:text="@string/business_logo_missing"/>

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/customTextView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_14"
            android:fontFamily="@font/regular"
            android:text="@string/to_build_customer_trust_using_branded_updates_please_add_business_logo"
            android:textColor="@color/white"
            android:textSize="@dimen/text_11"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_logo_missing"
            app:layout_constraintTop_toBottomOf="@+id/tv_logo_missing" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_add_logo"
            android:layout_width="@dimen/size_74"
            android:layout_height="@dimen/size_30"
            android:background="@drawable/rounded_rect_10_rad_white_no_border"
            android:layout_marginEnd="@dimen/size_20"
            android:elevation="@dimen/size_2"
            android:text="@string/add_logo"
            android:gravity="center"
            android:textSize="@dimen/text_12"
            android:fontFamily="@font/semi_bold"
            android:textColor="@color/red_E39595"
            app:layout_constraintBottom_toBottomOf="@+id/customTextView15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_logo_missing" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>