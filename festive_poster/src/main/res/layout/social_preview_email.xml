<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="imageExist"
            type="Boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/r_layout"
        android:layout_width="195dp"
        android:layout_margin="@dimen/size_8"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout_height="@{imageExist?@dimen/size_288:@dimen/size_130, default=wrap_content}"            app:cardUseCompatPadding="true"
            app:cardElevation="@dimen/size_4"
            app:cardCornerRadius="@dimen/size_8"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.appcompat.widget.LinearLayoutCompat
                android:orientation="vertical"
                android:id="@+id/layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_marginHorizontal="9dp">



                <com.framework.views.customViews.CustomTextView
                    android:layout_width="match_parent"
                    android:textSize="7sp"
                    android:gravity="center"
                    android:fontFamily="@font/regular"
                    android:textColor="@color/color395996"
                    android:text="@string/you_ve_new_email_update_from"
                    android:layout_height="wrap_content"/>

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="match_parent"
                    android:textSize="10sp"
                    android:gravity="center"
                    android:id="@+id/tv_title"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/black_4a4a4a"
                    tools:text="Smiley Dent Clinic"
                    android:layout_height="wrap_content"/>

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/iv_svg"
                    android:layout_width="match_parent"
                    android:layout_height="152dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent" />


                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_caption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="6sp"
                    app:fontFamily="@font/regular"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_svg"
                    tools:text="50 to 60 percent off the entire site and store for Black Friday. Above that, you have free shipiing on all orders, plus an extra 20.

#bigbilliondays #smile #2020 " />

                <com.framework.views.customViews.CustomCardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="@dimen/size_4"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_5"
                    app:cardBackgroundColor="@color/color_border_ffb900"
                    android:layout_height="wrap_content">

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:textSize="6sp"
                        android:textAllCaps="true"
                        android:layout_marginVertical="@dimen/size_4"
                        android:layout_marginHorizontal="@dimen/_14dp"
                        android:textColor="@color/white"
                        android:fontFamily="@font/regular_medium"
                        android:text="@string/visit_website"
                        android:layout_height="wrap_content"/>
                </com.framework.views.customViews.CustomCardView>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.google.android.material.card.MaterialCardView>


        <com.framework.views.customViews.CustomImageView
            android:id="@+id/customImageView6"
            android:layout_width="40dp"
            android:elevation="@dimen/size_4"
            android:translationY="-4dp"
            android:layout_height="@dimen/size_40"
            android:src="@drawable/ic_email_preview"
            app:layout_constraintBottom_toBottomOf="@+id/materialCardView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/materialCardView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
