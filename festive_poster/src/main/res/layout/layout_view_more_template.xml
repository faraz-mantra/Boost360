<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.framework.views.customViews.CustomCardView
        android:layout_width="312dp"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="10dp"
        app:cardUseCompatPadding="true"
        android:layout_height="384dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_16"
                android:background="@drawable/yellow_rounded_border"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="16dp" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/btn_more"
                android:gravity="center"
                android:background="@drawable/view_more_btn_bg"
                android:layout_width="@dimen/size_156"
                android:layout_height="@dimen/size_45"
                android:textColor="@color/white"
                android:fontFamily="@font/semi_bold"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/size_28"
                android:text="@string/view_more2"
                android:textSize="@dimen/size_16"
                app:layout_constraintBottom_toBottomOf="@+id/relativeLayout2"
                app:layout_constraintEnd_toEndOf="@+id/relativeLayout2"
                app:layout_constraintStart_toStartOf="@+id/relativeLayout2"
                app:layout_constraintTop_toBottomOf="@+id/customImageView3" />

            <com.framework.views.customViews.CustomImageView
                android:id="@+id/customImageView3"
                android:layout_width="0dp"
                app:layout_constraintVertical_bias="0.26"
                android:layout_height="@dimen/size_230"
                android:src="@drawable/ic_poster_pack_viewmore"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/relativeLayout2"
                app:layout_constraintStart_toStartOf="@+id/relativeLayout2"
                app:layout_constraintTop_toTopOf="@+id/relativeLayout2" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.framework.views.customViews.CustomCardView>
</layout>
