<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_edit_text_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/input_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardElevation="-4dp"
            android:layout_marginTop="@dimen/size_8"
            app:strokeColor="@color/colorE0E2E9"
            app:strokeWidth="1dp"
            app:cardCornerRadius="@dimen/size_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.framework.views.customViews.CustomEditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:gravity="start"
                android:inputType="textMultiLine"
                android:scrollbarThumbVertical="@drawable/scroll_fill_bg"
                android:scrollbarTrackVertical="@drawable/scroll_blank_bg"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/size_16"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginBottom="@dimen/size_56"
                android:imeOptions="actionDone"
                android:background="@android:color/transparent"
                android:scrollbars="vertical"
                android:textColor="@color/black_4a4a4a"
                android:textSize="@dimen/text_12"
                android:verticalScrollbarPosition="right"
                app:fontFamily="@font/regular_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:text="Celebrate Black Friday with Smiley Dental Clinic! Choose from a range of braces starting from just 399 INR only.\n\n #dentalcare  #book  #appointments" />

        </com.google.android.material.card.MaterialCardView>


        <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:background="@color/white"
            android:fontFamily="@font/regular_medium"
            android:paddingHorizontal="4dp"
            android:text="@string/caption"
            android:textColor="@color/black_4a4a4a_50"
            android:textSize="@dimen/text_12"
            app:layout_constraintBottom_toTopOf="@+id/input_layout"
            app:layout_constraintStart_toStartOf="@+id/input_layout"
            app:layout_constraintTop_toTopOf="@id/input_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
