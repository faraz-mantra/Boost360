                tools:visibility="visible" />

            <androidx.cardview.widget.CardView
                android:id="@+id/maim_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_260"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/size_22"
                android:layout_marginTop="@dimen/size_22"
                android:layout_marginEnd="@dimen/size_22"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="@dimen/size_10"
                app:cardElevation="0dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/company_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_18"
                            android:layout_marginTop="@dimen/size_15"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:text="@string/company_name_here"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/size_14"
                            app:fontFamily="@font/patua_one_regular"
                            app:layout_constraintEnd_toStartOf="@+id/dummy_view1"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:textType="HEADING_6"
                            tools:text="Company Name Here" />

                        <View
                            android:id="@+id/dummy_view1"
                            android:layout_width="1dp"
                            android:layout_height="20dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="@dimen/size_10"
                            android:layout_marginTop="@dimen/size_15"
                            android:background="@color/blue"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/secondary_name"
                            app:layout_constraintStart_toEndOf="@+id/company_name"
                            app:layout_constraintTop_toTopOf="parent" />


                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/secondary_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_10"
                            android:layout_marginTop="@dimen/size_15"
                            android:layout_marginEnd="@dimen/size_18"
                            android:ellipsize="end"
                            android:includeFontPadding="false"
                            android:maxLines="2"
                            android:text="@string/secondary_text_here"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/size_14"
                            app:fontFamily="@font/patua_one_regular"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/dummy_view1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:textType="HEADING_6"
                            tools:text="Secondary Text Here" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/website"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_18"
                            android:layout_marginTop="@dimen/size_5"
                            android:background="@drawable/ic_ad_bg"
                            android:gravity="center"
                            android:text="@string/ad"
                            android:textColor="@color/green"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/company_name" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/website_domain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_8"
                            android:layout_marginTop="@dimen/size_5"
                            android:gravity="center"
                            android:text="@string/www_companywebsite_com"
                            android:textColor="@color/green"
                            android:textSize="@dimen/size_13"
                            app:layout_constraintStart_toEndOf="@+id/website"
                            app:layout_constraintTop_toBottomOf="@+id/company_name" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/website_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_18"
                            android:layout_marginTop="@dimen/size_8"
                            android:layout_marginEnd="@dimen/size_5"
                            android:text="@string/after_the_successful_payment_your_campaign_will_get_created_and_submitted_to_google_for_review_post_approval_it_will_start_showing_up_to_relavent_audiances_based_on_your_selected_date_time_and_cities_ad_would_automatically_stop_after_the_allocated_budget_is_utilised"
