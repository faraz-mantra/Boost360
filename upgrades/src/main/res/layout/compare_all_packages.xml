<?xml version="1.0" encoding="utf-8"?>


    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:background="@color/main_color_gray"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/ly_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">



            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FF9F00"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/package_cart_icon"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:foreground="?android:attr/selectableItemBackground"

                        android:layout_marginTop="10dp"
                        app:layout_constraintDimensionRatio="1:1"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/cart48" />


                        <com.nex3z.notificationbadge.NotificationBadge
                            android:id="@+id/badge121"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            app:nbMaxTextLength="2" />
                    </RelativeLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_bold"
                        android:text="Pick a premium pack"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginTop="25dp"
                        app:layout_constraintEnd_toStartOf="@+id/package_cart_icon"
                        app:layout_constraintStart_toEndOf="@+id/package_back"
                        app:layout_constraintTop_toTopOf="parent" />


                    <ImageView
                        android:id="@+id/package_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:background="@drawable/arrow_white" />

                    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                        android:id="@+id/package_indicator2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:dotsColor="@color/dot_grey"
                        app:dotsCornerRadius="8dp"
                        app:dotsSize="6dp"
                        app:dotsSpacing="4dp"
                        android:visibility="visible"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        app:dotsWidthFactor="2.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/package_back"
                        app:layout_constraintBottom_toTopOf="@+id/mew"
                        app:progressMode="false"
                        app:selectedDotColor="@color/white" />
                    <LinearLayout
                        android:id="@+id/mew"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        app:layout_constraintEnd_toEndOf="@+id/package_indicator2"
                        app:layout_constraintStart_toStartOf="@+id/package_indicator2"
                        app:layout_constraintTop_toBottomOf="@id/package_indicator2"
                        android:orientation="horizontal" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="50dp">
                <!--android:padding="16dp"-->
                <!--<androidx.core.widget.NestedScrollView
                    android:id="@+id/scroll_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_marginTop="25dp">-->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/package_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="visible"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/package_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:fontFamily="@font/open_sans"
                        android:text="Featured Packs"
                        android:textColor="#4a4a4a"
                        android:textFontWeight="600"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/package_viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/package_name"
                        tools:listitem="@layout/snippet_items" />
                    <!--app:layout_constraintTop_toBottomOf="@id/package_name"-->
                    <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                        android:id="@+id/package_indicator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/_2sdp"
                        app:dotsColor="@color/dot_grey"
                        app:dotsCornerRadius="8dp"
                        app:dotsSize="6dp"
                        app:dotsSpacing="4dp"
                        app:dotsWidthFactor="2.5"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/package_viewpager"
                        app:progressMode="false"
                        app:selectedDotColor="@color/app_yellow_1" />
                    <TextView
                        android:id="@+id/upgradeText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans"
                        android:text="If you don’t upgrade to any of the premium plans listed above, you will be moved to our Free forever base plan. View features available in the Free plan here."
                        android:gravity="center"
                        android:textColor="#747474"
                        android:textFontWeight="400"
                        android:padding="5dp"
                        android:textSize="@dimen/_11sdp"
                        android:visibility="gone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/package_indicator"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                    </RelativeLayout>
               <!-- </androidx.core.widget.NestedScrollView>-->


            </LinearLayout>

        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
