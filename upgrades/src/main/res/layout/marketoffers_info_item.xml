<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_2sdp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginEnd="@dimen/_8sdp">

        <View
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ic_bullet_icon"
            android:drawableStart="@drawable/ic_bullet_icon" />

        <TextView
            android:id="@+id/offer_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="@string/marketoffer_howtoOne"
            android:textColor="@color/common_text_color"
            android:textFontWeight="400"
            android:textSize="@dimen/txt_12sp"
            app:layout_constraintTop_toBottomOf="@+id/marketoffers_image" />
    </LinearLayout>
</LinearLayout>

