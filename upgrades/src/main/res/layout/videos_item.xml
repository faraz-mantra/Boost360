<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_margin="@dimen/_10sdp">


  <androidx.cardview.widget.CardView
    android:id="@+id/primary_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_100sdp"
    android:layout_margin="@dimen/_5sdp"
    android:background="#F7F7F7"
    android:elevation="@dimen/_2sdp"
    app:cardCornerRadius="@dimen/_6sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
      android:id="@+id/primary_image"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

    <TextView
      android:id="@+id/video_timing_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/_5sdp"
      android:layout_marginTop="@dimen/_5sdp"
      android:drawableStart="@drawable/ic_red_clock"
      android:drawablePadding="@dimen/_3sdp"
      android:fontFamily="@font/open_sans_bold"
      android:paddingStart="@dimen/_5sdp"
      android:paddingBottom="@dimen/_5sdp"
      android:text="1:50"
      android:textColor="@color/red"
      android:textSize="@dimen/_11sdp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <!--            <TextView-->
    <!--                android:layout_width="wrap_content"-->
    <!--                android:layout_height="wrap_content"-->
    <!--                android:text="Custom vid\n thumbnail"-->
    <!--                android:layout_gravity="center"-->
    <!--                android:textSize="@dimen/_14sdp"-->
    <!--                android:layout_marginStart="@dimen/_10sdp"-->
    <!--                android:layout_marginEnd="@dimen/_10sdp" />-->


  </androidx.cardview.widget.CardView>

  <TextView
    android:id="@+id/video_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/open_sans"
    android:paddingStart="@dimen/_7sdp"
    android:paddingEnd="@dimen/_7sdp"
    android:paddingBottom="@dimen/_5sdp"
    android:text="Listen from 40 ‘surprised’ business..."
    android:textColor="@color/common_text_color"
    android:textSize="@dimen/_11sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/primary_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>