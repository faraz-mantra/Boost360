<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/all_side_curve_bg"
        android:elevation="@dimen/_2sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/timer_icon"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_margin="@dimen/_15sdp"
            android:src="@drawable/ic_stopwatch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/deal_view"/>

        <TextView
            android:id="@+id/deal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Deal of the day"
            android:textColor="@color/common_text_color"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toEndOf="@id/timer_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/deal_ending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Deal ending in "
            android:textColor="#747474"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintStart_toStartOf="@id/deal_title"
            app:layout_constraintTop_toBottomOf="@id/deal_title" />

        <TextView
            android:id="@+id/deal_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_semibold"
            android:text="22h : 23m : 54s"
            android:textColor="#4A90E2"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintStart_toEndOf="@id/deal_ending"
            app:layout_constraintTop_toBottomOf="@id/deal_title" />

        <View
            android:id="@+id/deal_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:background="#22000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timer_icon" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/deal_view">

            <androidx.cardview.widget.CardView
                android:id="@+id/imageLayout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/info_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/feature_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/backgroundwhite"
                    android:padding="@dimen/_6sdp"
                    android:scaleType="fitCenter"
                    tools:src="@drawable/rectangle_copy_18" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/info_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageLayout"
                app:layout_constraintTop_toTopOf="parent">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#747474"
                    android:textSize="@dimen/_10sdp"
                    tools:text="Marketing" />

                <TextView
                    android:id="@+id/details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lineSpacingExtra="1.3sp"
                    android:maxLines="2"
                    android:textColor="#2a2a2a"
                    android:textSize="@dimen/_12sdp"
                    tools:text="Facebook Ads (upto 75 leads)" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/discount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:background="@drawable/all_side_curve_percentage_bg"
                        android:gravity="center"
                        android:textColor="@color/common_text_color"
                        android:fontFamily="@font/open_sans_semibold"
                        android:textSize="@dimen/_6sdp"
                        tools:text="0%" />

                    <TextView
                        android:id="@+id/offer_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_7sdp"
                        android:textColor="#0068e0"
                        android:textSize="@dimen/_8sdp"
                        tools:text="₹400/month" />


                    <TextView
                        android:id="@+id/orig_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#9b9b9b"
                        android:textSize="@dimen/_8sdp"
                        app:layout_constraintStart_toStartOf="@+id/money"
                        app:layout_constraintTop_toBottomOf="@+id/money"
                        tools:text="₹99/month" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/add_deals_to_cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/feature_deals_click_effect"
            android:fontFamily="@font/open_sans_semibold"
            android:gravity="center"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="Add to cart"
            android:textAllCaps="true"
            android:textColor="@color/app_text_yellow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_layout" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>