  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cart_main_layout"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:visibility="visible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/toolbar"
    tools:visibility="gone">

    <androidx.core.widget.NestedScrollView
      android:id="@+id/cart_main_scroller"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:overScrollMode="never"
      android:scrollbars="none"
      app:layout_constraintBottom_toTopOf="@id/footer_checkout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <ImageView
          android:id="@+id/card_status_image"
          android:layout_width="0dp"
          android:layout_height="@dimen/_30sdp"
          android:layout_marginStart="@dimen/_5sdp"
          android:layout_marginEnd="@dimen/_5sdp"
          android:src="@drawable/cart_status"
          android:visibility="gone"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/package_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_5sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_5sdp"
          android:layout_marginBottom="@dimen/_5sdp"
          android:background="@drawable/all_side_curve_bg"
          android:elevation="@dimen/_2sdp"
          android:paddingTop="@dimen/_4sdp"
          android:paddingBottom="@dimen/_8sdp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/card_status_image">

          <TextView
            android:id="@+id/cart_package_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/open_sans_semibold"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Packages"
            android:textAllCaps="true"
            android:textColor="@color/common_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cart_package_title" />


          <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cart_package_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cart_package_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/addons_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_5sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_5sdp"
          android:layout_marginBottom="@dimen/_5sdp"
          android:background="@drawable/all_side_curve_bg"
          android:elevation="@dimen/_2sdp"
          android:paddingTop="@dimen/_4sdp"
          android:paddingBottom="@dimen/_8sdp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/package_layout">

          <TextView
            android:id="@+id/cart_addons_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/open_sans_semibold"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Add-ons"
            android:textAllCaps="true"
            android:textColor="@color/common_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/material_grey_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cart_addons_title" />


          <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cart_addons_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cart_addons_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/renewal_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_5sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_5sdp"
          android:layout_marginBottom="@dimen/_5sdp"
          android:background="@drawable/all_side_curve_bg"
          android:elevation="@dimen/_2sdp"
          android:paddingTop="@dimen/_4sdp"
          android:paddingBottom="@dimen/_8sdp"
          android:visibility="gone"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/addons_layout">

          <TextView
            android:id="@+id/cart_renewal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/open_sans_semibold"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Renewal"
            android:textAllCaps="true"
            android:textColor="@color/common_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/material_grey_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cart_renewal_title" />


          <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cart_renewal_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cart_renewal_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/total_months_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_5sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_5sdp"
          android:layout_marginBottom="@dimen/_5sdp"
          android:background="@drawable/all_side_curve_bg"
          android:elevation="@dimen/_2sdp"
          android:paddingTop="@dimen/_4sdp"
          android:paddingBottom="@dimen/_8sdp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/renewal_layout">

          <TextView
            android:id="@+id/total_months_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/open_sans_semibold"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="SUBSCRIPTION VALIDITY"
            android:textAllCaps="true"
            android:textColor="@color/common_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/material_grey_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_months_title" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/total_months_title">

            <ImageView
              android:layout_width="@dimen/_10sdp"
              android:layout_height="@dimen/_10sdp"
              app:srcCompat="@mipmap/ic_calendar" />

            <TextView
              android:id="@+id/months_validity1"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:fontFamily="@font/open_sans_semibold"
              android:paddingStart="@dimen/_10sdp"
              android:text="Select Validity (months)"
              android:textColor="@color/common_text_color" />

            <TextView
              android:id="@+id/months_validity_edit_dsc"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="@dimen/_5sdp"
              android:text=" -- "
              android:textColor="#F44336"
              android:textSize="@dimen/_20sdp" />

            <EditText
              android:id="@+id/months_validity"
              android:layout_width="50dp"
              android:layout_height="wrap_content"
              android:background="@drawable/et_validity"
              android:ems="2"
              android:fontFamily="@font/open_sans"
              android:gravity="center"
              android:inputType="number"
              android:maxLength="2"
              android:text="0"
              android:textColor="@color/globalLight"
              android:textCursorDrawable="@null"
              android:textSize="@dimen/_13sdp" />

            <TextView
              android:id="@+id/months_validity_edit_inc"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="@dimen/_5sdp"
              android:text=" + "
              android:textColor="#009688"
              android:textSize="@dimen/_20sdp" />

          </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/coupon_layout"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_5sdp"
          android:layout_marginTop="@dimen/_10sdp"
          android:layout_marginEnd="@dimen/_5sdp"
          android:layout_marginBottom="@dimen/_5sdp"
          android:background="@drawable/all_side_curve_bg"
          android:elevation="@dimen/_2sdp"
          android:paddingTop="@dimen/_4sdp"
          android:paddingBottom="@dimen/_8sdp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/total_months_layout">

          <TextView
            android:id="@+id/cart_coupon_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:fontFamily="@font/open_sans_semibold"
            android:paddingStart="@dimen/_5sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:text="Coupons"
            android:textAllCaps="true"
            android:textColor="@color/common_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/material_grey_400"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cart_coupon_title" />

          <LinearLayout
            android:id="@+id/couponInnerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cart_coupon_title">

            <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingTop="@dimen/_4sdp"
              app:srcCompat="@drawable/ic_local_offer" />

            <TextView
              android:id="@+id/discount_coupon_title"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="1"
              android:fontFamily="@font/open_sans_semibold"
              android:paddingStart="@dimen/_10sdp"
              android:text="@string/discount_coupon"
              android:textColor="@color/common_text_color" />

            <TextView
              android:id="@+id/cart_apply_coupon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="@dimen/_5sdp"
              android:text="@string/apply_coupon"
              android:textColor="#0068e0"
              tools:visibility="gone" />

            <ImageView
              android:id="@+id/discount_coupon_remove"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="@dimen/_10sdp"
              app:srcCompat="@drawable/ic_close" />

          </LinearLayout>

          <TextView
            android:id="@+id/discount_coupon_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
