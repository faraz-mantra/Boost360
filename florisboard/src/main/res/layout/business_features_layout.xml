<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

    <androidx.cardview.widget.CardView
      android:id="@+id/please_login_card"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"
      app:cardBackgroundColor="@color/white"
      app:cardElevation="2dp"
      app:contentPadding="12dp">

      <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/yellow_button_bg"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="10"
        android:text="@string/please_login"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/cl_selection_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/whitesmoke"
      android:paddingVertical="@dimen/size_8"
      android:paddingStart="@dimen/size_20"
      android:paddingEnd="@dimen/size_20"
      android:visibility="visible"
      app:layout_constraintTop_toTopOf="parent">


      <TextView
        android:id="@+id/tv_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/tap_on_photos_to_select"
        android:textColor="@color/black_4a4a4a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <com.framework.views.customViews.CustomCardView
        android:id="@+id/btn_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_1"
        android:layout_marginTop="@dimen/size_1"
        android:layout_marginEnd="@dimen/size_10"
        android:layout_marginBottom="@dimen/size_1"
        app:cardCornerRadius="@dimen/size_14"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/btn_share"
        app:layout_constraintEnd_toStartOf="@id/btn_share"
        app:layout_constraintTop_toTopOf="@id/btn_share">

        <com.framework.views.customViews.CustomImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/size_16"
          android:layout_marginVertical="4dp"
          android:src="@drawable/ic_squaresfour" />
      </com.framework.views.customViews.CustomCardView>

      <com.framework.views.roundedimageview.RoundedImageView
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:background="@color/white"
        android:padding="5dp"
        android:src="@drawable/ic_linksimple"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="@dimen/size_20"
        app:riv_mutate_background="true"
        tools:ignore="MissingClass" />

      <LinearLayout
        android:id="@+id/container_share_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitesmoke"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.framework.views.customViews.CustomButton
          android:id="@+id/btn_image_share"
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_30"
          android:layout_marginEnd="@dimen/size_4"
          android:layout_weight="1"
          android:background="@drawable/image_select_background"
          android:clickable="true"
          android:focusable="true"
          android:gravity="center"
          android:stateListAnimator="@null"
          android:text="@string/share_now"
          android:textColor="@color/white"
          android:textSize="12sp"
          android:textStyle="bold"
          app:cornerRadius="@dimen/size_36" />

        <com.framework.views.customViews.CustomButton
          android:id="@+id/btn_cancel"
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_30"
          android:layout_gravity="center"
          android:layout_marginStart="@dimen/size_4"
          android:layout_weight="1"
          android:background="@drawable/image_select_background"
          android:backgroundTint="@color/white"
          android:clickable="true"
          android:focusable="true"
          android:gravity="center"
          android:stateListAnimator="@null"
          android:text="@string/cancel"
          android:textAllCaps="true"
          android:textColor="@color/accent_blue"
          android:textSize="12sp"
          android:visibility="visible" />
      </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/product_share_rv_list"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:clipToPadding="false"
      android:orientation="horizontal"
      android:paddingStart="@dimen/size_16"
      android:paddingEnd="@dimen/size_16"
      android:visibility="gone"
      app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/rv_list_photos"
      android:layout_width="wrap_content"
      android:layout_height="0dp"
      android:overScrollMode="never"
      android:paddingStart="@dimen/size_16"
      android:paddingEnd="@dimen/size_16"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/cl_selection_layout" />

    <ProgressBar
      android:id="@+id/business_feature_progress"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:indeterminate="true"
      android:indeterminateTint="@color/accent_blue"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>