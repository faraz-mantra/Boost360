<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

  </data>

  <com.framework.views.customViews.CustomCardView
    android:layout_width="@dimen/size_72"
    android:layout_height="@dimen/size_64"
    android:layout_marginHorizontal="@dimen/size_8"
    android:layout_marginTop="@dimen/size_8"
    android:elevation="0dp"
    android:fadingEdgeLength="0dp"
    app:cardCornerRadius="@dimen/size_4"
    app:cardElevation="0dp">

    <FrameLayout
      android:layout_width="@dimen/size_72"
      android:layout_height="@dimen/size_64">

      <com.framework.views.customViews.CustomCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/size_4"
        app:cardElevation="0dp">

        <androidx.appcompat.widget.AppCompatImageView
          android:id="@+id/imageView"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_margin="@dimen/size_1"
          android:background="@color/dark_gray"
          android:scaleType="centerCrop" />

      </com.framework.views.customViews.CustomCardView>

      <ImageView
        android:id="@+id/iv_add_photos"
        android:layout_width="@dimen/size_24"
        android:layout_height="@dimen/size_24"
        android:layout_gravity="center"
        android:src="@drawable/ic_add_circle_white_24dp"
        android:visibility="gone" />

      <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_border_cardview" />

      <View
        android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_40"
        android:visibility="visible" />

      <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="@dimen/size_16"
        android:layout_height="@dimen/size_16"
        android:layout_gravity="center"
        android:src="@drawable/ic_overlay_check"
        android:visibility="visible" />

    </FrameLayout>
  </com.framework.views.customViews.CustomCardView>
</layout>