<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="2dp"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    app:contentPadding="0dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_thumbnail"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="12dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_product_image" />

        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="65dp"
            android:gravity="bottom"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_thumbnail"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="parent" >

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/colorPrimary"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_marginBottom="2dp"
                android:text="@string/product_name"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#4a4a4a"
                android:textSize="13sp"
                android:layout_below="@+id/tv_name"
                android:text="@string/_0_0"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#bbbbbb"
                android:layout_below="@+id/tv_name"
                android:layout_toEndOf="@+id/tv_price"
                android:textSize="13sp"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="@string/_0_0"
                android:gravity="center_vertical" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#bbbbbb"
            android:textSize="13sp"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dotted_line"
            android:text="@string/this_is_product_description"/>

        <View
            android:id="@+id/dotted_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layerType="software"
            android:layout_marginTop="10dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_thumbnail"
            android:background="@drawable/dotted_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <Button
                android:id="@+id/buttonMakeOffer"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textAllCaps="true"
                android:text="@string/create_offer"
                android:background="#dddddd"
                android:visibility="gone"
                android:textColor="@android:color/tab_indicator_text" />

            <Button
                android:id="@+id/buttonCopy"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:text="@string/share_now"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:background="@color/colorPrimary" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/adapter_item_product_offer_v1" android:visibility="gone" />
    <include layout="@layout/adapter_item_product_keyboard" android:visibility="gone" />

</androidx.cardview.widget.CardView>