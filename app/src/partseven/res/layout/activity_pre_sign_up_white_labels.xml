<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical">

  <include
    layout="@layout/activity_splash_screen_"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_50"
    android:paddingRight="@dimen/margin_50"
    android:paddingBottom="@dimen/margin_30">


    <LinearLayout
      android:id="@+id/llSignUp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/rounded_corner_white"
      android:gravity="center_horizontal"
      android:orientation="horizontal"
      android:padding="@dimen/margin_19">

      <ImageView
        android:id="@+id/create_img"
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"
        android:src="@drawable/ic_create_wand"
        android:tint="@color/primary" />

      <TextView
        android:id="@+id/create_txt"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/create_website"
        android:textAllCaps="true"
        android:textColor="@color/primary"
        android:textSize="@dimen/medium_text_size" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/llLogin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_30"
      android:background="@drawable/ria_positive_btn"
      android:gravity="center_horizontal"
      android:orientation="horizontal"
      android:padding="@dimen/margin_19">

      <ImageView
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_login" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="LOGIN    "
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text_size" />
    </LinearLayout>

  </LinearLayout>
</LinearLayout>