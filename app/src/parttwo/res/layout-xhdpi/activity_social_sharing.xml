<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/screen_bg">

    <include
        android:id="@+id/app_bar_social"
        layout="@layout/new_app_bar" />
    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
        >

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="3dp"
                app:contentPaddingBottom="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#808080">

                        <TextView
                            android:id="@+id/topFeatureText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:paddingLeft="10dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textSize="16sp"
                            android:text="@string/auto_share_to_social_networks" />
                        <!--android:text="Select any or all social platforms below to automatically share whatever you update on your website with a bigger audience on these social networks."/>-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="13sp"
                            android:text="@string/website_posts"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to"
                            android:layout_marginLeft="20dp"
                            android:textStyle="italic"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/social_share_to_bg"/>
                        <ImageView
                            android:id="@+id/social_sharing_facebook_profile_image"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/facebook_icon_inactive"
                            android:layout_marginLeft="20dp"/>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/facebookProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/facebook"
                                android:layout_gravity="center_vertical"
                                android:textSize="13sp"
                                android:layout_marginLeft="5dp"/>
                            <TextView
                                android:id="@+id/social_sharing_facebook_profile_flag_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/disconnected"
                                android:ellipsize="end"
                                android:textSize="10sp"
                                android:visibility="gone"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginRight="5dp">
                            <CheckBox
                                android:id="@+id/social_sharing_facebook_profile_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/grey"
                                android:layout_gravity="right"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="13sp"
                            android:text="@string/website_posts"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to"
                            android:layout_marginLeft="20dp"
                            android:textStyle="italic"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/social_share_to_bg"/>

                        <ImageView
                            android:id="@+id/social_sharing_facebook_page_image"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/facebookpage_icon_inactive"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"/>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/facebookPage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Facebook Page"
                                android:layout_gravity="center_vertical"
                                android:textSize="13sp"
                                android:layout_marginLeft="5dp"/>
                            <TextView
                                android:id="@+id/social_sharing_facebook_page_flag_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="@string/disconnected"
                                android:ellipsize="end"
                                android:textSize="10sp"
                                android:visibility="gone"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:layout_marginRight="5dp">
                            <CheckBox
                                android:id="@+id/social_sharing_facebook_page_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/grey"
                                android:layout_gravity="right"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="13sp"
                            android:text="@string/website_posts"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to"
                            android:layout_marginLeft="20dp"
                            android:textStyle="italic"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/social_share_to_bg"/>

                        <ImageView
                            android:id="@+id/social_sharing_twitter_image"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/twitter_icon_inactive"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="20dp"/>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/twitterProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="@string/twitter"
                                android:textSize="13sp"
                                android:layout_marginLeft="5dp"/>
                            <TextView
                                android:id="@+id/social_sharing_twitter_flag_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/disconnected"
                                android:ellipsize="end"
                                android:visibility="gone"
                                android:textSize="10sp"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginRight="5dp">
                            <CheckBox
                                android:id="@+id/social_sharing_twitter_checkbox"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:buttonTint="@color/grey"
                            />
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="#808080"
                    android:id="@+id/iv_help_auto_pull"
                    android:layout_alignBottom="@+id/connectTextView"
                    android:layout_alignRight="@+id/connectTextView"
                    android:src="@drawable/ic_help_outline_black_24dp"/>-->

            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                app:cardCornerRadius="5dp"
                android:elevation="3dp"
                android:layout_marginBottom="10dp"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#808080">
                        <TextView
                            android:id="@+id/connectTextView"
                            android:gravity="left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="10dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:textColor="#ffffff"
                            android:textSize="16sp"
                            android:text="@string/auto_update_from_social_network" />
                        <ImageView
                            android:id="@+id/iv_help_tool"
                            android:layout_height="30dp"
                            android:layout_width="wrap_content"
                            android:adjustViewBounds="true"
                            android:padding="5dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_info_white_24dp" />
                        <!--android:text="Ensure whatever you post to your Facebook Page also gets updated to your website by simply selecting the check box below."/>-->
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/auto_pull_facebook_page_image"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/facebookpage_icon_inactive"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"/>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/auto_pull_facebookPage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/facebook_page"
                                android:layout_gravity="center_vertical"
                                android:textSize="13sp"
                                android:layout_marginLeft="5dp"/>
                            <TextView
                                android:id="@+id/tv_fb_page_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/disconnected"
                                android:ellipsize="end"
                                android:textSize="10sp"
                                android:visibility="gone"
                                android:layout_marginLeft="5dp"/>

                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/to"
                            android:layout_marginLeft="20dp"
                            android:textStyle="italic"
                            android:textSize="13sp"
                            android:gravity="center"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/social_share_to_bg"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_gravity="center_vertical"
                            android:textSize="13sp"
                            android:text="@string/website"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="right"
                            android:layout_marginRight="5dp">
                            <CheckBox
                                android:id="@+id/social_sharing_facebook_page_auto_post"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/grey"
                                android:layout_gravity="right"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp">
                <TextView
                    android:gravity="left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#808080"
                    android:layout_margin="10dp"
                    android:textSize="12sp"
                    android:text="Updates will reflect on your website one hour after getting posted on the Facebook Page. Do not select this option if you are using social share from your website."/>
            </LinearLayout>-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>