<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/primaryColor" />
            <corners android:radius="@dimen/margin_5" />
            <padding android:bottom="@dimen/margin_5" android:left="@dimen/margin_30" android:right="@dimen/margin_30" android:top="@dimen/margin_5" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <stroke android:width="@dimen/margin_1" android:color="@color/gray" />
            <solid android:color="@color/white" />
            <padding android:bottom="@dimen/margin_5" android:left="@dimen/margin_30" android:right="@dimen/margin_30" android:top="@dimen/margin_5" />
            <corners android:radius="@dimen/margin_5" />
        </shape>
    </item>
</selector>