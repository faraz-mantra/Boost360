  <style name="CircularProgress" parent="Theme.AppCompat.Light">
    <item name="colorAccent">@color/primary_color</item>
  </style>

  <style name="CoachMarkAnimation">
    <item name="android:windowEnterAnimation">@anim/coach_mark_show</item>
    <item name="android:windowExitAnimation">@anim/coach_mark_hide</item>
  </style>


  <declare-styleable name="EllipsizeEndTextView">
    <attr name="maxLines" format="integer" />
    <attr name="textColor" format="color" />
    <attr name="textSize" format="dimension" />
    <attr name="lineSpacing" format="dimension" />
  </declare-styleable>

  <style name="MyPopupMenuStyle" parent="Widget.AppCompat.PopupMenu">
    <item name="android:dropDownSelector">@drawable/abc_list_selector_holo_dark</item>
    <item name="android:popupBackground">@color/ca_gray</item>
    <item name="android:dropDownVerticalOffset">0dip</item>
    <item name="android:listSelector">@drawable/ca_menu_bg</item>
    <item name="android:colorBackground">@color/ca_gray</item>
    <item name="android:dropDownHorizontalOffset">0dip</item>
    <item name="android:dropDownWidth">wrap_content</item>
    <item name="android:textColor">@color/gray</item>
    <item name="android:textSize">@dimen/large_text_size</item>
  </style>

  <style name="MyPopupMenuStyleWhite" parent="Widget.AppCompat.PopupMenu">
    <item name="android:dropDownSelector">@drawable/abc_list_selector_holo_dark</item>
    <item name="android:popupBackground">@drawable/all_side_curve_bg</item>
    <item name="android:dropDownVerticalOffset">0dip</item>
    <item name="android:listSelector">@drawable/ca_menu_bg</item>
    <item name="android:colorBackground">@color/white</item>
    <item name="android:dropDownHorizontalOffset">0dip</item>
    <item name="android:dropDownWidth">wrap_content</item>
    <item name="android:textColor">@color/common_text_color</item>
    <item name="android:textSize">@dimen/large_text_size</item>
  </style>

  <style name="CustomEditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">

    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#383838</item>
    <item name="android:textColorHint">#B6B6B6</item>
  </style>

  <style name="ProductEditTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/primaryTextColor</item>
    <item name="android:padding">10dp</item>
    <item name="android:maxLines">1</item>
    <item name="android:singleLine">true</item>
    <item name="android:inputType">textCapSentences</item>
    <item name="android:textColorHint">@color/hintTextColor</item>
    <item name="android:background">@drawable/input_background</item>
  </style>

  <style name="ProductSpinnerStyle" parent="@style/ThemeOverlay.AppCompat.Light">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/primaryTextColor</item>
    <item name="android:padding">5dp</item>
    <item name="android:maxLines">1</item>
    <item name="android:spinnerMode">dropdown</item>
  </style>

  <style name="ProductLabelTextStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">13sp</item>
    <item name="android:textColor">@color/black_4a4a4a</item>
    <item name="android:layout_gravity">center_vertical</item>
  </style>

  <style name="ProductHelpButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
    <item name="android:background">@android:color/transparent</item>
    <item name="android:layout_marginStart">@dimen/margin_5</item>
    <item name="srcCompat">@drawable/ic_info</item>
  </style>

  <style name="ToolbarTitleLayoutStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">start</item>
    <item name="android:fontFamily">@font/semi_bold</item>
    <item name="android:textAllCaps">false</item>
    <item name="textType">HEADING_6</item>
    <item name="android:maxLines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="android:paddingEnd">10dp</item>
    <item name="android:paddingStart">10dp</item>
    <item name="android:textColor">@android:color/white</item>
  </style>

  <style name="ParentLayoutStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@color/white</item>
    <item name="android:fillViewport">true</item>
    <item name="android:fitsSystemWindows">true</item>
  </style>

  <style name="AppBarLayoutStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@color/primaryColor</item>
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
  </style>

  <style name="AppBarStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">#747474</item>
    <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

  <style name="TransparentProgressDialog" parent="@android:style/Theme.Dialog">
    <item name="android:windowFrame">@null</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowTitleStyle">@null</item>
    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    <item name="android:backgroundDimEnabled">true</item>
    <item name="android:background">@android:color/transparent</item>
  </style>

  <style name="ColorSwitchStyle">
    <item name="colorControlActivated">@color/colorAccentLight</item>
  </style>

</resources>
