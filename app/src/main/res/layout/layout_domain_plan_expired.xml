<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="25dp">
    <TextView
        android:id="@+id/tv_expire_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""/>
    <TextView
        android:id="@+id/btn_plan_expired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:visibility="gone"
        android:text="Renew NowFloats Plan"
        android:background="@drawable/rounded_corner_button"
        android:layout_marginTop="20dp"
        android:textColor="@drawable/yellow_btn_hover_text_color"
        android:textAllCaps="false"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/ll_domain_expired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        android:gravity="center">
        <Button
            android:id="@+id/btn_book_domain"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/ria_positive_btn"
            android:textColor="@drawable/yellow_btn_hover_text_color"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:visibility="gone"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:textAllCaps="false"
            android:text="Book New Domain"/>
        <Button
            android:id="@+id/btn_renew_domain"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/ria_positive_btn"
            android:textColor="@drawable/yellow_btn_hover_text_color"
            android:paddingLeft="25dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="25dp"
            android:textAllCaps="false"
            android:text="Renew Domain"/>
        <Button
            android:id="@+id/btn_link_domain"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_btn_bg"
            android:textColor="@drawable/yellow_btn_text_color"
            android:paddingLeft="20dp"
            android:paddingTop="5dp"
            android:visibility="visible"
            android:paddingBottom="5dp"
            android:paddingRight="20dp"
            android:layout_marginLeft="15dp"
            android:textAllCaps="false"
            android:text="Link another domain"/>
    </LinearLayout>
</LinearLayout>