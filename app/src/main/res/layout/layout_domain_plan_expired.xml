<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:orientation="vertical"
  android:padding="25dp">

  <TextView
    android:id="@+id/tv_expire_msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="" />

  <TextView
    android:id="@+id/btn_plan_expired"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:background="@drawable/rounded_corner_button"
    android:gravity="center"
    android:paddingStart="25dp"
    android:paddingTop="8dp"
    android:paddingRight="25dp"
    android:paddingBottom="8dp"
    android:text="@string/renew_nowfloats_plan"
    android:textAllCaps="false"
    android:textColor="@drawable/yellow_btn_hover_text_color"
    android:textSize="15sp"
    android:visibility="gone" />

  <LinearLayout
    android:id="@+id/ll_domain_expired"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:visibility="gone">

    <Button
      android:id="@+id/btn_book_domain"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="@drawable/ria_positive_btn"
      android:paddingStart="20dp"
      android:paddingTop="5dp"
      android:paddingRight="20dp"
      android:paddingBottom="5dp"
      android:text="@string/book_new_domain"
      android:textAllCaps="false"
      android:textColor="@drawable/yellow_btn_hover_text_color"
      android:visibility="gone" />

    <Button
      android:id="@+id/btn_renew_domain"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:background="@drawable/ria_positive_btn"
      android:paddingStart="25dp"
      android:paddingTop="5dp"
      android:paddingRight="25dp"
      android:paddingBottom="5dp"
      android:text="@string/renew_domain_"
      android:textAllCaps="false"
      android:textColor="@drawable/yellow_btn_hover_text_color" />

    <Button
      android:id="@+id/btn_link_domain"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:layout_weight="1"
      android:background="@drawable/yellow_btn_bg"
      android:paddingStart="20dp"
      android:paddingTop="5dp"
      android:paddingRight="20dp"
      android:paddingBottom="5dp"
      android:text="@string/link_another_domain"
      android:textAllCaps="false"
      android:textColor="@drawable/yellow_btn_text_color"
      android:visibility="visible" />
  </LinearLayout>
</LinearLayout>