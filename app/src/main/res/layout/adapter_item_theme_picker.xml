<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="match_parent"
  android:layout_gravity="center"
  android:background="@android:color/transparent"
  android:gravity="center"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/img_theme"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:src="@drawable/theme_bnb" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white_round_corner"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv_theme_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="15dp"
      android:text="@string/dynamic"
      android:textColor="@color/primary_color"
      android:textSize="18sp" />

    <TextView
      android:id="@+id/tv_theme_description"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/recommended"
      android:textColor="@color/light_black_color"
      android:textSize="12sp"
      android:visibility="visible" />

    <TextView
      android:id="@+id/tv_theme_message"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_marginStart="20dp"
      android:layout_marginTop="15dp"
      android:layout_marginEnd="20dp"
      android:layout_weight="1"
      android:gravity="center_horizontal"
      android:text="@string/we_choose_the_theme_that_will_work_best_for_your_business_keeping_many_factors_in_mind_by_default_this_is_the_setting_because_you_should_only_focus_on_the_content_that_will_get_the_customers_to_your_store" />

    <TextView
      android:id="@+id/btn_set_look"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="bottom"
      android:layout_margin="15dp"
      android:background="@drawable/rounded_yellow_selector_bg"
      android:gravity="center"
      android:padding="15dp"
      android:text="@string/set_this_look"
      android:textAllCaps="false"
      android:textColor="@drawable/yellow_btn_text_color" />
  </LinearLayout>
</LinearLayout>