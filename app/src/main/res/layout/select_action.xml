<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="210dp"
  android:layout_height="wrap_content"

  android:orientation="vertical">

  <com.nowfloats.CustomWidget.roboto_md_60_212121
    android:id="@+id/textview_heading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:layout_marginStart="26dp"
    android:layout_marginTop="26dp"
    android:text="@string/select_action_dialog_title"
    android:textColor="#878787" />

  <LinearLayout
    android:id="@+id/replace_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="26dp"
    android:layout_marginTop="33dp"
    android:orientation="horizontal">

    <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical">


      <ImageView
        android:id="@+id/pop_up_replace_img"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:src="@drawable/circle_bakground" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_restore_white_24dp" />
    </FrameLayout>

    <com.nowfloats.CustomWidget.roboto_lt_24_212121
      android:id="@+id/alert_message_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginStart="18dp"
      android:layout_weight=".6"
      android:text="@string/text_replace_image"

      android:textColor="#878787" />


  </LinearLayout>

  <LinearLayout
    android:id="@+id/img_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="26dp"
    android:layout_marginTop="33dp"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">

    <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical">


      <ImageView
        android:id="@+id/pop_up_delete_img"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:src="@drawable/circle_bakground" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_delete_white_24dp" />
    </FrameLayout>

    <com.nowfloats.CustomWidget.roboto_lt_24_212121
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginStart="18dp"
      android:layout_weight=".6"
      android:text="@string/text_delete_image"

      android:textColor="#878787" />


  </LinearLayout>

  <LinearLayout
    android:id="@+id/deletebackgroundImage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="26dp"
    android:layout_marginTop="13dp"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal"
    android:visibility="gone">

    <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical">


      <ImageView
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:src="@drawable/circle_bakground" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:src="@drawable/delete_dustbin_button" />
    </FrameLayout>

    <com.nowfloats.CustomWidget.roboto_lt_24_212121
      android:id="@+id/deleteBackgroundImageText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginStart="18dp"
      android:layout_weight=".6"
      android:text="@string/delete_"
      android:textColor="#878787" />

  </LinearLayout>
</LinearLayout>