<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nowfloats.manageinventory.SellerAnalyticsActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/primary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_total_orders"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="@string/total_orders"/>
            <ProgressBar
                android:id="@+id/pb_total_orders_count"
                android:visibility="visible"
                android:layout_below="@+id/tv_total_orders"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:progressTint="@color/primary"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_total_orders_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_below="@+id/tv_total_orders"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
        <View
            android:background="@color/primary"
            android:layout_width="4dp"
            android:layout_height="100dp" />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_total_revenue"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:textSize="17sp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="@string/total_revenue"/>
            <ProgressBar
                android:id="@+id/pb_total_revenue_count"
                android:visibility="visible"
                android:layout_below="@+id/tv_total_revenue"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:progressTint="@color/primary"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:visibility="invisible"
                android:id="@+id/tv_total_revenue_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:layout_below="@+id/tv_total_revenue"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
