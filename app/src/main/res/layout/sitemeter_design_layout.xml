<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/sitemeter_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/change_password_btn_bkg"
        android:orientation="horizontal">

        <com.nowfloats.CustomWidget.roboto_md_34_primarycolor
            android:id="@+id/valueText"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center"
            android:text="@string/_10_percent" />

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_weight=".6"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="3dp">

            <com.nowfloats.CustomWidget.roboto_lt_33_6e6e6e
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/get_your_own_identity" />

            <com.nowfloats.CustomWidget.roboto_lt_25_a4a4a4
                android:id="@+id/descText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/buydomain_text2" />

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight=".1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="20dp"
            android:src="@drawable/right_arrow"
            />

    </LinearLayout>
</LinearLayout>