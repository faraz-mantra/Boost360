<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/primaryColor">

    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card:contentPadding="20dp"
            card:cardBackgroundColor="@color/white"
            android:layout_margin="1dp"
            card:cardCornerRadius="3dp"
            card:cardElevation="1dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_help_avatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/help_female_avatar" />

                <TextView
                    android:id="@+id/tv_consultant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:text="Ms. Ria"
                    android:textColor="@color/primaryColor"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/tv_member_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Your personal account manager"
                    android:textColor="#a2a2a2"
                    android:textSize="12sp" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_call_white_48dp"
                        android:tint="#808080" />

                    <TextView
                        android:id="@+id/tv_contact_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:autoLink="phone"
                        android:ellipsize="marquee"
                        android:linksClickable="true"
                        android:text="18601231233"
                        android:textColorLink="#808080"
                        android:textSize="12sp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_mail_white_48dp"
                        android:tint="#808080" />

                    <TextView
                        android:id="@+id/tv_consultant_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:autoLink="email"
                        android:ellipsize="marquee"
                        android:linksClickable="true"
                        android:marqueeRepeatLimit="0"
                        android:maxLines="2"
                        android:text="ria@nowfloats.com"
                        android:textColorLink="#808080"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cv_next_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card:cardBackgroundColor="#FFFFFF"
            card:cardCornerRadius="1dp"
            android:onClick="onCardClicked"
            card:cardElevation="1dp"
            card:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/white"
                    android:textColor="@color/primary"
                    android:text="Instant Web Support"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tint="@color/e0e0e0"
                    android:src="@drawable/right_arrow" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_faq"
            android:onClick="onCardClicked"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            card:cardBackgroundColor="#FFFFFF"
            card:cardCornerRadius="1dp"
            card:cardElevation="1dp"
            card:contentPadding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@color/white"
                    android:textColor="@color/primary"
                    android:text="FAQs"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_ria_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:autoLink="email"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:layout_alignParentBottom="true"
        android:linksClickable="true"
        android:text="@string/drop_us_on_email_or_call"
        android:textColor="#a2a2a2"
        android:textColorLink="#808080"
        android:textSize="12sp"
        android:textStyle="italic" />

</RelativeLayout>
