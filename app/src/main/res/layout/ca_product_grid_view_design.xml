<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/listing_screen_product_detail_relative_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <androidx.cardview.widget.CardView
    android:id="@+id/cvProducts"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <CheckBox
        android:id="@+id/cbUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_8"
        android:button="@drawable/ca_checkbox_bg" />

      <ImageView
        android:id="@+id/proudct_image_view"
        android:layout_width="100dp"
        android:layout_height="100dip"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_15"
        android:layout_marginBottom="@dimen/margin_15"
        android:src="@drawable/default_product_image" />


    </LinearLayout>
  </androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/ca_gray"
    app:cardCornerRadius="0dp"
    app:cardElevation="3dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="vertical"
      android:padding="@dimen/margin_8">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/product_name"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif-light"
          android:singleLine="true"
          android:text="I'm Late Wallclock"
          android:textColor="@color/lt_black"
          android:textSize="14sp"
          tools:ignore="MissingPrefix" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/product_currency"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="2dp"
          android:fontFamily="@font/semi_bold"
          android:text="@string/inr"
          android:textColor="#80000000"
          android:textSize="14sp"
          tools:ignore="MissingPrefix" />

        <TextView
          android:id="@+id/product_price"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/semi_bold"
          android:paddingStart="0dp"
          android:text="900"
          android:textColor="#80000000"
          android:textSize="14sp"
          tools:ignore="MissingPrefix" />

      </LinearLayout>
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</LinearLayout>
