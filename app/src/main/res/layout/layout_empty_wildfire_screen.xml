<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="50dp"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_inorganic"
            android:tint="@color/zeroth_grey_icon"
            android:layout_centerHorizontal="true"
            android:id="@+id/image1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_text1"
            android:layout_marginTop="@dimen/margin_10"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_below="@+id/image1"
            android:textColor="@color/zeroth_grey_title"
            android:text="@string/inorganic_add_on_unavailable"/>

        <TextView
            android:id="@+id/message_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:padding="10dp"
            android:textColor="@color/zeroth_grey"
            android:layout_marginStart="@dimen/margin_20"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_below="@+id/main_text1"
            android:text="@string/looks_like_you_have_not_installed_any_add_on_to_generate_inorganic_traffic_on_different_channels_such_as_facebook_ads_or_google_adwards"/>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/message_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="14sp"
                android:paddingTop="20dp"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:layerType="software"
                android:background="@drawable/dashed_rectangle"
                android:text="@string/visit_from_a_desktop_to_explore_and_install_related_add_ons_to_see_inorganic_traffic_leads"/>

        </FrameLayout>

        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/ic_ribbon"
            android:text="@string/info"/>

    </FrameLayout>

</RelativeLayout>