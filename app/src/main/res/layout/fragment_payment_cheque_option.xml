<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="@string/choose_your_bank">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_bank_name"
                style="@style/SignUp_EditText_Style_Ria"
                fontPath="Roboto-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/dropselect"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="IFSC Code">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_ifsc_code"
                style="@style/SignUp_EditText_Style_Ria"
                fontPath="Roboto-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:inputType="textNoSuggestions"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

        </android.support.design.widget.TextInputLayout>
        
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="Bank Account Number">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_account_number"
                style="@style/SignUp_EditText_Style_Ria"
                fontPath="Roboto-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:inputType="textNoSuggestions"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

        </android.support.design.widget.TextInputLayout>
       
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="Cheque Number">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_cheque_number"
                style="@style/SignUp_EditText_Style_Ria"
                fontPath="Roboto-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:inputType="textNoSuggestions"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

        </android.support.design.widget.TextInputLayout>

      
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="Cheque Amount">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_cheque_amount"
                style="@style/SignUp_EditText_Style_Ria"
                fontPath="Roboto-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:inputType="textNoSuggestions"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

        </android.support.design.widget.TextInputLayout>
        
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:hint="Payment Date">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_payment_date"
                style="@style/SignUp_EditText_Style_Ria"
                fontPath="Roboto-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:inputType="textNoSuggestions"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

        </android.support.design.widget.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:text="Is GST registered?"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>
        <RadioGroup
            android:id="@+id/rg_is_gst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp">
            <RadioButton
                android:id="@+id/radioButton_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/light_gray"
                android:text="Yes"/>
            <RadioButton
                android:id="@+id/radioButton_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/light_gray"
                android:text="No"/>
        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayout_gst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:visibility="gone"
            android:hint="GST Number">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/editText_gst_number"
                style="@style/SignUp_EditText_Style_Ria"
                fontPath="Roboto-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:inputType="textNoSuggestions"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/textView_add_cheque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:textStyle="bold"
            android:background="@drawable/ria_positive_btn"
            android:text="Add Cheque Image"/>
        <ImageView
            android:id="@+id/imageView_primary_cheque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:src="@drawable/default_product_image"/>

        <TextView
            android:id="@+id/textView_add_alt_cheque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:padding="10dp"
            android:visibility="gone"
            android:textStyle="bold"
            android:background="@drawable/ria_positive_btn"
            android:text="Add alternative Image"/>
        <ImageView
            android:id="@+id/imageView_alternate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:visibility="gone"
            android:src="@drawable/default_product_image"/>
    </LinearLayout>
</ScrollView>

