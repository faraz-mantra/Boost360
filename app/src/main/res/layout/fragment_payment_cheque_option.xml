<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="vertical">

                <TextView
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Choose your bank"
                    android:textColor="#383838"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText_bank_name"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#383838"
                    android:drawableRight="@drawable/dropselect"
                    android:hint="Choose your bank" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="IFSC Code"
                android:orientation="vertical">

                <TextView
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="IFSC Code"
                    android:textColor="#383838"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText_ifsc_code"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#383838"
                    android:ellipsize="end"
                    android:hint="IFSC Code"
                    android:inputType="textNoSuggestions"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAllCaps="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="vertical">

                <TextView
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Bank Account Number"
                    android:textColor="#383838"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText_account_number"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#383838"
                    android:ellipsize="end"
                    android:hint="Bank Account Number"
                    android:inputType="textNoSuggestions"
                    android:scrollHorizontally="true"
                    android:singleLine="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="vertical">

                <TextView
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Cheque Amount"
                    android:textColor="#383838"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText_transfer_amount"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#383838"
                    android:ellipsize="end"
                    android:hint="Cheque Amount"
                    android:inputType="number"
                    android:scrollHorizontally="true"
                    android:singleLine="true"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:orientation="vertical">

                <TextView
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Cheque Number"
                    android:textColor="#383838"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText_cheque_number"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#383838"
                    android:ellipsize="end"
                    android:hint="Cheque Number"
                    android:inputType="textNoSuggestions"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAllCaps="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:visibility="gone">

                <TextView
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Transaction Reference Id NEFT/RTGS/IMPS"
                    android:textColor="#383838"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText_transaction_id"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#383838"
                    android:ellipsize="end"
                    android:hint="Transaction Reference Id NEFT/RTGS/IMPS"
                    android:inputType="textNoSuggestions"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:visibility="visible">

                <TextView
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Cheque Date"
                    android:textColor="#383838"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText_payment_date"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#383838"
                    android:ellipsize="end"
                    android:hint="Cheque Date"
                    android:inputType="textNoSuggestions"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:text="Is GST registered?"
                android:textColor="@color/light_gray"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/rg_is_gst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/gray"
                    android:text="Yes"
                    android:textColor="@color/light_gray" />

                <RadioButton
                    android:id="@+id/radioButton_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:buttonTint="@color/gray"
                    android:checked="true"
                    android:text="No"
                    android:textColor="@color/light_gray" />
            </RadioGroup>


            <LinearLayout
                android:id="@+id/inputLayout_gst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:visibility="gone">

                <TextView
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="GST Number"
                    android:textColor="#383838"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/editText_gst_number"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#383838"
                    android:ellipsize="end"
                    android:hint="GST Number"
                    android:inputType="textNoSuggestions"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView_add_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"
                android:padding="10dp"
                android:text="Add Cheque Image"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <androidx.cardview.widget.CardView xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardView_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                card:cardBackgroundColor="@color/gray">

                <ImageView
                    android:id="@+id/imageView_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:maxWidth="300dp"
                    android:minHeight="200dp"
                    android:minWidth="250dp"
                    android:src="@drawable/ic_action_camera" />

                <ImageView
                    android:id="@+id/imageView_main_delete"
                    android:layout_width="35dp"
                    android:layout_height="39dp"
                    android:layout_gravity="end"
                    android:background="@color/transluscent_background"
                    android:src="@drawable/cancel1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="35dp"
                    android:background="@color/transluscent_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/cheque_image"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView_add_alt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"
                android:padding="10dp"
                android:text="@string/add_other_image"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.cardview.widget.CardView xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardView_alternative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                card:cardBackgroundColor="@color/gray">

                <ImageView
                    android:id="@+id/imageView_alternate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:maxWidth="300dp"
                    android:minHeight="200dp"
                    android:minWidth="250dp"
                    android:src="@drawable/ic_action_camera" />

                <ImageView
                    android:id="@+id/imageView_alt_delete"
                    android:layout_width="35dp"
                    android:layout_height="39dp"
                    android:layout_gravity="end"
                    android:background="@color/transluscent_background"
                    android:src="@drawable/cancel1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="35dp"
                    android:background="@color/transluscent_background"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/other_cheque_image"
                    android:textColor="@color/white" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/pay_now"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>