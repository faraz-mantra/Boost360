                  android:layout_height="wrap_content"
                  android:text="@string/zero"
                  android:textSize="@dimen/_20sdp" />

              <TextView
                  android:text="@string/desktop"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
            </LinearLayout>



          </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
