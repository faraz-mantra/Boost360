<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

  </data>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_top_white_2"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_10"
    android:paddingBottom="@dimen/size_10">

    <com.framework.views.customViews.CustomTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size_12"
      android:layout_marginBottom="@dimen/size_10"
      android:includeFontPadding="false"
      android:text="@string/choose_an_action"
      android:textColor="@color/black"
      android:visibility="gone"
      app:fontFamily="@font/bold"
      app:textType="HEADING_5" />

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/gallery"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true"
      android:focusable="true"

      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/size_14">

      <!--            <androidx.appcompat.widget.AppCompatImageView-->
      <!--                android:layout_width="@dimen/size_24"-->
      <!--                android:layout_height="@dimen/size_24"-->
      <!--                app:srcCompat="@drawable/ic_gallery_round" />-->

      <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <com.framework.views.customViews.CustomImageView
          android:id="@+id/pop_up_camera_imag"
          android:layout_width="@dimen/size_32"
          android:layout_height="@dimen/size_32"
          app:srcCompat="@drawable/circle_bakground" />

        <com.framework.views.customViews.CustomImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/featured_gallery" />
      </FrameLayout>

      <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:includeFontPadding="false"
        android:text="@string/gallery"
        android:textColor="@color/primary_text"
        app:fontFamily="@font/bold"
        app:textType="HEADING_6" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/camera"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/size_14">

      <!--            <androidx.appcompat.widget.AppCompatImageView-->
      <!--                android:layout_width="@dimen/size_24"-->
      <!--                android:layout_height="@dimen/size_24"-->
      <!--                app:srcCompat="@drawable/ic_photo_camera" />-->
      <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <com.framework.views.customViews.CustomImageView
          android:layout_width="@dimen/size_32"
          android:layout_height="@dimen/size_32"
          app:srcCompat="@drawable/circle_bakground" />

        <com.framework.views.customViews.CustomImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/ic_camera_lens" />
      </FrameLayout>

      <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:includeFontPadding="false"
        android:text="@string/camera"
        android:textColor="@color/primary_text"
        app:fontFamily="@font/bold"
        app:textType="HEADING_6" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/close"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="?android:attr/selectableItemBackground"
      android:clickable="true"
      android:focusable="true"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      android:padding="@dimen/size_14">

      <!--            <androidx.appcompat.widget.AppCompatImageView-->
      <!--                android:layout_width="@dimen/size_24"-->
      <!--                android:layout_height="@dimen/size_24"-->
      <!--                app:srcCompat="@drawable/ic_close_round" />-->

      <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <com.framework.views.customViews.CustomImageView
          android:layout_width="@dimen/size_32"
          android:layout_height="@dimen/size_32"
          app:srcCompat="@drawable/circle_bakground" />

        <com.framework.views.customViews.CustomImageView
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_gravity="center"
          app:srcCompat="@drawable/ic_round_close_white" />
      </FrameLayout>

      <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:includeFontPadding="false"
        android:text="@string/close"
        android:textColor="@color/primary_text"
        app:fontFamily="@font/bold"
        app:textType="HEADING_6" />

    </androidx.appcompat.widget.LinearLayoutCompat>

  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>