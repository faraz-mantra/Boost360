<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/screen_bg"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingBottom="10dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="3dp"
        android:layout_marginTop="10dp"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:id="@+id/store_product_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/storeDataIcon"
                    android:layout_width="90dp"
                    android:layout_height="90dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/padding_right"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fontPath="Roboto-Medium.ttf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/medium_text_size"
                    android:id="@+id/titleText"
                    tools:ignore="MissingPrefix" />
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/light_black"
                    fontPath="Roboto-Light.ttf"
                    android:textSize="@dimen/small_text_size"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/validityText"
                    android:text="isjdnfsjdnfisjdn"
                    tools:ignore="MissingPrefix" />-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tvPlanStatus"
                        android:visibility="gone"
                        android:textColor="@color/primaryColor"
                        android:layout_width="wrap_content"
                        android:singleLine="true"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/primaryColor"
                        fontPath="Roboto-Light.ttf"
                        android:textSize="@dimen/small_text_size"
                        android:background="@drawable/rounded_corner_white"
                        android:id="@+id/priceText"
                        android:text="@string/light_house_price"
                        android:padding="5dp"
                        tools:ignore="MissingPrefix"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />
                    <android.support.v7.widget.CardView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        app:cardBackgroundColor="@color/primaryColor"
                        app:contentPaddingTop="2dp"
                        app:contentPaddingBottom="2dp"
                        android:visibility="gone"
                        app:contentPaddingLeft="10dp"
                        android:id="@+id/new_card"
                        app:contentPaddingRight="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="2dp"
                        app:cardCornerRadius="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:text="@string/new_in_capital"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </android.support.v7.widget.CardView>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/light_black"
                    fontPath="Roboto-Light.ttf"
                    android:textSize="@dimen/small_text_size"
                    android:layout_marginTop="@dimen/margin_top"
                    android:layout_marginBottom="2dp"
                    android:id="@+id/descText"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/light_black"
                    fontPath="Roboto-Light.ttf"
                    android:textSize="@dimen/small_text_size"
                    android:text="@string/read_more_text"
                    android:id="@+id/readMore"
                    tools:ignore="MissingPrefix" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/primaryColor"
                    fontPath="Roboto-Light.ttf"
                    android:textSize="@dimen/small_text_size"
                    android:layout_marginTop="@dimen/margin_top"
                    android:background="@drawable/rounded_corner_white"
                    android:id="@+id/knowMoreText"
                    android:text="@string/know_more_text"
                    android:padding="5dp"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>