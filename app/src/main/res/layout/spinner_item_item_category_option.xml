<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/margin_20"
    android:paddingTop="@dimen/margin_10"
    android:paddingBottom="@dimen/margin_10"
    android:background="@color/spinner_grey_background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_15"
            app:srcCompat="@drawable/ic_product"/>

        <TextView
            android:id="@+id/label_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Physical Product"
            android:layout_toRightOf="@+id/iv_icon"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/label_item_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_icon"
            android:layout_below="@+id/label_item_type"
            android:text="Can be packaged and delivered to buyer. e.g. book, watch, toy, garment etc."
            android:textColor="@color/secondaryTextColor"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>