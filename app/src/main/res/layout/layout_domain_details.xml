<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/domain_expired"
        android:background="@color/light_gray"
        android:textColor="@color/white"
        android:paddingStart="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_gravity="end"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp">
        <ImageView
            android:id="@+id/img_domain"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:paddingStart="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/domain_www"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_domain_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/testmanage_nowfloats_com"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/tv_domain_created_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/purchase_date_31_october_2016"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tv_domain_expire_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/valid_till_31_october_2018"/>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_domain_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="13sp"
        android:visibility="gone"
        android:text="@string/your_domain_will_be_automatically_renewed_year_on_year_before_expiry_based_on_active_nowfloats_package"/>
</LinearLayout>