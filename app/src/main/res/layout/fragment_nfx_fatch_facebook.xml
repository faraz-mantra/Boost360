<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical">

  <ImageView
    android:id="@+id/boost_app_icon"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    app:srcCompat="@drawable/boost_with_facebook" />

  <TextView
    android:id="@+id/facebook_analytics_connect_text1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:text="@string/gathering_fcebook_analytics"
    android:textSize="20sp"
    android:textStyle="bold" />

  <TextView
    android:id="@+id/facebook_analytics_connect_text2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp"
    android:gravity="center"
    android:text="@string/please_wait_while_collecting_facebook_data"
    android:textSize="18sp" />
</LinearLayout>