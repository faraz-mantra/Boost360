<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        android:background="#747474"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10" >

            <TextView
                android:id="@+id/label_payment_configuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add new Address"
                android:textSize="18sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/label_variants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#1 Banjara Warehouse"
                android:textSize="14sp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:visibility="visible"
                android:layout_below="@+id/label_payment_configuration"
                android:textColor="@android:color/white" />

        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_20"
                android:paddingRight="@dimen/margin_20"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_20"
                android:background="@android:color/white" >

                <LinearLayout
                    android:id="@+id/layout_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Warehouse/Shop area name"/>

                    <ImageButton
                        android:id="@+id/ib_info_product_image"
                        style="@style/ProductHelpButtonStyle"/>

                </LinearLayout>

                <EditText
                    android:gravity="top"
                    android:layout_marginTop="@dimen/margin_5"
                    android:hint="e.g Banjara warehouse"
                    style="@style/ProductEditTextStyle" />

                <!--
                <Spinner
                    android:id="@+id/spinner_pickup_address"
                    style="@style/ProductSpinnerStyle"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/input_background"
                    android:entries="@array/stock_options" />
                 -->

                <LinearLayout
                    android:id="@+id/layout_product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Warehouse contact number" />

                    <ImageButton
                        android:id="@+id/ib_info_product_description"
                        style="@style/ProductHelpButtonStyle" />

                </LinearLayout>

                <EditText
                    android:gravity="top"
                    android:layout_marginTop="@dimen/margin_5"
                    android:hint="XXXXXXXXXX"
                    style="@style/ProductEditTextStyle" />

                <LinearLayout
                    android:id="@+id/layout_product_description_______"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Pickup address proof(jpeg/png/pdf 1mb)" />

                    <ImageButton
                        android:id="@+id/ib_info_product_description_______"
                        style="@style/ProductHelpButtonStyle" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_add_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/white_rectangle_background"
                    android:padding="8dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/btn_secondary_image"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="Select address proof"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        android:padding="5dp"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_camera_outline_small"
                        android:textColor="@color/secondaryTextColor"
                        android:background="@drawable/button_pick_image"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_product_description__"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Building/Plot No. and street address" />

                    <ImageButton
                        android:id="@+id/ib_info_product_description_"
                        style="@style/ProductHelpButtonStyle" />

                </LinearLayout>

                <EditText
                    android:gravity="top"
                    android:layout_marginTop="@dimen/margin_5"
                    android:hint="e.g. D-234/K-4B, Road No 10, Banjara Hills"
                    style="@style/ProductEditTextStyle" />

                <LinearLayout
                    android:id="@+id/layout_product_description_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="City" />

                    <ImageButton
                        android:id="@+id/ib_info_product_description__"
                        style="@style/ProductHelpButtonStyle" />

                </LinearLayout>

                <EditText
                    android:gravity="top"
                    android:layout_marginTop="@dimen/margin_5"
                    android:hint="e.g. Hyderabad"
                    style="@style/ProductEditTextStyle" />

                <LinearLayout
                    android:id="@+id/layout_product_description____"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="State/Province" />

                    <ImageButton
                        android:id="@+id/ib_info_product_description___"
                        style="@style/ProductHelpButtonStyle" />

                </LinearLayout>

                <EditText
                    android:gravity="top"
                    android:layout_marginTop="@dimen/margin_5"
                    android:hint="e.g. Telangana"
                    style="@style/ProductEditTextStyle" />

                <LinearLayout
                    android:id="@+id/layout_product_description_____"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Country" />

                    <ImageButton
                        android:id="@+id/ib_info_product_description_____"
                        style="@style/ProductHelpButtonStyle" />

                </LinearLayout>

                <EditText
                    android:id="@+id/edit_country"
                    android:gravity="top"
                    android:editable="false"
                    android:layout_marginTop="@dimen/margin_5"
                    style="@style/ProductEditTextStyle"
                    android:background="@drawable/white_rectangle_background"/>

                <View
                    android:id="@+id/dotted_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@drawable/dotted_line"/>

                <LinearLayout
                    android:id="@+id/layout_product_description___"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:text="I agree that boost will keep 3% of the final cart value as convenience fee. (Towards payment and delivery enablement)"/>

                </LinearLayout>

                <View
                    android:id="@+id/dotted_line_"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:background="@drawable/dotted_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:minWidth="100dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/secondaryTextColor"
                        android:layout_toLeftOf="@+id/btn_save"
                        android:textSize="14sp"
                        android:text="CANCEL" />

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:minWidth="130dp"
                        android:background="@color/primaryColor"
                        android:textColor="@android:color/white"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:text="SAVE ADDRESS" />

                </RelativeLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</layout>