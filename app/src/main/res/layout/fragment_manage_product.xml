<?xml version="1.0" encoding="utf-8"?>
<layout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:paddingBottom="@dimen/margin_60"
            tools:context="com.nowfloats.Product_Gallery.ManageProductFragment">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_20"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/layout_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Product Primary Image"/>

                    <ImageButton
                        android:id="@+id/ib_info_product_image"
                        style="@style/ProductHelpButtonStyle"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/image_picker"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:clickable="true"
                    android:background="@drawable/image_picker_backround" >

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/layout_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Brand"/>

                    <ImageButton
                        android:id="@+id/ib_info_brand"
                        style="@style/ProductHelpButtonStyle"/>

                </LinearLayout>

                <EditText
                    style="@style/ProductEditTextStyle"
                    android:hint="Write the name of the brand"
                    android:layout_marginTop="@dimen/margin_5"/>

                <LinearLayout
                    android:id="@+id/layout_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Product Name" />

                    <ImageButton
                        android:id="@+id/ib_info_product_name"
                        style="@style/ProductHelpButtonStyle" />

                </LinearLayout>

                <EditText
                    android:layout_marginTop="@dimen/margin_5"
                    android:hint="Write the name of your base product"
                    style="@style/ProductEditTextStyle" />

                <LinearLayout
                    android:id="@+id/layout_product_variants_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Variant Information" />

                    <ImageButton
                        android:id="@+id/ib_info_product_variant"
                        style="@style/ProductHelpButtonStyle" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_product_variants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/label_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:text="Having variants of this product?"/>

                    <com.github.angads25.toggle.widget.LabeledSwitch
                        android:id="@+id/switch_variants"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        app:textOn="YES"
                        app:textOff="NO"
                        app:on="false"
                        app:colorOn="@color/primaryColor"
                        app:colorBorder="@color/primaryColor"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Product Description" />

                    <ImageButton
                        android:id="@+id/ib_info_product_description"
                        style="@style/ProductHelpButtonStyle" />

                </LinearLayout>

                <EditText
                    android:minHeight="100dp"
                    android:maxLines="10"
                    android:gravity="top"
                    android:layout_marginTop="@dimen/margin_5"
                    android:maxLength="2000"
                    android:hint="Describe your product within 2000 characters max ..."
                    style="@style/ProductEditTextStyle" />

                <LinearLayout
                    android:id="@+id/layout_product_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/ProductLabelTextStyle"
                                android:text="Currency" />

                            <ImageButton
                                android:id="@+id/ib_info_product_currency"
                                style="@style/ProductHelpButtonStyle" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/edit_currency"
                            android:layout_marginTop="@dimen/margin_5"
                            style="@style/ProductEditTextStyle" />

                        <!--
                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spinner_currency"
                            style="@style/ProductEditTextStyle"
                            android:minHeight="36dp"
                            android:layout_marginTop="@dimen/margin_5"/>
                        -->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".9"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                style="@style/ProductLabelTextStyle"
                                android:text="Base Price(Incl. Tax)" />

                            <ImageButton
                                android:id="@+id/ib_info_product_base_price_help"
                                style="@style/ProductHelpButtonStyle" />

                        </LinearLayout>

                        <EditText
                            style="@style/ProductEditTextStyle"
                            android:hint="XX,XX,XXX"
                            android:layout_marginTop="@dimen/margin_5"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.1"
                        android:layout_marginLeft="@dimen/margin_10"
                        android:orientation="vertical" >

                        <TextView
                            style="@style/ProductLabelTextStyle"
                            android:layout_height="24dp"
                            android:layout_gravity="start"
                            android:text="Discount" />

                        <EditText
                            style="@style/ProductEditTextStyle"
                            android:hint="XX,XXX"
                            android:layout_marginTop="@dimen/margin_5"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:layout_height="24dp"
                        android:layout_gravity="start"
                        android:text="Final Price" />

                    <TextView
                        android:id="@+id/label_final_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="XX,XXX"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />

                </LinearLayout>

                <include
                    android:id="@+id/layout_variants"
                    layout="@layout/layout_variants_info" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primaryColor"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom"
            android:text="PUBLISH PRODUCT" />

    </FrameLayout>

</layout>