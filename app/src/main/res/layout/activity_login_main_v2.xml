<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/parent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@color/white"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/im_back_button"
            android:layout_width="17dp"
            android:layout_height="19dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/back_button_2" />


        <TextView
            android:id="@+id/tv_headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Ready to Log in?"
            android:textColor="@color/yellow"
            android:textSize="30sp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:id="@+id/mainContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:id="@+id/ll_1"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/userNameIcon"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/person_placeholder" />

                        <EditText
                            android:id="@+id/userNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:fontFamily="@font/open_sans"
                            android:gravity="bottom"
                            android:hint="@string/username"
                            android:inputType="text"
                            android:textColor="@color/text_color_roboto_lt_30_edittext"
                            android:textColorHint="@color/hint_color_roboto_lt_30_edittext"
                            android:textSize="17sp" />

                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/fl_line_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/ll_1"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:alpha=".3"
                        android:background="@color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout

                        android:id="@+id/ll_2"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/passwordIcon"
                            android:layout_width="15dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/password_placeholder" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/passwordEditText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_weight=".4"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/open_sans"
                                android:gravity="bottom"
                                android:hint="@string/password"
                                android:inputType="textPassword"
                                android:tag="pwd"
                                android:textColor="@color/text_color_roboto_lt_30_edittext"
                                android:textColorHint="@color/hint_color_roboto_lt_30_edittext"
                                android:textSize="17sp" />

                            <TextView

                                android:id="@+id/forgotPwdTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right|center_vertical"
                                android:fontFamily="@font/open_sans"
                                android:text="Forgot?"
                                android:textColor="#4a4a4a" />
                        </LinearLayout>
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/fl_line_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/ll_2"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:alpha=".3"
                        android:background="@color/black" />
                </RelativeLayout>

                <Button
                    android:layout_width="320dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:background="@color/primaryColor"
                    android:elevation="5dp"
                    android:text="LOG IN"
                    android:textSize="6sp"
                    android:visibility="gone" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginRight="4dp"
                    android:elevation="5dp"
                    android:orientation="vertical"
                    app:cardBackgroundColor="@color/primaryColor"
                    app:cardCornerRadius="24dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="@string/log_in"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="16sp" />


                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="4dp"
                    android:layout_marginTop="40dp"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_facebook_login"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:backgroundTint="#4267b2"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="7dp"
                            android:paddingRight="30dp"
                            android:paddingBottom="7dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/facebook_placeholder" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="Via Facebook"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <com.facebook.login.widget.LoginButton
                                android:id="@+id/facebook_login_button"
                                android:layout_width="0dp"
                                android:layout_height="0dp" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_google_login"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="14dp"
                        android:layout_weight="1"
                        android:backgroundTint="#4889f8"
                        app:cardCornerRadius="25dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingTop="7dp"
                            android:paddingRight="30dp"
                            android:paddingBottom="11dp">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:src="@drawable/path" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:fontFamily="@font/open_sans_bold"
                                android:text="Via Google"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#fff"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/keypad_number_pad" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/open_sans_bold"
                            android:text="Via Mobile OTP"
                            android:textColor="#4a4a4a"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>


    </LinearLayout>


</FrameLayout>
