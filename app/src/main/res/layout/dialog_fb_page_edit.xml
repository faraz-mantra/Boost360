<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:padding="30dp"
    android:gravity="center"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fb_page_unavailable"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp"
        android:textAllCaps="true"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:text="@string/suggestions_for_page_name"/>
    <EditText
        android:id="@+id/et_page_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="12sp"
        android:hint="Enter Facebook page name"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:background="@drawable/light_gray_rounded_edittext"
        android:textColor="@color/light_black_color"/>
    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:text="PROCEED"
        android:padding="8dp"
        android:background="@drawable/blue_round_corner"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>
</LinearLayout>