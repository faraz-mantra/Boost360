<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/parent_layout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  android:orientation="vertical">


  <ImageView

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/margin_80"
    android:layout_marginTop="@dimen/margin_90"
    android:layout_marginEnd="@dimen/margin_80"
    android:layout_weight="0.55"
    android:scaleType="centerCrop"
    android:visibility="visible" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/margin_30"
    android:layout_weight="0.45"
    android:background="@drawable/arc_signup"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingStart="@dimen/margin_50"
    android:paddingRight="@dimen/margin_50"
    android:paddingBottom="@dimen/margin_40">


    <LinearLayout
      android:id="@+id/llSignUp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/yellow_white_btn_cwhite_bg"
      android:gravity="center_horizontal"
      android:orientation="horizontal"
      android:padding="@dimen/margin_19">

      <ImageView
        android:id="@+id/create_img"
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_create_wand"
        android:tint="@color/primary_color" />

      <TextView
        android:id="@+id/create_txt"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/create_website"
        android:textAllCaps="true"
        android:textColor="@color/primary"
        android:textSize="@dimen/medium_text_size"
        tools:ignore="MissingPrefix" />
    </LinearLayout>

    <LinearLayout
      android:id="@+id/llLogin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/margin_30"
      android:background="@drawable/yellow_btn_cwhite_bg"
      android:gravity="center_horizontal"
      android:orientation="horizontal"
      android:padding="@dimen/margin_19">

      <ImageView
        android:layout_width="@dimen/margin_20"
        android:layout_height="@dimen/margin_20"
        android:layout_centerVertical="true"
        android:layout_marginTop="2dp"
        android:src="@drawable/ic_login" />

      <TextView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/login__"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/medium_text_size"
        tools:ignore="MissingPrefix" />
    </LinearLayout>

  </LinearLayout>
</LinearLayout>