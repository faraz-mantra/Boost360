<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/img_email"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/domain_email"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_domain_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Business emails (coming soon...)"
                android:textSize="14sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/gray"/>
            <TextView
                android:id="@+id/tv_domain_created_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose your email address through which your customers can contact you. You can select upto 3 email address with you domain."
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>