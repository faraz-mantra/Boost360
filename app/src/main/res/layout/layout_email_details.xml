<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        android:alpha=".6"
        android:layout_marginRight="5dp"
        android:background="@color/light_gray"/>
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coming Soon"
        android:background="@color/light_gray"
        android:textColor="@color/white"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:visibility="gone"
        android:layout_marginTop="5dp"
        android:layout_gravity="right"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/img_email"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/domain_email"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_domain_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Business emails"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/gray"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coming Soon"
                android:textAllCaps="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@color/light_gray"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/tv_domain_created_date"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Choose your email address through which your customers can contact you. You can select upto 3 email address with your domain."
                android:textSize="12sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>