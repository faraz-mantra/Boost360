<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_product_image___"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                style="@style/ProductLabelTextStyle"
                android:text="Accept payment via"/>

            <ImageButton
                android:id="@+id/ib_info_product_image____"
                style="@style/ProductHelpButtonStyle"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:background="@drawable/input_background">

                <TextView
                    android:id="@+id/tv_payment_configuration"
                    style="@style/ProductEditTextStyle"
                    android:drawableRight="@drawable/ic_lead_pencil_grey600_18dp"
                    android:layout_width="match_parent"
                    android:padding="8dp"
                    android:onClick="onPaymentConfigurationClick"
                    android:clickable="true"
                    android:text="Assured Purchase" />

                <LinearLayout
                    android:id="@+id/layout_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_10"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/margin_5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/layout_product_image"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal" >

                                <TextView
                                    style="@style/ProductLabelTextStyle"
                                    android:text="Package Weight"/>

                                <ImageButton
                                    android:id="@+id/ib_info_product_image"
                                    style="@style/ProductHelpButtonStyle"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="1dp"
                                android:background="@drawable/input_background"
                                android:orientation="horizontal" >

                                <Spinner
                                    android:id="@+id/spinner_cod_availability__"
                                    style="@style/ProductSpinnerStyle"
                                    android:layout_weight="1"
                                    android:background="@color/spinner_grey_background"
                                    android:entries="@array/stock_options" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/secondaryLightTextColor"/>

                                <EditText
                                    android:id="@+id/edit_cod_max__qty__"
                                    style="@style/ProductEditTextStyle"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:digits="0123456789."
                                    android:hint="XXXX"
                                    android:background="@null" />

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/layout_product_image____"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal" >

                                <TextView
                                    style="@style/ProductLabelTextStyle"
                                    android:text="Package Length"/>

                                <ImageButton
                                    android:id="@+id/ib_info_product_image___"
                                    style="@style/ProductHelpButtonStyle"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="1dp"
                                android:background="@drawable/input_background"
                                android:orientation="horizontal" >

                                <Spinner
                                    android:id="@+id/spinner_cod_availability"
                                    style="@style/ProductSpinnerStyle"
                                    android:layout_weight="1"
                                    android:background="@color/spinner_grey_background"
                                    android:entries="@array/stock_options" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/secondaryLightTextColor"/>

                                <EditText
                                    android:id="@+id/edit_cod_max__qty"
                                    style="@style/ProductEditTextStyle"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:digits="0123456789."
                                    android:hint="XXXX"
                                    android:background="@null" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/margin_5"
                        android:orientation="horizontal" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/margin_5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/layout_product_image________"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal" >

                                <TextView
                                    style="@style/ProductLabelTextStyle"
                                    android:text="Package Height"/>

                                <ImageButton
                                    android:id="@+id/ib_info_product_image_______"
                                    style="@style/ProductHelpButtonStyle"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="1dp"
                                android:background="@drawable/input_background"
                                android:orientation="horizontal" >

                                <Spinner
                                    android:id="@+id/spinner_cod_availability______"
                                    style="@style/ProductSpinnerStyle"
                                    android:layout_weight="1"
                                    android:background="@color/spinner_grey_background"
                                    android:entries="@array/stock_options" />

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/secondaryLightTextColor"/>

                                <EditText
                                    android:id="@+id/edit_cod_max__qty_______"
                                    style="@style/ProductEditTextStyle"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:digits="0123456789."
                                    android:hint="XXXX"
                                    android:background="@null" />

                            </LinearLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/layout_product_image_______"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="horizontal" >

                                <TextView
                                    style="@style/ProductLabelTextStyle"
                                    android:text="Package Thickness"/>

                                <ImageButton
                                    android:id="@+id/ib_info_product_image_____"
                                    style="@style/ProductHelpButtonStyle"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:padding="1dp"
                                android:background="@drawable/input_background"
                                android:orientation="horizontal" >

                                <Spinner
                                    android:id="@+id/spinner_cod_availability___"
                                    style="@style/ProductSpinnerStyle"
                                    android:layout_weight="1"
                                    android:background="@color/spinner_grey_background"
                                    android:entries="@array/stock_options"/>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/secondaryLightTextColor"/>

                                <EditText
                                    android:id="@+id/edit_cod_max__qty______"
                                    style="@style/ProductEditTextStyle"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:digits="0123456789."
                                    android:hint="XXXX"
                                    android:background="@null" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>