<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="17dp"
    android:background="@color/white"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="2dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_gravity="center"
        android:layout_width="110dp"
        android:layout_height="110dp">
        <ImageView
            android:id="@+id/iv_products"
            android:layout_width="110dp"
            android:foreground="@color/black"
            android:alpha="0.3"
            android:layout_height="110dp" />
        <TextView
            android:id="@+id/tv_num_of_items"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="12sp"
            android:background="@drawable/items_num_bg"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="3 Items"/>
    </RelativeLayout>
    
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_order_status_tag"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Fresh"
            android:textSize="12sp"
            android:background="@drawable/fresh_order_text_bg"
            android:textColor="#339112"
            android:gravity="center"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/tv_order_id"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AD310817FG6T"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/tv_order_total_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INR 7,000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="2dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date:"
                android:gravity="center"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/tv_order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31/08/2017"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="2dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exp. Deliv. Date:"
                android:gravity="center"
                android:padding="2dp"/>

            <TextView
                android:id="@+id/tv_exp_deliv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="31/08/2017"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="3dp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>