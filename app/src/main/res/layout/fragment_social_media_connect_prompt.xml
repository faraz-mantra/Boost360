<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:alpha="0.9"
            app:srcCompat="@drawable/ic_content_sharing"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:id="@+id/facebook_analytics_connect_text1"
            android:text="@string/social_media_connect_prompt"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="18sp"
            android:paddingStart="20dp"
            android:paddingRight="20dp"
            android:background="@drawable/rounded_corner_pre_signup"
            android:text="@string/get_started_"
            android:layout_marginTop="5dp"
            android:id="@+id/connect_btn"/>
    </LinearLayout>

</LinearLayout>