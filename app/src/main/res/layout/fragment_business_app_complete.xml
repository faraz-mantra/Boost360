<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="30dp">

      <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

        <ImageView
          android:id="@+id/app_logo"
          android:layout_width="90dp"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom|center_horizontal"
          android:adjustViewBounds="true"
          android:scaleType="fitCenter"
          android:src="@drawable/studio" />
      </androidx.cardview.widget.CardView>

      <TextView
        android:id="@+id/textcharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:text="@string/a"
        android:textAllCaps="true"
        android:textColor="@color/primary_color"
        android:textSize="80sp"
        android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:gravity="center_vertical"
      android:orientation="vertical">

      <TextView
        android:id="@+id/android_app"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="@string/android_app"
        app:drawableStartCompat="@drawable/android_green" />

      <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="@string/thinking_ink"
        android:textSize="18sp"
         android:fontFamily="@font/semi_bold" />
    </LinearLayout>

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="#F5F5F5">

    <Button
      android:id="@+id/preview_app"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_gravity="center_vertical"
      android:layout_marginStart="10dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="2.5dp"
      android:layout_marginBottom="10dp"
      android:layout_weight="1"
      android:background="@drawable/round_corner_white_background"
      android:drawableStart="@drawable/business_eye"
      android:paddingStart="15dp"
      android:paddingRight="15dp"
      android:text="@string/preview"
      android:textColor="@color/business_button_gray"
      android:textSize="12sp" />

    <Button
      android:id="@+id/open_app"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginStart="2.5dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="2.5dp"
      android:layout_marginBottom="10dp"
      android:layout_weight="1"
      android:background="@drawable/round_corner_white_background"
      android:drawableStart="@drawable/download"
      android:paddingStart="15dp"
      android:paddingRight="15dp"
      android:text="@string/open_app"
      android:textColor="@color/business_button_gray"
      android:textSize="12sp" />

    <Button
      android:id="@+id/share_app"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginStart="2.5dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="10dp"
      android:layout_weight="1"
      android:background="@drawable/round_corner_white_background"
      android:drawableStart="@drawable/sharing"
      android:paddingStart="10dp"
      android:paddingRight="10dp"
      android:text="@string/share_app"
      android:textColor="@color/business_button_gray"
      android:textSize="12sp" />
  </LinearLayout>
</LinearLayout>