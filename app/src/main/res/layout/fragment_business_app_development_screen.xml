<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingEnd="20dp"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:paddingRight="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:text="A"
                    android:visibility="gone"
                    android:gravity="bottom"
                    android:id="@+id/textcharacter"
                    android:textColor="@color/primary_color"
                    android:textSize="80sp"
                    android:textAllCaps="true"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">
                    <ImageView
                        android:id="@+id/app_logo"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:scaleType="fitXY"
                        android:src="@drawable/studio"/>
                </android.support.v7.widget.CardView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="bottom"
                android:id="@+id/anim_parent"
                android:layout_marginStart="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:drawablePadding="5dp"
                    android:drawableStart="@drawable/android_green"
                    android:id="@+id/android_app"
                    android:text="@string/android_app"
                    android:drawableLeft="@drawable/android_green" />
                <TextView
                    android:id="@+id/app_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:ellipsize="marquee"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:layout_margin="5dp"
                    android:text="Thinking Ink" />

                <ImageView
                    android:id="@+id/background_image_view"
                    android:layout_width="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_height="20dp"/>
                   <!-- <ImageView
                        android:layout_width="match_parent"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent"/>-->
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textview_congrates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/congratulation_android_business_app_development"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#F5F5F5"
        android:id="@+id/button_layout"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/business_button_black"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:id="@+id/preview_button"
            android:layout_height="match_parent"
            android:text="@string/tips_for_business_app" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:paddingStart="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="2.5dp"
            android:id="@+id/site_health"
            android:drawableStart="@drawable/site_health"
            android:background="@color/business_button_black"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:text="@string/increase_our_site_health"
            android:drawableLeft="@drawable/site_health"
            android:paddingLeft="5dp"
            android:layout_marginLeft="2.5dp" />
    </LinearLayout>
</LinearLayout>