<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:gravity="center">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_web_url"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="You haven't linked a domain to your website yet. Please link a domain to your website to engage more traffic and get more customers."/>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">
        <RadioButton
            android:id="@+id/rb_book_a_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:checked="true"
            android:text="Book new domain (included in your package)"/>
        <RadioButton
            android:id="@+id/rb_link_a_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray"
            android:text="Link a existing domain"/>

    </RadioGroup>
    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/ria_positive_btn"
        android:layout_margin="15dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:text="@string/proceed"/>
</LinearLayout>