<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nowfloats.AccrossVerticals.Testimonials.TestimonialsFeedbackActivity">

    <include
        android:id="@+id/app_bar"
        layout="@layout/new_custome_app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Add image"
                android:textSize="@dimen/_11sdp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_primary_image"
                android:layout_width="180dp"
                android:layout_height="130dp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:clickable="true"
                android:padding="2dp"
                app:cardCornerRadius="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_image_placeholder">

                    <ImageView
                        android:id="@+id/iv_primary_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop" />

                    <ImageButton
                        android:id="@+id/ib_remove_product_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="@dimen/margin_5"
                        android:visibility="gone"
                        app:srcCompat="@drawable/ic_remove" />

                </FrameLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

            <EditText
                android:id="@+id/user_name"
                style="@style/EditTextCustomeStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg_elevated"
                android:elevation="@dimen/_2sdp"
                android:hint="Enter Name" />

            <EditText
                android:id="@+id/company_title"
                style="@style/EditTextCustomeStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg_elevated"
                android:elevation="@dimen/_2sdp"
                android:hint="Enter Company Title"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review Title"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/_11sdp" />

            </LinearLayout>

            <EditText
                android:id="@+id/review_title"
                style="@style/EditTextCustomeStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_bg_elevated"
                android:elevation="@dimen/_2sdp"
                android:hint="Review Title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Review Description"
                        android:textSize="@dimen/_11sdp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/_11sdp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/description_char_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:text="(200 Characters)"
                    android:textColor="#D8D8D8"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <EditText
                android:id="@+id/review_description"
                style="@style/EditTextCustomeStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:background="@drawable/edittext_bg_elevated"
                android:elevation="@dimen/_2sdp"
                android:gravity="top"
                android:hint="Enter Description"
                android:maxLength="200" />


            <TextView
                android:id="@+id/save_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/orange_button_click_effect"
                android:elevation="@dimen/_2sdp"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:text="save"
                android:textAllCaps="true"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>