<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="15dp">

  <TextView
    android:id="@+id/tv_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:text="impressions"
    android:textSize="10sp"
    app:layout_constraintStart_toEndOf="@+id/layout_img"
    app:layout_constraintTop_toTopOf="@+id/layout_img" />

  <TextView
    android:id="@+id/tv_count"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="0"
    android:textColor="@color/gray_light"
    android:textSize="16sp"
     android:fontFamily="@font/semi_bold"
    app:layout_constraintBottom_toBottomOf="@+id/layout_img"
    app:layout_constraintStart_toStartOf="@+id/tv_title"
    app:layout_constraintTop_toBottomOf="@+id/tv_title" />

  <FrameLayout
    android:id="@+id/layout_img"
    android:layout_width="35dp"
    android:layout_height="35dp"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="20dp">

    <ImageView
      android:id="@+id/visitors_image_bg"
      android:layout_width="35dp"
      android:layout_height="35dp"
      app:srcCompat="@drawable/circle" />

    <ImageView
      android:id="@+id/image1"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      app:srcCompat="@drawable/ic_avg_position" />
  </FrameLayout>


  <ImageView
    android:id="@+id/img_info"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:padding="5dp"
    app:layout_constraintBottom_toBottomOf="@+id/layout_img"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="@+id/layout_img"
    app:srcCompat="@drawable/icon_info" />
</androidx.constraintlayout.widget.ConstraintLayout>