<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/appLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="5dp"
            android:orientation="vertical"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:textSize="15sp"
                android:text="@string/on_click_following_field_redirect"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:textColor="@color/main_text_color"
                android:layout_marginBottom="5dp"
                android:text="App icon"/>
            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:cardCornerRadius="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="18dp"
                app:cardBackgroundColor="#ECECEC"
                app:cardElevation="5dp"
                android:background="#ECECEC">
                <ImageView
                    android:id="@+id/app_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_product_image" />
            </android.support.v7.widget.CardView>

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_color"
                android:background="@android:color/transparent"
                android:textSize="20sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:inputType="none"
                fontPath="Roboto-Light.ttf"
                tools:ignore="MissingPrefix"
                android:textColorHint="@color/primaryColor"
                android:hint="App name"
                app:met_floatingLabel="highlight"
                app:met_primaryColor="@color/primaryColor"
                app:met_singleLineEllipsis="true" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/app_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_color"
                android:textSize="15sp"
                fontPath="Roboto-Light.ttf"
                tools:ignore="MissingPrefix"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/primaryColor"
                android:hint="Email address"
                android:inputType="none"
                app:met_floatingLabel="highlight"
                app:met_singleLineEllipsis="true"
                app:met_primaryColor="@color/primaryColor" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/app_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryColor"
                android:hint="Phone number"
                android:inputType="none"
                android:textColorHint="@color/primaryColor"
                android:layout_marginBottom="5dp"
                android:textSize="15sp"
                fontPath="Roboto-Light.ttf"
                tools:ignore="MissingPrefix"
                app:met_floatingLabel="highlight"
                app:met_singleLineEllipsis="true"
                app:met_primaryColor="@color/primaryColor" />

        <!--    <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/app_short_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_color"
                android:textSize="15sp"
                fontPath="Roboto-Light.ttf"
                tools:ignore="MissingPrefix"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/primaryColor"
                android:hint="Short description (optional)"
                app:met_floatingLabel="highlight"
                android:maxLines="2"
                app:met_primaryColor="@color/primaryColor"
                tools:targetApi="m">

            </com.rengwuxian.materialedittext.MaterialEditText>-->

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/app_long_disc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/main_text_color"
                android:textSize="15sp"
                fontPath="Roboto-Light.ttf"
                tools:ignore="MissingPrefix"
                android:inputType="none"
                android:layout_marginBottom="10dp"
                android:textColorHint="@color/primaryColor"
                android:hint="Long description"
                app:met_floatingLabel="highlight"
                android:maxLines="4"
                app:met_primaryColor="@color/primaryColor" />
            <!--<CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/app_checkbox"
                android:textColor="@color/main_text_color"
                android:layout_marginBottom="25dp"
                android:text="@string/details_will_used_to_create_custoer_app"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/app_btn_save"
                android:background="@color/primaryColor"
                android:text="Save"
                android:layout_gravity="bottom"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="13dp"
                android:textColor="@color/white"
                android:layout_marginRight="13dp" />-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>