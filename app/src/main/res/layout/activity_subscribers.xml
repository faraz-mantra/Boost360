<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#ffffff"
  tools:context="com.nowfloats.Analytics_Screen.SubscribersActivity">

  <include
    android:id="@+id/app_bar"
    layout="@layout/subscriber_toolbar" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/lv_subscribers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/app_bar"></androidx.recyclerview.widget.RecyclerView>

  <ProgressBar
    android:id="@+id/pb_subscriber"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:visibility="gone" />

  <LinearLayout
    android:id="@+id/emplty_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="gone">

    <ImageView
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:src="@drawable/no_subscribers" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="3dp"
      android:text="@string/uh_oh_you_have_no_subscribers"
      android:textSize="20sp"
       android:fontFamily="@font/semi_bold" />

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/subscriber_second_text"
      android:textSize="15sp" />
  </LinearLayout>

</RelativeLayout>