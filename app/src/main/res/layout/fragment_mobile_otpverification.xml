<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:background="#fafafa"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
     >


        <ImageView

            android:id="@+id/im_back_button"
            android:layout_width="@dimen/image_width_login"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/back_button_2" />


        <TextView
            android:id="@+id/tv_headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Almost there..."
            android:textColor="@color/yellow"
            android:textSize="30sp" />


        <LinearLayout
            android:id="@+id/ll_1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_hint_text"
                android:text="Enter the 5-digit code you recieved on your registered mobile number"
                android:textColor="@color/gray" />


            <com.mukesh.OtpView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:inputType="number"
                android:itemBackground="#96ffffff"
                android:textColor="@android:color/black"
                app:itemCount="6"
                app:lineColor="@color/grey"
                app:viewType="line"
                />

        </LinearLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="30dp"

        android:orientation="horizontal">

        <TextView
            android:textColor="#4a4a4a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Didnâ€™t get the code? Resend" />


        <androidx.cardview.widget.CardView
            android:id="@+id/nextButton"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:elevation="5dp"
            android:orientation="vertical"
            app:cardBackgroundColor="@color/primaryColor"
            app:cardCornerRadius="24dp">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_bold"
                    android:gravity="center"
                    android:text="@string/next"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="8dp"
                    app:srcCompat="@drawable/ic_arrow_right_white" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</FrameLayout>