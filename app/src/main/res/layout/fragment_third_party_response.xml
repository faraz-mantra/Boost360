<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp">
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mr. Gopal Chandwani, +918095923954, Harlur road belandur"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Today, 02:23 PM"
                android:fontFamily="sans-serif"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/btn_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_transparent"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="call"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TYPE YOUR RESPONSE..."
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dear Shahjad, Thanks for getting in touch with us. Regarding your query, below are few options which you might like."
            android:fontFamily="sans-serif"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarSize="5dp"
            android:inputType="textCapSentences|textMultiLine"
            android:textColor="#676767"
            android:maxLines="6"
            android:background="@null"
            android:textSize="15sp"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/btn_add_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_plus"
                android:background="@drawable/black_round_corner"
                android:textColor="@color/white"
                android:padding="8dp"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="PRODUCTS"/>
            <TextView
                android:id="@+id/btn_add_updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_plus"
                android:background="@drawable/black_round_corner"
                android:textColor="@color/white"
                android:padding="8dp"
                android:drawablePadding="10dp"
                android:textStyle="bold"

                android:textSize="12sp"
                android:gravity="center"
                android:text="UPDATES"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_suggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_btn_bg"
        android:textColor="@drawable/yellow_btn_text_color"
        android:gravity="center"
        android:padding="12dp"
        android:textAllCaps="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="SEND"/>
</LinearLayout>