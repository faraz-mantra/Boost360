<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="15dp">
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mr_gopal_chandwani_918095923954_harlur_road_belandur"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp">
            <ImageView
                android:id="@+id/img_source"
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_marginEnd="5dp"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/today_02_23_pm_"
                android:fontFamily="sans-serif"
                android:layout_marginEnd="15dp"
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/white"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/btn_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_transparent"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="@string/call"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="45dp"
        android:paddingRight="45dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type_your_response"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/et_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hi_thanks_for_getting_in_touch_with_us_regarding_your_query_below_are_few_options_which_you_might_like"
            android:fontFamily="sans-serif"
            android:scrollbars="vertical"
            android:scrollbarStyle="insideOverlay"
            android:scrollbarSize="5dp"
            android:inputType="textCapSentences|textMultiLine"
            android:textColor="#676767"
            android:maxLines="6"
            android:background="@null"
            android:textSize="15sp"
            android:layout_marginTop="5dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">
            <TextView
                android:id="@+id/btn_add_products"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_round_corner"
                android:textColor="@color/white"
                android:padding="8dp"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:text="@string/products"/>
            <TextView
                android:id="@+id/btn_add_updates"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/black_round_corner"
                android:textColor="@color/white"
                android:padding="8dp"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center"
                android:text="@string/updates"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_suggestions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/btn_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_btn_bg"
        android:textColor="@drawable/yellow_btn_text_color"
        android:gravity="center"
        android:padding="12dp"
        android:textAllCaps="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:text="@string/send"/>
</LinearLayout>