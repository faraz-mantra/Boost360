<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    tools:context="com.nowfloats.Product_Gallery.fragments.ShippingCalculatorFragment">

    <LinearLayout
        android:background="#808080"
        android:layout_width="fill_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shipping Metric"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="1dp" />
        <ImageView
            android:id="@+id/iv_close"
            android:visibility="visible"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="@color/white"
            android:layout_marginRight="16dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_close_black_24dp"/>

    </LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_color"
            android:textSize="15sp"
            android:inputType="number|numberDecimal"
            fontPath="Roboto-Light.ttf"
            tools:ignore="MissingPrefix"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/primaryColor"
            android:hint="Length (In cm)"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primaryColor"
            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_color"
            android:textSize="15sp"
            android:inputType="number|numberDecimal"
            fontPath="Roboto-Light.ttf"
            tools:ignore="MissingPrefix"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/primaryColor"
            android:hint="Width (In cm)"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primaryColor"
            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_color"
            android:textSize="15sp"
            android:inputType="number|numberDecimal"
            fontPath="Roboto-Light.ttf"
            tools:ignore="MissingPrefix"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/primaryColor"
            android:hint="Height (In cm)"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primaryColor"
            app:met_singleLineEllipsis="true" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_color"
            android:textSize="15sp"
            android:inputType="number|numberDecimal"
            fontPath="Roboto-Light.ttf"
            tools:ignore="MissingPrefix"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/primaryColor"
            android:hint="Weight (In Kgs)"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/primaryColor"
            app:met_singleLineEllipsis="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Charges:"/>
            <TextView
                android:layout_marginLeft="7dp"
                android:id="@+id/tv_shipping_charge"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INR 0"/>
        </LinearLayout>

        <Button
            android:layout_marginTop="15dp"
            android:id="@+id/btn_calculate_shipping_charges"
            android:layout_width="wrap_content"
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:layout_gravity="center_horizontal"
            android:text="Calculate Shipping Charges"/>
        <Button
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/btn_save_metrics"
            android:background="@drawable/btn_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Save Metrics"/>

    </LinearLayout>



</LinearLayout>
