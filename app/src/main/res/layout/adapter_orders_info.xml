<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/tv_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/name_colon"
        android:layout_marginStart="32dp"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name"
        android:layout_marginStart="4dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/tv_name_text"/>

    <TextView
        android:id="@+id/tv_phone_number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_number_colon"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_name"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_text"
        tools:text="Phone Number"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tv_phone_number_text"/>

    <TextView
        android:id="@+id/tv_location_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="@string/location_colon"
        android:layout_marginStart="32dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_number"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_phone_number_text"
        tools:text="Location"
        android:layout_marginStart="4dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/tv_location_text"/>

    <TextView
        android:id="@+id/tv_order_quantity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginStart="32dp"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_location"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/order_quantity_colon"/>

    <TextView
        android:id="@+id/tv_order_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_location_text"
        tools:text="Order Quantity"
        android:layout_marginStart="4dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/tv_order_quantity_text"/>

    <TextView
        android:id="@+id/tv_order_value_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/tv_order_quantity"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/order_value_colon"/>

    <TextView
        android:id="@+id/tv_order_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_order_quantity_text"
        tools:text="Order Value"
        android:layout_marginStart="4dp"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/tv_order_value_text"/>

    <TextView
        android:id="@+id/tv_order_status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_order_value_text"
        android:text="@string/status_colon"
        android:textSize="15sp"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_order_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_order_value_text"
        tools:text="Status"
        android:textSize="15sp"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@id/tv_order_status_text"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/tv_order_status_text"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="32dp"
        tools:text="@string/date" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/tv_date"/>

</androidx.constraintlayout.widget.ConstraintLayout>