<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        fontPath="Roboto-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:gravity="center"
        android:padding="@dimen/margin_15"
        android:text="@string/domain_configuration"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/xlarge_text_size"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/btnBookDomain"
        fontPath="Roboto-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_20"
        android:background="@drawable/yellow_btn_hover_bg"
        android:elevation="5dp"
        android:padding="@dimen/margin_10"
        android:text="@string/book_a_new_domain"
        android:textAllCaps="false"
        android:textColor="@drawable/yellow_btn_hover_text_color"
        android:textSize="@dimen/large_text_size"
        android:visibility="visible"
        tools:ignore="MissingPrefix" />

    <TextView
        fontPath="Roboto-Medium.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="or"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="@dimen/large_text_size"
        tools:ignore="MissingPrefix" />

    <Button
        android:id="@+id/btnLinkDomain"
        fontPath="Roboto-Medium.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_20"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"
        android:background="@drawable/yellow_btn_bg"
        android:elevation="5dp"
        android:padding="@dimen/margin_10"
        android:text="@string/already_have_a_domain"
        android:textAllCaps="false"
        android:textColor="@drawable/yellow_btn_text_color"
        android:textSize="@dimen/large_text_size"
        android:visibility="visible"
        tools:ignore="MissingPrefix" />
</LinearLayout>