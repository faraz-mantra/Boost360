<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  app:cardBackgroundColor="@color/c_a3a3a3"
  app:cardCornerRadius="2dp"
  app:cardElevation="2dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingStart="10dp"
      android:paddingTop="5dp"
      android:paddingRight="10dp"
      android:paddingBottom="5dp">

      <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Contact information"
        android:textColor="@color/white"
        android:textSize="13sp" />

      <TextView
        android:id="@+id/tv_contact_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/black_round_corner"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="Edit"
        android:textColor="@color/white"
        android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      android:orientation="vertical"
      android:padding="10dp">

      <TextView
        android:id="@+id/tv_primary_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_main_number"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="7dp"
        android:text=""
        android:textColor="@color/gray_light"
        android:textSize="12sp" />

      <TextView
        android:id="@+id/tv_other_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_call"
        android:drawablePadding="7dp"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/gray_light"
        android:textSize="12sp" />

      <TextView
        android:id="@+id/tv_website_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_web_url"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="7dp"
        android:text=""
        android:textColor="@color/gray_light"
        android:textSize="12sp" />

      <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_email"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:padding="7dp"
        android:text=""
        android:textColor="@color/gray_light"
        android:textSize="12sp" />

      <TextView
        android:id="@+id/tv_facebook_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_facebook_logo"
        android:drawablePadding="7dp"
        android:gravity="center"
        android:padding="7dp"
        android:textColor="@color/gray_light"
        android:textSize="12sp" />

    </LinearLayout>
  </LinearLayout>


</androidx.cardview.widget.CardView>