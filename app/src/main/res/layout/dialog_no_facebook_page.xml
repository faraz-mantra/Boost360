<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:padding="30dp"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/facebook_page2"/>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fb_page_creation_title"
        android:textSize="18sp"
        android:gravity="center"
        android:padding="2dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/fb_page_creation_message" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:padding="8dp"
        android:background="@drawable/blue_round_corner"
        android:layout_marginTop="24dp"
        android:id="@+id/create_page"
        android:text="@string/get_facebook_page"/>

</LinearLayout>