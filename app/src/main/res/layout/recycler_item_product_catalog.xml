    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="4dp"
        app:cardElevation="4dp" >

        <RelativeLayout
            android:id="@+id/item_category_root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:paddingTop="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_10"
            android:background="?attr/selectableItemBackground" >

            <android.support.v7.widget.CardView
                android:id="@+id/card_thumbnail"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginRight="12dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp" >

                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop" />

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="bottom"
                android:layout_toRightOf="@+id/card_thumbnail" >

                <TextView
                    android:id="@+id/label_missing_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="#d0021b"
                    android:textSize="14sp"
                    android:paddingBottom="5dp"
                    android:drawablePadding="5dp"
                    android:drawableLeft="@drawable/ic_info_red"
                    android:text="Missing Information"/>

                <TextView
                    android:id="@+id/label_brand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/primaryColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/label_missing_info"
                    android:paddingBottom="5dp"
                    android:text="Watch by Fastrack"/>

                <TextView
                    android:id="@+id/label_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_below="@+id/label_brand"
                    android:text="Fastrack Bare Basic Watch"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/label_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card_thumbnail"
                android:textColor="@color/secondaryTextColor"
                android:textSize="14sp"
                android:maxLines="2"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:ellipsize="end"
                android:text="This is a wedding makeup description"/>

            <View
                android:id="@+id/dotted_line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layerType="software"
                android:layout_below="@+id/label_description"
                android:background="@drawable/dotted_line"/>

           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dotted_line"
                android:orientation="horizontal"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/label_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/secondaryLightTextColor"
                    android:textSize="13sp"
                    android:text="Price: "
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/label_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="14sp"
                    android:text="INR 0"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/label_base_price"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:textColor="@color/secondaryLightTextColor"
                    android:textSize="14sp"
                    android:text="INR 0"
                    android:layout_weight="1"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    android:gravity="center_vertical" />

                <Button
                    android:id="@+id/button_edit"
                    android:layout_width="40dp"
                    android:layout_height="25dp"
                    android:textColor="@color/secondaryLightTextColor"
                    android:background="@android:color/transparent"
                    android:textSize="12sp"
                    android:layout_gravity="end"
                    android:gravity="center_vertical|end"
                    android:text="Edit"/>

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

