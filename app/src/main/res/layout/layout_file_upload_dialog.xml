<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="210dp"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <com.nowfloats.CustomWidget.roboto_md_60_212121
    android:id="@+id/textview_heading"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:layout_marginStart="26dp"
    android:layout_marginTop="26dp"
    android:text="@string/upload_featured_image"
    android:textColor="#878787" />

  <LinearLayout
    android:id="@+id/cameraimage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="26dp"
    android:layout_marginTop="33dp"
    android:orientation="horizontal">

    <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical">


      <ImageView
        android:id="@+id/pop_up_camera_imag"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:src="@drawable/circle_bakground" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/ic_camera_lens" />
    </FrameLayout>

    <com.nowfloats.CustomWidget.roboto_lt_24_212121
      android:id="@+id/alert_message_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginStart="18dp"
      android:layout_weight=".6"
      android:text="@string/using_camera"
      android:textColor="#878787" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/galleryimage"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="26dp"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical">


      <ImageView
        android:id="@+id/pop_up_gallery_img"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:src="@drawable/circle_bakground" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:src="@drawable/featured_gallery" />

    </FrameLayout>

    <com.nowfloats.CustomWidget.roboto_lt_24_212121
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginStart="18dp"
      android:layout_weight=".6"
      android:text="@string/from_gallery"
      android:textColor="#878787" />

  </LinearLayout>

  <LinearLayout
    android:id="@+id/filepicker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="26dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">

    <FrameLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical">


      <ImageView
        android:id="@+id/pop_up_file_img"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:src="@drawable/circle_bakground" />

      <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center"
        android:src="@drawable/featured_gallery" />

    </FrameLayout>

    <com.nowfloats.CustomWidget.roboto_lt_24_212121
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginStart="18dp"
      android:layout_weight=".6"
      android:text="@string/from_file_picker"
      android:textColor="#878787" />

  </LinearLayout>

</LinearLayout>