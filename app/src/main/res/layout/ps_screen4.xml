<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/white_label_style"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
 >
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@drawable/screen4"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="@dimen/pre_screen_linear_layout_top_margin"
        android:layout_marginBottom="20dp" >



        <com.nowfloats.CustomWidget.GothamTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ps_sc4_lbl1"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/ps_lbl1_size"
            android:layout_marginTop="@dimen/pre_screen_top_margin_text1"
            android:layout_gravity="center_horizontal"
            />
        <com.nowfloats.CustomWidget.GothamTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ps_sc4_lbl2"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/ps_lbl2_size"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/ps_lbl1_mb"
            />
        <com.nowfloats.CustomWidget.GothamTextView
				android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/ps_sc4_lbl3"
		        android:textColor="@color/black"
		        android:lineSpacingExtra="2dp"
		        android:textSize="@dimen/ps_lbl3_size"
		        android:layout_gravity="center_horizontal"
		        android:gravity="center_horizontal"
		        android:layout_marginTop="@dimen/pre_screen_top_margin_text2"
		        android:paddingStart="@dimen/pre_s2_description_paddingLeft"
		        android:paddingRight="@dimen/pre_s2_description_paddingRight"
                         />
            
    </LinearLayout>

</RelativeLayout>
