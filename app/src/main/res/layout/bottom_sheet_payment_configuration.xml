<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:behavior_hideable="true"
        app:behavior_peekHeight="0dp"
        android:background="#747474"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_20"
            android:paddingRight="@dimen/margin_20"
            android:paddingTop="@dimen/margin_10"
            android:paddingBottom="@dimen/margin_10" >

            <TextView
                android:id="@+id/label_payment_configuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment Configuration"
                android:textSize="20sp"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/label_variants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="for variant #1 "
                android:textSize="14sp"
                android:paddingRight="10dp"
                android:textStyle="bold"
                android:layout_below="@+id/label_payment_configuration"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="of Fastrack Bare Basic Watch"
                android:textSize="14sp"
                android:layout_below="@+id/label_payment_configuration"
                android:layout_toRightOf="@+id/label_variants"
                android:textColor="#c9c9c9" />

        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_20"
                android:paddingRight="@dimen/margin_20"
                android:paddingTop="@dimen/margin_10"
                android:paddingBottom="@dimen/margin_20"
                android:background="@android:color/white" >

                <LinearLayout
                    android:id="@+id/layout_product_image__"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Payment and delivery mode"/>

                    <ImageButton
                        android:id="@+id/ib_info_product_image___"
                        style="@style/ProductHelpButtonStyle"/>

                </LinearLayout>

                <!--
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/grey_rounded_background"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/label_payment_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Assured Purchase"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/primaryTextColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A Boost service which ensures a secure payment and safe delivery of this product"
                        android:textSize="14sp"
                        android:textColor="@color/secondaryTextColor" />

                </LinearLayout>
                -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background = "@drawable/grey_rounded_spinner_background" >

                    <Spinner
                        android:id="@+id/spinner_payment_option"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_product_image"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Package pickup address"/>

                    <ImageButton
                        android:id="@+id/ib_info_product_image"
                        style="@style/ProductHelpButtonStyle"/>

                </LinearLayout>

                <Spinner
                    android:id="@+id/spinner_pickup_address"
                    style="@style/ProductSpinnerStyle"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@drawable/input_background"
                    android:entries="@array/stock_options" />

                <LinearLayout
                    android:id="@+id/layout_product_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Bank account number for payment receipt" />

                    <ImageButton
                        android:id="@+id/ib_info_product_description"
                        style="@style/ProductHelpButtonStyle" />

                </LinearLayout>

                <EditText
                    android:gravity="top"
                    android:layout_marginTop="@dimen/margin_5"
                    android:hint="XXXXXXXXXX"
                    style="@style/ProductEditTextStyle" />

                <LinearLayout
                    android:id="@+id/layout_product_description__"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Branch Code (IFSC)" />

                    <ImageButton
                        android:id="@+id/ib_info_product_description_"
                        style="@style/ProductHelpButtonStyle" />

                </LinearLayout>

                <EditText
                    android:gravity="top"
                    android:layout_marginTop="@dimen/margin_5"
                    android:hint="XXXXXX"
                    style="@style/ProductEditTextStyle" />

                <LinearLayout
                    android:id="@+id/layout_product_description_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/ProductLabelTextStyle"
                        android:text="Your tax ID/Number (GST)" />

                    <ImageButton
                        android:id="@+id/ib_info_product_description__"
                        style="@style/ProductHelpButtonStyle" />

                </LinearLayout>

                <EditText
                    android:gravity="top"
                    android:layout_marginTop="@dimen/margin_5"
                    android:hint="XXXXXX"
                    style="@style/ProductEditTextStyle" />

                <View
                    android:id="@+id/dotted_line"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_20"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@drawable/dotted_line"/>

                <LinearLayout
                    android:id="@+id/layout_product_description___"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal" >

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="12sp"
                        android:text="I agree that boost will keep 3% of the final cart value as convenience fee. (Towards payment and delivery enablement)"/>

                </LinearLayout>

                <View
                    android:id="@+id/dotted_line_"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginTop="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/margin_15"
                    android:background="@drawable/dotted_line"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:minWidth="100dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/secondaryTextColor"
                        android:layout_toLeftOf="@+id/btn_save_info"
                        android:textSize="14sp"
                        android:text="CANCEL" />

                    <Button
                        android:id="@+id/btn_save_info"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:minWidth="100dp"
                        android:background="@color/primaryColor"
                        android:textColor="@android:color/white"
                        android:layout_alignParentRight="true"
                        android:textSize="14sp"
                        android:text="SAVE INFO" />

                </RelativeLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</layout>