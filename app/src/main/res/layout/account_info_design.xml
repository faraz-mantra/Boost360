<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@color/screen_bg">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    fontPath="Roboto-Light.ttf"
                    android:text="@string/plan_name"
                    android:textColor="@color/text_color_brown"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    fontPath="Roboto-Bold.ttf"
                    android:singleLine="true"
                    android:textColor="@color/light_black"
                    android:id="@+id/account_plan_name"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginStart="7dp"
                android:background="@color/grey" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    fontPath="Roboto-Light.ttf"
                    android:text="@string/purchase_date"
                    android:textColor="@color/text_color_brown"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:singleLine="true"
                    fontPath="Roboto-Bold.ttf"
                    android:textColor="@color/light_black"
                    android:id="@+id/account_pur_date"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginStart="7dp"
                android:background="@color/grey" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    fontPath="Roboto-Light.ttf"
                    android:text="@string/expiry_date"
                    android:textColor="@color/text_color_brown"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    fontPath="Roboto-Bold.ttf"
                    android:singleLine="true"
                    android:textColor="@color/light_black"
                    android:id="@+id/account_exp_date"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginStart="7dp"
                android:background="@color/grey" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="7dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    fontPath="Roboto-Light.ttf"
                    android:text="@string/status"
                    android:textColor="@color/text_color_brown"
                    tools:ignore="MissingPrefix" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="14sp"
                        fontPath="Roboto-Bold.ttf"
                        android:singleLine="true"
                        android:text="@string/expired"
                        android:gravity="start"
                        android:textColor="@color/green"
                        android:id="@+id/account_status"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:textSize="14sp"
                        fontPath="Roboto-Regular.ttf"
                        android:singleLine="true"
                        android:gravity="center"
                        android:padding="1dp"
                        android:background="@drawable/selector"
                        android:text="@string/renew"
                        android:textColor="@color/white"
                        android:id="@+id/storebtn"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>