<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:padding="10dp">

  <RadioButton
    android:id="@+id/rb_plan"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toStartOf="@+id/tv_plan_name"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <TextView
    android:id="@+id/tv_plan_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/inr_5_000"
     android:fontFamily="@font/semi_bold"
    app:layout_constraintBottom_toBottomOf="@+id/rb_plan"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="@+id/rb_plan" />

  <TextView
    android:id="@+id/tv_plan_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="10dp"
    app:layout_constraintBottom_toBottomOf="@+id/rb_plan"
    app:layout_constraintEnd_toStartOf="@+id/tv_plan_price"
    app:layout_constraintStart_toEndOf="@+id/rb_plan"
    app:layout_constraintTop_toTopOf="@+id/rb_plan" />
</androidx.constraintlayout.widget.ConstraintLayout>