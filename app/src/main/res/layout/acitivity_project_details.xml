<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FBFBFB"
    android:clickable="true"
    android:focusable="true">

    <include
        android:id="@+id/app_bar"
        layout="@layout/new_custome_app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/company_title"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"/>

            <EditText
                android:id="@+id/company_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextCustomeStyle"
                android:hint="@string/enter_company_title"
                android:elevation="@dimen/_2sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/about_company"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"/>


            <EditText
                android:id="@+id/company_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:inputType="textMultiLine"
                style="@style/EditTextCustomeStyle"
                android:hint="@string/enter_company_description_100_characters_max"
                android:textSize="@dimen/_12sdp"
                android:elevation="@dimen/_2sdp"
                android:gravity="top"/>

            <View
                android:id="@+id/dummy_view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:background="@drawable/dotted_line"
                android:layout_marginTop="@dimen/_15sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/client_name"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"/>

            <EditText
                android:id="@+id/client_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextCustomeStyle"
                android:hint="@string/enter_client_name"
                android:elevation="@dimen/_2sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/client_category"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"/>

            <EditText
                android:id="@+id/client_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/EditTextCustomeStyle"
                android:hint="@string/enter_client_category"
                android:elevation="@dimen/_2sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project_client_requirement"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"/>


            <EditText
                android:id="@+id/project_client_requirement"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                style="@style/EditTextCustomeStyle"
                android:hint="@string/enter_description_200_characters_max"
                android:elevation="@dimen/_2sdp"
                android:gravity="top"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/our_approach"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"/>


            <EditText
                android:id="@+id/our_approach"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                style="@style/EditTextCustomeStyle"
                android:hint="@string/enter_description_200_characters_max"
                android:elevation="@dimen/_2sdp"
                android:gravity="top"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/budget"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"/>

                    <EditText
                        android:id="@+id/budget_value"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/EditTextCustomeStyle"
                        android:hint="@string/zero"
                        android:inputType="number"
                        android:elevation="@dimen/_2sdp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/date_of_completion"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"/>

                    <EditText
                        android:id="@+id/date_of_completion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/EditTextCustomeStyle"
                        android:layout_marginStart="0dp"
                        android:hint="@string/_00_00_0000"
                        android:inputType="none"
                        android:focusable="false"
                        android:textSize="@dimen/_12sdp"
                        android:drawableEnd="@drawable/ic_blue_calander"
                        android:elevation="@dimen/_2sdp"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/dummy_view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:background="@drawable/dotted_line"
                android:layout_marginTop="@dimen/_15sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/image_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                tools:listitem="@layout/item_project_details_image"/>

            <RelativeLayout
                android:id="@+id/add_image_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:padding="@dimen/_10sdp"
                android:background="@drawable/all_side_small_curve_grey_bg"
                android:elevation="@dimen/_2sdp">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_camera_outline"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Images"
                    android:fontFamily="@font/open_sans"
                    android:textAllCaps="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/maximum_3"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/grey_400"
                    android:fontFamily="@font/open_sans"/>

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/jpg_png_800x800px"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="end"
                    android:textColor="@color/grey_400"
                    android:fontFamily="@font/open_sans"/>

            </LinearLayout>


            <View
                android:id="@+id/dummy_view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_3sdp"
                android:background="@drawable/dotted_line"
                android:layout_marginTop="@dimen/_15sdp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:text="@string/status"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/open_sans"
                android:textColor="@color/common_text_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/completed_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/all_side_small_curve_bg"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center"
                    android:elevation="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/completed_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/completed"
                        android:textStyle="bold"
                        android:textColor="#9ABFFF"
                        android:textSize="@dimen/_8sdp"
                        android:textAllCaps="true" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/inprogress_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/all_side_small_curve_bg"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center"
                    android:layout_marginStart="@dimen/_7sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:elevation="@dimen/_2sdp"
                    android:layout_marginBottom="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/inprogress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/in_progress"
                        android:textStyle="bold"
                        android:textColor="#9ABFFF"
                        android:textSize="@dimen/_8sdp"
                        android:textAllCaps="true" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/withdraw_button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/all_side_small_curve_bg"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center"
                    android:elevation="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/withdraw_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/withdraw"
                        android:textStyle="bold"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#9ABFFF"
                        android:textAllCaps="true" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/save_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/orange_button_click_effect"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/save"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:elevation="@dimen/_2sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>