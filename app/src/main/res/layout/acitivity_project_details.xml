<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FBFBFB"
  android:clickable="true"
  android:focusable="true"
  android:orientation="vertical">

  <include
    android:id="@+id/app_bar"
    layout="@layout/new_custome_app_bar"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_company_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_15sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          android:text="@string/company_title_aster" />

      <EditText
          android:id="@+id/company_title"
          style="@style/EditTextCustomeStyle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:elevation="@dimen/_2sdp"
          android:hint="@string/enter_company_title" />

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_about_company_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_15sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          android:text="@string/about_company_aster" />

      <com.google.android.material.textfield.TextInputLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/_15sdp"
          android:layout_marginVertical="@dimen/size_5"
          app:counterEnabled="true"
          app:counterMaxLength="100"
          app:hintEnabled="false">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/company_description"
            style="@style/EditTextCustomeStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_56sdp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:elevation="@dimen/_2sdp"
            android:gravity="top"
            android:hint="@string/enter_company_description_100_characters_max"
            android:inputType="textMultiLine"
            android:maxLength="100" />
      </com.google.android.material.textfield.TextInputLayout>

      <View
        android:id="@+id/dummy_view1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/dotted_line" />

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_client_name_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_15sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          android:text="@string/client_name_aster" />

      <EditText
        android:id="@+id/client_name"
        style="@style/EditTextCustomeStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"
        android:hint="@string/enter_client_name" />

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_client_category_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_15sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          android:text="@string/client_category_aster" />

      <EditText
        android:id="@+id/client_category"
        style="@style/EditTextCustomeStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_2sdp"
        android:hint="@string/enter_client_category" />

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_project_requirement_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_15sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          android:text="@string/project_client_requirement_aster" />

      <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/size_5"
        app:counterEnabled="true"
        app:counterMaxLength="200"
        app:hintEnabled="false">

        <androidx.appcompat.widget.AppCompatEditText
          android:id="@+id/project_client_requirement"
          style="@style/EditTextCustomeStyle"
          android:layout_width="match_parent"
          android:layout_height="@dimen/_90sdp"
          android:layout_marginStart="0dp"
          android:layout_marginTop="0dp"
          android:layout_marginEnd="0dp"
          android:layout_marginBottom="0dp"
          android:elevation="@dimen/_2sdp"
          android:gravity="top"
          android:hint="@string/enter_description_200_characters_max"
          android:maxLength="200" />
      </com.google.android.material.textfield.TextInputLayout>

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_our_approach_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_15sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          android:text="@string/our_approach_aster" />

      <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginVertical="@dimen/size_5"
        app:counterEnabled="true"
        app:counterMaxLength="200"
        app:hintEnabled="false">

        <androidx.appcompat.widget.AppCompatEditText
          android:id="@+id/our_approach"
          style="@style/EditTextCustomeStyle"
          android:layout_width="match_parent"
          android:layout_height="@dimen/_90sdp"
          android:layout_marginStart="0dp"
          android:layout_marginTop="0dp"
          android:layout_marginEnd="0dp"
          android:layout_marginBottom="0dp"
          android:elevation="@dimen/_2sdp"
          android:gravity="top"
          android:hint="@string/enter_description_200_characters_max"
          android:maxLength="200" />
      </com.google.android.material.textfield.TextInputLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1.5"
          android:orientation="vertical">

          <com.framework.views.customViews.CustomTextView
              android:id="@+id/tv_budget_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/_15sdp"
              android:layout_marginTop="@dimen/_15sdp"
              android:layout_marginEnd="@dimen/_15sdp"
              android:text="@string/budget_aster" />

          <EditText
            android:id="@+id/budget_value"
            style="@style/EditTextCustomeStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_2sdp"
            android:hint="@string/zero"
            android:inputType="number" />
        </LinearLayout>

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

          <com.framework.views.customViews.CustomTextView
              android:id="@+id/tv_date_of_completion_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_15sdp"
              android:layout_marginEnd="@dimen/_15sdp"
              android:text="@string/date_of_completion_aster" />

          <EditText
            android:id="@+id/date_of_completion"
            style="@style/EditTextCustomeStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:drawableEnd="@drawable/ic_blue_calander"
            android:elevation="@dimen/_2sdp"
            android:focusable="false"
            android:hint="@string/_00_00_0000"
            android:inputType="none"
            android:textSize="@dimen/_12sdp" />
        </LinearLayout>
      </LinearLayout>

      <View
        android:id="@+id/dummy_view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/dotted_line" />

      <androidx.recyclerview.widget.RecyclerView
          android:tag="com.userexperior.ueSecureView"

          android:id="@+id/image_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        tools:listitem="@layout/item_project_details_image" />

      <RelativeLayout
        android:id="@+id/add_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@drawable/all_side_small_curve_grey_bg"
        android:elevation="@dimen/_2sdp"
        android:padding="@dimen/_10sdp">

        <ImageView
          android:layout_width="@dimen/_30sdp"
          android:layout_height="@dimen/_30sdp"
          android:layout_centerVertical="true"
          app:srcCompat="@drawable/ic_camera_outline" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:fontFamily="@font/regular"
          android:gravity="center"
          android:text="Add images"
          android:textAllCaps="false"
          android:textSize="@dimen/_13sdp" />
      </RelativeLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp">

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_5sdp"
          android:layout_weight="1"
          android:fontFamily="@font/regular"
          android:text="@string/maximum_3"
          android:textColor="@color/grey_400" />

        <TextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/_5sdp"
          android:layout_weight="1"
          android:fontFamily="@font/regular"
          android:gravity="end"
          android:text="@string/jpg_png_800x800px"
          android:textColor="@color/grey_400" />

      </LinearLayout>


      <View
        android:id="@+id/dummy_view3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/dotted_line" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/regular"
        android:text="@string/status"
        android:textAllCaps="false"
        android:textColor="@color/common_text_color" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
          android:id="@+id/completed_button"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_15sdp"
          android:layout_marginTop="@dimen/_15sdp"
          android:layout_marginEnd="@dimen/_7sdp"
          android:layout_marginBottom="@dimen/_5sdp"
          android:layout_weight="1"
          android:background="@drawable/all_side_small_curve_bg"
          android:elevation="@dimen/_2sdp"
          android:gravity="center"
          android:padding="@dimen/_10sdp">

          <TextView
            android:id="@+id/completed_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:text="@string/completed"
            android:textAllCaps="false"
            android:textColor="#9ABFFF"
            android:textSize="@dimen/_8sdp" />
        </LinearLayout>

        <LinearLayout
          android:id="@+id/inprogress_button"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_7sdp"
          android:layout_marginTop="@dimen/_15sdp"
          android:layout_marginEnd="@dimen/_10sdp"
          android:layout_marginBottom="@dimen/_5sdp"
          android:layout_weight="1"
          android:background="@drawable/all_side_small_curve_bg"
          android:elevation="@dimen/_2sdp"
          android:gravity="center"
          android:padding="@dimen/_10sdp">

          <TextView
            android:id="@+id/inprogress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:text="@string/in_progress"
            android:textAllCaps="false"
            android:textColor="#9ABFFF"
            android:textSize="@dimen/_8sdp" />
        </LinearLayout>

        <LinearLayout
          android:id="@+id/withdraw_button"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/_5sdp"
          android:layout_marginTop="@dimen/_15sdp"
          android:layout_marginEnd="@dimen/_15sdp"
          android:layout_marginBottom="@dimen/_5sdp"
          android:layout_weight="1"
          android:background="@drawable/all_side_small_curve_bg"
          android:elevation="@dimen/_2sdp"
          android:gravity="center"
          android:padding="@dimen/_10sdp">

          <TextView
            android:id="@+id/withdraw_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/semi_bold"
            android:text="@string/withdraw"
            android:textAllCaps="false"
            android:textColor="#9ABFFF"
            android:textSize="@dimen/_8sdp" />
        </LinearLayout>
      </LinearLayout>

      <TextView
        android:id="@+id/save_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/orange_button_click_effect"
        android:elevation="@dimen/_2sdp"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:text="@string/save"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    </LinearLayout>
  </ScrollView>

</LinearLayout>