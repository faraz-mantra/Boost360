    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/account_info_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

        <LinearLayout
            android:id="@+id/zeroth_layout"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:visibility="gone"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/store_coming" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dgts__title_text_size"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dgts__padding_title"
                android:layout_marginBottom="@dimen/dgts__padding_title"
                android:visibility="visible"
                android:textColor="@color/zeroth_grey_title"
                android:text="Time to upgrade"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/zeroth_grey"
                android:gravity="center"
                android:padding="12dp"
                android:text="You haven't purchased any plan. Buy now to avail premium features."/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/progress_accinfo_layout"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
