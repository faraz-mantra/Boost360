<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include
        android:id="@+id/app_bar"
        layout="@layout/tool_bar_business_profile_v2" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="2dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/screen_bg"
                android:orientation="vertical">
                <!--<com.makeramen.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/editbusinessprofileimage"
                    android:src="@drawable/business_edit_profile_icon"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="30dip"
                    app:riv_border_width="0dip"
                    app:riv_oval="true"
                    />-->
                <ImageView
                    android:id="@+id/editbusinessprofileimage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="center"
                    android:src="@drawable/featured_photo_default" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingLeft="16dp">

                <LinearLayout
                    android:id="@+id/businessNameLayout"
                    android:layout_height="58dp"
                    style="@style/SignUp_LinearLayout_Style">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/name_icon" />
                    <!--<TextView
                        android:id="@+id/yourName_textline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Name"
                        android:textSize="10sp"
                        android:paddingLeft="5dp"
                        android:textColor="#BDBDBD"
                        android:visibility="visible"/>
    -->
                    <EditText
                        android:id="@+id/profileName"
                        style="@style/SignUp_EditText_Style"
                        fontPath="Roboto-Light.ttf"
                        android:hint="@string/your_name"
                        android:inputType="textCapWords"
                        android:minLines="1"
                        tools:ignore="MissingPrefix" />
                    <!--<EditText
                        android:id="@+id/profileName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:hint="Your Name"
                        android:minLines="1"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="#575757"/>-->
                </LinearLayout>

                <LinearLayout
                    android:layout_height="58dp"
                    style="@style/SignUp_LinearLayout_Style">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/bzname_icon" />

                    <EditText
                        android:id="@+id/businessName"
                        style="@style/SignUp_EditText_Style"
                        fontPath="Roboto-Light.ttf"
                        android:hint="@string/business_name"
                        android:inputType="textCapWords"
                        android:minLines="1"
                        tools:ignore="MissingPrefix" />
                    <!-- <TextView
                         android:id="@+id/businessName_textline"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:text="Business Name"
                         android:textSize="10sp"
                         android:paddingLeft="5dp"
                         android:textColor="#BDBDBD"
                         android:visibility="gone"/>-->
                    <!-- <EditText
                         android:id="@+id/businessName"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:hint="Business Name"
                         android:minLines="1"
                         android:textSize="14sp"
                         android:gravity="bottom"
                         android:textColor="#575757"
                         />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_height="58dp"
                    style="@style/SignUp_LinearLayout_Style">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/category_icon" />

                    <EditText
                        android:id="@+id/businessCategory"
                        style="@style/SignUp_EditText_Style"
                        fontPath="Roboto-Light.ttf"
                        android:drawableRight="@drawable/dropselect"
                        android:editable="false"
                        android:clickable="false"
                        android:focusableInTouchMode="false"
                        android:focusable="false"
                        android:imeOptions="flagNoExtractUi"
                        android:hint="@string/business_category"
                        android:inputType="textCapWords"
                        tools:ignore="MissingPrefix" />
                    <!--<EditText
                        android:id="@+id/businessCategory"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Business Category"
                        android:gravity="bottom"
                        android:editable="false"
                        android:drawableRight="@drawable/dropselect"
                        android:textColor="#575757"
                        android:textSize="14sp"/>
        -->
                </LinearLayout>
                <LinearLayout
                    android:layout_height="58dp"
                    style="@style/SignUp_LinearLayout_Style"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitXY"
                        android:layout_gravity="top"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/category_icon" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:textSize="17sp"
                            android:textColor="#383838"
                            android:text="Product Category"/>
                        <RadioGroup
                            android:id="@+id/rbgroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="horizontal">
                            <RadioButton
                                android:id="@+id/rb_products"
                                android:layout_width="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="@color/light_gray"
                                android:layout_height="wrap_content"
                                android:text="Products" />

                            <RadioButton
                                android:id="@+id/rb_services"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:buttonTint="@color/light_gray"
                                android:text="Services" />
                        </RadioGroup>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="bottom"
                    android:paddingTop="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginBottom="4dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/desc_icon" />

                    <EditText
                        android:id="@+id/businessDesciption"
                        style="@style/SignUp_EditText_Style"
                        android:layout_height="wrap_content"
                        fontPath="Roboto-Light.ttf"
                        android:hint="@string/business_description"
                        android:text=""
                        android:inputType="textCapSentences"
                        android:maxLines="3"
                        tools:ignore="MissingPrefix" />
                    <!--<TextView`
                        android:id="@+id/businessDesciption_textline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Business Description"
                        android:textSize="10sp"
                        android:paddingLeft="5dp"
                        android:textColor="#BDBDBD"
                        android:visibility="gone"/>-->
                    <!--<EditText
                        android:id="@+id/businessDesciption"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description"
                        android:gravity="top"
                        android:minLines="3"
                        android:textColor="#575757"
                        android:textSize="14sp"/>-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/select_businessprofileimage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/camfab"
            android:layout_marginTop="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"
            android:scaleType="centerCrop"
            fab:fab_colorNormal="@color/primaryColor"
            fab:fab_colorPressed="@color/tabOnclickColor"
            fab:fab_colorRipple="@color/primaryColor" />
        </RelativeLayout>
</FrameLayout>
    </ScrollView>

</LinearLayout>