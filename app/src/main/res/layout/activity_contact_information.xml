<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        style="@style/ParentLayoutStyle"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <include
            android:id="@+id/app_bar"
            layout="@layout/appbar_layout" />

        <android.support.v4.widget.NestedScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_15"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_primary_contact_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/ProductLabelTextStyle"
                            android:text="Registered Contact Number"/>

                        <ImageButton
                            android:id="@+id/ib_info_primary"
                            style="@style/ProductHelpButtonStyle"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/edit_primary_contact_number"
                        style="@style/ProductEditTextStyle"
                        android:hint="XXXXXXXXXX"
                        android:inputType="number"
                        android:layout_marginTop="@dimen/margin_5"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_call_tracker_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/ProductLabelTextStyle"
                            android:text="Call Tracker Number"/>

                        <ImageButton
                            android:id="@+id/ib_info_call_tracker_number"
                            style="@style/ProductHelpButtonStyle"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:orientation="horizontal"
                        android:background="@drawable/grey_rectangle_background">

                        <EditText
                            android:id="@+id/edit_call_tracker_number"
                            style="@style/ProductEditTextStyle"
                            android:layout_weight="1"
                            android:hint="XXXXXXXXXX"
                            android:enabled="false"
                            android:inputType="number"/>

                        <TextView
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"
                            android:minWidth="100dp"
                            android:textColor="@color/primaryTextColor"
                            android:padding="3dp"
                            android:layout_margin="@dimen/margin_8"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:background="@drawable/white_rectangle_background"
                            android:text="VIEW REPORT"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_display_contact_number_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/ProductLabelTextStyle"
                            android:text="Display Contact Number 1"/>

                        <ImageButton
                            android:id="@+id/ib_info_display_1"
                            style="@style/ProductHelpButtonStyle"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/edit_display_contact_number_1"
                        style="@style/ProductEditTextStyle"
                        android:hint="XXXXXXXXXX"
                        android:inputType="number"
                        android:layout_marginTop="@dimen/margin_5"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_display_contact_number_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/ProductLabelTextStyle"
                            android:text="Display Contact Number 2"/>

                        <ImageButton
                            android:id="@+id/ib_info_display_2"
                            style="@style/ProductHelpButtonStyle"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/edit_display_contact_number_2"
                        style="@style/ProductEditTextStyle"
                        android:hint="XXXXXXXXXX"
                        android:inputType="number"
                        android:layout_marginTop="@dimen/margin_5" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_display_contact_number_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/ProductLabelTextStyle"
                            android:text="Display Contact Number 3"/>

                        <ImageButton
                            android:id="@+id/ib_info_display_3"
                            style="@style/ProductHelpButtonStyle"/>

                    </LinearLayout>

                    <EditText
                        android:id="@+id/edit_display_contact_number_3"
                        style="@style/ProductEditTextStyle"
                        android:hint="XXXXXXXXXX"
                        android:inputType="number"
                        android:layout_marginTop="@dimen/margin_5"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layout_whatsapp_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/ProductLabelTextStyle"
                            android:text="WhatsApp for Business Number"/>

                        <ImageButton
                            android:id="@+id/ib_info_whatsapp"
                            style="@style/ProductHelpButtonStyle"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:orientation="horizontal"
                        android:background="@drawable/white_rectangle_background">

                        <EditText
                            android:id="@+id/edit_whatsapp_number"
                            style="@style/ProductEditTextStyle"
                            android:layout_weight="1"
                            android:hint="XXXXXXXXXX"
                            android:inputType="number"/>

                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_whatsapp_for_business"/>

                        </FrameLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_website"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/ProductLabelTextStyle"
                                android:text="Other Website Address (If any)"/>

                            <ImageButton
                                android:id="@+id/ib_info_website"
                                style="@style/ProductHelpButtonStyle"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:orientation="horizontal"
                            android:background="@drawable/white_rectangle_background">

                            <LinearLayout
                                android:id="@+id/layout_spinner_stock_availability"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:minWidth="200dp"
                                android:orientation="horizontal"
                                android:layout_weight="1"
                                android:padding="1dp">

                                <Spinner
                                    android:id="@+id/spinner_http_protocol"
                                    style="@style/ProductSpinnerStyle"
                                    android:layout_weight="1"
                                    android:layout_gravity="center_vertical"
                                    android:entries="@array/http_protocol" />

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="2dp"
                                    app:srcCompat="@drawable/ic_spinner_down_arrow"/>

                            </LinearLayout>

                            <EditText
                                android:id="@+id/edit_website_address"
                                style="@style/ProductEditTextStyle"
                                android:layout_weight="1"
                                android:inputType="textWebEditText"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_email_address"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/ProductLabelTextStyle"
                                android:text="Business Email Address"/>

                            <ImageButton
                                android:id="@+id/ib_info_email_address"
                                style="@style/ProductHelpButtonStyle"/>

                        </LinearLayout>

                        <EditText
                            android:id="@+id/edit_business_email_address"
                            style="@style/ProductEditTextStyle"
                            android:hint="XXXXXXXXXX"
                            android:inputType="textEmailAddress"
                            android:layout_marginTop="@dimen/margin_5"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_10"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/layout_facebook_page_widget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                style="@style/ProductLabelTextStyle"
                                android:text="Facebook Page Widget"/>

                            <ImageButton
                                android:id="@+id/ib_info_fb_page_widget"
                                style="@style/ProductHelpButtonStyle"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:orientation="horizontal"
                            android:background="@drawable/white_rectangle_background">

                            <TextView
                                android:layout_height="match_parent"
                                android:layout_width="wrap_content"
                                android:textColor="@color/primaryTextColor"
                                android:padding="10dp"
                                android:textSize="14sp"
                                android:text="https://facebook.com/"/>

                            <EditText
                                android:id="@+id/edit_fb_page_widget"
                                style="@style/ProductEditTextStyle"
                                android:layout_weight="1"
                                android:inputType="textWebEditText"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_button_enabled"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="@android:color/white"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="@dimen/margin_40"
                        android:layout_marginBottom="@dimen/margin_10"
                        android:onClick="onSaveClick"
                        android:text="SAVE CONTACT INO" />

                </LinearLayout>

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</layout>