<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#FAFAFA"
  android:clickable="true"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="25dp"
    android:layout_marginBottom="10dp">

    <TextView
      android:id="@+id/tv_message"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_gravity="center_vertical"
      android:layout_weight="1"
      android:gravity="center_vertical"
      android:text="@string/select_products_to_share"
      android:textColor="@color/gray"
      android:textSize="15sp" />

    <ImageView
      android:id="@+id/btn_cancel"
      android:layout_width="35dp"
      android:layout_height="35dp"
      android:background="?android:selectableItemBackground"
      android:padding="10dp"
      android:src="@drawable/gallery_cancel"
      android:tint="@color/gray" />
  </LinearLayout>

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/rv_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="25dp"
    android:layout_marginEnd="25dp"
    android:layout_weight="1" />

  <TextView
    android:id="@+id/btn_send"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="20dp"
    android:background="@drawable/yellow_btn_bg"
    android:gravity="center"
    android:padding="12dp"
    android:text="@string/add_products"
    android:textColor="@drawable/yellow_btn_text_color" />
</LinearLayout>