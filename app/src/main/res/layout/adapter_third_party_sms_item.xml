<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="15dp"
    android:paddingRight="15dp"
    android:paddingBottom="20dp"
    android:paddingTop="25dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/helium_balloon_decoration_service_in_best_prices_kandivali_west"
            android:fontFamily="sans-serif"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:ellipsize="marquee"
            android:maxLines="2"
            android:textSize="16sp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/img_info"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="3dp"
            android:src="@drawable/ic_info_white_24dp"
            android:background="?android:selectableItemBackground"
            android:tint="@color/light_gray"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mr_gopal_chandwani_918095923954_harlur_road_belandur"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/light_gray"
        android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp">
        <ImageView
            android:id="@+id/img_source"
            android:layout_gravity="center_vertical"
            android:layout_width="15dp"
            android:layout_marginEnd="5dp"
            android:layout_height="15dp" />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/today_02_23_pm"
            android:fontFamily="sans-serif"
            android:layout_marginEnd="15dp"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/light_gray"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_btn_bg"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingRight="10dp"
            android:text="@string/respond"
            android:textSize="12sp"
            android:textAllCaps="true"
            android:textColor="@drawable/yellow_btn_text_color" />
    </LinearLayout>

</LinearLayout>