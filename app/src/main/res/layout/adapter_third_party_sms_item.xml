<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:paddingStart="15dp"
  android:paddingTop="25dp"
  android:paddingRight="15dp"
  android:paddingBottom="20dp">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/tv_title"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="15dp"
      android:layout_marginEnd="15dp"
      android:layout_weight="1"
      android:ellipsize="marquee"
      android:fontFamily="sans-serif"
      android:maxLines="2"
      android:text="@string/helium_balloon_decoration_service_in_best_prices_kandivali_west"
      android:textSize="16sp" />

    <ImageView
      android:id="@+id/img_info"
      android:layout_width="28dp"
      android:layout_height="28dp"
      android:background="?android:selectableItemBackground"
      android:padding="3dp"
      android:src="@drawable/ic_info_white_24dp"
      android:tint="@color/light_gray" />
  </LinearLayout>

  <TextView
    android:id="@+id/tv_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="10dp"
    android:text="@string/mr_gopal_chandwani_918095923954_harlur_road_belandur"
    android:textColor="@color/light_gray" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp">

    <ImageView
      android:id="@+id/img_source"
      android:layout_width="15dp"
      android:layout_height="15dp"
      android:layout_gravity="center_vertical"
      android:layout_marginEnd="5dp" />

    <TextView
      android:id="@+id/tv_time"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      android:layout_marginEnd="15dp"
      android:layout_weight="1"
      android:fontFamily="sans-serif"
      android:text="@string/today_02_23_pm"
      android:textColor="@color/light_gray"
      android:textSize="12sp" />

    <TextView
      android:id="@+id/tv_response"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/yellow_btn_bg"
      android:gravity="center"
      android:paddingStart="10dp"
      android:paddingTop="5dp"
      android:paddingRight="10dp"
      android:paddingBottom="5dp"
      android:text="@string/respond"
      android:textAllCaps="true"
      android:textColor="@drawable/yellow_btn_text_color"
      android:textSize="12sp" />
  </LinearLayout>

</LinearLayout>