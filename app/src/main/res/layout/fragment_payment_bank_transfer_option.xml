<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="0dp"
        android:layout_margin="8dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/textView_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:visibility="gone"
                android:hint="@string/choose_your_bank">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editText_bank_name"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/dropselect"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:visibility="gone"
                android:hint="IFSC Code">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editText_ifsc_code"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:inputType="textNoSuggestions"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="Bank Account Number">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editText_account_number"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:inputType="textNoSuggestions"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="Bank Transfer Amount">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editText_transfer_amount"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:inputType="number"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="Cheque Number">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editText_cheque_number"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:inputType="textNoSuggestions"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textAllCaps="true"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="Transaction Reference Id NEFT/RTGS/IMPS">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editText_transaction_id"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textAllCaps="true"
                    android:inputType="textNoSuggestions"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="Payment Date"
                android:visibility="gone">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editText_payment_date"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:inputType="textNoSuggestions"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="Is GST registered?"
                android:textSize="16sp" />

            <RadioGroup
                android:id="@+id/rg_is_gst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Yes"
                    android:textColor="@color/light_gray" />

                <RadioButton
                    android:id="@+id/radioButton_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="No"
                    android:checked="true"
                    android:textColor="@color/light_gray" />
            </RadioGroup>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayout_gst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:hint="GST Number"
                android:visibility="gone">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/editText_gst_number"
                    style="@style/SignUp_EditText_Style_Ria"
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:inputType="textNoSuggestions"
                    android:textAllCaps="true"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/custom_edit_text_cursor" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:text="NEFT/RTGS/IMPS Transaction Receipt"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView_add_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"
                android:padding="10dp"
                android:text="Add Receipt"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <android.support.v7.widget.CardView xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardView_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                card:cardBackgroundColor="@color/gray">

                <ImageView
                    android:id="@+id/imageView_primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:maxWidth="300dp"
                    android:minHeight="200dp"
                    android:minWidth="250dp"
                    android:src="@drawable/ic_action_camera" />
                <ImageView
                    android:id="@+id/imageView_main_delete"
                    android:layout_width="35dp"
                    android:layout_height="39dp"
                    android:layout_gravity="end"
                    android:src="@drawable/cancel1"
                    android:background="@color/transluscent_background"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receipt Image"
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="35dp"
                    android:layout_marginEnd="35dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/transluscent_background" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textView_add_alt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_bg"
                android:padding="10dp"
                android:text="Add Other Image"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="gone" />

            <android.support.v7.widget.CardView xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardView_alternative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                card:cardBackgroundColor="@color/gray">

                <ImageView
                    android:id="@+id/imageView_alternate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:maxWidth="300dp"
                    android:minHeight="200dp"
                    android:minWidth="250dp"
                    android:src="@drawable/ic_action_camera" />
                <ImageView
                    android:id="@+id/imageView_alt_delete"
                    android:layout_width="35dp"
                    android:layout_height="39dp"
                    android:layout_gravity="end"
                    android:src="@drawable/cancel1"
                    android:background="@color/transluscent_background"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Other Image"
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:layout_marginRight="35dp"
                    android:layout_marginEnd="35dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/transluscent_background" />

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="@drawable/btn_bg"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/white"
        android:text="Pay Now"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>



