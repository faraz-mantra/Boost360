<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/floating_image"
        layout="@layout/accessibility_collapse_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    <include
        android:id="@+id/floating_view"
        android:layout_height="wrap_content"
        android:visibility="gone"
        layout="@layout/accessibility_expandable_view"
        android:layout_width="match_parent"/>
    <ImageView
        android:id="@+id/floating_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:src="@drawable/cancel_post"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>