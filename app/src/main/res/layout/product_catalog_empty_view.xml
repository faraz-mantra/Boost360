<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/layout_empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@color/white"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="@dimen/margin_50">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <ImageView
                android:id="@+id/iv_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/no_product"/>

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/secondaryTextColor"
                android:gravity="center"
                android:layout_below="@+id/iv_empty"
                android:layout_marginTop="30dp"
                android:text="You have no products listed on your site as of yet."/>

            <!--
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:layout_below="@+id/tv_message"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ic_add_product_button"/>
             -->

        </RelativeLayout>

    </RelativeLayout>

</layout>