<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="0dp">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:minHeight="120dp"
                    android:minWidth="120dp"
                    android:maxWidth="300dp"
                    android:layout_margin="5dp"
                    android:maxHeight="300dp"
                    android:src="@drawable/studio_architecture"
                    android:id="@+id/business_app_preview_android_image"
                   android:layout_gravity="center"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom|end"
                    android:id="@+id/imgview_icon_type"
                    android:src="@drawable/android_green_padding" />
                    </FrameLayout>
            <TextView
                android:id="@+id/app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="@string/Madman_design_studio"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="#F5F5F5"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:drawableStart="@drawable/business_white_eye"
                android:background="#CACACA"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginRight="2.5dp"
                android:layout_marginEnd="2.5dp"
                android:id="@+id/preview_button"
                android:layout_height="match_parent"
                android:text="@string/android_app_preview"
                android:drawableLeft="@drawable/business_white_eye"
                android:padding="5dp"
                android:layout_marginLeft="10dp" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="2.5dp"
                android:id="@+id/get_app_button"
                android:drawableStart="@drawable/android_icon_white"
                android:background="#CACACA"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:text="@string/get_android_app"
                android:drawableLeft="@drawable/android_icon_white"
                android:padding="5dp"
                android:layout_marginLeft="2.5dp" />
        </LinearLayout>

    </LinearLayout>
    <TextView
    android:id="@+id/tv_free"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:text="FREE"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingEnd="10dp"
    android:gravity="center_horizontal"
    android:textColor="@color/white"
    android:background="@drawable/ribbon_green"
    android:paddingRight="10dp" />
</RelativeLayout>