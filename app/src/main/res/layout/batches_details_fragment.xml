<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    tools:context="com.nowfloats.education.batches.ui.batchesdetails.BatchesDetailsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Name"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:hint="Enter Course Name"
        android:textSize="@dimen/_12sdp"
        android:background="@drawable/edittext_bg_elevated"
        android:elevation="@dimen/_2sdp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Timimgs"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:hint="00:00 to 00:00"
        android:textSize="@dimen/_12sdp"
        android:background="@drawable/edittext_bg_elevated"
        android:elevation="@dimen/_2sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Course Duration"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:hint="Days/Months/Weekly"
        android:textSize="@dimen/_12sdp"
        android:background="@drawable/edittext_bg_elevated"
        android:elevation="@dimen/_2sdp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commencement Date"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"/>

    <EditText
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:hint="00-00-0000"
        android:drawableEnd="@drawable/ic_blue_calander"
        android:padding="@dimen/_10sdp"
        android:textSize="@dimen/_12sdp"
        android:background="@drawable/edittext_bg_elevated"
        android:elevation="@dimen/_2sdp"/>
    <TextView
        android:id="@+id/save_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/orange_button_click_effect"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:gravity="center"
        android:text="save"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:elevation="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_50sdp"/>

</LinearLayout>