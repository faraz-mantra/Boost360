<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card="http://schemas.android.com/apk/res-auto"
  android:id="@+id/parent_linearlayout"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  android:weightSum="1">

  <androidx.cardview.widget.CardView
    android:id="@+id/card_view_android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_margin="10dp"
    android:layout_weight=".6"
    card:cardBackgroundColor="@color/white"
    card:cardCornerRadius="3dp"
    card:cardElevation="5dp"></androidx.cardview.widget.CardView>

  <androidx.cardview.widget.CardView
    android:id="@+id/card_view_ios"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="10dp"
    android:layout_weight="1"
    android:visibility="gone"
    card:cardBackgroundColor="@color/white"
    card:cardCornerRadius="3dp"
    card:cardElevation="5dp"></androidx.cardview.widget.CardView>
  <!--<Button
      android:id="@+id/button_push_notif"
