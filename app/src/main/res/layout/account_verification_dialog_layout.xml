<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="20dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:rotation="-45"
            android:src="@drawable/app_launcher"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:textSize="22sp"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="ACCOUNT\nVERIFICATION\nIN PROCESS"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_to_be_activated_on"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your website and\nthe Boost app will be\nactivated shortly"/>

    <TextView
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kindly bear with us\ntill then"/>
    <TextView
        android:id="@+id/tv_write_to_us"
        android:textStyle="bold|italic"
        android:layout_marginTop="30dp"
        android:textSize="14sp"
        android:layout_marginLeft="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/btn_close_dialog"
        android:layout_marginTop="40dp"
        android:layout_width="100dp"
        android:textColor="@color/grey"
        android:text="CLOSE"
        android:layout_height="40dp"
        android:background="@drawable/et_opc_bg"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>