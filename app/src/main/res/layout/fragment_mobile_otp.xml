<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/im_back_button"
            android:layout_width="@dimen/image_width_login"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/back_button_2" />


        <TextView
            android:id="@+id/tv_headingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/open_sans_bold"
            android:text="Log in using mobile number"
            android:textColor="@color/login_title"
            android:textSize="30sp" />


        <LinearLayout

            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/userNameIcon"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/india_flag" />

            <EditText
                android:id="@+id/phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/open_sans"
                android:gravity="bottom"
                android:hint="@string/_10_digit_mobile_number"
                android:inputType="phone"
                android:importantForAutofill="no"
                android:textColor="@color/text_color_roboto_lt_30_edittext"
                android:textColorHint="@color/hint_color_roboto_lt_30_edittext"
                android:textSize="17sp" />

        </LinearLayout>

        <View
            android:id="@+id/mobile_otp_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/login_input_underline"
            android:layout_marginHorizontal="14dp"
            />


    </LinearLayout>


    <androidx.cardview.widget.CardView

        android:id="@+id/nextButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_gravity="bottom|end"
        android:layout_marginStart="14dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="30dp"
        android:elevation="5dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/primaryColor"
        app:cardCornerRadius="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/open_sans_bold"
                android:gravity="center"
                android:text="@string/next"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="16sp" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                app:srcCompat="@drawable/ic_arrow_right_white" />


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>