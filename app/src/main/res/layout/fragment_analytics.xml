<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cvRiaCard"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            card_view:contentPadding="10dp">
            <LinearLayout
                android:id="@+id/llRiaCrdContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/sidepanel_chat"/>
                    <com.nowfloats.CustomWidget.roboto_md_36__565656
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_gravity="center_vertical"
                        android:text="Your Customers Love you"
                        android:id="@+id/tvRiaCardHeader"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/llRiaCardSections"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_height="wrap_content">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnRiaResponse1"
                        android:background="@drawable/btn"
                        android:textColor="#808080"
                        android:text="Sure!"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                    <View
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/btnRiaResponse2"
                        android:background="@drawable/btn"
                        android:textColor="#808080"
                        android:text="Not Now"
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp" />
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto">
            <android.support.v7.widget.CardView
                android:layout_height="120dp"
                android:layout_width="0dp"
                app:layout_row="0"
                app:layout_columnWeight="1"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                app:layout_column="0">

                <LinearLayout
                    android:id="@+id/numberOfVisitsLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="24dp">


                            <ImageView
                                android:id="@+id/pop_up_gallery_img"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/circle_bakground" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/analytics_visits" />
                        </FrameLayout>

                        <com.nowfloats.CustomWidget.roboto_lt_24_212121
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="@string/overall_visits" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/visits_progressBar" />

                        <TextView
                            fontPath="Roboto-Medium.ttf"
                            android:id="@+id/analytics_screen_visitor_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/primaryColor"
                            android:text="25"
                            android:visibility="visible"
                            android:textSize="33dp"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="120dp"
                android:layout_width="0dp"
                app:layout_row="0"
                app:layout_columnWeight="1"
                android:layout_marginBottom="5dp"
                app:layout_column="1">
                <LinearLayout
                    android:id="@+id/analytics_screen_business_enq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="24dp">


                            <ImageView
                                android:id="@+id/business_enq_bg"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/circle_bakground" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:tint="#ffffff"
                                android:layout_gravity="center"
                                android:src="@drawable/business_enq_main" />
                        </FrameLayout>

                        <com.nowfloats.CustomWidget.roboto_lt_24_212121
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="@string/business_enquiries_title" />
                    </LinearLayout>
                    <FrameLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/business_enq_progressBar" />
                        <TextView
                            fontPath="Roboto-Medium.ttf"
                            android:id="@+id/analytics_screen_business_enq_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:text="1125"
                            android:textSize="33dp"
                            android:textColor="@color/primaryColor"
                            tools:ignore="MissingPrefix" />
                    </FrameLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="120dp"
                android:layout_width="0dp"
                app:layout_row="1"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                app:layout_columnWeight="1"
                app:layout_column="0">
                <LinearLayout
                    android:id="@+id/subscribers_details"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="24dp">


                            <ImageView
                                android:id="@+id/pop_up_subscribers_img"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/circle_bakground" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/analytics_subscriber" />
                        </FrameLayout>

                        <com.nowfloats.CustomWidget.roboto_lt_24_212121
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="@string/subscribers" />
                    </LinearLayout>
                    <FrameLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/subscriber_progressBar" />
                        <TextView
                            fontPath="Roboto-Medium.ttf"
                            android:id="@+id/analytics_screen_subscriber_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:text="1125"
                            android:textSize="33dp"
                            android:textColor="@color/primaryColor"
                            tools:ignore="MissingPrefix" />
                    </FrameLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="120dp"
                android:layout_width="0dp"
                app:layout_row="1"
                android:layout_marginBottom="5dp"
                app:layout_columnWeight="1"
                app:layout_column="1">
                <LinearLayout
                    android:id="@+id/analytics_screen_search_queries"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="24dp">


                            <ImageView
                                android:id="@+id/pop_up_search_img"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/circle_bakground" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/analytics_search" />
                        </FrameLayout>

                        <com.nowfloats.CustomWidget.roboto_lt_24_212121
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="@string/search_queries" />
                    </LinearLayout>
                    <FrameLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/search_query_progressBar" />
                        <TextView
                            fontPath="Roboto-Medium.ttf"
                            android:id="@+id/analytics_screen_search_queries_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:text="1125"
                            android:textSize="33dp"
                            android:textColor="@color/primaryColor"
                            tools:ignore="MissingPrefix" />
                    </FrameLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="120dp"
                android:layout_width="0dp"
                app:layout_row="2"
                app:layout_columnWeight="1"
                app:layout_column="1">
                <LinearLayout
                    android:id="@+id/facebook_analytics_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_fb_page_analytics"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/analytics_facebook" />

                        <com.nowfloats.CustomWidget.roboto_lt_24_212121
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="@string/facebook_analytics" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/facebook_updates_progressBar" />

                        <TextView
                            fontPath="Roboto-Medium.ttf"
                            android:id="@+id/analytics_screen_updates_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/primaryColor"
                            android:visibility="invisible"
                            android:textSize="33dp"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_height="120dp"
                android:layout_width="0dp"
                app:layout_row="2"
                android:layout_marginRight="5dp"
                app:layout_columnWeight="1"
                app:layout_column="0">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="24dp">


                            <ImageView
                                android:id="@+id/pop_up_search_rank_img"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/circle_bakground" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/analytics_search" />
                        </FrameLayout>

                        <com.nowfloats.CustomWidget.roboto_lt_24_212121
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:text="@string/search_rank" />
                    </LinearLayout>
                    <FrameLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:id="@+id/search_rank_progressBar" />
                        <TextView
                            fontPath="Roboto-Medium.ttf"
                            android:id="@+id/analytics_screen_search_rank_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:text="1125"
                            android:textSize="33dp"
                            android:textColor="@color/primaryColor"
                            tools:ignore="MissingPrefix" />
                    </FrameLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </android.support.v7.widget.GridLayout>
    </LinearLayout>
</ScrollView>
