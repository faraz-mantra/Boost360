<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background_grey"
  android:orientation="vertical">


  <RelativeLayout
    android:id="@+id/forgot_password_top_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionBar_layout_height"
    android:layout_alignParentTop="true"
    android:background="@color/primaryColor">

    <LinearLayout
      android:id="@+id/forgot_password_div_back_click"
      android:layout_width="@dimen/actionBar_leftButtonDiv_layout_width"
      android:layout_height="@dimen/actionBar_leftButtonDiv_layout_height"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:orientation="horizontal" />

    <Button
      android:id="@+id/forgot_password_top_bar_store_back_button"
      android:layout_width="@dimen/actionBar_leftButton_layout_width"
      android:layout_height="@dimen/actionBar_leftButton_layout_height"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:layout_marginStart="@dimen/pis_primary_img_top_bar_store_back_button_marginLeft"
      android:background="@drawable/ic_action_back" />

    <com.nowfloats.util.HeaderText1
      android:id="@+id/forgot_password_action_bar_nowfloats_txt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:text="@string/forgot_password" />

  </RelativeLayout>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/forgot_password_top_bar"
    android:paddingStart="20dp"
    android:paddingRight="20dp">

    <EditText
      android:id="@+id/forgot_password_text_box"
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_marginTop="50dp"
      android:background="#ffffff"
      android:gravity="center_vertical"
      android:hint="@string/enter_your_user_name"
      android:paddingStart="30dp"
      android:textColor="#767676"
      android:textSize="14sp" />

    <Button
      android:id="@+id/forget_password_send_button"
      android:layout_width="200dp"
      android:layout_height="50dp"
      android:layout_below="@+id/forgot_password_text_box"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="50dp"
      android:background="@drawable/domain_order_search_bkg"
      android:text="@string/submit"
      android:textColor="#ffffff" />

  </RelativeLayout>

</RelativeLayout>
