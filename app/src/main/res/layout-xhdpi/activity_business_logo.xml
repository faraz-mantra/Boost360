<layout>

  <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    style="@style/ParentLayoutStyle"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <include
      android:id="@+id/app_bar"
      layout="@layout/appbar_layout" />

    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_behavior="@string/appbar_scrolling_view_behavior">

      <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/footer"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:background="@color/screen_bg"
            android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_gravity="center_horizontal"
          >


          <androidx.cardview.widget.CardView
              app:cardCornerRadius="20dp"
              android:translationY="-10dp"
              android:id="@+id/card_logo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


            <TextView
                android:id="@+id/label_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="26dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="@dimen/_16sdp"
                android:text="@string/business_logo_info_text"
                android:textSize="12sp" />
          </androidx.cardview.widget.CardView>



          <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/card_logo"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="50dp"
            android:layout_marginBottom="20dp"
            app:cardElevation="5dp"
            app:contentPadding="15dp"
            card_view:cardCornerRadius="8dp">

            <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              app:cardElevation="0dp"
              card_view:cardCornerRadius="8dp">

              <ImageView
                  android:tag="com.userexperior.ueSecureView"

                  android:id="@+id/logoimageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/logo_default_image" />

            </androidx.cardview.widget.CardView>

          </androidx.cardview.widget.CardView>

          <Button
            android:id="@+id/addLogoButton"
            style="?android:attr/borderlessButtonStyle"
            fontPath="Roboto-Medium.ttf"
              android:layout_marginHorizontal="24dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
              android:layout_marginTop="16dp"
            android:layout_below="@+id/card_view"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_rounded_6"
            android:text="@string/change_logo"
            android:textAllCaps="false"
            android:textColor="@color/white"
            card_view:ignore="MissingPrefix" />

          <RelativeLayout
              android:id="@+id/create_logo_logtron"
              android:layout_marginTop="16dp"
              android:layout_below="@+id/addLogoButton"
              android:layout_marginHorizontal="24dp"
              android:background="@drawable/round_border_button"
              android:layout_width="match_parent"
              android:layout_height="40dp">

            <LinearLayout
                android:gravity="center"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

              <TextView
                  android:textSize="13sp"
                  android:textColor="@color/primary"
                  android:fontFamily="@font/open_sans"
                  android:text="@string/create_a_new_logo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

              <ImageView
                  android:layout_marginStart="12dp"
                  android:src="@drawable/ic_free_tag"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>
            </LinearLayout>
          </RelativeLayout>

          <TextView
              android:id="@+id/tv_build_my_logo"
              android:gravity="center"
              android:textSize="10sp"
              android:layout_below="@+id/create_logo_logtron"
              android:layout_marginVertical="8dp"
              android:layout_marginTop="8dp"
              android:fontFamily="@font/open_sans"
              android:text="@string/free_1_logo_png_powered_by_buildmylogo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"/>

        </RelativeLayout>

      </androidx.core.widget.NestedScrollView>

      <LinearLayout
          android:background="@color/white"
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="@dimen/margin_20">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="@string/business_logo_instructions_1"
          android:textSize="12sp" />

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="@string/business_logo_instructions_2"
          android:textSize="12sp"
           android:fontFamily="@font/semi_bold" />

      </LinearLayout>

    </RelativeLayout>

  </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>