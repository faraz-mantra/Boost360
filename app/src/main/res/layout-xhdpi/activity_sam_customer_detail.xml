<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flTopView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sam_customer_list"
    android:orientation="vertical"
    android:padding="@dimen/margin_10">


    <ProgressBar
        android:id="@+id/pbView"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:theme="@style/CircularProgress"
        android:visibility="gone" />

    <View
        android:layout_width="40.0dip"
        android:layout_height="20.0dip"
        android:alpha="0.0"
        android:background="@drawable/bg_selected_sam_customer_list" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Date: 27-08-2016"
            android:textColor="@color/white"
            android:textSize="@dimen/llarge_text_size" />

        <TextView
            android:id="@+id/tvSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Source: JustDial"
            android:textColor="@color/white"
            android:textSize="@dimen/llarge_text_size" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:gravity="left"
        android:text="Enquiry Message: "
        android:textColor="@color/white"
        android:textSize="@dimen/llarge_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:padding="@dimen/margin_10"
        android:text="Enquiry fkshjgksfkjngkjfhsdkjg kjnfgjksdnkg nfkjsdjkfnsd"
        android:textColor="@color/white"
        android:textSize="@dimen/llarge_text_size" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="@dimen/margin_10"
        android:alpha="0.3"
        android:background="#ffffffff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="left"
        android:text="Relevant Products &amp; Update Suggestions: "
        android:textColor="@color/white"
        android:textSize="@dimen/llarge_text_size" />


</LinearLayout>

