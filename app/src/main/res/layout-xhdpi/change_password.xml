<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="310dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.nowfloats.CustomWidget.roboto_md_60_212121
        android:id="@+id/textview_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="start"
        android:layout_margin="10dp"
        android:text="@string/change_password"
        android:textColor="#878787" />

    <EditText
        fontPath="Roboto-Light.ttf"
        android:id="@+id/change_pwd_old_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:textSize="18sp"
        android:background="@color/background_grey"
        android:hint="@string/current_password"
        android:inputType="textPassword"
        tools:ignore="MissingPrefix" />

    <EditText
        fontPath="Roboto-Light.ttf"
        tools:ignore="MissingPrefix"
        android:padding="5dp"
        android:id="@+id/change_pwd_new_pwd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/background_grey"
        android:hint="@string/new_password"
        android:inputType="textPassword"
        android:layout_marginStart="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_grey"
        android:layout_marginStart="10dp">

        <EditText
            fontPath="Roboto-Light.ttf"
            tools:ignore="MissingPrefix"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/change_pwd_confirm_pwd"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@color/background_grey"
            android:layout_height="wrap_content"
            android:hint="@string/confirmed_password"
            android:inputType="textPassword"
            />

        <ImageView
            android:id="@+id/confirm_pwd_status_img"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp" />
    </LinearLayout>


</LinearLayout>