<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.nowfloats.managenotification.ExpandableCardView
        android:id="@+id/ecvOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        app:expandOnClick="true"
        app:icon="@drawable/app_launcher"
        app:inner_view="@layout/list_caller_info"
        app:message="@string/noti_msg_orders"
        app:title="Orders (2)" />

    <LinearLayout
        android:id="@+id/llOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="-4dip"
        android:background="#EEEEEE"
        android:elevation="@dimen/margin_15"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDismissOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_10"
            android:text="@string/dismiss"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvViewOrders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:background="#EEEEEE"
            android:padding="@dimen/margin_10"
            android:text="View Orders"
            android:textAllCaps="true"
            android:textColor="@color/primaryColor"
            android:textSize="@dimen/medium_text_size"
            android:textStyle="bold" />

    </LinearLayout>

    <com.nowfloats.managenotification.ExpandableCardView
        android:id="@+id/ecvCalls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        app:expandOnClick="true"
        app:icon="@drawable/app_launcher"
        app:inner_view="@layout/list_caller_info"
        app:message="@string/noti_msg_calls"
        app:title="Calls (2)" />

    <TextView
        android:id="@+id/tvDismissCalls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="-4dip"
        android:background="#EEEEEE"
        android:elevation="@dimen/margin_15"
        android:gravity="left"
        android:padding="@dimen/margin_10"
        android:text="@string/dismiss"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="bold" />

    <com.nowfloats.managenotification.ExpandableCardView
        android:id="@+id/ecvEnquiries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_marginRight="@dimen/margin_10"
        app:expandOnClick="true"
        app:icon="@drawable/app_launcher"
        app:inner_view="@layout/list_caller_info"
        app:message="@string/noti_msg_enquires"
        app:title="Enquiries (2)" />

    <TextView
        android:id="@+id/tvDismissEnquiries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="-4dip"
        android:background="#EEEEEE"
        android:elevation="@dimen/margin_15"
        android:gravity="left"
        android:padding="@dimen/margin_10"
        android:text="@string/dismiss"
        android:textColor="@color/primaryColor"
        android:textSize="@dimen/medium_text_size"
        android:textStyle="bold" />

</LinearLayout>