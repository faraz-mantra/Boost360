<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/white"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginEnd="@dimen/margin_10"
      android:background="@color/white"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/firstrow_ImageView_ProfileV2"
        android:layout_width="@dimen/icon_size_55"
        android:layout_height="@dimen/icon_size_55"
        android:background="?android:selectableItemBackground"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_business_address" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@null" />

      <ImageView
        android:id="@+id/secondrow_ImageView_ProfileV2"
        android:layout_width="@dimen/icon_size_55"
        android:layout_height="@dimen/icon_size_55"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_contact_info" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@null" />

      <ImageView
        android:id="@+id/thirdrow_ImageView_ProfileV2"
        android:layout_width="@dimen/icon_size_55"
        android:layout_height="@dimen/icon_size_55"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_business_hours"
        android:visibility="visible" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@null" />

      <ImageView
        android:id="@+id/fourth_ImageView_ProfileV2"
        android:layout_width="@dimen/icon_size_55"
        android:layout_height="@dimen/icon_size_55"
        android:padding="15dp"
        android:src="@drawable/ic_business_logo" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@null" />

      <ImageView
        android:id="@+id/sixth_ImageView_ProfileV2"
        android:layout_width="@dimen/icon_size_55"
        android:layout_height="@dimen/icon_size_55"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/site_appearance"
        android:visibility="gone" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@null" />

      <ImageView
        android:id="@+id/eight_ImageView_ProfileV2"
        android:layout_width="@dimen/icon_size_55"
        android:layout_height="@dimen/icon_size_55"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/sidepanel_gallery"
        android:visibility="gone" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@null" />

      <ImageView
        android:id="@+id/seven_ImageView_ProfileV2"
        android:layout_width="@dimen/icon_size_55"
        android:layout_height="@dimen/icon_size_55"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/custom_page_icon"
        android:visibility="gone" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@null" />

      <ImageView
        android:id="@+id/nine_ImageView_ProfileV2"
        android:layout_width="@dimen/icon_size_55"
        android:layout_height="@dimen/icon_size_55"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/insert_link"
        android:tint="@color/gray"
        android:visibility="gone" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@null" />

      <ImageView
        android:id="@+id/fifth_ImageView_ProfileV2"
        android:layout_width="@dimen/icon_size_55"
        android:layout_height="@dimen/icon_size_55"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:src="@drawable/share_grey"
        android:visibility="gone" />


    </LinearLayout>

    <LinearLayout

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:orientation="vertical">

      <TextView
        android:id="@+id/businessAddress_Layout_ProfileV2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:text="@string/business__address"
        android:textColor="@color/cell_text_color"
        android:textSize="@dimen/cell_text_size" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3" />

      <TextView
        android:id="@+id/contactInformation_Layout_ProfileV2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:text="@string/contact__info"
        android:textColor="@color/cell_text_color"
        android:textSize="14sp" />

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3" />

      <LinearLayout
        android:id="@+id/businessHoursLinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cell_height"
        android:background="?android:selectableItemBackground"
        android:orientation="horizontal">

        <TextView
          android:id="@+id/businessHours_Layout_ProfileV2"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/cell_height"
          android:gravity="center_vertical"
          android:text="@string/title_activity_business__hours_"
          android:textColor="@color/cell_text_color"
          android:textSize="@dimen/cell_text_size"
          android:visibility="visible" />

        <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="@dimen/cell_height"
          android:layout_gravity="bottom"
          android:gravity="right|center_vertical"
          android:orientation="vertical">

          <ImageView
            android:id="@+id/lock_widget_business_hours"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginStart="@dimen/icon_left_margin"
            android:layout_marginEnd="@dimen/icon_right_margin"
            android:background="?android:selectableItemBackground"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/lock_widget"
            android:visibility="gone" />
        </LinearLayout>
      </LinearLayout>

      <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3" />

      <TextView
        android:id="@+id/businessLogo_Layout_ProfileV2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:text="@string/title_activity_business__logo_"
        android:textColor="@color/cell_text_color"
        android:textSize="@dimen/cell_text_size" />


      <LinearLayout
        android:id="@+id/layout_site_appearance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
          android:id="@+id/tvSiteAppearance"
          android:layout_width="match_parent"
          android:layout_height="@dimen/cell_height"
          android:background="?android:selectableItemBackground"
          android:gravity="center_vertical"
          android:text="@string/side_panel_site_appearance"
          android:textColor="@color/cell_text_color"
          android:textSize="@dimen/cell_text_size"
          android:visibility="gone" />

      </LinearLayout>

      <TextView
        android:id="@+id/tvPhotoGallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:text="@string/side_panel_row_four"
        android:textColor="@color/cell_text_color"
        android:textSize="@dimen/cell_text_size"
        android:visibility="gone" />

      <TextView
        android:id="@+id/tvCustomPages"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:text="@string/side_panel_row_csp"
        android:textColor="@color/cell_text_color"
        android:textSize="@dimen/cell_text_size"
        android:visibility="gone" />

      <TextView
        android:id="@+id/tvDomainDetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:text="@string/side_panel_row_domain_details"
        android:textColor="@color/cell_text_color"
        android:textSize="@dimen/cell_text_size"
        android:visibility="gone" />

      <TextView
        android:id="@+id/socialSharing_Layout_ProfileV2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cell_height"
        android:background="?android:selectableItemBackground"
        android:gravity="center_vertical"
        android:text="@string/title_activity_social__sharing_"
        android:textColor="@color/cell_text_color"
        android:textSize="@dimen/cell_text_size"
        android:visibility="gone" />

    </LinearLayout>


  </LinearLayout>

</LinearLayout>