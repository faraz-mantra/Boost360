                <TextView
                    android:id="@+id/tv_write_to_ria_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/write_to_ria_info_bg"
                    android:text="i"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="35dp"
                    android:textSize="16sp"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_get_in_touch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sidepanel_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center_vertical">

            <ImageView
                android:tint="#808080"
                android:id="@+id/iv_get_in_touch"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/icon_feedback"
