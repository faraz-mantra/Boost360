            >

            <ImageView
                android:id="@+id/fourthRow_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:layout_height="@dimen/icon_size"
                android:padding="5dp"
                android:src="@drawable/sidepanel_gallery"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin" />

            <TextView
                android:id="@+id/fourthRow_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
