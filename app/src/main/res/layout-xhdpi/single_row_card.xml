        <LinearLayout
            android:id="@+id/product_gal_Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sidepanel_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            >

            <ImageView
                android:id="@+id/Product_Gal_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:layout_height="@dimen/icon_size"
                android:padding="5dp"
                android:src="@drawable/catalog"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin" />

            <TextView
                android:id="@+id/Product_Gal_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/product_gallery" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">

                <ImageView
                    android:id="@+id/lock_product_gal"
                    android:layout_width="@dimen/icon_size"
                    android:scaleType="fitXY"
                    android:layout_height="@dimen/icon_size"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:src="@drawable/lock_widget"
                    android:layout_marginLeft="@dimen/icon_left_margin"
                    android:layout_marginRight="@dimen/icon_right_margin" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
