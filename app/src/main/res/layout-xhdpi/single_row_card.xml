                    android:layout_marginLeft="@dimen/icon_left_margin"
                    android:layout_marginRight="@dimen/icon_right_margin" />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:id="@+id/csp_Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sidepanel_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/csp_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/custom_page_icon"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin" />

            <TextView
                android:id="@+id/csp_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/side_panel_row_csp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right">

                <ImageView
                    android:id="@+id/lock_widget_csp"
                    android:layout_width="@dimen/icon_size"
                    android:scaleType="fitXY"
                    android:layout_height="@dimen/icon_size"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:src="@drawable/lock_widget"
                    android:layout_marginLeft="@dimen/icon_left_margin"
                    android:layout_marginRight="@dimen/icon_right_margin" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/storeRow_Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sidepanel_cell_height"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/cell_background_color">

            <ImageView
                android:id="@+id/storeRow_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:layout_height="@dimen/icon_size"
                android:padding="5dp"
                android:src="@drawable/sidepanel_store"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin" />

            <TextView
                android:id="@+id/storeRow_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/store" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:gravity="right">

                <Button
                    android:layout_width="80dp"
                    android:layout_height="27dp"
                    android:padding="3dp"
                    android:layout_gravity="right"
                    android:textColor="@color/white"
                    android:text="@string/single_row_card_upgrade_text"
                    android:clickable="false"
                    android:textSize="12sp"
                    fontPath="Roboto-Regular.ttf"
                    android:background="@drawable/corner_white_backgrnd_yellow"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fifthRow_Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sidepanel_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"

            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/fifthRow_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:layout_height="@dimen/icon_size"
                android:padding="5dp"
                android:src="@drawable/sidepanel_settings"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin" />

            <TextView
                android:id="@+id/fifthRow_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/side_panel_row_five" />

        </LinearLayout>


        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/light_gray" />

        <LinearLayout
            android:id="@+id/sixthRow_Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sidepanel_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"

            android:gravity="center_vertical">

            <ImageView
