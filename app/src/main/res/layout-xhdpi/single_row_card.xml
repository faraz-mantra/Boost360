                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/feedback" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seventhRow_Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sidepanel_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"

            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/seventhRow_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:layout_height="@dimen/icon_size"
                android:padding="10dp"
                android:tint="#808080"
                android:src="@drawable/ic_help_and_support"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin" />

            <TextView
                android:id="@+id/seventhRow_TextView"
                android:layout_width="wrap_content"
