<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cell_background_color"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/firstRow_Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sidepanel_cell_height"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/cell_background_color">

            <ImageView
                android:id="@+id/firstrow_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:layout_height="@dimen/icon_size"
                android:padding="5dp"
                android:src="@drawable/sidepanel_dashboard"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin" />

            <TextView
                android:id="@+id/firstrow_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/side_panel_row_one" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/customer_app_Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sidepanel_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/customer_app_ImageView"
                android:layout_width="38dp"
                android:scaleType="centerInside"
                android:layout_height="38dp"
                android:padding="3dp"
                android:src="@drawable/new_business_app"
                android:layout_marginStart="@dimen/icon_left_margin"
                android:layout_marginEnd="@dimen/icon_right_margin"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin" />

            <TextView
                android:id="@+id/customer_app_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/my_business_apps" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right">

                <Button
                    android:layout_width="50dp"
                    android:layout_height="27dp"
                    android:padding="3dp"
                    android:id="@+id/new_business_button"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="right"
                    android:textColor="@color/white"
                    android:text="@string/new_in_capital"
                    android:visibility="gone"
                    android:clickable="false"
                    android:textSize="12sp"
                    fontPath="Roboto-Regular.ttf"
                    android:background="@drawable/corner_white_backgrnd_yellow"
                    tools:ignore="MissingPrefix" />
                <ImageView
                    android:id="@+id/business_lock_widget"
                    android:layout_width="@dimen/icon_size"
                    android:scaleType="fitXY"
                    android:layout_height="@dimen/icon_size"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:src="@drawable/lock_widget"
                    android:layout_marginLeft="@dimen/icon_left_margin"
                    android:layout_marginRight="@dimen/icon_right_margin" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/secondRow_Layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sidepanel_cell_height"
            android:background="@color/cell_background_color"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/secondRow_ImageView"
                android:layout_width="@dimen/icon_size"
                android:scaleType="fitXY"
                android:padding="5dp"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/sidepanel_business"
                android:layout_marginLeft="@dimen/icon_left_margin"
                android:layout_marginRight="@dimen/icon_right_margin" />

            <TextView
                android:id="@+id/secondRow_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/cell_text_size"
                android:textColor="@color/cell_text_color"
                android:text="@string/side_panel_row_two" />

        </LinearLayout>

