<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/screen_bg">

    <include
        android:id="@+id/app_bar"
        layout="@layout/tool_bar_business_profile" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginLeft="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/primary_number"
                android:layout_marginLeft="5dp"
                android:textSize="10sp"
                android:textColor="#BDBDBD"/>

            <EditText
                android:id="@+id/primaryNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="14sp"
                android:textColor="#575757">
                </EditText>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alternate_number1"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="#BDBDBD"/>

            <EditText
                android:id="@+id/alternateNumber_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="14sp"
                android:inputType="number"
                android:textColor="#575757"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="vertical"
            android:gravity="bottom"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alternate_number2"
                android:textSize="10sp"
                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:textColor="#BDBDBD"/>

            <EditText
                android:id="@+id/alternateNumber_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:inputType="number"
                android:textSize="14sp"
                android:textColor="#575757"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="vertical"
            android:gravity="bottom"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alternate_number3"
                android:textSize="10sp"
                android:inputType="number"
                android:layout_marginLeft="5dp"
                android:textColor="#BDBDBD"/>

            <EditText
                android:id="@+id/alternateNumber_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:inputType="number"
                android:textSize="14sp"
                android:textColor="#575757"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="vertical"
            android:gravity="bottom"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_web_site_address"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="#BDBDBD"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_protocol_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic__drop_down"/>
                <android.support.v7.widget.AppCompatSpinner
                    android:background="@drawable/bg_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sp_web_address">

                </android.support.v7.widget.AppCompatSpinner>
                <!--<Spinner
                    android:background="@drawable/bg_spinner"
                    android:gravity="right"
                    android:id="@+id/sp_web_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Spinner>-->
                <EditText
                    android:id="@+id/websiteAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:textSize="14sp"
                    android:textColor="#575757"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="vertical"
            android:gravity="bottom"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/email_address"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="#BDBDBD"/>

            <EditText
                android:id="@+id/contactInfo_emailId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:textSize="14sp"
                android:textColor="#575757"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="vertical"
            android:gravity="bottom">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/facebook_page_name"
                android:textSize="10sp"
                android:layout_marginLeft="5dp"
                android:textColor="#BDBDBD"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="https://facebook.com/"/>
                <EditText
                    android:id="@+id/facebookPage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:textSize="14sp"
                    android:inputType="text"
                    android:textColor="#575757"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>







</LinearLayout>
