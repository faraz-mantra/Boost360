<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="fill_parent"
  android:background="@color/screen_bg">

  <include
    android:id="@+id/app_bar"
    layout="@layout/tool_bar_business_profile" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/app_bar">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:focusable="false"
      android:focusableInTouchMode="true"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/screen_bg"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="Phone Numbers" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp">

        <TextView
          android:id="@+id/tv_primary"
          fontPath="Roboto-Regular.ttf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingStart="3dp"
          android:paddingRight="3dp"
          android:text="@string/primary_number"
          android:textSize="12sp"
          tools:ignore="MissingPrefix" />

        <EditText
          android:id="@+id/primaryNumber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="bottom"
          android:textColor="#575757"
          android:textSize="14sp" />

      </LinearLayout>


      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp">

        <TextView
          android:id="@+id/tv_alternate1"
          fontPath="Roboto-Regular.ttf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingStart="3dp"
          android:paddingRight="3dp"
          android:text="@string/alternate_number1"
          android:textSize="12sp"
          tools:ignore="MissingPrefix" />

        <EditText
          android:id="@+id/alternateNumber_1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="bottom"
          android:inputType="number"
          android:textColor="#575757"
          android:textSize="14sp" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp">

        <TextView
          android:id="@+id/tv_alternate2"
          fontPath="Roboto-Regular.ttf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="text"
          android:paddingStart="3dp"
          android:paddingRight="3dp"
          android:text="@string/alternate_number2"
          android:textSize="12sp"
          tools:ignore="MissingPrefix" />

        <EditText
          android:id="@+id/alternateNumber_2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="bottom"
          android:inputType="number"
          android:textColor="#575757"
          android:textSize="14sp" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp">

        <TextView
          android:id="@+id/tv_alternate3"
          fontPath="Roboto-Regular.ttf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:inputType="text"
          android:paddingStart="3dp"
          android:paddingRight="3dp"
          android:text="@string/alternate_number3"
          android:textSize="12sp"
          tools:ignore="MissingPrefix" />

        <EditText
          android:id="@+id/alternateNumber_3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="bottom"
          android:inputType="number"
          android:textColor="#575757"
          android:textSize="14sp" />

      </LinearLayout>

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/screen_bg"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingBottom="10dp"
        android:text="@string/other_information" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
          android:id="@+id/textView4"
          fontPath="Roboto-Regular.ttf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingStart="3dp"
          android:paddingRight="3dp"
          android:text="@string/title_activity_web_site_address"
          android:textSize="12sp"
          tools:ignore="MissingPrefix" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <ImageView
            android:id="@+id/iv_protocol_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleX=".75"
            android:scaleY=".75"
            android:src="@drawable/ic__drop_down" />

          <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_web_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_spinner">

          </androidx.appcompat.widget.AppCompatSpinner>

          <!--
          <Spinner
              android:background="@drawable/bg_spinner"
              android:gravity="end"
              android:id="@+id/sp_web_address"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

          </Spinner>
          -->

          <EditText
            android:id="@+id/websiteAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#575757"
            android:textSize="14sp" />

        </LinearLayout>

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingRight="12dp">

        <TextView
          fontPath="Roboto-Regular.ttf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingStart="3dp"
          android:paddingRight="3dp"
          android:text="@string/email_address"
          android:textSize="12sp"
          tools:ignore="MissingPrefix" />

        <EditText
          android:id="@+id/contactInfo_emailId"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:enabled="false"
          android:gravity="bottom"
          android:inputType="textEmailAddress"
          android:paddingStart="3dp"
          android:paddingRight="3dp"
          android:textColor="#828282"
          android:textSize="14sp" />

        <TextView
          android:id="@+id/email_change_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingStart="3dp"
          android:paddingRight="3dp"
          android:text="@string/if_you_wish_to_change_email_address_please_contact_ria_nowfloats_com"
          android:textColor="#828282"
          android:textSize="12sp"
          android:fontFamily="@font/italic" />

      </LinearLayout>

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
          android:id="@+id/textView5"
          fontPath="Roboto-Regular.ttf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/facebook_page_name"
          android:textSize="12sp"
          tools:ignore="MissingPrefix" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/https_facebook_com" />

          <EditText
            android:id="@+id/facebookPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="#575757"
            android:textSize="14sp" />

        </LinearLayout>

      </LinearLayout>

      <TextView
        fontPath="Roboto-Regular.ttf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:text="@string/facebook_url_message"
        android:textSize="12sp"
        android:textStyle="italic"
        tools:ignore="MissingPrefix" />

    </LinearLayout>

  </ScrollView>

  <ProgressBar
    android:id="@+id/progressbar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:visibility="gone" />

</RelativeLayout>