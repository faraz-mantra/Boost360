<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/business_address_top_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_layout_height"
        android:background="@color/primaryColor">

        <TextView
            android:id="@+id/business_address_top_bar_store_txt"
            fontPath="Roboto-Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/signup_title"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="MissingPrefix" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/forward_button_signup_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:src="@drawable/ic_action_forward" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/verify_button"
        android:layout_below="@+id/business_address_top_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/businessNameLayout"
                style="@style/SignUp_LinearLayout_Style">

                <ImageView
                    android:id="@+id/businessNameImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/businessname_xhdpi" />


                <EditText
                    android:id="@+id/editText_businessName"
                    style="@style/SignUp_EditText_Style"
                    fontPath="Roboto-Light.ttf"
                    android:hint="@string/sign_up_business_name"
                    android:inputType="textCapWords"
                    tools:ignore="MissingPrefix" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/businessCategoryLayout"
                style="@style/SignUp_LinearLayout_Style">

                <ImageView
                    android:id="@+id/businessCategoryImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/catagry_xhdpi" />

                <EditText
                    android:id="@+id/editText_businessCategory"
                    style="@style/SignUp_EditText_Style"
                    fontPath="Roboto-Light.ttf"
                    android:drawableRight="@drawable/dropselect"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/sign_up_category"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/countryLayout"
                style="@style/SignUp_LinearLayout_Style"

                >

                <ImageView
                    android:id="@+id/countryImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/country_xhdpi" />

                <EditText
                    android:id="@+id/editText_Country"
                    style="@style/SignUp_EditText_Style"
                    android:drawablePadding="5dp"
                    android:drawableRight="@drawable/dropselect"
                    android:editable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/sign_up_country"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/cityLayout"
                style="@style/SignUp_LinearLayout_Style">

                <ImageView
                    android:id="@+id/cityImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/city_xhdpi" />

                <AutoCompleteTextView
                    android:id="@+id/editText_city"
                    style="@style/SignUp_EditText_Style"
                    android:layout_weight="1"
                    android:completionThreshold="1"
                    android:hint="@string/sign_up_city"
                    android:inputType="textCapWords" />

                <ProgressBar
                    android:id="@+id/city_progressbar"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="3dp"
                    android:visibility="gone" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/emailAddressLayout"
                style="@style/SignUp_LinearLayout_Style">

                <ImageView
                    android:id="@+id/emailImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/mail_xhdpi" />

                <EditText
                    android:id="@+id/editText_Email"
                    style="@style/SignUp_EditText_Style"
                    android:hint="@string/sign_up_email"
                    android:inputType="textEmailAddress"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phoneLayout"
                style="@style/SignUp_LinearLayout_Style"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:id="@+id/phoneImageView"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/phone_xhdpi" />

                <TextView
                    android:id="@+id/countrycode_signupscreen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="+91"
                    android:textColor="#B6B6B6"
                    android:textSize="16sp"
                    tools:ignore="MissingPrefix" />

                <EditText
                    android:id="@+id/editText_Phone"
                    style="@style/SignUp_EditText_Style"
                    android:layout_marginLeft="2dp"
                    android:hint="@string/sign_up_phone_number"
                    android:inputType="number"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="@color/primary_color"
        android:padding="10dp"
        android:text="verify and create website"
        android:textColor="@color/white"
        android:visibility="gone" />
</RelativeLayout>