<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/apk/res-auto"
  android:id="@+id/welcome_popup_layout"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#D8000000"
  android:gravity="center">

  <androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:background="#FFFFFF"
    android:visibility="visible"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="2dp">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <ImageView
        android:id="@+id/cancelCardImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="10dp"
        android:src="@drawable/card_cancel"
        android:tag="image_tag"
        android:visibility="gone" />

      <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical">

        <ImageView
          android:id="@+id/welcome_popup_icon"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"

          android:layout_marginTop="30dp"
          android:background="@color/primaryColor"
          android:src="@drawable/onboarding_popup_one" />

        <TextView
          android:id="@+id/onboarding_ScreenOne_Welcome"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="22dp"
          android:gravity="center"
          android:text="@string/onboarding_screen_1_title"
          android:textSize="24sp" />

        <TextView
          android:id="@+id/onboarding_ScreenOne_desc_TextView"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:paddingStart="30dp"
          android:paddingRight="30dp"
          android:text="@string/onboarding_screen_1_desc"
          android:textSize="14sp" />

      </LinearLayout>

      <TextView
        android:id="@+id/loginButton"
        android:layout_width="271dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/rounded_corner_button"
        android:gravity="center"
        android:inputType="textCapWords"
        android:text="@string/show_me"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />


    </LinearLayout>

  </androidx.cardview.widget.CardView>
</LinearLayout>



