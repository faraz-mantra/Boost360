<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10.0dip">

    <RelativeLayout
        android:id="@+id/boarding_trigger_tip_container"
        android:layout_width="320.0dip"
        android:layout_height="55.0dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/trigger_tip_background">

        <RelativeLayout
            android:id="@+id/boarding_trigger_tip_text1_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/boarding_trigger_tip_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/boarding_trigger_tip_drupe_image"
                android:gravity="bottom"
                android:text="@string/pull_to_open"
                android:textColor="@android:color/white"
                android:textSize="16.0sp" />

            <ImageView
                android:id="@+id/boarding_trigger_tip_drupe_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/boarding_trigger_tip_text1"
                android:gravity="bottom"
                android:src="@drawable/boost_bubble" />
        </RelativeLayout>

        <TextView
            android:id="@+id/boarding_trigger_tip_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/boarding_trigger_tip_text1_container"
            android:layout_centerHorizontal="true"
            android:gravity="center|top"
            android:text="@string/long_press_to_move"
            android:textColor="@android:color/white"
            android:textSize="16.0sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/boarding_trigger_tip_arrow_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/boarding_trigger_tip_container"
        android:layout_marginLeft="50.0dip"
        android:src="@drawable/tipmovearrow" />
</RelativeLayout>