<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flTopView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screen_bg"
    android:orientation="vertical">


    <ProgressBar
        android:id="@+id/pbView"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:theme="@style/CircularProgress"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/llStackView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.nowfloats.swipecard.SwipeStack
            android:id="@+id/swipeStack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/margin_10"
            app:stack_rotation="10"
            app:stack_size="10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_delete" />

            <ImageView
                android:id="@+id/ivViewMore"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_more" />


            <ImageView
                android:id="@+id/ivRemind"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/ic_remind" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSuggestions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvEnquiry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_20"
            android:text="The Enquiry Says"
            android:textColor="@color/black"
            android:textSize="@dimen/large_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@color/primary"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/ivCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_call_black_24dp" />

            <ImageView
                android:id="@+id/ivSms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/sms_bg" />

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_share" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llProductsView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <GridView
            android:id="@+id/gvSuggestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:numColumns="2"
            android:stretchMode="columnWidth"></GridView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btnBack"
                fontPath="Roboto-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/primary_color"
                android:elevation="5dp"
                android:padding="@dimen/margin_10"
                android:text="@string/back"
                android:textAllCaps="false"
                android:textColor="@drawable/yellow_btn_hover_text_color"
                android:textSize="@dimen/medium_text_size"
                android:visibility="visible"
                tools:ignore="MissingPrefix" />

            <Button
                android:id="@+id/btnShare"
                fontPath="Roboto-Regular.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/primary_color_dark"
                android:elevation="5dp"
                android:padding="@dimen/margin_10"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="@drawable/yellow_btn_hover_text_color"
                android:textSize="@dimen/medium_text_size"
                android:visibility="visible"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llCoachMark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"></LinearLayout>
</FrameLayout>
