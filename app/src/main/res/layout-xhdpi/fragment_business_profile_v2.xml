<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@id/toolbar"
            android:background="@color/primaryColor">

        </View>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            card_view:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">

                <com.makeramen.RoundedImageView
                    android:id="@+id/businessProfileIcon_ProfileV2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="15dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/business_edit_profile_icon"
                    app:riv_border_color="#333333"
                    app:riv_border_width="0dip"
                    app:riv_corner_radius="30dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="true" />

                <TextView
                    android:id="@+id/websiteTitleTextView_ProfileV2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="41dp"
                    android:layout_toRightOf="@id/businessProfileIcon_ProfileV2"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/primaryColor"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/categoryTextView_ProfileV2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/websiteTitleTextView_ProfileV2"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/businessProfileIcon_ProfileV2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#949494"
                    android:textSize="12sp" />


                <LinearLayout
                    android:id="@+id/editProfile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="end"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/pencil_grey" />

                </LinearLayout>

                <TextView
                    android:id="@+id/businessInfoTextView_ProfileV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/businessProfileIcon_ProfileV2"
                    android:layout_gravity="start"
                    android:layout_marginLeft="15dp"
                    android:autoLink="web"
                    android:ellipsize="end"
                    android:linksClickable="true"
                    android:maxLines="2"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#3B3B3B"
                    android:textSize="13sp" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="3">

        <android.support.v7.widget.CardView
            android:id="@+id/cv_total_orders"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            android:onClick="onOrderTypeClicked"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_row="0">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="-10dp"
                android:src="@drawable/ic_total_orders"
                android:layout_gravity="bottom|right"
                android:alpha="0.08"/>
            <TextView
                android:id="@+id/tv_total_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="25sp"
                android:visibility="invisible"
                android:layout_gravity="center"/>
            <ProgressBar
                android:id="@+id/pg_total_orders"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminateTint="@color/primary"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="115dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="@string/total_orders"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            android:onClick="onOrderTypeClicked"
            android:id="@+id/cv_successful_orders"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="1dp"
            android:layout_marginTop="1dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_row="0">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="-10dp"
                android:src="@drawable/ic_successful_orders"
                android:layout_gravity="bottom|right"
                android:alpha="0.08"/>
            <TextView
                android:id="@+id/tv_successful_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="25sp"
                android:visibility="invisible"
                android:layout_gravity="center"/>
            <ProgressBar
                android:id="@+id/pg_successful_orders"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminateTint="@color/primary"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="@string/received_successful_orders"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:onClick="onOrderTypeClicked"
            android:id="@+id/cv_received_orders"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="1dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_row="1">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="-10dp"
                android:src="@drawable/ic_received_orders"
                android:layout_gravity="bottom|right"
                android:alpha="0.08"/>
            <TextView
                android:id="@+id/tv_received_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4444"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="25sp"
                android:visibility="invisible"
                android:layout_gravity="center"/>
            <ProgressBar
                android:id="@+id/pg_received_orders"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminateTint="@color/primary"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="@string/received_orders"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_cancelled_orders"
            android:onClick="onOrderTypeClicked"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="1dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_row="1">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="-10dp"
                android:src="@drawable/ic_cancelled_orders"
                android:layout_gravity="bottom|right"
                android:alpha="0.08"/>
            <TextView
                android:id="@+id/tv_cancelled_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="25sp"
                android:visibility="invisible"
                android:layout_gravity="center"/>
            <ProgressBar
                android:id="@+id/pg_cancelled_orders"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminateTint="@color/primary"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="@string/cancelled_orders"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_returned_orders"
            android:onClick="onOrderTypeClicked"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="1dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_row="2">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="-10dp"
                android:src="@drawable/ic_returned_orders"
                android:layout_gravity="bottom|right"
                android:alpha="0.08"/>
            <TextView
                android:id="@+id/tv_returned_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="25sp"
                android:visibility="invisible"
                android:layout_gravity="center"/>
            <ProgressBar
                android:id="@+id/pg_refunded_orders"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminateTint="@color/primary"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="@string/returned_orders"/>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_abandoned_orders"
            android:onClick="onOrderTypeClicked"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="1dp"
            android:background="?android:attr/selectableItemBackground"
            app:layout_row="2">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="-10dp"
                android:src="@drawable/ic_abandoned_orders"
                android:layout_gravity="bottom|right"
                android:alpha="0.08"/>
            <TextView
                android:id="@+id/tv_abandoned_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:textSize="25sp"
                android:visibility="invisible"
                android:layout_gravity="center"/>
            <ProgressBar
                android:id="@+id/pg_abandoned_orders"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:indeterminateTint="@color/primary"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="@string/abandoned_orders"/>

        </android.support.v7.widget.CardView>

    </android.support.v7.widget.GridLayout>

</LinearLayout>