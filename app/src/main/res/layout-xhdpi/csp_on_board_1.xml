<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:ignore="MissingPrefix">

  <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="@dimen/margin_30"
    android:layout_marginEnd="@dimen/margin_30"
    android:layout_marginBottom="@dimen/margin_50"
    android:background="@color/white"
    android:elevation="@dimen/margin_5"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/margin_5">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_30"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">

        <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center_horizontal"
          android:fontFamily="sans-serif"
          android:gravity="center"
          android:text="@string/manage_your_potential_customers_on_a_tap"
          android:textColor="@color/dark_grey"
          android:textSize="@dimen/llarge_text_size" />

        <ImageView
          android:id="@+id/ivCA"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_margin="@dimen/margin_10"
          android:src="@drawable/csp_on_board_1" />

        <TextView
          android:id="@+id/screen_2_descTextView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/margin_30"
          android:fontFamily="sans-serif"
          android:gravity="center"
          android:text="@string/we_analyse_your_sms_and_calls_so_you_can_focus_on_converting_your_potential_customers"
          android:textColor="#80000000"
          android:textSize="13sp" />


      </LinearLayout>

      <LinearLayout
        android:id="@+id/llGetStarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/primary"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/margin_20">


        <TextView
          android:id="@+id/tvGetStarted"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:fontFamily="sans-serif"
          android:gravity="center"
          android:text="@string/get_started"
          android:textColor="@color/white"
          android:textSize="@dimen/medium_text_size"
          tools:ignore="MissingPrefix" />
      </LinearLayout>
    </LinearLayout>

  </androidx.cardview.widget.CardView>

</RelativeLayout>
