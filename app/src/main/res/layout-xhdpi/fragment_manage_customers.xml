<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
      android:id="@+id/card_website"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="8dp"
      android:visibility="gone"
      app:cardElevation="2dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/tv_website_interactions"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="8dp"
          android:text="@string/website_ninteractions"
          android:textSize="22sp"
          app:layout_constraintBottom_toBottomOf="@+id/img_laptop"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/img_laptop"
          app:layout_constraintTop_toTopOf="@+id/img_laptop" />

        <ImageView
          android:id="@+id/img_laptop"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="32dp"
          android:paddingStart="10dp"
          android:paddingRight="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/ic_manage_website" />

        <ImageView
          android:id="@+id/img_info1"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="5dp"
          android:padding="5dp"
          android:src="@drawable/icon_info"
          android:tint="@color/light_gray"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
          android:id="@+id/ll_order"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/f3f3f3"
          android:padding="12dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/img_laptop">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:text="@string/orders"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="13sp" />

          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/right_arrow" />

        </LinearLayout>

        <View
          android:id="@+id/divider1"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/divider"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/ll_order" />

        <LinearLayout
          android:id="@+id/ll_enquiry"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/f3f3f3"
          android:padding="12dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/divider1">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:text="@string/enquiries_"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="13sp" />

          <TextView
            android:id="@+id/tv_enquiries_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/right_arrow" />

        </LinearLayout>

        <View
          android:id="@+id/divider2"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/divider"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/ll_enquiry" />

        <LinearLayout
          android:id="@+id/ll_calls"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/f3f3f3"
          android:padding="12dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/divider3">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:text="@string/calls"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="13sp" />

          <TextView
            android:id="@+id/tv_calls_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/right_arrow" />

        </LinearLayout>

        <View
          android:id="@+id/divider3"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/divider"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/ll_subscriber" />

        <LinearLayout
          android:id="@+id/ll_subscriber"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/f3f3f3"
          android:padding="12dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/divider2">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:text="@string/subscribers_"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="13sp" />

          <TextView
            android:id="@+id/tv_subscriber_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/zero" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/right_arrow" />

        </LinearLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>

      <io.codetail.widget.RevealFrameLayout
        android:id="@+id/rfl_overlay1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <include
          layout="@layout/mc_info_layout"
          android:visibility="invisible" />
      </io.codetail.widget.RevealFrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="15dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="10dp"
      app:cardElevation="2dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/card_website">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
          android:id="@+id/tv_cross_platform"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="24dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="8dp"
          android:text="@string/cross_nplatform"
          android:textSize="22sp"
          app:layout_constraintBottom_toBottomOf="@+id/imageView5"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/imageView5"
          app:layout_constraintTop_toTopOf="@+id/imageView5" />

        <ImageView
          android:id="@+id/imageView5"
          android:layout_width="100dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="32dp"
          android:layout_marginTop="32dp"
          android:paddingStart="10dp"
          android:paddingRight="10dp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:srcCompat="@drawable/ic_social" />

        <ImageView
          android:id="@+id/img_info2"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginTop="5dp"
          android:layout_marginEnd="5dp"
          android:padding="5dp"
          android:src="@drawable/icon_info"
          android:tint="@color/light_gray"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
          android:id="@+id/ll_third_party_query"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/f3f3f3"
          android:padding="12dp"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/imageView5">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:text="@string/third_party_quiries"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="13sp" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/right_arrow" />

        </LinearLayout>

        <View
          android:id="@+id/divider4"
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:background="@color/divider"
          android:visibility="gone"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/ll_third_party_query" />

        <LinearLayout
          android:id="@+id/ll_facebook_chat"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/f3f3f3"
          android:padding="12dp"
          android:visibility="gone"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/divider4">

          <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_weight="1"
            android:text="@string/facebook_chats"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="13sp" />

          <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/right_arrow" />

        </LinearLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>

      <io.codetail.widget.RevealFrameLayout
        android:id="@+id/rfl_overlay2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent">

        <include
          layout="@layout/mc_info_layout"
          android:visibility="invisible" />
      </io.codetail.widget.RevealFrameLayout>
    </androidx.cardview.widget.CardView>
  </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>