<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/screen_bg"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="3dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp"
                card_view:cardBackgroundColor="#FFFFFF"
                card_view:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#9c9c9c"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingBottom="10dp"
                            android:paddingLeft="15dp"
                            android:paddingRight="5dp"
                            android:paddingTop="15dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingBottom="3dp">

                               <!-- <TextView
                                    fontPath="Roboto-Medium.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="2dp"
                                    android:singleLine="true"
                                    android:text="From:"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    tools:ignore="MissingPrefix" />-->


                                <TextView
                                    android:id="@+id/fromTextView"
                                    fontPath="Roboto-Medium.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scrollHorizontally="false"
                                    android:singleLine="true"
                                    android:text="@string/number_tocall_says"
                                    android:textColor="@color/white"
                                    android:textSize="15sp"
                                    tools:ignore="MissingPrefix" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/enquiry_dateTextView"
                                fontPath="Roboto-Regular.ttf"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/sent_on"
                                android:textColor="@color/white"
                                android:textSize="10sp"
                                tools:ignore="MissingPrefix" />
                        </LinearLayout>

                        <FrameLayout
                            android:id="@+id/contactButton"
                            android:layout_width="80dp"
                            android:layout_height="40dp"
                            android:layout_marginRight="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/white_round_corner"
                                android:gravity="center">

                                <!--<ImageView
                                    android:id="@+id/contact_icon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:src="@drawable/ic_call_white_48dp"
                                    android:visibility="gone" />-->

                                <TextView
                                    android:id="@+id/contactText"
                                    fontPath="Roboto-Bold.ttf"
                                    android:layout_width="wrap_content"
                                    android:layout_height="30dp"
                                    android:gravity="center"
                                    android:text="@string/call"
                                    android:textColor="@color/login_bkg"
                                    android:textSize="13sp"
                                    tools:ignore="MissingPrefix" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="?android:selectableItemBackground"
                                android:orientation="horizontal"></LinearLayout>
                        </FrameLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="18dp">


                        <TextView
                            android:id="@+id/queryTexView"
                            fontPath="Roboto-Regular.ttf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="@string/wow_this_is_amazing_offer_is_it_avail_trip"
                            android:textColor="#3c3c3c"
                            android:textSize="15sp"
                            tools:ignore="MissingPrefix" />


                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/entity_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:visibility="visible">

                <TextView
                    fontPath="Roboto-Regular.ttf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/customer_replied_to_your_post"
                    android:textColor="#9c9c9c"
                    android:textSize="11sp"
                    tools:ignore="MissingPrefix" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="22dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@color/primaryColor"/>

                    <TextView
                        android:id="@+id/entityTexView"
                        fontPath="Roboto-LightItalic.ttf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/wow_this_is_amazing_offer_is_it_avail_trip"
                        android:textColor="#9c9c9c"
                        android:textSize="11sp"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>


