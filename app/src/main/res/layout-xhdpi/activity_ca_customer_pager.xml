<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flTopView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sam_customer_list"
    android:orientation="vertical">


    <ProgressBar
        android:id="@+id/pbView"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:theme="@style/CircularProgress"
        android:visibility="gone" />

    <View
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:alpha="0.0"
        android:background="@drawable/bg_selected_sam_customer_list" />

    <!-- <FrameLayout
         android:id="@+id/toolbar_container"
         android:layout_width="match_parent"
         android:layout_height="wrap_content">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center"
             android:padding="@dimen/margin_20"
             android:text="My Potential Customers"
             android:textColor="@color/gray"
             android:textSize="@dimen/large_text_size" />


     </FrameLayout>-->


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="@color/white"
            android:visibility="gone" />

        <com.nowfloats.NavigationDrawer.SlidingTabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vwSAM"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:background="@android:color/transparent" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_btm_sam_customer_list" />
</LinearLayout>

