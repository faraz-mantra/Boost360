<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/size_12"
    android:background="@drawable/bg_rounded_16_radius_rect">

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/need_title_sheet"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/size_25"
      android:fontFamily="@font/bold"
      android:gravity="start"
      android:text="@string/need_help"
      android:textAlignment="gravity"
      android:textColor="@color/black_4a4a4a"
      android:textSize="@dimen/text_16"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <com.framework.views.customViews.CustomImageView
      android:id="@+id/iv_close"
      android:layout_width="@dimen/size_18"
      android:layout_height="@dimen/size_18"
      android:layout_marginEnd="@dimen/size_25"
      android:src="@drawable/ic_close_grey_rounded"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toEndOf="@+id/need_title_sheet"
      app:layout_constraintTop_toTopOf="@+id/need_title_sheet" />

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/need_subtitle_sheet"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size_25"
      android:layout_marginTop="@dimen/size_4"
      android:layout_marginEnd="@dimen/size_25"
      android:fontFamily="@font/regular"
      android:gravity="start"
      android:lineSpacingMultiplier="1.3"
      android:text="@string/onboarding_need_help_message"
      android:textAlignment="gravity"
      android:textColor="@color/black_2A2A2A"
      android:textSize="@dimen/text_13"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/need_title_sheet" />

    <com.framework.views.customViews.CustomButton
      android:id="@+id/tv_create_support_request"
      style="@style/yellow_squared_button"
      android:layout_marginTop="@dimen/size_25"
      android:enabled="true"
      android:text="@string/call_our_expert"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/need_subtitle_sheet" />

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
