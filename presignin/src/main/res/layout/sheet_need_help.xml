<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:background="@drawable/bg_rounded_top_white">

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/need_title_sheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_25"
            android:fontFamily="@font/inter_bold"
            android:gravity="start"
            android:text="@string/need_help"
            android:textAlignment="gravity"
            android:textColor="@color/black_4a4a4a"
            android:textSize="@dimen/text_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.framework.views.customViews.CustomImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/size_18"
            android:layout_height="@dimen/size_18"
            android:layout_marginEnd="@dimen/size_25"
            android:src="@drawable/ic_close_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/need_title_sheet"
            app:layout_constraintTop_toTopOf="@+id/need_title_sheet" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/need_subtitle_sheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginStart="@dimen/size_25"
            android:layout_marginEnd="@dimen/size_25"
            android:fontFamily="@font/inter_regular"
            android:gravity="start"
            android:text="@string/you_can_create_a_support_request_and_someone_from_the_boost_team_will_assist_you"
            android:textAlignment="gravity"
            android:textColor="@color/black_2A2A2A"
            android:textSize="@dimen/text_13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/need_title_sheet" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_create_support_request"
            style="@style/yellow_squared_button"
            android:text="@string/call_us"
            android:enabled="true"
            android:layout_marginTop="@dimen/size_25"
            app:layout_constraintTop_toBottomOf="@+id/need_subtitle_sheet"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="UnknownId"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
