<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="@dimen/_120sdp"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <com.framework.views.customViews.CustomCardView
      android:layout_width="@dimen/_50sdp"
      android:layout_height="@dimen/_50sdp"
      android:layout_margin="@dimen/size_4"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="@dimen/_25sdp"
      app:cardElevation="0dp">

      <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/size_4"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/full_screen_lottie_progress"
        app:lottie_renderMode="automatic"
        app:lottie_repeatCount="100000" />
    </com.framework.views.customViews.CustomCardView>

    <com.framework.views.customViews.CustomTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size_2"
      android:layout_marginTop="@dimen/size_8"
      android:text="@string/sit_tight"
      android:textColor="@color/white"
      app:fontFamily="@font/semi_bold"
      app:textType="HEADING_6"
      tools:textColor="@color/greyish_brown" />

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size_2"
      android:layout_marginTop="@dimen/size_8"
      android:gravity="center"
      android:textColor="@color/white"
      app:fontFamily="@font/regular"
      app:textType="HEADING_6"
      tools:text="sjdbasjdbsakdjask"
      tools:textColor="@color/greyish_brown" />


  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>
