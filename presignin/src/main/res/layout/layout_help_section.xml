<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white_F5F8FD"
    android:paddingHorizontal="@dimen/size_25">

    <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:paddingVertical="@dimen/size_4"
        android:background="@drawable/bg_rounded_yellow_light"
        android:paddingHorizontal="@dimen/size_5"
        android:textAllCaps="false"
        android:drawablePadding="@dimen/size_2"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/text_10"
        android:gravity="center"
        android:fontFamily="@font/semi_bold"
        android:text="@string/help"
        android:drawableStart="@drawable/ic_help_color_primary"/>

</androidx.appcompat.widget.LinearLayoutCompat>
</layout>