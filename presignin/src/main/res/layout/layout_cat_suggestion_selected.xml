<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_edit_white"
    android:orientation="vertical">

    <TextView
      android:id="@+id/tv_cat_selected"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:drawablePadding="@dimen/size_16"
      android:ellipsize="end"
      android:fontFamily="@font/inter_semi_bold"
      android:gravity="center_vertical"
      android:maxLines="1"
      android:padding="@dimen/size_8"
      android:paddingHorizontal="@dimen/size_16"
      android:scrollHorizontally="true"
      android:singleLine="true"
      tools:text="Boutique"
      android:textColor="@color/black_4a4a4a"
      android:textSize="@dimen/text_14"
      app:drawableEndCompat="@drawable/ic_presignin_edit_input"
      app:drawableStartCompat="@drawable/ic_search_offers"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/tv_subcat"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:fontFamily="@font/inter_regular"
      android:includeFontPadding="false"
      android:maxLines="1"
      android:paddingStart="@dimen/size_45"
      android:paddingEnd="@dimen/size_24"
      android:paddingBottom="@dimen/size_12"
      android:scrollHorizontally="true"
      android:singleLine="true"
      android:textColor="@color/colorB3B3B3"
      android:textSize="@dimen/text_12"
      tools:text="in Retail"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />
  </LinearLayout>
</layout>
