<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:gravity="center_vertical"
            android:id="@+id/tv_cat_selected"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/rounded_rectangle_eceff1"
            android:backgroundTint="@color/white"
            android:drawablePadding="@dimen/size_16"
            android:ellipsize="end"
            android:fontFamily="@font/inter_semi_bold"
            android:maxLines="1"
            android:padding="@dimen/size_8"
            android:paddingHorizontal="@dimen/size_16"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/black_4a4a4a"
            android:textSize="@dimen/text_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:drawableEndCompat="@drawable/ic_presignin_edit_input"
            app:drawableStartCompat="@drawable/ic_search_offers" />

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/tv_subcat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="42dp"
            android:paddingEnd="24dp"
            android:paddingBottom="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/inter_regular"
            android:maxLines="1"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/colorB3B3B3"
            android:textSize="@dimen/text_13"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />
    </LinearLayout>
</layout>
