<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_12"
        android:backgroundTint="@color/black_4a4a4a"
        android:background="@drawable/bg_rounded_16_radius_rect">

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/need_title_sheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_25"
            android:layout_marginTop="@dimen/size_25"
            android:layout_marginEnd="@dimen/size_60"
            android:fontFamily="@font/bold"
            android:gravity="start"
            android:text="@string/your_request_for_support_was_sent_successfully"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14"
            app:layout_constraintEnd_toStartOf="@+id/iv_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.framework.views.customViews.CustomImageView
            android:id="@+id/iv_close"
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            android:layout_marginEnd="@dimen/size_25"
            android:tint="@color/white"
            android:src="@drawable/ic_close_black_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/need_title_sheet"
            app:layout_constraintTop_toTopOf="@+id/need_title_sheet" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/need_subtitle_sheet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_25"
            android:layout_marginTop="@dimen/size_6"
            android:gravity="start"
            android:text="@string/someone_from_boost_will_get_in_touch_with_you"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="@dimen/text_13"
            android:layout_marginBottom="@dimen/size_25"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/iv_close"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/need_title_sheet" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
