<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
           <KeyAttribute
               motion:motionTarget="@+id/customTextView"
               motion:framePosition="0" >
           </KeyAttribute>
           <KeyAttribute
               motion:motionTarget="@+id/customTextView"
               motion:framePosition="100" >
           </KeyAttribute>
       </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/recyclerView" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/sub_heading_tv"
            motion:layout_constraintVertical_chainStyle="spread"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/recyclerView" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/customTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toEndOf="@id/back_iv"
            motion:layout_constraintBottom_toBottomOf="@id/background_view"
            motion:layout_constraintTop_toTopOf="@id/background_view"
            android:scaleX="0.9"
            android:scaleY="0.9">

        </Constraint>
        <Constraint
            android:id="@+id/background_view"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp" />
        <Constraint
            android:id="@+id/sub_heading_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16sdp"
            motion:layout_constraintTop_toBottomOf="@id/customTextView"
            android:layout_marginStart="@dimen/_16sdp"
            motion:layout_constraintStart_toEndOf="@+id/back_iv"
            android:layout_marginTop="@dimen/_4sdp"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:visibility="gone"/>

        <Constraint
            android:id="@+id/icon"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_marginEnd="0dp"
            android:layout_marginTop="0dp"
            motion:layout_constraintStart_toStartOf="@id/negative_margin"
            motion:layout_constraintBottom_toBottomOf="@id/negative_margin"
            android:scaleX="0.8"
            android:scaleY="0.8" />

    </ConstraintSet>
</MotionScene>