<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:motion="http://schemas.android.com/apk/res-auto">

  <Transition
    motion:constraintSetEnd="@+id/end"
    motion:constraintSetStart="@id/start"
    motion:duration="1000">
    <KeyFrameSet>
      <KeyAttribute
        motion:framePosition="0"
        motion:motionTarget="@+id/customTextView" />
      <KeyAttribute
        motion:framePosition="100"
        motion:motionTarget="@+id/customTextView" />
    </KeyFrameSet>
    <OnSwipe motion:touchAnchorId="@+id/recyclerView" />
  </Transition>

  <ConstraintSet android:id="@+id/start">

    <Constraint
      android:id="@+id/recyclerView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      motion:layout_constraintEnd_toEndOf="parent"
      motion:layout_constraintStart_toStartOf="parent"
      motion:layout_constraintTop_toBottomOf="@+id/sub_heading_tv"
      motion:layout_constraintVertical_chainStyle="spread" />

    <Constraint
      android:id="@+id/customTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="20dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="20dp"
      motion:layout_constraintStart_toStartOf="parent"
      motion:layout_constraintTop_toBottomOf="@id/back_iv">

      <CustomAttribute
        motion:attributeName="textSize"
        motion:customFloatValue="20" />

      <CustomAttribute
        motion:attributeName="text"
        motion:customStringValue="@string/select_business_category" />
    </Constraint>

  </ConstraintSet>

  <ConstraintSet android:id="@+id/end">

    <Constraint
      android:id="@+id/customTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:scaleX="1"
      android:scaleY="1"
      motion:layout_constraintBottom_toBottomOf="@id/background_view"
      motion:layout_constraintStart_toEndOf="@id/back_iv"
      motion:layout_constraintTop_toTopOf="@id/background_view">

      <CustomAttribute
        motion:attributeName="textSize"
        motion:customFloatValue="15" />

      <CustomAttribute
        motion:attributeName="text"
        motion:customStringValue="@string/select_business_type" />

    </Constraint>

    <Constraint
      android:id="@+id/background_view"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_55sdp"
      android:layout_marginStart="0dp"
      motion:layout_constraintEnd_toEndOf="parent"
      motion:layout_constraintStart_toStartOf="parent"
      motion:layout_constraintTop_toTopOf="parent" />

    <Constraint
      android:id="@+id/sub_heading_tv"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/_16sdp"
      android:layout_marginTop="@dimen/_4sdp"
      android:layout_marginEnd="@dimen/_16sdp"
      android:scaleX="0.5"
      android:scaleY="0.5"
      android:visibility="gone"
      motion:layout_constraintStart_toEndOf="@+id/back_iv"
      motion:layout_constraintTop_toBottomOf="@id/customTextView" />

    <Constraint
      android:id="@+id/icon"
      android:layout_width="@dimen/_100sdp"
      android:layout_height="@dimen/_100sdp"
      android:layout_marginTop="0dp"
      android:layout_marginEnd="0dp"
      android:scaleX="0.8"
      android:scaleY="0.8"
      motion:layout_constraintBottom_toBottomOf="@id/negative_margin"
      motion:layout_constraintEnd_toEndOf="parent"
      motion:layout_constraintStart_toStartOf="@id/negative_margin" />

  </ConstraintSet>
</MotionScene>