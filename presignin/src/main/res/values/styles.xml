<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Pre.Signin" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/white</item>
    </style>


    <style name="started_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_36sdp</item>
        <item name="android:background">@drawable/getting_started_button_shape</item>
        <item name="textColor">@color/white</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
        <item name="android:textAlignment">center</item>
        <item name="textSize">@dimen/heading_6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="tnc_textview_style">
        <item name="fontFamily">@font/open_sans</item>
        <item name="textColor">@color/tnc_color</item>
        <item name="textSize">@dimen/caption</item>
    </style>

    <style name="intro_title_text_style">
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/heading_4</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>
</resources>