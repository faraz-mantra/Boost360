<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:padding="@dimen/size_24"
        android:background="@drawable/top_round_corner"
        android:layout_height="match_parent">


        <com.framework.views.customViews.CustomTextView
            android:id="@+id/customTextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_template_text"
            android:textColor="@color/black"
            android:textSize="@dimen/size_18"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="24dp" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_header1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/header_1"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/customTextView4" />

        <com.framework.views.customViews.CustomEditText
            android:id="@+id/et_header1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginTop="8dp"
            android:background="@drawable/grey_rounded_et_bg"
            android:padding="@dimen/size_8"
            app:layout_constraintTop_toBottomOf="@+id/tv_header1"
            tools:layout_editor_absoluteX="24dp" />

        <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/10"
            app:layout_constraintBottom_toBottomOf="@+id/tv_header1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_header1" />


        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_header2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/header_2"
            android:textColor="@color/black"
            android:textSize="@dimen/size_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_header1" />

        <com.framework.views.customViews.CustomEditText
            android:id="@+id/et_header2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50"
            android:layout_marginTop="8dp"
            android:background="@drawable/grey_rounded_et_bg"
            android:padding="@dimen/size_8"
            app:layout_constraintTop_toBottomOf="@+id/tv_header2"
            tools:layout_editor_absoluteX="24dp" />

        <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10/10"
            app:layout_constraintBottom_toBottomOf="@+id/tv_header2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_header2" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textAllCaps="true"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/btn_done"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_done" />

        <com.framework.views.customViews.CustomImageView
            android:id="@+id/btn_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_done_edit_template"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_header2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
