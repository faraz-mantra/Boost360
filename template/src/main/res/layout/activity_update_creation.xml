<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.UpdateCreationActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/toolbar_bg"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent">


            <com.framework.views.customViews.CustomImageView
                android:id="@+id/iv_toolbar_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_toolbar_back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tv_toolbar_title"
                style="@style/BlackSemiBoldM"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/update_creation"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iv_store"
                app:layout_constraintStart_toEndOf="@+id/iv_toolbar_back"
                app:layout_constraintTop_toTopOf="parent" />


            <com.framework.views.customViews.CustomImageView
                android:id="@+id/iv_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_search"
                app:layout_constraintEnd_toStartOf="@+id/iv_search"
                app:layout_constraintTop_toTopOf="@+id/iv_search">

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/iv_love"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_love"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_love_count"
                    android:paddingHorizontal="4dp"
                    app:layout_constraintBottom_toTopOf="@+id/iv_love"
                    app:layout_constraintEnd_toEndOf="@+id/iv_love"
                    app:layout_constraintTop_toTopOf="@+id/iv_love">

                    <com.framework.views.customViews.CustomTextView
                        style="@style/WhiteRegularSS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="3"
                        android:textSize="8dp" />
                </RelativeLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.framework.views.customViews.CustomImageView
                android:id="@+id/iv_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_store"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:paddingVertical="8dp"
            android:paddingHorizontal="16dp"
            android:gravity="center"
            android:weightSum="1"
            android:orientation="horizontal"
            android:id="@+id/layout_social_conn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/social_conn_bg"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

            <com.framework.views.customViews.CustomImageView
                android:layout_width="10dp"
                android:src="@drawable/ic_left_arrow_grey"
                android:layout_height="10dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="8dp"
                android:id="@+id/rv_social_conn"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="0.96"
                android:orientation="horizontal"
                tools:listitem="@layout/list_item_social_conn"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_height="wrap_content"/>

            <com.framework.views.customViews.CustomImageView
                android:layout_width="10dp"
                android:rotation="180"
                android:src="@drawable/ic_left_arrow_grey"
                android:layout_height="10dp"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:background="#ECEFF4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_social_conn">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                android:background="@drawable/top_round_corner"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent">

                <com.example.template.views.customviews.ScalableTabLayout
                    android:id="@+id/tab_layout"
                    style="@style/TabTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:tabMinWidth="0dp"
                    app:tabMode="scrollable"
                    app:tabTextAppearance="@style/TabTextStyle">

                </com.example.template.views.customviews.ScalableTabLayout>


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/view_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
