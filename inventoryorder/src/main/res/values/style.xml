  <style name="AppTheme.Order.create_appointment" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowAnimationStyle">@null</item>
    <item name="android:windowDisablePreview">true</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorSecondary">@color/black_4a4a4a</item>
    <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
    <item name="android:homeAsUpIndicator">@drawable/ic_arrow_left_30</item>
    <item name="searchViewStyle">@style/SearchView</item>
    <item name="colorSurface">@color/white</item>
    <item name="android:windowIsFloating">false</item>
    <item name="android:timePickerStyle">@style/MyDatePicker</item>
    <item name="editTextStyle">@style/ComposeEditText</item>
    <item name="android:textViewStyle">@style/TextViewDefaultFont</item>
  </style>
  <style name="Add.Order.create_appointment" parent="AppTheme.Order.create_appointment">
    <item name="colorAccent">@color/black_4a4a4a</item>
    <item name="colorSecondary">@color/black_4a4a4a</item>
  </style>
  <style name="AppThemeReviewAndConfirm">
    <item name="bottomSheetDialogTheme">@style/DialogStyle</item>
  </style>

  <style name="DialogStyle" parent="BottomSheetTheme">
    <item name="android:windowIsFloating">false</item>
    <item name="android:statusBarColor">@android:color/transparent</item>
    <item name="android:windowSoftInputMode">adjustResize</item>
  </style>

  <style name="AppTheme.Order.create" parent="AppTheme.Order">
    <item name="android:timePickerStyle">@style/MyDatePicker</item>
    <item name="colorAccent">@color/black_4a4a4a</item>
  </style>

  <style name="Theme.TransparentPickInventory" parent="android:Theme">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowContentOverlay">@null</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowIsFloating">true</item>
    <item name="android:backgroundDimEnabled">false</item>
  </style>


  <style name="Theme.MyTheme.TimePicker" parent="@android:style/Widget.Material.Light.TimePicker">
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:timePickerMode">clock</item>
    <item name="android:headerBackground">@color/colorAccent</item>
    <item name="android:headerTimeTextAppearance">@style/TextAppearance.TimePickerDialogStyle.TimeLabel</item>
    <item name="android:numbersTextColor">#ff000000</item>
    <item name="android:numbersSelectorColor">@color/colorAccent</item>
    <item name="android:numbersBackgroundColor">#ffdddddd</item>
  </style>

  <style name="TextAppearance.TimePickerDialogStyle.TimeLabel" parent="@android:style/TextAppearance.Material">
    <item name="android:textSize">60sp</item>
    <item name="android:textColor">@color/colorSecondary</item>
  </style>

  <style name="MyDatePicker" parent="@android:style/Widget.Material.Light.TimePicker">
    <item name="android:timePickerMode">spinner</item>
  </style>

  <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
    <item name="submitBackground">@android:color/transparent</item>
    <item name="queryBackground">@android:color/transparent</item>
    <item name="searchHintIcon">@null</item>
  </style>

  <style name="FormHeading" parent="Theme.AppCompat">
    <item name="android:textSize">15sp</item>
    <item name="android:fontFamily">@font/semi_bold</item>
    <item name="android:textColor">@color/black_4a4a4a</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="EditTextLabelStyle" parent="Theme.AppCompat">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">@font/regular</item>
    <item name="android:textColor">@color/black_4a4a4a</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="match_wrap">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="wrap_wrap">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="wrap_match">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="match_match">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
  </style>

  <style name="EditTextStyle" parent="Theme.AppCompat.Light">
    <item name="android:textSize">14sp</item>
    <item name="android:fontFamily">@font/regular</item>
    <item name="android:textColor">@color/black_4a4a4a</item>
    <item name="android:textCursorDrawable">@drawable/color_cursor</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/size_38</item>
    <item name="android:paddingStart">@dimen/size_12</item>
    <item name="android:paddingEnd">@dimen/size_12</item>
    <item name="android:textColorHint">@color/black_202A2A2A</item>
    <item name="android:background">@drawable/bg_rect_edit_txt_white</item>
  </style>

  <style name="BottomSheetStartAptText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/size_20</item>
    <item name="textType">HEADING_6</item>
    <item name="fontFamily">@font/regular</item>
    <item name="android:textColor">@color/black_4a4a4a</item>
    <item name="android:drawablePadding">@dimen/size_10</item>
  </style>

  <style name="BottomSheetTextHeader">
    <item name="textType">HEADING_4</item>
    <item name="android:includeFontPadding">false</item>
    <item name="fontFamily">@font/bold</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="BottomSheetSubTitleTextStyle">
    <item name="textType">BODY_1</item>
    <item name="fontFamily">@font/italic</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="CheckBoxStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="textType">HEADING_6</item>
    <item name="android:checked">true</item>
    <item name="android:clickable">false</item>
    <item name="android:focusable">false</item>
    <item name="android:textColor">@color/black_4a4a4a</item>
    <item name="android:buttonTint">@color/colorAccent</item>
  </style>

  <style name="RadioButtonStyle">
    <item name="android:layout_marginStart">@dimen/size_16</item>
    <item name="android:layout_marginEnd">@dimen/size_16</item>
    <item name="android:buttonTint">@color/colorAccent</item>
    <item name="android:textColor">@color/black_2A2A2A</item>
    <item name="android:fontFamily">@font/regular</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">16sp</item>
  </style>

  <style name="RadioButtonMarkPaymentDoneStyle">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="textType">HEADING_6</item>
    <item name="android:buttonTint">@color/colorAccentLight</item>
    <item name="android:textColor">@color/black_2A2A2A</item>
    <item name="android:layout_weight">1</item>
  </style>

  <style name="EditTextCustomerBottomSheetStyle">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">20dp</item>
    <item name="android:layout_marginTop">6dp</item>
    <item name="android:gravity">center_vertical</item>
    <item name="paddingStart">@dimen/size_12</item>
    <item name="android:paddingEnd">@dimen/size_12</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/black_4a4a4a</item>
    <item name="android:textColorHint">@color/black_202A2A2A</item>
    <item name="android:fontFamily">@font/regular</item>
    <item name="android:layout_marginEnd">@dimen/size_20</item>
    <item name="background">@drawable/ic_rectangle_light_black_outline</item>
  </style>

  <style name="BottomSheetTextHeading">
    <item name="android:layout_marginStart">20dp</item>
    <item name="android:layout_marginTop">@dimen/size_14</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/semi_bold</item>
    <item name="textType">HEADING_6</item>
    <item name="android:textColor">@color/black_4a4a4a</item>
  </style>

  <style name="BaseTextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="textSize">14sp</item>
    <item name="android:ellipsize">end</item>
    <item name="android:singleLine">true</item>
    <item name="android:fontFamily">@font/regular</item>
    <item name="android:includeFontPadding">false</item>
    <item name="android:textColor">@color/black_4a4a4a</item>
  </style>

  <style name="TabTextApperance" parent="TextRegularStyle">
    <item name="android:textAllCaps">false</item>
    <item name="fontFamily">@font/bold</item>
