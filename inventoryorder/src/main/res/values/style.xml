    <item name="android:background">@drawable/bg_button_proceed_4</item>
    <item name="android:paddingStart">@dimen/size_30</item>
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingTop">@dimen/size_8</item>
    <item name="android:paddingBottom">@dimen/size_8</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:paddingEnd">@dimen/size_30</item>
  </style>

  <style name="ButtonStyle.Outline" parent="ButtonStyle.Rounded.Outlined">
    <item name="android:background">@drawable/bg_corners_stroke</item>

  </style>

  <style name="ButtonStyle.Rounded.Solid.BottomSheet">
    <item name="android:textSize">14sp</item>
    <item name="android:stateListAnimator">@null</item>
    <item name="android:gravity">center</item>
    <item name="android:fontFamily">@font/semi_bold</item>
    <item name="android:textAllCaps">false</item>
    <item name="paddingStart">@dimen/size_28</item>
    <item name="paddingEnd">@dimen/size_28</item>
    <item name="backgroundTint">@color/button_selector_enabled</item>
    <item name="android:textColor">@color/pinkish_grey</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">@dimen/size_38</item>
