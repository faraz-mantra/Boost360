<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.appcompat.widget.LinearLayoutCompat
    style="@style/match_wrap"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/size_12"
    android:paddingTop="@dimen/size_12"
    android:paddingEnd="@dimen/size_13">

    <com.framework.views.customViews.CustomCardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:cardCornerRadius="@dimen/size_4"
      app:cardUseCompatPadding="true">

      <com.framework.views.customViews.CustomImageView
        android:id="@+id/ivDishItem"
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_50"
        android:scaleType="centerCrop"
        tools:src="@drawable/ic_mutton_rogan_josh" />

    </com.framework.views.customViews.CustomCardView>

    <androidx.appcompat.widget.LinearLayoutCompat
      style="@style/match_wrap"
      android:orientation="vertical"
      android:paddingStart="@dimen/size_10"
      tools:ignore="RtlSymmetry">

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/tvDishName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="@color/black_4a4a4a"
        app:textType="BODY_1"
        tools:text="Mutton Rogan Josh" />

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/tvDishQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:includeFontPadding="false"
        android:textColor="@color/grey_text_color"
        app:textType="CAPTION"
        tools:text="Qty: 2" />

      <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/match_wrap"
        android:orientation="horizontal">

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="horizontal">

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_4a4a4a"
            app:textType="BODY_1"
            tools:text="₹1000" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/tvQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_grey"
            app:textType="BODY_1"
            tools:text=" x 2" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="bottom"
          android:gravity="bottom"
          android:orientation="horizontal">

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/tvActualPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="@color/grey_text_color"
            android:visibility="gone"
            app:textType="CAPTION"
            tools:text="₹297" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/tvDishAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_6"
            android:includeFontPadding="false"
            android:textColor="@color/black_4a4a4a"
            app:textType="BODY_1"
            tools:text="₹297" />
        </androidx.appcompat.widget.LinearLayoutCompat>
      </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.appcompat.widget.LinearLayoutCompat>

</layout>