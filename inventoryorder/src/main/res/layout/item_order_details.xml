<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/size_16"
        android:paddingTop="@dimen/size_16"
        android:paddingEnd="@dimen/size_16">

        <com.framework.views.customViews.CustomImageView
            android:id="@+id/ivDishItem"
            android:layout_width="@dimen/size_42"
            android:layout_height="@dimen/size_42"
            android:src="@drawable/ic_mutton_rogan_josh" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/size_16"
            android:paddingTop="@dimen/size_2"
            android:paddingBottom="@dimen/size_2">

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tvDishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Mutton Rogan Josh"
                android:textColor="@color/greyish_brown"
                app:fontFamily="@font/semi_bold"
                app:textType="CAPTION"

                />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tvDishQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:includeFontPadding="false"
                android:text="Qty: 2"
                android:textColor="@color/color_light_bold_grey"
                app:fontFamily="@font/regular"
                app:textType="CAPTION"

                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:paddingTop="@dimen/size_2"
            android:paddingBottom="@dimen/size_2">

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tvDishAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹297"
                android:textColor="@color/greyish_brown"
                app:textType="CAPTION"
                app:fontFamily="@font/regular"
                android:includeFontPadding="false"


                />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tvDishAmountDiscountedPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹297"
                android:textColor="@color/color_light_brown"
                app:textType="CAPTION"
                app:fontFamily="@font/regular"
                android:includeFontPadding="false"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>




    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>