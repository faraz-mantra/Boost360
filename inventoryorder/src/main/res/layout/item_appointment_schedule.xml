<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/item_appointment_schedule_background_2"
        android:orientation="horizontal">

        <View
            android:id="@+id/firstView"
            android:layout_width="1.5dp"
            android:layout_height="match_parent"
            android:background="#DCDDDE"
            android:visibility="gone" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tvAppointmentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/size_22"
            android:paddingTop="@dimen/size_10"
            android:paddingEnd="@dimen/size_22"
            android:paddingBottom="@dimen/size_10"
            android:text="Today"
            android:textAllCaps="true"
            android:textColor="@color/primary_grey"
            android:visibility="visible"
            app:fontFamily="@font/semi_bold"
            app:textType="CAPTION" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</layout>