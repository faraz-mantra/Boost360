<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/size_20"
        android:paddingTop="@dimen/size_12"
        android:paddingEnd="@dimen/size_20"
        android:paddingBottom="@dimen/size_12">

        <LinearLayout
            android:id="@+id/vw_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_outline_grey"
                android:padding="@dimen/size_2"
                app:cardUseCompatPadding="true">

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/itemImage"
                    android:layout_width="@dimen/size_72"
                    android:layout_height="@dimen/size_72"
                    tools:src="@drawable/placeholder_image" />
            </LinearLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5"
                android:orientation="vertical"
                android:paddingStart="@dimen/size_10"
                tools:ignore="RtlSymmetry">

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/greyish_brown"
                    android:textSize="14sp"
                    app:fontFamily="@font/regular"
                    tools:text="Mutton Rogan Josh" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/tv_product_Price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:textColor="@color/greyish_brown"
                        android:textSize="14sp"
                        app:fontFamily="@font/regular"
                        tools:text="₹ 3,000.00" />

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/tv_product_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:textColor="#828282"
                        android:textSize="14sp"
                        app:fontFamily="@font/regular"
                        tools:text=" x 2" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

        <com.framework.views.customViews.CustomImageView
            android:id="@+id/iv_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="#828282"
            app:srcCompat="@drawable/ic_dot_menu" />

        <com.framework.views.customViews.CustomImageView
            android:id="@+id/iv_remove_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_remove" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_total_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_4a4a4a"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_1"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginBottom="@dimen/size_2"
            android:layout_marginEnd="@dimen/size_10"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="₹2,000.00" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>