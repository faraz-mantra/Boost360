<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/size_16"
                android:paddingTop="@dimen/size_16"
                >

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer Information"
                    android:textColor="@color/orange"
                    app:fontFamily="@font/bold"
                    app:textType="BODY_3" />

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16"
                    android:text="Name"
                    android:textColor="@color/grey_text_color"
                    app:fontFamily="@font/regular"
                    app:textType="BODY_3" />

                <com.framework.views.customViews.CustomTextField
                    android:id="@+id/eTName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/view_background_color"
                    android:hint="Rahul Chaudhary"
                    android:paddingTop="@dimen/size_8"
                    android:paddingBottom="@dimen/size_16"
                    android:textColor="@color/warm_grey_10"
                    android:textColorHint="@color/warm_grey_10" />

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16"
                    android:text="Phone number"
                    android:textColor="@color/grey_text_color"
                    app:fontFamily="@font/regular"
                    app:textType="BODY_3" />

                <com.framework.views.customViews.CustomTextField
                    android:id="@+id/eTPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/view_background_color"
                    android:hint="+91 - 9013268178"
                    android:paddingTop="@dimen/size_8"
                    android:paddingBottom="@dimen/size_16"
                    android:textColor="@color/warm_grey_10"
                    android:textColorHint="@color/warm_grey_10" />

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16"
                    android:text="Email"
                    android:textColor="@color/grey_text_color"
                    app:fontFamily="@font/regular"
                    app:textType="BODY_3" />

                <com.framework.views.customViews.CustomTextField
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/view_background_color"
                    android:hint="rahul@cantech.co"
                    android:paddingTop="@dimen/size_8"
                    android:paddingBottom="@dimen/size_16"
                    android:textColor="@color/warm_grey_10"
                    android:textColorHint="@color/warm_grey_10" />

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16"
                    android:text="Gender"
                    android:textColor="@color/grey_text_color"
                    app:fontFamily="@font/regular"
                    app:textType="BODY_3" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/choosePurpose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_8"
                    android:orientation="horizontal"
                    android:paddingEnd="@dimen/size_16">

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Male"
                        android:textColor="@color/warm_grey_10"
                        android:textColorHint="@color/warm_grey_10"
                        app:fontFamily="@font/regular"
                        app:textType="BODY_3" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                        <com.framework.views.customViews.CustomImageView
                            android:layout_width="@dimen/size_10"
                            android:layout_height="@dimen/size_6"
                            app:srcCompat="@drawable/ic_spinner" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1"
                    android:layout_marginTop="@dimen/size_16"
                    android:background="@color/view_background_color" />

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_24"
                    android:text="Payment Mode"
                    android:textColor="@color/orange"
                    app:fontFamily="@font/bold"
                    app:textType="BODY_3" />

                <com.framework.views.customViews.CustomCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_12"
                    android:elevation="@dimen/size_4"
                    android:layout_marginEnd="@dimen/size_16"
                    app:corner_radius="RADIUS_4">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/item_appointment_schedule_background_2"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.framework.views.customViews.CustomButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/orange"
                            android:paddingTop="@dimen/size_4"
                            android:paddingBottom="@dimen/size_4"
                            android:gravity="center"
                            android:text="online"
                            android:textAllCaps="true"
                            android:textColor="@color/warm_grey_10"
                            app:fontFamily="@font/bold"

                            />

                        <com.framework.views.customViews.CustomButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/size_4"
                            android:paddingBottom="@dimen/size_4"
                            android:gravity="center"
                            android:text="Pay at clinic"
                            android:textAllCaps="true"
                            android:textColor="@color/primary_grey"
                            app:fontFamily="@font/bold" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </com.framework.views.customViews.CustomCardView>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginBottom="@dimen/size_40"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <com.framework.views.customViews.CustomCheckBox
                        android:id="@+id/sendPaymentLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:buttonTint="@color/orange"
                        />

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Send payment link"
                        android:textColor="@color/black"
                        app:fontFamily="@font/bold"
                        app:textType="CAPTION" />


                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_60"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_52"
            android:background="@color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <View
                android:id="@+id/view_shadow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_3"
                android:background="@drawable/up_shadow" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/size_16"
                android:paddingBottom="@dimen/size_16"
                android:weightSum="2">

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tvBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="BACK"
                    android:textAllCaps="true"
                    android:textColor="@color/orange"
                    app:fontFamily="@font/bold"
                    app:textType="CAPTION" />

                <com.framework.views.customViews.CustomButton
                    android:id="@+id/buttonCreateBooking"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/size_32"
                    android:layout_gravity="end"
                    android:layout_marginEnd="@dimen/size_16"
                    android:layout_weight="1"
                    android:background="@drawable/button_proceed"
                    android:gravity="center"
                    android:stateListAnimator="@null"
                    android:text="CREATE BOOKING"
                    android:textColor="@color/white"
                    app:textType="CAPTION"
                    tools:ignore="UnusedAttribute" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>