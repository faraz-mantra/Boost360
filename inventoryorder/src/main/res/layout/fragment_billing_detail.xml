<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.order.createorder.BillingDetailFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_4a4a4a"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_10"
                android:paddingEnd="@dimen/size_10"
                android:paddingBottom="@dimen/size_10">

                <com.framework.views.customViews.CustomImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_info_white" />

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_10"
                    android:text="@string/please_edit_review_the_order_details_and_confirm"
                    android:textColor="@color/white" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_20"
                android:paddingEnd="@dimen/size_20">

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_16"
                    android:text="@string/billing_to"
                    android:textColor="@color/black_3C3C3C"
                    app:fontFamily="@font/semi_bold"
                    app:textType="BODY_2" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/billing_to"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/regular"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:textType="HEADING_4"
                        tools:text="Rakesh Singhania" />

                    <com.framework.views.customViews.CustomImageView
                        android:id="@+id/iv_options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_dot_menu" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5"
                    android:textColor="@color/black_4a4a4a"
                    app:fontFamily="@font/regular"
                    app:textType="BODY_1"
                    tools:text="rakeshsinghania@gmail.com" />

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5"
                    android:textColor="@color/black_4a4a4a"
                    app:fontFamily="@font/regular"
                    app:textType="BODY_1"
                    tools:text="+91 8247893456" />


            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_12"
                android:paddingStart="@dimen/size_10"
                android:paddingEnd="@dimen/size_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorLightGrey" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/size_10"
                        android:paddingTop="@dimen/size_12"
                        android:paddingRight="@dimen/size_10"
                        android:paddingBottom="@dimen/size_12">


                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/size_4"
                            android:includeFontPadding="false"
                            android:text="@string/delivery_type"
                            android:textColor="@color/greyish_brown"
                            app:fontFamily="@font/semi_bold"
                            app:textType="BODY_1" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tvDeliveryType"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableEnd="@drawable/ic_arrow_down_orange"
                            android:drawablePadding="@dimen/size_8"
                            android:gravity="end"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:textColor="@color/orange"
                            app:fontFamily="@font/bold"
                            app:textType="BODY_1"
                            tools:text="Store Pickup" />

                    </androidx.appcompat.widget.LinearLayoutCompat>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorLightGrey" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/size_10"
                        android:paddingTop="@dimen/size_12"
                        android:paddingRight="@dimen/size_10"
                        android:paddingBottom="@dimen/size_12">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:includeFontPadding="false"
                            android:text="@string/payment_type"
                            android:textColor="@color/greyish_brown"
                            app:fontFamily="@font/semi_bold"
                            app:textType="BODY_1" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tvPaymentMode"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableEnd="@drawable/ic_arrow_down_orange"
                            android:drawablePadding="@dimen/size_8"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:textColor="@color/orange"
                            app:fontFamily="@font/bold"
                            app:textType="BODY_1"
                            tools:text="COD" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/colorLightGrey" />

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/size_10"
                        android:paddingTop="@dimen/size_12"
                        android:paddingRight="@dimen/size_10"
                        android:paddingBottom="@dimen/size_12">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/size_4"
                            android:includeFontPadding="false"
                            android:text="@string/status_payment"
                            android:textColor="@color/greyish_brown"
                            app:fontFamily="@font/semi_bold"
                            app:textType="BODY_1" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/tvOrderStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableEnd="@drawable/ic_arrow_down_orange"
                            android:drawablePadding="@dimen/size_8"
                            android:ellipsize="end"
                            android:gravity="end"
                            android:includeFontPadding="false"
                            android:maxLines="1"
                            android:textColor="@color/orange"
                            app:fontFamily="@font/bold"
                            app:textType="BODY_1"
                            tools:text="Pending" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_2"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginEnd="@dimen/size_10"
                android:background="@color/lightest_grey" />

            <include
                layout="@layout/layout_shipping_billing_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_20"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/size_20" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_6"
                android:layout_marginTop="@dimen/size_10"
                android:background="@color/lightest_grey" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_14"
                android:paddingStart="@dimen/size_20"
                android:paddingEnd="@dimen/size_20">

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/items_included"
                    android:textColor="@color/black_2A2A2A"
                    app:fontFamily="@font/semi_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_more"
                    android:textAllCaps="true"
                    android:textColor="@color/orange"
                    app:fontFamily="@font/bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textAllCaps="true"
                    app:textType="BODY_1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.framework.views.viewgroups.BaseRecyclerView
                android:id="@+id/product_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/size_10"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:itemCount="5"
                tools:listitem="@layout/item_product" />


        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.core.widget.NestedScrollView>

</layout>
