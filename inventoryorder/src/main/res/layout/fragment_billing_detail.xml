<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  tools:context=".ui.order.createorder.BillingDetailFragment">

  <androidx.core.widget.NestedScrollView style="@style/match_match">

    <androidx.appcompat.widget.LinearLayoutCompat
      style="@style/match_wrap"
      android:orientation="vertical">

      <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/match_wrap"
        android:background="@color/white_smoke_1"
        android:padding="@dimen/size_12">

        <com.framework.views.customViews.CustomTextView
          style="@style/wrap_wrap"
          android:layout_gravity="center_vertical"
          android:drawableStart="@drawable/ic_info_black"
          android:drawablePadding="@dimen/size_10"
          android:fontFamily="@font/regular"
          android:text="@string/please_edit_review_the_order_details_and_confirm"
          android:textColor="@color/black_4a4a4a"
          android:textSize="12sp" />

      </androidx.appcompat.widget.LinearLayoutCompat>

      <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/match_match"
        android:orientation="vertical"
        android:padding="@dimen/size_14">

        <com.framework.views.customViews.CustomTextView
          style="@style/wrap_wrap"
          android:text="@string/billing_to"
          android:textColor="@color/black_2A2A2A"
          app:fontFamily="@font/semi_bold"
          app:textType="BODY_2" />

        <androidx.constraintlayout.widget.ConstraintLayout style="@style/match_wrap">

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_name"
            style="@style/wrap_wrap"
            android:layout_marginTop="@dimen/size_5"
            android:textColor="@color/black_4a4a4a"
            app:fontFamily="@font/regular"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textType="HEADING_4"
            tools:text="@string/dummy_name" />

          <com.framework.views.customViews.CustomImageView
            android:id="@+id/iv_options"
            style="@style/wrap_wrap"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_dot_menu" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_email"
          style="@style/wrap_wrap"
          android:layout_marginTop="@dimen/size_5"
          android:textColor="@color/black_4a4a4a"
          app:fontFamily="@font/regular"
          app:textType="BODY_1"
          tools:text="@string/dummy_email" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_phone"
          style="@style/wrap_wrap"
          android:layout_marginTop="@dimen/size_6"
          android:textColor="@color/black_4a4a4a"
          app:fontFamily="@font/regular"
          app:textType="BODY_1"
          tools:text="@string/dummy_phone" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_gst"
          style="@style/wrap_wrap"
          android:layout_marginTop="@dimen/size_6"
          android:textColor="@color/black_4a4a4a"
          android:visibility="gone"
          app:fontFamily="@font/regular"
          app:textType="BODY_1"
          tools:text="@string/dummy_gstin" />
      </androidx.appcompat.widget.LinearLayoutCompat>

      <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/match_wrap"
        android:layout_marginTop="@dimen/size_20"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_6"
        android:paddingEnd="@dimen/size_6">

        <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/colorLightGrey" />

        <androidx.appcompat.widget.LinearLayoutCompat
          style="@style/match_wrap"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:padding="@dimen/size_14">

          <com.framework.views.customViews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/size_4"
            android:includeFontPadding="false"
            android:text="@string/delivery_type"
            android:textColor="@color/greyish_brown"
            app:fontFamily="@font/regular"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/tvDeliveryType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_arrow_down_orange"
            android:drawablePadding="@dimen/size_8"
            android:drawableTint="@color/grey_dark_2"
            android:gravity="right"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/home_delivery"
            android:textColor="@color/grey_dark_2"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_1" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/colorLightGrey" />

        <androidx.appcompat.widget.LinearLayoutCompat
          style="@style/match_wrap"
          android:orientation="horizontal"
          android:padding="@dimen/size_14">

          <com.framework.views.customViews.CustomTextView
            style="@style/match_wrap"
            android:layout_weight="1"
            android:includeFontPadding="false"
            android:text="@string/str_payment_mode"
            android:textColor="@color/greyish_brown"
            app:fontFamily="@font/regular"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/tvPaymentMode"
            style="@style/match_wrap"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_arrow_down_orange"
            android:drawablePadding="@dimen/size_8"
            android:drawableTint="@color/grey_dark_2"
            android:ellipsize="end"
            android:gravity="right"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/str_cash_on_delivery"
            android:textColor="@color/grey_dark_2"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_1" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/colorLightGrey" />

        <androidx.appcompat.widget.LinearLayoutCompat
          style="@style/match_wrap"
          android:orientation="horizontal"
          android:padding="@dimen/size_14">

          <com.framework.views.customViews.CustomTextView
            style="@style/match_wrap"
            android:layout_weight="1"
            android:drawablePadding="@dimen/size_4"
            android:includeFontPadding="false"
            android:text="@string/status_payment"
            android:textColor="@color/greyish_brown"
            app:fontFamily="@font/regular"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/tvPaymentStatus"
            style="@style/match_wrap"
            android:layout_weight="1"
            android:drawableEnd="@drawable/ic_arrow_down_orange"
            android:drawablePadding="@dimen/size_8"
            android:ellipsize="end"
            android:gravity="right"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/collect_later"
            android:textColor="@color/orange"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_1" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
          android:layout_width="match_parent"
          android:layout_height="0.5dp"
          android:background="@color/colorLightGrey" />
      </androidx.appcompat.widget.LinearLayoutCompat>

      <include
        android:id="@+id/layout_order_shipping_address"
        style="@style/match_wrap"
        layout="@layout/layout_order_address"
        android:layout_margin="@dimen/size_12" />

      <include
        android:id="@+id/layout_order_billing_address"
        style="@style/match_wrap"
        layout="@layout/layout_order_address"
        android:layout_margin="@dimen/size_12"
        android:visibility="gone" />

      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_6"
        android:layout_marginTop="@dimen/size_4"
        android:background="@color/lightest_grey" />

      <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/match_wrap"
        android:padding="@dimen/size_14">

        <com.framework.views.customViews.CustomTextView
          style="@style/wrap_wrap"
          android:text="@string/items_included"
          android:textColor="@color/black_2A2A2A"
          app:fontFamily="@font/semi_bold"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_add_more"
          style="@style/wrap_wrap"
          android:text="@string/add_more"
          android:textAllCaps="true"
          android:textColor="@color/orange"
          app:fontFamily="@font/semi_bold"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintRight_toRightOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:textAllCaps="true"
          app:textType="BODY_1" />

      </androidx.constraintlayout.widget.ConstraintLayout>

      <com.framework.views.viewgroups.BaseRecyclerView
        android:id="@+id/product_recycler"
        style="@style/match_wrap"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:itemCount="2"
        tools:listitem="@layout/item_products_added" />

      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_6"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/lightest_grey" />

      <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/match_wrap"
        android:orientation="vertical"
        android:padding="@dimen/size_16">

        <com.framework.views.customViews.CustomTextView
          style="@style/wrap_wrap"
          android:layout_gravity="center_vertical"
          android:layout_marginTop="@dimen/size_6"
          android:fontFamily="@font/regular"
          android:text="@string/all_items_in_cart_have_prices_including_18_gst"
          android:textColor="@color/black_4a4a4a"
          android:textSize="12sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
          style="@style/match_wrap"
          android:layout_marginTop="@dimen/size_20"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <com.framework.views.customViews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/size_4"
            android:includeFontPadding="false"
            android:text="@string/item_total"
            android:textColor="@color/greyish_brown"
            app:fontFamily="@font/regular"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/text_item_total_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/black_4a4a4a"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_1"
            tools:text="₹15,000.00" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
          style="@style/match_wrap"
          android:layout_marginTop="@dimen/size_10"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <com.framework.views.customViews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/size_4"
            android:includeFontPadding="false"
            android:text="@string/discount_on_subtotal"
            android:textColor="@color/greyish_brown"
            app:fontFamily="@font/regular"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/text_item_total_discount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="-₹1,000.00"
            android:textAllCaps="true"
            android:textColor="@color/green_light_1"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_1" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
          style="@style/match_wrap"
          android:layout_marginTop="@dimen/size_10"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <com.framework.views.customViews.CustomTextView
            style="@style/wrap_wrap"
            android:drawablePadding="@dimen/size_4"
            android:includeFontPadding="false"
            android:text="@string/delivery_fee"
            android:textColor="@color/greyish_brown"
            app:fontFamily="@font/regular"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/text_add_delivery_fee_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:paddingStart="@dimen/size_10"
            android:paddingEnd="@dimen/size_10"
            android:text="@string/edit"
            android:textAllCaps="true"
            android:textColor="@color/orange"
            android:visibility="gone"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/text_add_delivery_fee"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="@string/add"
            android:textAllCaps="true"
            android:textColor="@color/orange"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/text_add_delivery_fee_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/orange"
            android:visibility="gone"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_1"
            tools:text="@string/add" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
          style="@style/match_wrap"
          android:layout_marginTop="@dimen/size_10">

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/text_gst"
            style="@style/EditTextLabelStyle"
            android:layout_weight="1"
            android:fontFamily="@font/regular"
            android:text="@string/gst_inclusive"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/linear_service"
            app:layout_constraintTop_toBottomOf="@id/linear_service" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/text_gst_amount"
            style="@style/EditTextLabelStyle"
            android:fontFamily="@font/semi_bold"
            android:text="@string/inr_1200"
            android:textColor="@color/black_4a4a4a"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/linear_service"
            app:layout_constraintTop_toBottomOf="@id/linear_service" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_1"
          android:layout_marginTop="@dimen/size_10"
          android:background="@color/gray_light_1" />

        <androidx.appcompat.widget.LinearLayoutCompat
          style="@style/match_wrap"
          android:layout_marginTop="@dimen/size_16"
          android:layout_marginBottom="@dimen/size_10"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <com.framework.views.customViews.CustomTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/size_4"
            android:includeFontPadding="false"
            android:text="@string/total_payable_amount"
            android:textColor="@color/greyish_brown"
            app:fontFamily="@font/regular"
            app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/text_total_payable_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/black_2A2A2A"
            app:fontFamily="@font/semi_bold"
            app:textType="BODY_1"
            tools:text="₹ 15,000.00" />
        </androidx.appcompat.widget.LinearLayoutCompat>
      </androidx.appcompat.widget.LinearLayoutCompat>

      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_25"
        android:layout_marginTop="@dimen/size_10"
        android:background="@color/lightest_grey" />

      <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/match_wrap"
        android:orientation="vertical"
        android:padding="@dimen/size_14">

        <com.framework.views.customViews.CustomButton
          android:id="@+id/button_confirm_order"
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_42"
          android:layout_gravity="center"
          android:background="@drawable/bg_rounded_yellow"
          android:gravity="center"
          android:stateListAnimator="@null"
          android:text="@string/confirm_order"
          android:textAllCaps="true"
          android:textColor="@color/white"
          app:fontFamily="@font/semi_bold"
          app:textType="BODY_1" />

        <com.framework.views.customViews.CustomButton
          android:id="@+id/button_go_back"
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_42"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/size_14"
          android:background="@drawable/bg_rounded_yellow_light"
          android:gravity="center"
          android:stateListAnimator="@null"
          android:text="@string/go_back"
          android:textAllCaps="true"
          android:textColor="@color/colorAccentLight"
          app:fontFamily="@font/semi_bold"
          app:textType="BODY_1" />
      </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.core.widget.NestedScrollView>
</layout>
