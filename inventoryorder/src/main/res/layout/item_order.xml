<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/main_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size_16"
      android:layout_marginBottom="@dimen/size_4"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="vertical"
      android:padding="@dimen/size_14">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_2"
            android:orientation="horizontal">

          <com.framework.views.customViews.CustomTextView
              android:id="@+id/orderType"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/size_26"
              android:background="@drawable/new_order_bg"
              android:gravity="center"
              android:paddingStart="@dimen/size_18"
              android:paddingEnd="@dimen/size_20"
              android:text="New Order"
              android:textAlignment="center"
              android:textColor="@color/white"
              app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
              android:id="@+id/order_id"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingStart="@dimen/size_8"
              android:text="# GK7C4FM"
              android:textColor="@color/primary_grey"
              app:textType="BODY_2" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/txt_rupees"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_2"
            android:layout_marginTop="@dimen/size_8"
            android:gravity="center"
            android:text="â‚¹ 9,761"
            android:textAlignment="center"
            android:textColor="@color/watermelon_light"
            app:fontFamily="@font/bold"
            app:textType="HEADING_7" />

      </androidx.appcompat.widget.LinearLayoutCompat>

      <com.framework.views.customViews.CustomButton
          android:id="@+id/btn_confirm"
          android:layout_width="@dimen/size_110"
          android:layout_height="@dimen/size_38"
          android:background="@drawable/btn_rounded_orange_border"
          android:text="CONFIRM"
          android:textAllCaps="true"
          android:textColor="@color/orange"
          app:textType="HEADING_6" />

      <com.framework.views.customViews.CustomImageView
          android:id="@+id/next2"
          android:layout_width="@dimen/size_30"
          android:layout_height="@dimen/size_30"
          android:layout_gravity="bottom"
          android:layout_marginEnd="@dimen/size_10"
          android:padding="@dimen/size_6"
          android:visibility="gone"
          app:srcCompat="@drawable/ic_arrow_right_grey" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/details_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_2"
        android:orientation="vertical">

      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:layout_weight="1"
            android:orientation="vertical">

          <include
              android:id="@+id/order_date"
              layout="@layout/text_item" />

          <include
              android:id="@+id/payment"
              layout="@layout/text_item"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_8" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/size_20"
            android:gravity="center"
            android:orientation="vertical">

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/size_1"
              android:includeFontPadding="false"
              android:text="Time elapsed"
              android:textColor="@color/primary_grey"
              app:fontFamily="@font/regular"
              app:textType="SUBTITLE_2" />

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableStart="@drawable/ic_access_time"
              android:drawablePadding="@dimen/size_4"
              android:includeFontPadding="false"
              android:paddingTop="@dimen/size_2"
              android:text="02:33:00"
              android:textColor="@color/watermelon_light_10"
              app:textType="BODY_1" />


        </androidx.appcompat.widget.LinearLayoutCompat>

      </androidx.appcompat.widget.LinearLayoutCompat>

      <include
          android:id="@+id/delivery"
          layout="@layout/text_item"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_8" />

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/item_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_10"
          android:text="3 Items:"
          android:textColor="@color/primary_grey"
          app:textType="SUBHEADING_2" />

      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

          <com.framework.views.customViews.CustomTextView
              android:id="@+id/item_desc"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"

              android:text="1 x  Lorem ipsum dolor sit amet\n2 x  Lorem ipsum dolor sit amet  amet\n1 x  Lorem ipsum dolor sit amet dolor sit amet"
              android:textColor="@color/black"
              app:textType="BODY_1" />

          <com.framework.views.customViews.CustomTextView
              android:id="@+id/item_more"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/line_bac_black"
              android:clickable="true"
              android:focusable="true"
              android:paddingTop="@dimen/size_2"
              android:text="+5 more"
              android:textColor="@color/black"
              android:visibility="gone"
              app:textType="BODY_1"
              tools:visibility="visible" />
        </LinearLayout>

        <com.framework.views.customViews.CustomImageView
            android:id="@+id/next1"
            android:layout_width="@dimen/size_30"
            android:layout_height="@dimen/size_30"
            android:layout_gravity="bottom"
            android:layout_marginEnd="@dimen/size_8"
            android:padding="@dimen/size_6"
            app:srcCompat="@drawable/ic_arrow_right_grey" />
      </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>