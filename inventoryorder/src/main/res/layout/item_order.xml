<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_16" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_18"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingStart="@dimen/size_10"
            android:paddingTop="@dimen/size_10"
            android:paddingBottom="@dimen/size_10">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_10"
                android:orientation="horizontal">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_2"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/orderType"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/size_30"
                            android:background="@drawable/new_order_bg"
                            android:drawablePadding="@dimen/size_8"
                            android:gravity="center"
                            android:paddingStart="@dimen/size_10"
                            android:paddingEnd="@dimen/size_14"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            app:textAllCaps="true"
                            app:textType="BODY_1"
                            app:fontFamily="@font/bold"
                            tools:drawableStart="@drawable/ic_order_initiated"
                            tools:text="New Order" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/txt_order_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_2"
                            android:textAlignment="textEnd"
                            android:textColor="@color/black_4a4a4a"
                            app:textType="BODY_1"
                            tools:text="at 25-12-2020,2:00PM" />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/order_id"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black_4a4a4a"
                            app:textType="BODY_1"
                            app:fontFamily="@font/semi_bold"
                            tools:text="# GK7C4FM" />


                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_8"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/txt_rupees"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:textAlignment="center"
                            android:textColor="@color/black_4a4a4a"
                            app:fontFamily="@font/bold"
                            app:textType="HEADING_4"
                            tools:text="â‚¹ 9,761" />



                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

<!--                <com.framework.views.customViews.CustomTextView-->
<!--                    android:id="@+id/order_id"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:paddingStart="@dimen/size_8"-->
<!--                    android:textColor="@color/primary_grey"-->
<!--                    app:textType="BODY_2"-->
<!--                    tools:text="# GK7C4FM" />-->

<!--                <com.framework.views.customViews.CustomTextView-->
<!--                    android:id="@+id/txt_order_date"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="@dimen/size_2"-->
<!--                    android:layout_marginTop="@dimen/size_8"-->
<!--                    android:gravity="end"-->
<!--                    android:textAlignment="textEnd"-->
<!--                    android:textColor="@color/black_4a4a4a"-->
<!--                    app:textType="BODY_1"-->
<!--                    tools:text="at 25-12-2020,2:00PM" />-->


                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/next2"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="@dimen/size_10"
                    android:padding="@dimen/size_6"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_arrow_right_grey" />

                <!--Old Design Views End-->

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/details_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginTop="@dimen/size_24"
                android:background="@drawable/ic_order_item_bg"
                android:orientation="vertical"
                android:padding="@dimen/size_10"
                android:paddingStart="@dimen/size_20"
                android:paddingTop="@dimen/size_16"
                android:paddingEnd="@dimen/size_10">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/payment"
                            layout="@layout/icon_text_item" />

                        <include
                            android:id="@+id/delivery"
                            layout="@layout/icon_text_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_8" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/size_20"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="invisible">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_1"
                            android:includeFontPadding="false"
                            android:text="Time elapsed"
                            android:textColor="@color/primary_grey"
                            app:fontFamily="@font/regular"
                            app:textType="SUBTITLE_2" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_access_time"
                            android:drawablePadding="@dimen/size_4"
                            android:includeFontPadding="false"
                            android:paddingTop="@dimen/size_2"
                            android:text="00:00:00"
                            android:textColor="@color/watermelon_light_10"
                            app:textType="BODY_1"
                            tools:text="02:33:00" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10"
                    android:textColor="@color/primary_grey"
                    android:visibility="gone"
                    app:textType="SUBHEADING_2"
                    tools:text="3 Items:" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_22"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/item_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            app:textType="BODY_1"
                            tools:text="1 x  Lorem ipsum dolor sit amet\n2 x  Lorem ipsum dolor sit amet  amet\n1 x  Lorem ipsum dolor sit amet dolor sit amet " />

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/item_more"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/line_bac_black"
                            android:clickable="true"
                            android:focusable="true"
                            android:paddingTop="@dimen/size_2"
                            android:textColor="@color/black"
                            android:visibility="gone"
                            app:textType="BODY_1"
                            tools:text="+5 more"
                            tools:visibility="visible" />
                    </LinearLayout>

                    <com.framework.views.customViews.CustomImageView
                        android:id="@+id/next1"
                        android:layout_width="@dimen/size_30"
                        android:layout_height="@dimen/size_30"
                        android:layout_gravity="top"
                        android:layout_marginEnd="@dimen/size_8"
                        android:padding="@dimen/size_6"
                        app:srcCompat="@drawable/ic_arrow_right_black" />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>


            <!--android:id="@+id/btn_confirm"-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lyt_statusBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10"
                android:layout_marginTop="@dimen/size_16"
                android:layout_marginEnd="@dimen/size_10"
                tools:background="@drawable/ic_initiated_order_btn_bkg"
                android:gravity="center"
                android:minHeight="@dimen/size_40"
                android:orientation="horizontal">

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_dropdown_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    tools:text="CONFIRM ORDER"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/vwDivider_dropdown_order_status"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textType="HEADING_6" />


                <View
                    android:id="@+id/vwDivider_dropdown_order_status"
                    android:layout_width="@dimen/size_1"
                    android:layout_height="0dp"
                    android:layout_marginEnd="@dimen/size_16"
                    android:background="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/iv_dropdown_order_status"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/iv_dropdown_order_status"
                    android:layout_width="@dimen/size_30"
                    android:layout_height="@dimen/size_30"
                    android:layout_marginEnd="@dimen/size_16"
                    android:padding="@dimen/size_6"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow_down_white" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>