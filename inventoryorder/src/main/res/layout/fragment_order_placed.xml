<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white_smoke_1"
        tools:context=".ui.order.createorder.OrderPlacedFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_smoke_1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_160"
                    android:background="@drawable/ic_curve_yellow"
                    android:paddingBottom="@dimen/size_10" />

                <ImageView
                    android:layout_width="@dimen/size_120"
                    android:layout_height="@dimen/size_120"
                    android:layout_centerInParent="true"
                    android:background="@drawable/done" />
            </RelativeLayout>

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_15"
                android:layout_marginBottom="@dimen/size_10"
                android:gravity="center"
                android:text="@string/order_placed_and_confirmed_successfully"
                android:textColor="@color/black_4a4a4a"
                android:textSize="24sp"
                app:fontFamily="@font/regular"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@drawable/ic_invoice_bg"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical"
                android:padding="@dimen/size_30"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="1"
                        android:text="@string/order_id"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/regular"
                        app:textType="BODY_1" />

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="1"
                        android:text="@string/dummy_order_id"
                        android:gravity="end"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/semi_bold"
                        app:textType="BODY_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="1"
                        android:text="@string/str_customer"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/regular"
                        app:textType="BODY_1" />

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="1"
                        android:text="@string/dummy_name"
                        android:gravity="end"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/semi_bold"
                        app:textType="BODY_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="1"
                        android:text="@string/item_qty"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/regular"
                        app:textType="BODY_1" />

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="1"
                        android:text="@string/dummy_qty"
                        android:gravity="end"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/semi_bold"
                        app:textType="BODY_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="1"
                        android:text="@string/payment_mode"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/regular"
                        app:textType="BODY_1" />

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="1"
                        android:text="@string/payment_link"
                        android:gravity="end"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/semi_bold"
                        app:textType="BODY_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="1"
                        android:text="@string/str_delivery_status"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/regular"
                        app:textType="BODY_1" />

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="1"
                        android:text="@string/pending_not_received"
                        android:gravity="end"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/semi_bold"
                        app:textType="BODY_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="1"
                        android:text="@string/str_delivery_type"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/regular"
                        app:textType="BODY_1" />

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_5"
                        android:layout_weight="1"
                        android:text="@string/store_pickup"
                        android:gravity="end"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/semi_bold"
                        app:textType="BODY_1" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/horizontal_dashed_line"
                    android:layout_marginTop="@dimen/size_20"
                    android:layout_marginBottom="@dimen/size_10"
                    android:layout_height="0.5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/summy_amount"
                        android:textColor="@color/black_4a4a4a"
                        app:fontFamily="@font/regular"
                        android:textSize="18sp" />

                    <ImageView
                        android:layout_width="@dimen/size_20"
                        android:src="@drawable/ic_billing_address"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/size_20"
                        app:tint="@color/orange" />

                    <com.framework.views.customViews.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:text="@string/invoice"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:drawableTint="@color/orange"
                        android:gravity="end"
                        android:textColor="@color/orange"
                        app:fontFamily="@font/semi_bold"
                        app:textType="BODY_1" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:background="@drawable/horizontal_dashed_line"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_height="0.5dp" />
            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_smoke_1"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="@dimen/size_30">

            <com.framework.views.customViews.CustomButton
                android:id="@+id/button_confirm_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_rounded_yellow"
                android:gravity="center"
                android:padding="@dimen/size_15"
                android:paddingStart="@dimen/size_28"
                android:paddingEnd="@dimen/size_28"
                android:shadowRadius="0"
                android:stateListAnimator="@null"
                android:text="@string/view_order_details"
                android:textAllCaps="true"
                android:textColor="@color/white"
                app:fontFamily="@font/bold"
                app:textType="CAPTION"
                tools:ignore="UnusedAttribute" />

            <com.framework.views.customViews.CustomButton
                android:id="@+id/button_go_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_20"
                android:background="@drawable/bg_rounded_yellow_light"
                android:gravity="center"
                android:padding="@dimen/size_15"
                android:paddingStart="@dimen/size_28"
                android:paddingEnd="@dimen/size_28"
                android:shadowRadius="0"
                android:stateListAnimator="@null"
                android:text="@string/initiate_new_order"
                android:textAllCaps="true"
                android:textColor="@color/orange"
                app:fontFamily="@font/bold"
                app:textType="CAPTION"
                tools:ignore="UnusedAttribute" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </LinearLayout>
</layout>