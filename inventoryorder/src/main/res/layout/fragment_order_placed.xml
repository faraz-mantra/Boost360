<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.core.widget.NestedScrollView
    style="@style/match_wrap"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
      style="@style/match_match"
      android:background="@color/white_smoke_1"
      android:orientation="vertical"
      tools:context=".ui.order.createorder.OrderPlacedFragment">

      <LinearLayout
        style="@style/match_wrap"
        android:background="@color/white_smoke_1"
        android:orientation="vertical">

        <RelativeLayout style="@style/match_wrap">

          <com.framework.views.customViews.CustomImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_170"
            android:background="@drawable/ic_curve_yellow" />

          <com.framework.views.customViews.CustomImageView
            android:layout_width="@dimen/size_110"
            android:layout_height="@dimen/size_110"
            android:layout_centerInParent="true"
            android:background="@drawable/done" />
        </RelativeLayout>

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_name"
          style="@style/wrap_wrap"
          android:layout_marginTop="@dimen/size_20"
          android:layout_marginBottom="@dimen/size_12"
          android:gravity="center"
          android:paddingHorizontal="@dimen/size_30"
          android:text="@string/order_placed_and_confirmed_successfully"
          android:textColor="@color/black_4a4a4a"
          android:textSize="24sp"
          app:fontFamily="@font/regular"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent" />
      </LinearLayout>

      <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/match_wrap"
        android:background="@drawable/ic_invoice_bg">

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:layout_weight="1"
          android:orientation="vertical"
          android:paddingStart="@dimen/size_30"
          android:paddingTop="@dimen/size_30"
          android:paddingEnd="@dimen/size_30"
          android:paddingBottom="@dimen/size_60"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

          <LinearLayout
            android:id="@+id/linear_order_id"
            style="@style/match_wrap"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/text_order_id"
              style="@style/match_wrap"
              android:layout_marginTop="@dimen/size_5"
              android:layout_weight="1"
              android:text="@string/order_id"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/regular"
              app:textType="BODY_1" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/text_order_id_value"
              style="@style/match_wrap"
              android:layout_marginTop="@dimen/size_5"
              android:layout_weight="1"
              android:gravity="end"
              android:text="@string/dummy_order_id"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_1" />
          </LinearLayout>

          <LinearLayout
            android:id="@+id/linear_customer"
            style="@style/match_wrap"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              style="@style/match_wrap"
              android:layout_marginTop="@dimen/size_5"
              android:layout_weight="1"
              android:text="@string/str_customer"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/regular"
              app:textType="BODY_1" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/text_name"
              style="@style/match_wrap"
              android:layout_marginTop="@dimen/size_5"
              android:layout_weight="1"
              android:gravity="end"
              android:text="@string/dummy_name"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_1" />
          </LinearLayout>

          <LinearLayout
            android:id="@+id/linear_item_qty"
            style="@style/match_wrap"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              style="@style/match_wrap"
              android:layout_marginTop="@dimen/size_5"
              android:layout_weight="1"
              android:text="@string/item_qty"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/regular"
              app:textType="BODY_1" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/text_count"
              style="@style/match_wrap"
              android:layout_marginTop="@dimen/size_5"
              android:layout_weight="1"
              android:gravity="end"
              android:text="@string/dummy_qty"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_1" />
          </LinearLayout>

          <LinearLayout
            android:id="@+id/linear_payment_mode"
            style="@style/match_wrap"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              style="@style/match_wrap"
              android:layout_marginTop="@dimen/size_5"
              android:layout_weight="1"
              android:text="@string/payment_mode"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/regular"
              app:textType="BODY_1" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/text_payment_link"
              style="@style/match_wrap"
              android:layout_marginTop="@dimen/size_5"
              android:layout_weight="1"
              android:gravity="end"
              android:text="@string/payment_link"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_1" />
          </LinearLayout>

          <LinearLayout
            android:id="@+id/linear_payment_status"
            style="@style/match_wrap"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              style="@style/match_wrap"
              android:layout_marginTop="@dimen/size_5"
              android:layout_weight="1"
              android:text="@string/str_payment_status"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/regular"
              app:textType="BODY_1" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/text_payment_status"
              style="@style/match_wrap"
              android:layout_marginTop="@dimen/size_5"
              android:layout_weight="1"
              android:gravity="end"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_1"
              tools:text="@string/store_pickup" />
          </LinearLayout>

          <LinearLayout
            android:id="@+id/linear_delivery_type"
            style="@style/match_wrap"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              style="@style/match_wrap"
              android:layout_marginTop="@dimen/size_5"
              android:layout_weight="1"
              android:text="@string/str_delivery_type"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/regular"
              app:textType="BODY_1" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/text_delivery_type"
              style="@style/match_wrap"
              android:layout_marginTop="@dimen/size_5"
              android:layout_weight="1"
              android:gravity="end"
              android:text="@string/store_pickup"
              android:textColor="@color/black_4a4a4a"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_1" />
          </LinearLayout>


          <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_10"
            android:background="@drawable/horizontal_dashed_line" />

          <LinearLayout
            style="@style/match_wrap"
            android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/text_total_amount"
              style="@style/match_wrap"
              android:layout_weight="1"
              android:textColor="@color/black_4a4a4a"
              android:textSize="18sp"
              app:fontFamily="@font/regular"
              tools:text="@string/summy_amount" />

            <com.framework.views.customViews.CustomImageView
              android:layout_width="@dimen/size_18"
              android:layout_height="@dimen/size_16"
              android:layout_gravity="center"
              android:src="@drawable/ic_billing_address"
              app:tint="@color/orange" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/text_invoice"
              style="@style/wrap_wrap"
              android:layout_gravity="center"
              android:layout_marginStart="@dimen/size_4"
              android:layout_weight="0"
              android:gravity="end"
              android:text="@string/invoice"
              android:textAllCaps="true"
              android:textColor="@color/orange"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_1" />
          </LinearLayout>

          <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/size_10"
            android:background="@drawable/horizontal_dashed_line" />
        </androidx.appcompat.widget.LinearLayoutCompat>

      </androidx.constraintlayout.widget.ConstraintLayout>


      <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/match_wrap"
        android:layout_weight="1"
        android:background="@color/white_smoke_1"
        android:orientation="vertical"
        android:padding="@dimen/size_20">

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/appointment_text"
          style="@style/match_wrap"
          android:layout_marginTop="@dimen/size_5"
          android:layout_weight="1"
          android:gravity="center"
          android:paddingBottom="@dimen/size_30"
          android:text="@string/an_email_and_sms_with_the_appointment_details_and_gst_incoice_have_been_sent_to_the_customer_notifying_about_the_confirmation_along_with_a_secure_payment_link"
          android:textColor="@color/grey_dark_2"
          android:textSize="10sp"
          android:visibility="gone"
          app:fontFamily="@font/regular" />

        <com.framework.views.customViews.CustomButton
          android:id="@+id/button_confirm_order"
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_42"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/size_5"
          android:background="@drawable/bg_rounded_yellow"
          android:gravity="center"
          android:stateListAnimator="@null"
          android:text="@string/view_order_details"
          android:textAllCaps="true"
          android:textColor="@color/white"
          app:fontFamily="@font/semi_bold"
          app:textType="BODY_1" />

        <com.framework.views.customViews.CustomButton
          android:id="@+id/button_initiate_new_order"
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_42"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/size_16"
          android:background="@drawable/bg_rounded_yellow_light"
          android:gravity="center"
          android:stateListAnimator="@null"
          android:text="@string/initiate_new_order"
          android:textAllCaps="true"
          android:textColor="@color/orange"
          app:fontFamily="@font/semi_bold"
          app:textType="BODY_1" />
      </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.core.widget.NestedScrollView>
</layout>