<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.appcompat.widget.LinearLayoutCompat
    style="@style/match_wrap"
    android:orientation="vertical">


    <com.framework.views.customViews.CustomTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:drawableStart="@drawable/ic_shipping_address"
      android:drawablePadding="@dimen/size_16"
      android:gravity="center"
      android:includeFontPadding="false"
      android:text="@string/shipping_address"
      android:textAlignment="gravity"
      android:textColor="@color/black_4a4a4a"
      app:textType="BODY_1" />

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/tvShippingAddress"
      style="@style/match_wrap"
      android:layout_marginStart="@dimen/size_30"
      android:layout_marginTop="@dimen/size_3"
      android:includeFontPadding="false"
      android:textColor="@color/black_4a4a4a"
      app:fontFamily="@font/regular"
      app:textType="CAPTION"
      tools:text="24/10 City Center, B-Zone, Kolkata, West Bengal - 100023" />


    <com.framework.views.customViews.CustomTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size_18"
      android:drawableStart="@drawable/ic_billing_address"
      android:drawablePadding="@dimen/size_16"
      android:includeFontPadding="false"
      android:text="@string/billing_address"
      android:visibility="gone"
      android:textColor="@color/black_4a4a4a"
      app:textType="BODY_1" />

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/tvBillingAddress"
      style="@style/match_wrap"
      android:layout_marginStart="@dimen/size_30"
      android:layout_marginTop="@dimen/size_3"
      android:includeFontPadding="false"
      android:textColor="@color/black_4a4a4a"
      app:fontFamily="@font/regular"
      android:visibility="gone"
      app:textType="CAPTION"
      tools:text="24/10 City Center, B-Zone, Kolkata, West Bengal - 100023" />


  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>