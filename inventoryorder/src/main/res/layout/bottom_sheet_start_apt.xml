<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/tvTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size_20"
      android:layout_marginBottom="@dimen/size_8"
      android:text="@string/start_appointment"
      android:textColor="@color/white"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:textType="HEADING_4"
      tools:ignore="RtlSymmetry"
      tools:textColor="@color/dimgray" />

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/tvSubTitle"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size_20"
      android:layout_marginBottom="@dimen/size_8"
      android:textColor="@color/white"
      app:fontFamily="@font/italic"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvTitle"
      app:textType="BODY_1"
      tools:text="Appointment ID #VDJNVBJD"
      tools:textColor="@color/dimgray" />

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/coordinatorLayoutBottomSheet"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size_10"
      android:background="@drawable/bg_rounded_top_white_2"
      android:orientation="vertical"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintBottom_toTopOf="@+id/btn_bottom"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tvSubTitle">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:orientation="vertical">


        <com.framework.views.customViews.CustomTextView
          android:id="@+id/txt_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_20"
          android:layout_marginTop="@dimen/size_16"
          android:drawableStart="@drawable/ic_user_apt_n"
          android:drawablePadding="@dimen/size_10"
          tools:text="Customer Name: Subhajit Mondal"
          android:textColor="@color/black_4a4a4a"
          app:textType="HEADING_6" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/txt_number"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_20"
          android:layout_marginTop="@dimen/size_16"
          android:drawableStart="@drawable/ic_number_apt_n"
          android:drawablePadding="@dimen/size_10"
          tools:text="Phone No: +91 9876543210"
          android:textColor="@color/black_4a4a4a"
          app:textType="HEADING_6" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/txt_service"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_20"
          android:layout_marginTop="@dimen/size_16"
          android:drawableStart="@drawable/ic_service_apt_n"
          android:drawablePadding="@dimen/size_10"
          tools:text="Service: Honey wax &amp; detan service"
          android:textColor="@color/black_4a4a4a"
          app:textType="HEADING_6" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/txt_staff_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_20"
          android:layout_marginTop="@dimen/size_16"
          android:drawableStart="@drawable/ic_staff_name_apt_n"
          android:drawablePadding="@dimen/size_10"
          tools:text="Staff Name: Rakesh Singh"
          android:textColor="@color/black_4a4a4a"
          app:textType="HEADING_6" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_20"
          android:layout_marginTop="@dimen/size_16"
          android:layout_marginEnd="@dimen/size_20"
          android:textColor="@color/grey_dark_2"
          app:fontFamily="@font/italic"
          app:textType="CAPTION"
          android:text="@string/boost_send_mail_apt_initiated" />

        <View
          android:layout_width="match_parent"
          android:layout_height="0.8dp"
          android:layout_marginStart="@dimen/size_10"
          android:layout_marginTop="@dimen/size_20"
          android:layout_marginEnd="@dimen/size_10"
          android:background="@color/light_grey_2" />
      </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/btn_bottom"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/white"
      android:gravity="end"
      android:orientation="horizontal"
      android:padding="@dimen/size_14"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/size_10"
        android:padding="@dimen/size_4"
        android:text="@string/go_back"
        android:textAllCaps="true"
        android:textColor="@color/pinkish_grey"
        app:fontFamily="@font/semi_bold"
        app:textType="BODY_3" />

      <com.framework.views.customViews.CustomButton
        android:id="@+id/buttonDone"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_36"
        android:layout_gravity="center"
        android:background="@drawable/button_rounded_8"
        android:gravity="center"
        android:paddingStart="@dimen/size_28"
        android:paddingEnd="@dimen/size_28"
        android:shadowRadius="0"
        android:stateListAnimator="@null"
        android:text="@string/start_apt"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:fontFamily="@font/bold"
        app:textType="CAPTION"
        tools:ignore="UnusedAttribute" />
    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>