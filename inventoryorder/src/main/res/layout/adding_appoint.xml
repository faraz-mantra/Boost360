<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10">

                    <RelativeLayout
                        android:id="@+id/service_info_header_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.framework.views.customViews.CustomImageView
                            android:id="@+id/calender_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/size_10"
                            android:src="@drawable/calender" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_10"
                            android:layout_toEndOf="@id/calender_image"
                            android:gravity="center|left"
                            android:hint="Service info"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            app:fontFamily="@font/sans_regular" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/service_name_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/service_info_header_parent"
                        android:layout_marginTop="@dimen/size_10">

                        <com.framework.views.customViews.CustomTextView
                            android:id="@+id/service_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_10"
                            android:hint="Service name"
                            android:textSize="12sp"
                            app:fontFamily="@font/sans_regular" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/service_name">

                            <com.framework.views.customViews.CustomImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/circle_yellow" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <com.framework.views.customViews.CustomImageView
                                    android:id="@+id/question_upper"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/question_upeer_yellow" />

                                <com.framework.views.customViews.CustomImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/question_upper"
                                    android:layout_marginStart="@dimen/size_2"
                                    android:src="@drawable/dot_yellow" />
                            </RelativeLayout>
                        </FrameLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/select_service_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/service_name_parent"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:background="@drawable/boarder"
                        android:orientation="horizontal">

                        <AutoCompleteTextView
                            android:id="@+id/service_name_spinner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:backgroundTint="@android:color/transparent"
                            android:dropDownWidth="fill_parent"
                            android:dropDownHeight="100dp"
                            android:paddingStart="@dimen/size_10"
                            android:hint="Select Service"
                            android:textAlignment="textStart"
                            android:textColor="@color/pinkish_grey"
                            app:fontFamily="@font/sans_regular" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/boarder"
                            android:gravity="center">

                            <com.framework.views.customViews.CustomImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/arrow_down" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/appoint_date_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/select_service_parent"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_marginRight="@dimen/size_10"
                        android:hint="Appointment date and time"
                        android:textColor="@color/black_4a4a4a"
                        android:textSize="12sp"
                        app:fontFamily="@font/sans_regular" />

                    <androidx.cardview.widget.CardView
                        android:elevation="@dimen/size_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/appoint_date_time"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="@dimen/size_10"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="@dimen/size_30"
                        app:cardCornerRadius="@dimen/size_5">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/dot_grey_border">

                            <RelativeLayout
                                android:id="@+id/date_text_parent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/size_10"
                                android:orientation="horizontal">

                                <com.framework.views.customViews.CustomTextView
                                    android:id="@+id/date_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:hint="Monday, 7 Jan 2021"
                                    android:textColor="@color/bg_dark_grey" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="@dimen/size_10"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <com.framework.views.customViews.CustomImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/pen" />
                                </LinearLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/date_text_parent"
                                android:layout_marginStart="@dimen/size_10"
                                android:layout_marginTop="@dimen/size_20"
                                android:orientation="horizontal">

                                <com.framework.views.customViews.CustomTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:text="11:00 AM"
                                    android:textColor="@color/black_4a4a4a" />

                                <com.framework.views.customViews.CustomTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginLeft="@dimen/size_10"
                                    android:text="by anybody"
                                    android:textColor="@color/pinkish_grey" />
                            </RelativeLayout>
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/size_40">

                    <RelativeLayout
                        android:id="@+id/customer_detail_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <com.framework.views.customViews.CustomImageView
                            android:id="@+id/calender_imageview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/size_10"
                            android:src="@drawable/calender" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_10"
                            android:layout_toEndOf="@+id/calender_imageview"
                            android:gravity="center"
                            android:hint="Customer Details"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            app:fontFamily="@font/sans_regular" />
                    </RelativeLayout>

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_detail_parent"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_15"
                        android:hint="Customer name*"
                        android:textColor="@color/black_4a4a4a"
                        android:textSize="12sp"
                        app:fontFamily="@font/sans_regular" />


                    <RelativeLayout
                        android:id="@+id/type_customer_name_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_name"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_8"
                        android:layout_marginRight="@dimen/size_10"
                        android:background="@drawable/boarder"
                        android:paddingTop="@dimen/size_10"
                        android:paddingBottom="@dimen/size_10">

                        <com.framework.views.customViews.CustomEditText
                            android:backgroundTint="@android:color/transparent"
                            android:id="@+id/type_customer_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/size_10"
                            android:hint="Type Customer Name"
                            android:textColor="@color/text_grey"
                            android:textSize="19sp"
                            app:fontFamily="@font/sans_regular" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/size_10"
                            android:gravity="center">

                            <com.framework.views.customViews.CustomImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/phone_book" />
                        </LinearLayout>

                    </RelativeLayout>

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/customer_phone_number_heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/type_customer_name_parent"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_15"
                        android:hint="Customer Phone Number"
                        android:textColor="@color/black_4a4a4a"
                        android:textSize="12sp"
                        app:fontFamily="@font/sans_regular" />

                    <com.framework.views.customViews.CustomEditText
                        android:id="@+id/customer_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_phone_number_heading"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_8"
                        android:layout_marginRight="@dimen/size_10"
                        android:background="@drawable/boarder"
                        android:hint="+91 XXXXX XXXXX"
                        android:paddingStart="@dimen/size_5"
                        android:paddingTop="@dimen/size_10"
                        android:paddingBottom="@dimen/size_10"
                        android:textColor="@color/text_grey"
                        android:textSize="19sp"
                        app:fontFamily="@font/sans_regular" />

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/customer_email__heading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_phone_number"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_15"
                        android:hint="Customer Email ID (optional)"
                        android:textColor="@color/black_4a4a4a"
                        android:textSize="12sp"
                        app:fontFamily="@font/sans_regular" />

                    <com.framework.views.customViews.CustomEditText
                        android:id="@+id/customer_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_email__heading"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_8"
                        android:layout_marginRight="@dimen/size_10"
                        android:background="@drawable/boarder"
                        android:hint="Enter customer’s Email ID"
                        android:paddingStart="@dimen/size_5"
                        android:paddingTop="@dimen/size_10"
                        android:paddingBottom="@dimen/size_10"
                        android:textColor="@color/text_grey"
                        android:textSize="19sp"
                        app:fontFamily="@font/sans_regular" />


                    <RelativeLayout
                        android:id="@+id/gstn_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_email"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_15">

                        <LinearLayout
                            android:id="@+id/phone_book_parent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center"
                            android:layout_marginEnd="@dimen/size_10"
                            android:gravity="center">

                            <com.framework.views.customViews.CustomImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/phone_book" />
                        </LinearLayout>

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/phone_book_parent"
                            android:text="Add customer GSTIN"
                            android:textColor="@color/orange" />

                    </RelativeLayout>

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/customer_street_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gstn_parent"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_15"
                        android:hint="Customer street address*"
                        android:textColor="@color/black_4a4a4a"
                        android:textSize="12sp"
                        app:fontFamily="@font/sans_regular" />

                    <com.framework.views.customViews.CustomEditText
                        android:id="@+id/customer_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_street_address"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_8"
                        android:layout_marginRight="@dimen/size_10"
                        android:background="@drawable/boarder"
                        android:hint="Type the plot number and street address"
                        android:paddingStart="@dimen/size_5"
                        android:paddingTop="@dimen/size_10"
                        android:paddingBottom="@dimen/size_10"
                        android:textColor="@color/text_grey"
                        android:textSize="19sp"
                        app:fontFamily="@font/sans_regular" />

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/pin_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_address"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_15"
                        android:hint="Pincode*"
                        android:textColor="@color/black_4a4a4a"
                        android:textSize="12sp"
                        app:fontFamily="@font/sans_regular" />

                    <com.framework.views.customViews.CustomEditText
                        android:id="@+id/customer_pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pin_code"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_8"
                        android:layout_marginRight="@dimen/size_10"
                        android:background="@drawable/boarder"
                        android:hint="Enter customer’s Pincode"
                        android:paddingStart="@dimen/size_5"
                        android:paddingTop="@dimen/size_10"
                        android:paddingBottom="@dimen/size_10"
                        android:textColor="@color/text_grey"
                        android:textSize="19sp"
                        app:fontFamily="@font/sans_regular" />

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/city_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_pincode"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_15"
                        android:hint="City name"
                        android:textColor="@color/black_4a4a4a"
                        android:textSize="12sp"
                        app:fontFamily="@font/sans_regular" />

                    <com.framework.views.customViews.CustomEditText
                        android:id="@+id/customer_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/city_name"
                        android:layout_marginLeft="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_8"
                        android:layout_marginRight="@dimen/size_10"
                        android:background="@drawable/boarder"
                        android:hint="Enter customer’s city"
                        android:paddingStart="@dimen/size_5"
                        android:paddingTop="@dimen/size_10"
                        android:paddingBottom="@dimen/size_10"
                        android:textColor="@color/text_grey"
                        android:textSize="19sp"
                        app:fontFamily="@font/sans_regular" />

                    <com.framework.views.customViews.CustomTextView
                        android:id="@+id/state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/customer_city"
                        android:layout_marginStart="@dimen/size_10"
                        android:layout_marginTop="@dimen/size_15"
                        android:hint="State*"
                        android:textColor="@color/black_4a4a4a"
                        android:textSize="12sp"
                        app:fontFamily="@font/sans_regular" />

                    <com.framework.views.customViews.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/state"
                        android:hint="Enter customer’s city"
                        style="@style/adding_appointment_edit_fields"
                        app:fontFamily="@font/sans_regular"/>
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:paddingBottom="@dimen/size_30"
                android:elevation="@dimen/size_10"
                android:layout_marginTop="@dimen/size_20"
                android:minHeight="@dimen/size_80"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_marginLeft="@dimen/size_30"
                    android:layout_marginRight="@dimen/size_30"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="#FFB900"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/size_5">

                    <com.framework.views.customViews.CustomTextView
                        android:minHeight="@dimen/size_40"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="REVIEW DETAILS"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>
</layout>