<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/main_view"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/size_16"
        android:paddingTop="@dimen/size_12"
        android:paddingEnd="@dimen/size_16"
        android:paddingBottom="@dimen/size_12">

      <com.framework.views.customViews.CustomImageView
          android:id="@+id/ivInventoryType"
          android:layout_width="@dimen/size_40"
          android:layout_height="@dimen/size_40"
          android:layout_marginEnd="@dimen/size_12"
          app:srcCompat="@drawable/ic_physical_product" />

      <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/size_16"
          android:layout_weight="1"
          android:orientation="vertical">

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tvInventoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Physical product"
            android:textColor="@color/primary_grey"
            app:fontFamily="@font/semi_bold"
            app:textType="HEADING_7" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tvInventoryDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Can be packaged and delivered to buyer, eg. book,watch,toy,garment,etc."
            android:textColor="@color/primary_grey"
            app:fontFamily="@font/regular"
            app:textType="BODY_1" />
      </androidx.appcompat.widget.LinearLayoutCompat>

      <com.framework.views.customViews.CustomImageView
          android:id="@+id/inventorySelectedOrUnselectedIcon"
          android:layout_width="@dimen/size_20"
          android:layout_height="@dimen/size_20"
          app:srcCompat="@drawable/ic_option_unselected" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/horizontal_dashed_line"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_8" />
  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>