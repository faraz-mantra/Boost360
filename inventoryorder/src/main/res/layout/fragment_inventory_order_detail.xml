<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/white"
      tools:context=".ui.InventoryOrderDetailActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/toolbar_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_50"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/size_10"
        android:paddingEnd="@dimen/size_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <LinearLayout
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:orientation="vertical"
          android:paddingStart="@dimen/size_4"
          android:paddingTop="@dimen/size_4">

        <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="Order ID:"
            android:textColor="@color/primary_grey"
            app:textType="CAPTION" />

        <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="GK7C4FM"
            android:textColor="#4A4A4A"
            app:fontFamily="@font/bold"
            app:textType="BODY_2" />
      </LinearLayout>

      <com.framework.views.customViews.CustomImageView
          android:id="@+id/ivClose"
          android:layout_width="@dimen/size_30"
          android:layout_height="@dimen/size_30"
          android:padding="@dimen/size_8"
          app:srcCompat="@drawable/ic_close_black" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_top">

      <androidx.appcompat.widget.LinearLayoutCompat
          android:id="@+id/content"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/size_12">

          <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/order_type"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/size_26"
                android:background="@drawable/ic_new_order"
                android:gravity="center"
                android:paddingStart="@dimen/size_22"
                android:paddingEnd="@dimen/size_22"
                android:text="New Order"
                android:textAlignment="center"
                android:textColor="@color/white"
                app:textType="BODY_1" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tvOrderAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:includeFontPadding="true"
                android:paddingEnd="@dimen/size_16"
                android:text="₹ 9,716"
                android:textColor="@color/watermelon_light"
                app:fontFamily="@font/bold"
                app:textType="BODY_2" />


          </androidx.appcompat.widget.LinearLayoutCompat>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingStart="@dimen/size_16"
              android:paddingTop="@dimen/size_22"
              android:paddingEnd="@dimen/size_16"
              android:paddingBottom="@dimen/size_22">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

              <androidx.appcompat.widget.LinearLayoutCompat
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

                <com.framework.views.customViews.CustomImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="@dimen/size_2"
                    app:srcCompat="@drawable/ic_order_status" />

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/size_4"
                    android:text="Status:  "
                    android:textColor="@color/greyish_brown"
                    app:fontFamily="@font/semi_bold"
                    app:textType="CAPTION" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tvOrderStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="Order Placed"
                    android:textColor="@color/orange"
                    app:fontFamily="@font/semi_bold"
                    app:textType="CAPTION" />


              </androidx.appcompat.widget.LinearLayoutCompat>

              <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Mon, Feb 12, 2018, 02:53 PM"
                  android:textColor="@color/primary_grey"
                  app:fontFamily="@font/regular"
                  app:textType="OVERLINE" />

              <androidx.appcompat.widget.LinearLayoutCompat
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/size_8"
                  android:orientation="horizontal">

                <com.framework.views.customViews.CustomImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingTop="@dimen/size_2"
                    app:srcCompat="@drawable/ic_payment" />

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingStart="@dimen/size_4"
                    android:text="Payment:  "
                    android:textColor="@color/greyish_brown"
                    app:fontFamily="@font/semi_bold"
                    app:textType="CAPTION" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tvPaymentMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="COD"
                    android:textColor="@color/orange"
                    app:fontFamily="@font/semi_bold"
                    app:textType="CAPTION" />
              </androidx.appcompat.widget.LinearLayoutCompat>

              <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Status: Payment Pending"
                  android:textColor="@color/primary_grey"
                  app:fontFamily="@font/regular"
                  app:textType="OVERLINE" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">

              <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Delivery Partner"
                  android:textColor="@color/primary_grey"
                  app:fontFamily="@font/regular"
                  app:textType="OVERLINE" />

              <com.framework.views.customViews.CustomButton
                  android:id="@+id/btn_click"
                  android:layout_width="@dimen/size_110"
                  android:layout_height="@dimen/size_38"
                  android:layout_marginStart="0dp"
                  android:layout_marginTop="@dimen/size_4"
                  android:background="@drawable/btn_rounded_blue_4"
                  android:drawableEnd="@drawable/ic_arrow_drop_down_blue"
                  android:paddingEnd="@dimen/size_10"
                  android:text="PICK UP"
                  android:textColor="@color/light_blue"
                  app:textType="HEADING_6" />
            </LinearLayout>

          </LinearLayout>

          <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/size_6"
              android:background="@color/lightest_grey" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/size_16">

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableStart="@drawable/ic_customer_details"
              android:drawablePadding="@dimen/size_6"
              android:text="Customer details"
              android:textColor="@color/black"
              app:fontFamily="@font/semi_bold"
              app:textType="CAPTION" />

          <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_6"
              android:includeFontPadding="false"
              android:paddingStart="@dimen/size_16"
              android:text="Mr, Sanghmitra Sharma"
              android:textColor="@color/greyish_brown"
              app:fontFamily="@font/bold"
              app:textType="CAPTION" />

          <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:includeFontPadding="false"
              android:paddingStart="@dimen/size_16"
              android:text="+91 654323 54546, azgarhn@gmail.com\n2/234 - Hayagriva Vihar, Pillaiyar Koil, Chennai, 600113"
              android:textColor="@color/greyish_brown"
              app:fontFamily="@font/regular"
              app:textType="CAPTION" />

          <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:paddingStart="@dimen/size_2"
              android:paddingTop="@dimen/size_18"
              android:paddingBottom="@dimen/size_20"
              android:weightSum="2"
              tools:ignore="RtlSymmetry">

            <com.framework.views.customViews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_call_phone"
                android:drawablePadding="@dimen/size_4"
                android:includeFontPadding="false"
                android:text="@string/_91_9013268178"
                android:textColor="@color/black"
                app:fontFamily="@font/semi_bold"
                app:textType="CAPTION" />

            <com.framework.views.customViews.CustomTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_inbox"
                android:drawablePadding="@dimen/size_4"
                android:includeFontPadding="false"
                android:text="@string/customer_email"
                android:textColor="@color/black"
                app:fontFamily="@font/semi_bold"
                app:textType="CAPTION" />

          </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_6"
            android:background="@color/lightest_grey" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/size_12">

          <com.framework.views.customViews.CustomTextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingStart="@dimen/size_16"
              android:text="Order details"
              android:textColor="@color/greyish_brown"
              app:fontFamily="@font/semi_bold"
              app:textType="CAPTION"
              tools:ignore="RtlSymmetry" />

          <com.framework.views.viewgroups.BaseRecyclerView
              android:id="@+id/recyclerViewOrderDetails"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:overScrollMode="never"
              android:paddingBottom="@dimen/size_16"
              app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
              tools:itemCount="3"
              tools:listitem="@layout/item_order_details" />

          <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/size_1"
              android:layout_marginStart="@dimen/size_16"
              android:layout_marginEnd="@dimen/size_16"
              android:background="@color/light_grey" />


        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_16"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/size_16"
            android:paddingEnd="@dimen/size_16">

          <com.framework.views.customViews.CustomButton
              android:id="@+id/buttonShare"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/size_38"
              android:background="@drawable/btn_rounded_blue_4"
              android:drawableStart="@drawable/ic_download_blue"
              android:drawablePadding="@dimen/size_10"
              android:paddingStart="@dimen/size_16"
              android:paddingEnd="@dimen/size_16"
              android:text="SHARE"
              android:textColor="@color/light_blue"
              app:textType="HEADING_6" />

          <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="end"
              android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shipping Cost: ₹0"
                android:textColor="@color/warm_grey_10"
                app:fontFamily="@font/regular"
                app:textType="CAPTION" />

            <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Amount: ₹976"
                android:textColor="@color/greyish_brown"
                app:fontFamily="@font/semi_bold"
                app:textType="CAPTION" />
          </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_120" />

      </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

      <View
          android:id="@+id/view_shadow"
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_3"
          android:background="@drawable/up_shadow" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center_vertical"
          android:orientation="horizontal"
          android:padding="@dimen/size_14">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_2"
            android:layout_weight="1"
            android:orientation="vertical">

          <com.framework.views.customViews.CustomTextView
              android:id="@+id/status_time"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/size_1"
              android:text="Time elapsed"
              android:textColor="@color/primary_grey"
              app:textType="SUBTITLE_2" />

          <com.framework.views.customViews.CustomTextView
              android:id="@+id/time_elapsed"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:drawableStart="@drawable/ic_access_time"
              android:drawablePadding="@dimen/size_3"
              android:text="02:30:30"
              android:textColor="@color/watermelon_light_10"
              app:textType="BODY_1" />
        </LinearLayout>

        <com.framework.views.customViews.CustomButton
            android:id="@+id/buttonConfirmOrder"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_38"
            android:background="@drawable/button_confirm_order"
            android:text="CONFIRM ORDER"
            android:textColor="@color/white"
            app:textType="HEADING_6" />
      </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>