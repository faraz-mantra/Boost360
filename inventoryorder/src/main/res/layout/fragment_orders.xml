<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    android:id="@+id/swipe_refresh"
    style="@style/match_wrap">

    <androidx.appcompat.widget.LinearLayoutCompat
      style="@style/match_match"
      android:background="@color/lightest_grey"
      android:orientation="vertical"
      tools:context=".ui.FragmentContainerOrderActivity">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46"
        android:background="@color/white"
        android:gravity="center_vertical">

        <com.framework.views.viewgroups.BaseRecyclerView
          android:id="@+id/type_recycler"
          style="@style/match_wrap"
          android:orientation="horizontal"
          android:overScrollMode="never"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          tools:itemCount="3"
          tools:listitem="@layout/item_order_type" />

      </LinearLayout>

      <View
        android:id="@+id/view_shadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_3"
        android:background="@drawable/down_shadow" />

      <androidx.coordinatorlayout.widget.CoordinatorLayout
        style="@style/match_match">


        <com.framework.views.viewgroups.BaseRecyclerView
          android:id="@+id/order_recycler"
          style="@style/match_wrap"
          android:orientation="vertical"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          app:layout_behavior="@string/appbar_scrolling_view_behavior"
          tools:itemCount="10"
          tools:listitem="@layout/item_order" />

        <ProgressBar
          android:id="@+id/progress"
          style="@style/wrap_wrap"
          android:layout_gravity="center"
          android:indeterminate="true"
          android:theme="@style/progressBar" />

        <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/error_view"
          style="@style/match_match"
          android:layout_marginStart="@dimen/size_50"
          android:layout_marginEnd="@dimen/size_50"
          android:visibility="gone">

          <LinearLayout
            style="@style/wrap_wrap"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.framework.views.customViews.CustomImageView
              android:layout_width="@dimen/size_170"
              android:layout_height="@dimen/size_160"
              app:srcCompat="@drawable/ic_empty_appointment_icon" />

            <com.framework.views.customViews.CustomTextView
              style="@style/wrap_wrap"
              android:layout_marginTop="@dimen/size_10"
              android:gravity="center"
              android:text="@string/no_orders_so_far"
              android:textAlignment="gravity"
              android:textColor="@color/greyish_brown"
              app:fontFamily="@font/semi_bold"
              app:textType="HEADING_4" />

            <com.framework.views.customViews.CustomTextView
              style="@style/wrap_wrap"
              android:layout_marginTop="@dimen/size_6"
              android:gravity="center"
              android:text="@string/tap_below_button_to_log_a_sample_offline_order"
              android:textAlignment="gravity"
              android:textColor="@color/grey_light_2"
              app:textType="HEADING_6" />

            <com.framework.views.customViews.CustomButton
              android:id="@+id/buttonAddApt"
              android:layout_width="match_parent"
              android:layout_height="@dimen/size_40"
              android:layout_marginTop="@dimen/size_20"
              android:background="@drawable/button_rounded_6"
              android:gravity="center"
              android:stateListAnimator="@null"
              android:text="@string/make_a_sample_order"
              android:textAllCaps="true"
              android:textColor="@color/white"
              app:fontFamily="@font/semi_bold"
              app:textType="BODY_1" />
          </LinearLayout>

          <LinearLayout
            style="@style/match_wrap"
            android:gravity="center"

            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.framework.views.customViews.CustomTextView
              style="@style/wrap_wrap"
              android:layout_marginTop="@dimen/size_6"
              android:gravity="center"
              android:text="To learn more about how ‘orders’ work,"
              android:textAlignment="gravity"
              android:textColor="@color/grey_light_2"
              app:textType="BODY_1" />

            <LinearLayout
              style="@style/match_wrap"
              android:layout_marginBottom="@dimen/size_20"
              android:gravity="center"
              android:orientation="horizontal">

              <com.framework.views.customViews.CustomTextView
                style="@style/wrap_wrap"
                android:text="click on the ‘"
                android:textColor="@color/grey_light_2"
                app:textType="BODY_1" />

              <com.framework.views.customViews.CustomTextView
                style="@style/wrap_wrap"
                android:drawableStart="@drawable/ic_about_apt_icon"
                android:text="’ icon on top right."
                android:textColor="@color/warm_grey"
                app:textType="BODY_1" />
            </LinearLayout>
          </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.framework.views.fabButton.FloatingActionButton
          android:id="@+id/btn_add"
          style="@style/wrap_wrap"
          android:layout_gravity="bottom|right"
          android:layout_margin="16dp"
          android:clickable="true"
          android:focusable="true"
          app:fabBackground="@drawable/bg_button_rounded_orange"
          app:fabIcon="@drawable/ic_add_white"
          app:fabSize="normal" />
      </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</layout>