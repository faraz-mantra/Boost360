<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/size_10">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#fafafa"
            app:cardCornerRadius="@dimen/size_8"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/size_15"

                android:paddingVertical="20dp">

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/ctv_question_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:text="Q1"
                    android:textColor="@color/orange"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/ctv_question"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_15"
                    android:layout_marginEnd="@dimen/size_15"
                    android:fontFamily="@font/bold"
                    android:text="hhhhhhhhhhhhhhhhsadsadsadsadsadasdsadsadsadsadsadjsandaskjbasjbasjdsakdjasndksajndaskjdnsakdjasndajsnaskjdnaskdsnjdaskjda"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/civ_expand"
                    app:layout_constraintStart_toEndOf="@+id/ctv_question_no"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/civ_expand"
                    android:layout_width="@dimen/size_15"
                    android:layout_height="@dimen/size_15"
                    android:layout_marginTop="@dimen/size_5"
                    android:layout_marginEnd="@dimen/size_5"
                    android:src="@drawable/ic_arrow_down_orange"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/ctv_answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/regular"
            android:paddingHorizontal="@dimen/size_15"
            android:text="auishdasidasdsadijasdnsajdnasjdnasdjsandjsadnsajdnsdjsandsajdnaskdjasn"
            android:textColor="@color/black_4a4a4a"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>