<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.framework.views.customViews.CustomTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size_8"
      android:text="@string/address"
      android:textColor="@color/black_4a4a4a"
      app:fontFamily="@font/regular"
      app:textType="BODY_1" />


    <com.framework.views.customViews.CustomEditText
      android:id="@+id/edit_address"
      style="@style/EditTextStyle"
      android:layout_marginTop="@dimen/size_6"
      android:layout_marginBottom="@dimen/size_10"
      android:hint="@string/type_address"
      android:inputType="textMultiLine"
      android:lines="4"
      android:maxLines="6"
      android:gravity="center_vertical"
      android:padding="@dimen/size_2"
      android:minLines="1"
      android:scrollbars="vertical"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/text_service_name" />

    <com.framework.views.customViews.CustomTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size_12"
      android:text="@string/str_city"
      android:textColor="@color/black_4a4a4a"
      app:fontFamily="@font/regular"
      app:textType="BODY_1" />

    <com.framework.views.customViews.CustomEditText
      android:id="@+id/edit_city"
      style="@style/EditTextStyle"
      android:layout_marginTop="@dimen/size_6"
      android:layout_marginBottom="@dimen/size_10"
      android:gravity="center_vertical"
      android:hint="@string/enter_customer_s_city"
      android:imeOptions="actionNext"
      android:inputType="textCapWords"
      android:singleLine="true" />

    <com.framework.views.customViews.CustomTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size_12"
      android:text="@string/state"
      android:textColor="@color/black_4a4a4a"
      app:fontFamily="@font/regular"
      app:textType="BODY_1" />

    <com.framework.views.customViews.CustomEditText
      android:id="@+id/edit_state"
      style="@style/EditTextStyle"
      android:layout_marginTop="@dimen/size_6"
      android:layout_marginBottom="@dimen/size_10"
      android:gravity="center_vertical"
      android:hint="@string/select_customer_s_state"
      android:imeOptions="actionNext"
      android:inputType="textCapWords"
      android:singleLine="true" />

    <com.framework.views.customViews.CustomTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size_12"
      android:text="@string/pincode"
      android:textColor="@color/black_4a4a4a"
      app:fontFamily="@font/regular"
      app:textType="BODY_1" />

    <com.framework.views.customViews.CustomEditText
      android:id="@+id/edit_pin"
      style="@style/EditTextStyle"
      android:layout_marginTop="@dimen/size_6"
      android:layout_marginBottom="@dimen/size_10"
      android:gravity="center_vertical"
      android:hint="@string/enter_customer_s_pincode"
      android:imeOptions="actionDone"
      android:inputType="number"
      android:maxLength="6"
      android:singleLine="true" />
  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>