<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="@string/address"
            android:textColor="@color/black_4a4a4a"
            app:fontFamily="@font/regular"
            app:textType="BODY_1" />

        <com.framework.views.customViews.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/ic_rectangle_light_black_outline"
            android:gravity="center_vertical"
            android:hint="@string/type_address"
            android:paddingStart="@dimen/size_12"
            android:paddingEnd="@dimen/size_12"
            android:textColorHint="@color/black_202A2A2A" />

        <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="@string/city"
            android:textColor="@color/black_4a4a4a"
            app:fontFamily="@font/regular"
            app:textType="BODY_1" />

        <com.framework.views.customViews.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/ic_rectangle_light_black_outline"
            android:gravity="center_vertical"
            android:hint="@string/enter_customer_s_city"
            android:paddingStart="@dimen/size_12"
            android:paddingEnd="@dimen/size_12"
            android:textColorHint="@color/black_202A2A2A" />

        <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="@string/state"
            android:textColor="@color/black_4a4a4a"
            app:fontFamily="@font/regular"
            app:textType="BODY_1" />

        <com.framework.views.customViews.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/ic_rectangle_light_black_outline"
            android:drawableEnd="@drawable/ic_arrow_right_small_orange"
            android:gravity="center_vertical"
            android:hint="@string/select_customer_s_state"
            android:paddingStart="@dimen/size_12"
            android:paddingEnd="@dimen/size_12"
            android:textColorHint="@color/black_202A2A2A" />

        <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8"
            android:text="@string/pincode"
            android:textColor="@color/black_4a4a4a"
            app:fontFamily="@font/regular"
            app:textType="BODY_1" />

        <com.framework.views.customViews.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:background="@drawable/ic_rectangle_light_black_outline"
            android:gravity="center_vertical"
            android:hint="@string/enter_customer_s_pincode"
            android:inputType="number"
            android:paddingStart="@dimen/size_12"
            android:paddingEnd="@dimen/size_12"
            android:textColorHint="@color/black_202A2A2A" />

    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>