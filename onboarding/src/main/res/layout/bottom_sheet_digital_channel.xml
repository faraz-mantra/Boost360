<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

  </data>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_60"
        android:background="@drawable/bg_rounded_top_accent"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

      <com.framework.views.customViews.CustomTextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_16"
          android:layout_weight="1"
          android:text="@string/digital_channel_in_boost"
          android:textColor="@color/white"
          app:fontFamily="@font/semi_bold"
          app:textType="BODY_2" />

      <com.framework.views.customViews.CustomImageView
          android:id="@+id/close"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginEnd="@dimen/size_10"
          android:padding="@dimen/size_10"
          android:tint="@color/white"
          app:srcCompat="@drawable/ic_close_black" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/size_16"
        android:paddingVertical="@dimen/size_20"
        android:orientation="vertical"
        android:background="@color/white">

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_body_heading"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/more_channels_connected_increased_targeted_reach"
          android:textColor="@color/warm_grey"
          app:textType="HEADING_6"
          android:textStyle="bold"
          android:fontFamily="@font/regular"
          />

      <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_body"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/tv_body_heading"
          app:textType="BODY_2"
          android:text="@string/your_business_website_needs_to_be_connected_to_social_networks_and_discovery_platforms_which_increase_the_reach_and_visibility_of_your_brand_bringing_your_products_and_services_to_more_customers"
          android:textColor="@color/warm_grey"
          android:fontFamily="@font/regular"
          android:layout_marginTop="@dimen/size_4" />
    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>