<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <com.framework.views.customViews.CustomCardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/size_18"
    android:layout_marginTop="@dimen/size_2"
    android:layout_marginEnd="@dimen/size_18"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    tools:layout_height="@dimen/size_196">

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_card_bg_1"
        android:id="@+id/view1"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical"
          android:paddingStart="@dimen/size_12"
          android:paddingTop="@dimen/size_10"
          android:paddingEnd="@dimen/size_10"
          android:paddingBottom="@dimen/size_8">

          <com.framework.views.customViews.CustomCardView
            android:layout_width="@dimen/size_56"
            android:layout_height="@dimen/size_56"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/size_6">

            <com.framework.views.customViews.CustomCardView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/size_4"
              app:cardBackgroundColor="@color/white_one"
              app:cardCornerRadius="@dimen/size_6"
              app:cardElevation="@dimen/size_0">

              <com.framework.views.customViews.CustomImageView
                android:id="@+id/img_business_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:background="@color/greyish_light" />
            </com.framework.views.customViews.CustomCardView>

          </com.framework.views.customViews.CustomCardView>

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/size_1"
            android:layout_marginTop="@dimen/size_6"
            android:layout_weight="1"
            android:ellipsize="end"
            android:id="@+id/business_name"
            android:includeFontPadding="false"
            android:maxLines="3"
            tools:text="PLASTO INDIA AND POLYMERS"
            android:textColor="@color/white"
            app:fontFamily="@font/bold"
            app:textType="HEADING_6" />

          <com.framework.views.customViews.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_1"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/location"
            tools:text="New Delhi, India"
            android:textColor="@color/white"
            app:textType="CAPTION" />
        </LinearLayout>

        <FrameLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="2">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/size_6"
            android:background="@drawable/ic_accent_left_cut_bg"
            android:id="@+id/view2"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/size_25"
              android:layout_marginTop="@dimen/size_25"
              android:includeFontPadding="false"
              android:id="@+id/name"
              tools:text="Shashikant Sinha"
              android:textColor="@color/white"
              app:fontFamily="@font/semi_bold"
              app:textType="HEADING_6" />

            <RelativeLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/size_26"
              android:gravity="center_vertical">

              <com.framework.views.customViews.CustomTextView
                android:id="@+id/business_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:maxLines="1"
                tools:text="Marketing Manager"
                android:textColor="@color/greyish_brown_1"
                app:textType="CAPTION" />

              <com.framework.views.DashedDividerView
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_below="@+id/business_type"
                android:layout_alignStart="@+id/business_type"
                android:layout_alignEnd="@+id/business_type"
                android:layout_marginStart="@dimen/size_1"
                android:layout_marginTop="@dimen/size_2"
                app:dividerDashColor="@color/white"
                app:dividerDashGap="@dimen/size_2"
                app:dividerDashWidth="5.5dp" />
            </RelativeLayout>

          </LinearLayout>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:paddingEnd="@dimen/size_2"
            android:paddingBottom="@dimen/size_10"
            tools:ignore="RtlSymmetry">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_6"
              android:gravity="center_vertical"
              android:orientation="horizontal">

              <com.framework.views.customViews.CustomImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_icon_card_bg"
                app:srcCompat="@drawable/ic_call_card_b" />

              <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:id="@+id/number"
                tools:text="0801234567890"
                android:textColor="@color/greyish_brown_1"
                app:textType="CAPTION" />
            </LinearLayout>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_6"
              android:gravity="center_vertical"
              android:orientation="horizontal">

              <com.framework.views.customViews.CustomImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_icon_card_bg"
                app:srcCompat="@drawable/ic_email_card_b" />

              <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:id="@+id/email"
                tools:text="plastoindia@gmail.com"
                android:textColor="@color/greyish_brown_1"
                app:textType="CAPTION" />
            </LinearLayout>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_6"
              android:gravity="center_vertical"
              android:orientation="horizontal">

              <com.framework.views.customViews.CustomImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_icon_card_bg"
                app:srcCompat="@drawable/ic_website_card_b" />

              <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/size_3"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:id="@+id/website"
                tools:text="https://plastoindiaandpolymers.com"
                android:textColor="@color/greyish_brown_1"
                app:textType="CAPTION" />
            </LinearLayout>
          </LinearLayout>
        </FrameLayout>
      </LinearLayout>

      <com.framework.views.roundedimageview.RoundedImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:riv_corner_radius="18dip"
        app:riv_mutate_background="true"
        app:srcCompat="@drawable/ic_multi_cross_line_b" />
    </FrameLayout>
  </com.framework.views.customViews.CustomCardView>
</layout>