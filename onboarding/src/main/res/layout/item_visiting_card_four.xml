<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <com.framework.views.customViews.CustomCardView
    android:id="@+id/maim_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/size_22"
    android:layout_marginTop="@dimen/size_2"
    android:layout_marginEnd="@dimen/size_22"
    android:layout_marginBottom="@dimen/size_2"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/size_10"
    app:cardElevation="0dp"
    tools:layout_height="@dimen/size_200">

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/ic_visiting_card_four">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="@dimen/size_210"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/size_4"
        android:gravity="center_horizontal"
        android:background="@drawable/ic_card_polygon"
        android:paddingTop="@dimen/size_20"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomCardView
          android:id="@+id/profile_view"
          android:layout_width="@dimen/size_50"
          android:layout_height="@dimen/size_46"
          app:cardBackgroundColor="@color/placeholder_bg"
          app:cardCornerRadius="@dimen/size_4"
          app:cardElevation="@dimen/size_0">

          <com.framework.views.customViews.CustomCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/size_2"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/size_4"
            app:cardElevation="@dimen/size_0">

            <com.framework.views.customViews.CustomImageView
              android:id="@+id/img_business_logo"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="@color/white"
              android:scaleType="centerCrop" />
          </com.framework.views.customViews.CustomCardView>

        </com.framework.views.customViews.CustomCardView>

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/business_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ellipsize="end"
          android:gravity="center"
          android:includeFontPadding="false"
          android:maxLines="3"
          android:paddingStart="@dimen/size_14"
          android:paddingTop="@dimen/size_14"
          android:paddingEnd="@dimen/size_14"
          android:paddingBottom="@dimen/size_5"
          android:textColor="@color/white"
          app:fontFamily="@font/patua_one_regular"
          app:textType="HEADING_6"
          tools:text="PLASTO INDIA AND POLYMERS" />

        <LinearLayout
          android:id="@+id/channels"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_5"
          android:orientation="vertical">

          <include layout="@layout/item_card_channel" />
        </LinearLayout>
      </androidx.appcompat.widget.LinearLayoutCompat>

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_180"
        android:layout_marginEnd="@dimen/size_10"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="end">

          <com.framework.views.customViews.CustomImageView
            android:id="@+id/img_logo"
            android:layout_width="@dimen/size_80"
            android:layout_height="@dimen/size_74"
            android:layout_marginTop="@dimen/size_16"
            android:layout_marginStart="@dimen/size_10"
            app:srcCompat="@drawable/ic_business_card_spa_n" />

        </LinearLayout>

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/number"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_2"
          android:ellipsize="end"
          android:gravity="end"
          android:maxLines="1"
          android:textColor="@color/white"
          app:textType="CAPTION"
          tools:text="0801234567890" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_4"
          android:ellipsize="end"
          android:gravity="end"
          android:maxLines="1"
          android:textColor="@color/white"
          app:autoSizeMaxTextSize="12sp"
          app:autoSizeMinTextSize="6sp"
          app:autoSizeStepGranularity="1sp"
          app:autoSizeTextType="uniform"
          tools:text="plastoindia@gmail.com" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/website"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_4"
          android:layout_marginBottom="@dimen/size_14"
          android:ellipsize="end"
          android:gravity="end"
          android:maxLines="1"
          android:textColor="@color/white"
          app:autoSizeMaxTextSize="11sp"
          app:autoSizeMinTextSize="6sp"
          app:autoSizeStepGranularity="1sp"
          app:autoSizeTextType="uniform"
          app:fontFamily="@font/semi_bold"
          tools:text="https://plastoindiaandpolymers.com" />


      </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>
  </com.framework.views.customViews.CustomCardView>
</layout>