<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/maim_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone"
        android:alpha="0"
        tools:alpha="1"
        tools:visibility="visible">

        <FrameLayout
            android:layout_width="@dimen/size_70"
            android:layout_height="@dimen/size_70">

            <com.framework.views.customViews.CustomCardView
                android:layout_width="@dimen/size_60"
                android:layout_height="@dimen/size_60"
                app:cardCornerRadius="@dimen/size_6"
                app:cardElevation="0.5dp">

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_user3" />
            </com.framework.views.customViews.CustomCardView>

            <com.framework.views.customViews.CustomCardView
                android:layout_width="@dimen/size_20"
                android:layout_height="@dimen/size_20"
                android:layout_gravity="right|bottom"
                android:layout_margin="@dimen/size_4"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/size_12"
                app:cardElevation="0.5dp">

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/channel_type"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_google_n" />

            </com.framework.views.customViews.CustomCardView>
        </FrameLayout>

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/profile_title"
            style="@style/Onboarding.HeaderTitleStyle"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/size_6"
            android:layout_marginBottom="@dimen/size_4"
            android:paddingStart="@dimen/size_32"
            android:paddingEnd="@dimen/size_32"
            app:textType="HEADING_4"
            tools:text="Sood hospital and Clinic"
            app:fontFamily="@font/regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_2"
            android:layout_marginStart="@dimen/size_40"
            android:layout_marginEnd="@dimen/size_40"
            android:background="@color/warm_grey_two" />

        <com.framework.views.customViews.CustomTextView
            android:id="@+id/disconnect"
            style="@style/Onboarding.Registration.FormButtonStyle"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/size_10"
            android:layout_marginBottom="0dp"
            android:includeFontPadding="false"
            android:padding="@dimen/size_5"
            android:text="@string/disconnect_this_account"
            android:textColor="@color/warm_grey_two"
            app:fontFamily="@font/regular"
            app:textType="SUBTITLE_1" />
        <!--        android:background="@drawable/line_bac"-->
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>


