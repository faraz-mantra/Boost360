<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <com.framework.views.customViews.CustomCardView
    android:id="@+id/card"
    style="@style/Onboarding.ChannelCardStyle"
    android:layout_marginBottom="@dimen/size_0"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="@dimen/size_16"
      android:weightSum="1">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

          <com.framework.views.customViews.CustomImageView
            android:id="@+id/image"
            android:layout_width="@dimen/size_18"
            android:layout_height="@dimen/size_18"
            android:scaleType="fitStart"
            tools:srcCompat="@drawable/ic_documentation_n" />

          <com.framework.views.customViews.CustomTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_8"
            android:layout_marginBottom="@dimen/size_2"
            android:layout_weight="1"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/dodger_blue_two"
            app:fontFamily="@font/semi_bold"
            app:textType="SUBHEADING_1"
            tools:text="Manage all your Digital Content" />

          <com.framework.views.customViews.CustomImageView
            android:id="@+id/arrow"
            android:layout_width="@dimen/size_14"
            android:layout_height="@dimen/size_14"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_2"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/ic_dropdown_n" />

        </LinearLayout>

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/description"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_8"
          android:ellipsize="end"
          android:textColor="@color/greyish_brown"
          android:visibility="gone"
          app:fontFamily="@font/regular"
          app:textType="SUBTITLE_2"
          tools:text="Suggestions on digital growth strategies Regular Tips on Content for better discovery Weekly Performance Reporting"
          tools:visibility="visible" />

      </androidx.appcompat.widget.LinearLayoutCompat>

      <!--      <com.framework.views.customViews.CustomImageView-->
      <!--          android:layout_width="@dimen/size_24"-->
      <!--          android:layout_height="@dimen/size_24"-->
      <!--          android:layout_gravity="center_vertical"-->
      <!--          app:srcCompat="@drawable/ic_next_pinkish_grey" />-->

    </androidx.appcompat.widget.LinearLayoutCompat>

  </com.framework.views.customViews.CustomCardView>
</layout>