<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.framework.views.customViews.CustomImageView
            android:id="@+id/customImageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_instagram"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.framework.views.customViews.CustomTextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            tools:text="@string/connect_your_facebook_page_with_instagram"
            android:textColor="@color/black_333333"
            android:textSize="18sp"
            app:fontFamily="@font/semi_bold"
            app:layout_constraintBottom_toBottomOf="@+id/customImageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/customImageView2"
            app:layout_constraintTop_toTopOf="@+id/customImageView2" />


        <com.framework.views.customViews.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_desc"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:fontFamily="@font/regular"
            android:textSize="@dimen/size_12"
            tools:text="@string/linking_your_instagram_page_to_facebook_makes_it_easier_to_operate_your_social_media_accounts_to_connect_open_your_facebook_page_and_go_to_settings_instagram_connect_to_instagram"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/white_f8f8f8"
            app:layout_constraintHeight_percent="0.7"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/customTextView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="@string/watch_video_for_instructions"
                android:textColor="@color/black_747474"
                android:textSize="@dimen/size_12"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/player_view"
                app:cardCornerRadius="@dimen/size_10"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.35"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintBottom_toTopOf="@+id/tv_btn_desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/customTextView2"
                app:layout_constraintVertical_bias="0" >

                <com.google.android.exoplayer2.ui.PlayerView
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/size_6"
                    android:layout_height="match_parent"/>

            </androidx.cardview.widget.CardView>


            <com.framework.views.customViews.CustomTextView
                android:id="@+id/tv_btn_desc"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="8dp"
                tools:text="@string/logged_in_to_your_instagram_account"
                android:textColor="@color/black_747474"
                android:textSize="12sp"
                app:fontFamily="@font/semi_bold"
                app:layout_constraintBottom_toTopOf="@+id/btn_next"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <com.framework.views.customViews.CustomButton
                android:id="@+id/btn_back"
                android:layout_width="@dimen/size_50"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_height="@dimen/size_50"
                android:layout_marginStart="24dp"
                app:strokeColor="@color/colorPrimary"
                android:layout_marginBottom="24dp"
                app:icon="@drawable/ic_arrow_left"
                app:cornerRadius="@dimen/size_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


            <com.framework.views.customViews.CustomMaterialButton
                android:id="@+id/btn_next"
                android:layout_width="0dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/colorPrimary"
                app:cornerRadius="@dimen/size_10"
                android:textAllCaps="false"
                android:layout_height="@dimen/size_50"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                tools:text="@string/get_started"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_back" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
