<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/maim_view"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="?attr/bd_bg_color"
  android:orientation="vertical">

  <androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/fill_layout"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@color/transparent"
    android:gravity="bottom">

    <View
      android:id="@+id/fill_view"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="?attr/bd_bg_color"
      android:fitsSystemWindows="true" />

  </androidx.appcompat.widget.LinearLayoutCompat>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/hide_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_30"
    android:layout_marginEnd="@dimen/size_30"
    android:layout_marginBottom="@dimen/size_4"
    android:background="?attr/bd_bg_color"
    android:orientation="vertical">

    <com.framework.views.customViews.CustomImageView
      android:id="@+id/icon_share"
      android:layout_width="@dimen/size_32"
      android:layout_height="@dimen/size_32"
      android:layout_marginBottom="@dimen/size_8"
      android:alpha="0"
      app:srcCompat="@drawable/ic_share_n"
      tools:alpha="1" />

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/size_4"
      android:alpha="0"
      android:textColor="@color/dodger_blue_two"
      app:fontFamily="@font/semi_bold"
      app:textType="SUBHEADING_1"
      tools:alpha="1"
      tools:text="@string/recommended_on" />

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/sub_title"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:alpha="0"
      android:text="@string/select_relevant_channels_or_remove_unwanted_channels"
      android:textColor="@color/warm_grey"
      android:visibility="gone"
      app:fontFamily="@font/regular"
      app:textType="SUBHEADING_2"
      tools:alpha="1"
      tools:visibility="visible" />

  </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>