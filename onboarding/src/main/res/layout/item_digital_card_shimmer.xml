<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <com.facebook.shimmer.ShimmerFrameLayout
    android:id="@+id/parentShimmerLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:shimmer_auto_start="true"
    app:shimmer_duration="700">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
          android:id="@+id/border_view"
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_210"
          android:layout_marginStart="@dimen/size_15"
          android:layout_marginTop="@dimen/size_13"
          android:layout_marginEnd="@dimen/size_16"
          android:background="@drawable/ic_card_border"
          android:visibility="gone"
          tools:visibility="visible" />

        <com.framework.views.customViews.CustomCardView
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_200"
          android:layout_marginStart="@dimen/size_22"
          android:layout_marginTop="@dimen/size_18"
          android:layout_marginEnd="@dimen/size_22"
          android:layout_marginBottom="@dimen/size_2"
          app:cardBackgroundColor="@color/placeholder_bg"
          app:cardCornerRadius="@dimen/size_10"
          app:cardElevation="0dp"/>
      </RelativeLayout>

      <View
        android:layout_width="@dimen/size_50"
        android:layout_height="@dimen/size_5"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_18"
        android:background="@color/placeholder_bg"
        android:paddingBottom="@dimen/size_4" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/size_18"
        android:gravity="bottom"
        android:orientation="vertical">

        <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_46"
          android:layout_marginTop="@dimen/size_4"
          android:background="@drawable/bg_rounded_20"
          android:backgroundTint="@color/placeholder_bg"
          android:gravity="center" />

        <View
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_46"
          android:layout_marginTop="@dimen/size_16"
          android:background="@drawable/bg_rounded_20"
          android:backgroundTint="@color/placeholder_bg"
          android:gravity="center" />
      </LinearLayout>
    </LinearLayout>
  </com.facebook.shimmer.ShimmerFrameLayout>
</layout>