<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
  <!-- Because the font rendering system prior to API version 16 can't automatically
       render dotted circle for incomplete combining letter of some scripts, different
       set of Key definitions are needed based on the API version. -->
  <Key
    latin:backgroundType="action"
    latin:keyActionFlags="noKeyPreview"
    latin:keyLabelFlags="hasPopupHint"
    latin:keySpec="!text/keyspec_one_by_four|!code/key_switch_screen_main" />
  <Key
    latin:keySpec="&#x0937;"
    latin:moreKeys="षं,ष्" />
  <Key
    latin:keySpec="&#x0938;"
    latin:moreKeys="सं,स्" />
  <Key
    latin:keySpec="ह"
    latin:moreKeys="हं,ह्" />
  <Key
    latin:backgroundType="fontResizeKey"
    latin:keySpec="ज्ञ" />
  <Key
    latin:backgroundType="fontResizeKey"
    latin:keySpec="क्ष"
    latin:moreKeys="क्षं,क्ष्" />
  <Key
    latin:backgroundType="fontResizeKey"
    latin:keySpec="श्र" />
  <Key
    latin:backgroundType="headerkey"
    latin:headerKeySpec="ृ"
    latin:keySpec="&#x0960;" />
  <!--<Key
      latin:backgroundType="headerkey"
      latin:headerKeySpec="ँ"
      latin:keySpec="&#x0901;" />-->
  <Key
    latin:backgroundType="headerkey"
    latin:headerKeySpec="्"
    latin:keySpec="&#x094D;" />
  <!--<Key latin:keySpec="&#x0939;" />-->
</merge>
