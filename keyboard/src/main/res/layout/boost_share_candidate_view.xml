<?xml version="1.0" encoding="utf-8"?>
<nowfloats.nfkeyboard.keyboards.BoostCandidateView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="40dp"
  android:background="#424242"
  android:gravity="center_vertical">

  <ImageView
    android:id="@+id/img_nowfloats"
    android:layout_width="70dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="?android:selectableItemBackground"
    android:elevation="3dp"
    android:padding="7dp"
    android:src="@drawable/ic_nowfloats_circle" />

  <TextView
    android:id="@+id/tv_updates"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:text="Updates"
    android:textAllCaps="true"
    android:textColor="@color/white" />

  <TextView
    android:id="@+id/tv_products"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="center"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:text="Products"
    android:textAllCaps="true"
    android:textColor="@color/white" />

  <ImageView
    android:id="@+id/img_settings"
    android:layout_width="70dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="?android:selectableItemBackground"
    android:padding="7dp"
    android:src="@android:drawable/ic_btn_speak_now"
    android:tint="@color/white" />
</nowfloats.nfkeyboard.keyboards.BoostCandidateView>