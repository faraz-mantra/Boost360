<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cl_offer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_offer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:cardCornerRadius="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_offer"
        android:layout_marginBottom="4dp"
        android:elevation="1dp">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/adapter_item_product_flipped_text_size"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_offer"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/product_name"/>

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/adapter_item_product_flipped_text_size"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/price"/>

    <TextView
        android:id="@+id/tv_offer_price"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="2"
        android:textSize="@dimen/adapter_item_product_flipped_text_size"
        android:ellipsize="end"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="start|center_vertical"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/et_offer_price"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_offer_price"
        app:layout_constraintTop_toBottomOf="@+id/border"
        app:layout_constraintStart_toEndOf="@+id/card_view_image"
        android:text="@string/offer_price" />

    <EditText
        android:id="@+id/et_offer_price"
        android:layout_width="0dp"
        android:focusable="false"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:textSize="@dimen/adapter_item_product_flipped_text_size"
        android:paddingTop="0dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toRightOf="@+id/cl_offer"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_offer"
        app:layout_constraintTop_toBottomOf="@+id/border"
        android:hint="@string/enter_offer_price" />

    <TextView
        android:id="@+id/tv_offer_currency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:textSize="@dimen/adapter_item_product_flipped_text_size"
        android:padding="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintHorizontal_weight="0.2"
        app:layout_constraintRight_toRightOf="@+id/cl_offer"
        app:layout_constraintBaseline_toBaselineOf="@+id/et_offer_price"
        app:layout_constraintEnd_toEndOf="@+id/et_offer_price"
        app:layout_constraintBottom_toTopOf="@+id/ll_quantity"
        android:text="@string/currency"/>

    <TextView
        android:id="@+id/tv_quantity"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="@dimen/adapter_item_product_flipped_text_size"
        android:gravity="start|center_vertical"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintTop_toTopOf="@+id/card_view_image"
        app:layout_constraintEnd_toStartOf="@+id/ll_quantity"
        app:layout_constraintBottom_toBottomOf="@+id/ll_quantity"
        app:layout_constraintStart_toEndOf="@+id/card_view_image"
        android:layout_height="wrap_content"
        android:text="@string/quantity" />

    <LinearLayout
        android:id="@+id/ll_quantity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toRightOf="@+id/cl_offer"
        app:layout_constraintTop_toTopOf="@+id/card_view_image"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_offer">

        <TextView
            android:id="@+id/tv_selected_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textSize="@dimen/adapter_item_product_flipped_text_size"
            android:gravity="bottom"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:text="1"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_arrow_drop_down_grey_600_24dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_validity"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:gravity="start|center_vertical"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintEnd_toStartOf="@+id/ll_validity"
        app:layout_constraintTop_toTopOf="@+id/ll_validity"
        app:layout_constraintBottom_toBottomOf="@+id/ll_validity"
        app:layout_constraintStart_toEndOf="@+id/card_view_image"
        android:textSize="@dimen/adapter_item_product_flipped_text_size"
        android:text="@string/validity" />

    <LinearLayout
        android:id="@+id/ll_validity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toRightOf="@+id/cl_offer"
        app:layout_constraintTop_toBottomOf="@+id/tv_quantity"
        app:layout_constraintStart_toStartOf="@+id/guideline_vertical_offer">

        <TextView
            android:id="@+id/tv_selected_validity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="bottom"
            android:textSize="@dimen/adapter_item_product_flipped_text_size"
            android:layout_marginTop="2dp"
            android:layout_marginStart="8dp"
            android:textColor="@android:color/black"
            android:text="24 Hrs"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            app:srcCompat="@drawable/ic_arrow_drop_down_grey_600_24dp" />

    </LinearLayout>

    <View
        android:id="@+id/border"
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="16dp"
        android:background="#d3d3d3"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/card_view_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_validity"/>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/tab_indicator_text"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:textSize="@dimen/adapter_item_product_flipped_text_size"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        app:layout_constraintEnd_toStartOf="@+id/button_create"
        app:layout_constraintTop_toBottomOf="@+id/et_offer_price"
        android:text="@string/cancel" />

    <Button
        android:id="@+id/button_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="12dp"
        android:minWidth="0dp"
        android:textSize="@dimen/adapter_item_product_flipped_text_size"
        android:minHeight="0dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        app:layout_constraintRight_toRightOf="@+id/cl_offer"
        app:layout_constraintTop_toBottomOf="@+id/et_offer_price"
        android:text="@string/share" />

</androidx.constraintlayout.widget.ConstraintLayout>