<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/cl_offer"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:layout_gravity="center"
  android:padding="8dp">

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_horizontal_offer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintGuide_percent="0.5" />

  <androidx.constraintlayout.widget.Guideline
    android:id="@+id/guideline_vertical_offer"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:layout_constraintGuide_percent="0.5" />

  <androidx.cardview.widget.CardView
    android:id="@+id/card_view_image"
    android:layout_width="64dp"
    android:layout_height="64dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:elevation="1dp"
    app:cardCornerRadius="8dp"
    app:layout_constraintBottom_toTopOf="@+id/guideline_horizontal_offer"
    app:layout_constraintStart_toStartOf="parent">

    <ImageView
      android:id="@+id/iv_product"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:layout_gravity="center"
      android:scaleType="centerCrop" />

  </androidx.cardview.widget.CardView>

  <TextView
    android:id="@+id/tv_product_name"
    android:layout_width="64dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:ellipsize="end"
    android:maxLines="2"
    android:text="@string/product_name"
    android:textSize="@dimen/adapter_item_product_flipped_text_size"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/guideline_horizontal_offer" />

  <TextView
    android:id="@+id/tv_product_price"
    android:layout_width="64dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:ellipsize="end"
    android:maxLines="2"
    android:text="@string/price"
    android:textSize="@dimen/adapter_item_product_flipped_text_size"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

  <TextView
    android:id="@+id/tv_offer_price"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:ellipsize="end"
    android:gravity="start|center_vertical"
    android:maxLines="2"
    android:text="@string/offer_price"
    android:textSize="@dimen/adapter_item_product_flipped_text_size"
    app:layout_constraintBaseline_toBaselineOf="@+id/et_offer_price"
    app:layout_constraintEnd_toStartOf="@+id/et_offer_price"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toEndOf="@+id/card_view_image"
    app:layout_constraintTop_toBottomOf="@+id/border" />

  <EditText
    android:id="@+id/et_offer_price"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="4dp"
    android:focusable="false"
    android:hint="@string/enter_offer_price"
    android:maxLines="1"
    android:paddingStart="8dp"
    android:paddingTop="0dp"
    android:paddingBottom="8dp"
    android:textSize="@dimen/adapter_item_product_flipped_text_size"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintRight_toRightOf="@+id/cl_offer"
    app:layout_constraintStart_toStartOf="@+id/guideline_vertical_offer"
    app:layout_constraintTop_toBottomOf="@+id/border" />

  <TextView
    android:id="@+id/tv_offer_currency"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="4dp"
    android:background="@color/white"
    android:padding="8dp"
    android:text="@string/currency"
    android:textSize="@dimen/adapter_item_product_flipped_text_size"
    app:layout_constraintBaseline_toBaselineOf="@+id/et_offer_price"
    app:layout_constraintBottom_toTopOf="@+id/ll_quantity"
    app:layout_constraintEnd_toEndOf="@+id/et_offer_price"
    app:layout_constraintHorizontal_weight="0.2"
    app:layout_constraintRight_toRightOf="@+id/cl_offer" />

  <TextView
    android:id="@+id/tv_quantity"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:ellipsize="end"
    android:gravity="start|center_vertical"
    android:maxLines="2"
    android:text="@string/quantity"
    android:textSize="@dimen/adapter_item_product_flipped_text_size"
    app:layout_constraintBottom_toBottomOf="@+id/ll_quantity"
    app:layout_constraintEnd_toStartOf="@+id/ll_quantity"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toEndOf="@+id/card_view_image"
    app:layout_constraintTop_toTopOf="@+id/card_view_image" />

  <LinearLayout
    android:id="@+id/ll_quantity"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintRight_toRightOf="@+id/cl_offer"
    app:layout_constraintStart_toStartOf="@+id/guideline_vertical_offer"
    app:layout_constraintTop_toTopOf="@+id/card_view_image">

    <TextView
      android:id="@+id/tv_selected_quantity"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginStart="8dp"
      android:layout_marginTop="2dp"
      android:layout_weight="1"
      android:gravity="bottom"
      android:text="1"
      android:textColor="@android:color/black"
      android:textSize="@dimen/adapter_item_product_flipped_text_size" />

    <androidx.appcompat.widget.AppCompatImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      app:srcCompat="@drawable/ic_arrow_drop_down_grey_600_24dp" />

  </LinearLayout>

  <TextView
    android:id="@+id/tv_validity"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:ellipsize="end"
    android:gravity="start|center_vertical"
    android:maxLines="2"
    android:text="@string/validity"
    android:textSize="@dimen/adapter_item_product_flipped_text_size"
    app:layout_constraintBottom_toBottomOf="@+id/ll_validity"
    app:layout_constraintEnd_toStartOf="@+id/ll_validity"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toEndOf="@+id/card_view_image"
    app:layout_constraintTop_toTopOf="@+id/ll_validity"
    app:layout_constraintVertical_weight="1" />

  <LinearLayout
    android:id="@+id/ll_validity"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="4dp"
    android:orientation="horizontal"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintRight_toRightOf="@+id/cl_offer"
    app:layout_constraintStart_toStartOf="@+id/guideline_vertical_offer"
    app:layout_constraintTop_toBottomOf="@+id/tv_quantity">

    <TextView
      android:id="@+id/tv_selected_validity"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginStart="8dp"
      android:layout_marginTop="2dp"
      android:layout_weight="1"
      android:gravity="bottom"
      android:text="24 Hrs"
      android:textColor="@android:color/black"
      android:textSize="@dimen/adapter_item_product_flipped_text_size" />

    <androidx.appcompat.widget.AppCompatImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical"
      app:srcCompat="@drawable/ic_arrow_drop_down_grey_600_24dp" />

  </LinearLayout>

  <View
    android:id="@+id/border"
    android:layout_width="0dp"
    android:layout_height="1dp"
    android:layout_marginStart="32dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="32dp"
    android:background="#d3d3d3"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_weight="1"
    app:layout_constraintStart_toEndOf="@+id/card_view_image"
    app:layout_constraintTop_toBottomOf="@+id/tv_validity" />

  <Button
    android:id="@+id/button_cancel"
    style="@style/Base.Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:minWidth="0dp"
    android:minHeight="0dp"
    android:padding="12dp"
    android:text="@string/cancel"
    android:textColor="@android:color/tab_indicator_text"
    android:textSize="@dimen/adapter_item_product_flipped_text_size"
    app:layout_constraintEnd_toStartOf="@+id/button_create"
    app:layout_constraintTop_toBottomOf="@+id/et_offer_price" />

  <Button
    android:id="@+id/button_create"
    style="@style/Base.Widget.AppCompat.Button.Borderless"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:minWidth="0dp"
    android:minHeight="0dp"
    android:padding="12dp"
    android:text="@string/share"
    android:textSize="@dimen/adapter_item_product_flipped_text_size"
    app:layout_constraintRight_toRightOf="@+id/cl_offer"
    app:layout_constraintTop_toBottomOf="@+id/et_offer_price" />

</androidx.constraintlayout.widget.ConstraintLayout>