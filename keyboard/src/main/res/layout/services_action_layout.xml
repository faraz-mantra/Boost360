<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="horizontal">
  <!--<ImageView android:gravity="center" android:id="@+id/gif_service_action_button" android:padding="8dp" android:layout_width="0dp" android:layout_height="match_parent" android:src="@drawable/cache_giphy_bar" android:layout_weight="1.0" />-->
  <ImageView
    android:id="@+id/maps_service_action_button"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1.0"
    android:gravity="center"
    android:padding="8dp"
    android:src="@drawable/cache_maps_bar" />

  <ImageView
    android:id="@+id/google_service_action_button"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1.0"
    android:gravity="center"
    android:padding="8dp"
    android:src="@drawable/cache_google_bar" />

  <ImageView
    android:id="@+id/contacts_service_action_button"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1.0"
    android:gravity="center"
    android:padding="8dp"
    android:src="@drawable/cache_contacts_bar" />

  <ImageView
    android:id="@+id/foursquare_service_action_button"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1.0"
    android:gravity="center"
    android:padding="8dp"
    android:src="@drawable/cache_foursquare_bar" />

  <ImageView
    android:id="@+id/customization_service_action_button"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1.0"
    android:gravity="center"
    android:padding="8dp"
    android:src="@drawable/ic_color_lens_black_24dp" />

  <ImageView
    android:id="@+id/go_to_emoji"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1.0"
    android:gravity="center"
    android:padding="8dp"
    android:src="@drawable/cache_emoji_bar" />
</LinearLayout>