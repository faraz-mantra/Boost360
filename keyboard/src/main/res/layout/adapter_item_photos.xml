<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="72dp"
  android:layout_height="64dp"
  android:layout_margin="8dp"
  android:elevation="0dp"
  android:fadingEdgeLength="0dp"
  app:cardCornerRadius="4dp"
  app:cardElevation="0dp">

  <FrameLayout
    android:layout_width="72dp"
    android:layout_height="64dp">

    <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:elevation="0dp"
      app:cardCornerRadius="4dp"
      app:cardElevation="0dp">

      <ImageView
        android:id="@+id/imageView"
        android:layout_width="72dp"
        android:layout_height="64dp"
        android:background="@color/dark_gray"
        android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <ImageView
      android:id="@+id/iv_add_photos"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="center"
      android:src="@drawable/ic_add_circle_white_24dp"
      android:visibility="gone" />

    <View
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/round_border_cardview" />

    <View
      android:id="@+id/overlay"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/gray_40"
      android:visibility="gone" />

    <View
      android:id="@+id/view_background_checked"
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:layout_gravity="center"
      android:background="@drawable/round_background_checked"
      android:visibility="gone" />

    <ImageView
      android:id="@+id/iv_checked"
      android:layout_width="16dp"
      android:layout_height="16dp"
      android:layout_gravity="center"
      android:src="@drawable/thick_checkmark_png"
      android:visibility="gone" />

  </FrameLayout>

</androidx.cardview.widget.CardView>