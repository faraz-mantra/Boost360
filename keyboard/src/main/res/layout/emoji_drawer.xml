<?xml version="1.0" encoding="utf-8"?>

<com.android.inputmethod.keyboard.emojifast.EmojiDrawer xmlns:android="http://schemas.android.com/apk/res/android"
  style="?attr/emojiPalettesViewStyle"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_gravity="bottom"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/emoji_top_bar"
    style="?attr/suggestionStripViewStyle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/config_suggestions_strip_height"
    android:orientation="horizontal">

    <com.astuetz.PagerSlidingTabStrip
      android:id="@+id/tabs"
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1" />

    <View
      android:layout_width="1px"
      android:layout_height="match_parent"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="10dp" />
  </LinearLayout>

  <androidx.viewpager.widget.ViewPager
    android:id="@+id/emoji_pager"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible" />

</com.android.inputmethod.keyboard.emojifast.EmojiDrawer>