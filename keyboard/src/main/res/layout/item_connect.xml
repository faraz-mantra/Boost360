<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:fresco="http://schemas.android.com/apk/res/android"
  xmlns:fresco2="http://schemas.android.com/apk/res-auto"
  fresco:layout_width="wrap_content"
  fresco:layout_height="@dimen/icon_height"
  fresco:gravity="center"
  fresco:orientation="vertical">

  <com.facebook.drawee.view.SimpleDraweeView
    fresco:id="@id/item_image"
    fresco:layout_width="@dimen/preview_img_size"
    fresco:layout_height="@dimen/preview_img_size"
    fresco:layout_centerVertical="true"
    fresco:layout_gravity="center"
    fresco2:actualImageScaleType="centerCrop"
    fresco2:roundBottomRight="false"
    fresco2:roundTopRight="false"
    fresco2:roundedCornerRadius="@dimen/card_search_item_radius" />

  <TextView
    fresco:id="@id/header"
    fresco:layout_width="match_parent"
    fresco:layout_height="wrap_content"
    fresco:gravity="center"
    fresco:lines="2"
    fresco:paddingLeft="10dp"
    fresco:paddingRight="10dp"
    fresco:text="In order to see your history, likes, saves, and more, you must connect Slash with your Foursquare account."
    fresco:textColor="#ffcccccc"
    fresco:textSize="12sp" />

  <Button
    fresco:id="@id/connect_button"
    fresco:layout_width="wrap_content"
    fresco:layout_height="26dp"
    fresco:layout_gravity="center_horizontal"
    fresco:layout_marginTop="6dp"
    fresco:background="@drawable/slash_connect_button"
    fresco:paddingLeft="20dp"
    fresco:paddingRight="20dp"
    fresco:text="@string/connect_slash"
    fresco:textAllCaps="false"
    fresco:textColor="#ffffffff"
    fresco:textSize="14sp" />
</LinearLayout>