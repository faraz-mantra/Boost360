<?xml version="1.0" encoding="utf-8"?>
<com.android.inputmethod.keyboard.emoji.MediaBottomBar xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:visibility="gone">

  <TextView
    android:id="@+id/emoji_keyboard_alphabet_left"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_weight="0.125"
    android:gravity="center"
    android:hapticFeedbackEnabled="false"
    android:soundEffectsEnabled="false"
     android:fontFamily="@font/semi_bold" />

  <ImageButton
    android:id="@+id/switch_to_emoji"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_weight="0.125"
    android:gravity="center"
    android:hapticFeedbackEnabled="false"
    android:soundEffectsEnabled="false"
    android:src="@drawable/ic_emoji_smile"
    android:visibility="invisible" />

  <ImageButton
    android:id="@+id/switch_to_sticker"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_weight="0.125"
    android:gravity="center"
    android:hapticFeedbackEnabled="false"
    android:soundEffectsEnabled="false"
    android:src="@drawable/ic_sticker"
    android:visibility="invisible" />

  <ImageButton
    android:id="@+id/emoji_keyboard_delete"
    android:layout_width="0dip"
    android:layout_height="match_parent"
    android:layout_weight="0.125"
    android:contentDescription="@string/spoken_description_delete"
    android:hapticFeedbackEnabled="false"
    android:soundEffectsEnabled="false" />
</com.android.inputmethod.keyboard.emoji.MediaBottomBar>