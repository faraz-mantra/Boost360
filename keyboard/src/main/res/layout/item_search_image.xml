<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:card_view="http://schemas.android.com/tools"
  android:id="@id/card_view"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_marginTop="6dp"
  android:layout_marginEnd="8dp"
  android:layout_marginBottom="3dp"
  card_view:cardBackgroundColor="0x106000b"
  card_view:cardCornerRadius="@dimen/card_search_item_radius"
  card_view:cardElevation="2dp"
  card_view:cardPreventCornerOverlap="false">

  <com.facebook.drawee.view.SimpleDraweeView
    android:id="@id/item_image"
    android:layout_width="@dimen/icon_width"
    android:layout_height="@dimen/icon_height"
    android:layout_centerVertical="true"
    card_view:actualImageScaleType="6"
    card_view:roundBottomRight="false"
    card_view:roundTopRight="false"
    card_view:roundedCornerRadius="@dimen/card_search_item_radius" />
</androidx.cardview.widget.CardView>