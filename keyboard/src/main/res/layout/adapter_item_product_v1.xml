<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="2dp"
    app:contentPadding="10dp"
    app:cardBackgroundColor="@color/white">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <android.support.v7.widget.CardView
            android:id="@+id/card_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardBackgroundColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp" >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/default_product_image" />

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:gravity="bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_thumbnail"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toTopOf="parent" >

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/primaryColor"
                android:textSize="12sp"
                android:textStyle="bold"
                android:paddingBottom="3dp"
                android:text="Watch by Fastrack"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/primaryTextColor"
                android:textSize="13sp"
                android:textStyle="bold"
                android:layout_below="@+id/tv_brand"
                android:text="Fastrack Bare Basic Watch"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/card_thumbnail"
            android:textColor="@color/secondaryTextColor"
            android:textSize="13sp"
            android:maxLines="2"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:ellipsize="end"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_thumbnail"
            android:text="This is a wedding makeup description"/>

        <View
            android:id="@+id/dotted_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layerType="software"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_description"
            android:background="@drawable/dotted_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dotted_line"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dotted_line"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/label_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondaryLightTextColor"
                android:textSize="13sp"
                android:text="Price: "
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primaryTextColor"
                android:textSize="14sp"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/secondaryLightTextColor"
                android:textSize="12sp"
                android:paddingLeft="15dp"
                android:paddingRight="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="0.0"
                android:gravity="center_vertical" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <include layout="@layout/adapter_item_product_flipped" android:visibility="gone" />

    <include layout="@layout/adapter_item_product_offer_v1" android:visibility="gone" />

    <include layout="@layout/adapter_item_product_keyboard" android:visibility="gone" />

</android.support.v7.widget.CardView>
