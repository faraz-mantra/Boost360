<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:cardBackgroundColor="@color/white"
  app:cardElevation="2dp"
  app:contentPadding="0dp">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
      android:id="@+id/card_thumbnail"
      android:layout_width="65dp"
      android:layout_height="65dp"
      android:layout_margin="12dp"
      app:cardBackgroundColor="@android:color/white"
      app:cardCornerRadius="4dp"
      app:cardElevation="0dp"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <ImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:scaleType="centerCrop"
        android:src="@drawable/default_product_image" />

    </androidx.cardview.widget.CardView>

    <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="65dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="12dp"
      android:layout_marginEnd="10dp"
      android:gravity="bottom"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/card_thumbnail"
      app:layout_constraintTop_toTopOf="parent">

      <!--
      <TextView
          android:id="@+id/tv_brand"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="2"
          android:ellipsize="end"
          android:textColor="@color/primaryColor"
          android:textSize="12sp"
           android:fontFamily="@font/semi_bold"
          android:paddingBottom="3dp"
          android:text="Watch by Fastrack"/>
      -->

      <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/product_name"
        android:textColor="@color/primaryColor"
        android:textSize="13sp"
         android:fontFamily="@font/semi_bold" />

      <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_gravity="center_vertical"
        android:text="@string/_0_0"
        android:textColor="@color/primaryTextColor"
        android:textSize="13sp" />

      <TextView
        android:id="@+id/tv_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_toRightOf="@+id/tv_price"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingStart="10dp"
        android:paddingRight="0dp"
        android:text="@string/_0_0"
        android:textColor="@color/secondaryLightTextColor"
        android:textSize="13sp" />

    </RelativeLayout>

    <TextView
      android:id="@+id/tv_description"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="12dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="12dp"
      android:ellipsize="end"
      android:maxLines="3"
      android:text="@string/this_is_product_description"
      android:textColor="@color/secondaryTextColor"
      android:textSize="13sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/dotted_line" />

    <View
      android:id="@+id/dotted_line"
      android:layout_width="match_parent"
      android:layout_height="2dp"
      android:layout_marginStart="12dp"
      android:layout_marginTop="10dp"
      android:layout_marginEnd="12dp"
      android:background="@drawable/dotted_line"
      android:layerType="software"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/card_thumbnail" />

    <!--
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dotted_line"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dotted_line"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/label_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/secondaryLightTextColor"
            android:textSize="13sp"
            android:text="Price: "
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextColor"
            android:textSize="14sp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/tv_discount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/secondaryLightTextColor"
            android:textSize="12sp"
            android:paddingStart="15dp"
            android:paddingRight="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0.0"
            android:gravity="center_vertical" />

    </LinearLayout>
    -->

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent">

      <Button
        android:id="@+id/buttonMakeOffer"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="#dddddd"
        android:text="@string/create_offer"
        android:textAllCaps="true"
        android:textColor="@android:color/tab_indicator_text"
        android:textSize="@dimen/adapter_item_product_flipped_text_size"
        android:visibility="gone" />

      <Button
        android:id="@+id/buttonCopy"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_weight="1"
        android:background="@color/primaryColor"
        android:text="@string/share_now"
        android:textColor="@color/white"
        android:textSize="@dimen/adapter_item_product_flipped_text_size" />

    </LinearLayout>

  </androidx.constraintlayout.widget.ConstraintLayout>

  <!--
  <include layout="@layout/adapter_item_product_flipped" android:visibility="gone" />
  -->
  <include
    layout="@layout/adapter_item_product_offer_v1"
    android:visibility="gone" />

  <include
    layout="@layout/adapter_item_product_keyboard"
    android:visibility="gone" />

</androidx.cardview.widget.CardView>