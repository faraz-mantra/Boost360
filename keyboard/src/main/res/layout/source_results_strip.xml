<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:card_view="http://schemas.android.com/tools">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
      android:id="@+id/source_progress"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="-1dp"
      android:indeterminate="true"
      android:visibility="gone"
      app:spb_color="#5dddf3"
      app:spb_mirror_mode="false"
      app:spb_progressiveStart_activated="true"
      app:spb_progressiveStart_speed="1.5"
      app:spb_progressiveStop_speed="3.4"
      app:spb_reversed="false"
      app:spb_sections_count="2"
      app:spb_speed="2.0"
      app:spb_stroke_separator_length="4dp"
      app:spb_stroke_width="@dimen/spb_default_stroke_width" />

    <com.android.inputmethod.keyboard.top.services.ResultsRecyclerView
      android:id="@+id/source_recycler"
      android:layout_width="match_parent"
      android:layout_height="@dimen/search_results_container_height"
      android:clipToPadding="false"
      android:paddingStart="10dp" />

    <TextView
      android:id="@+id/source_error"
      android:layout_width="wrap_content"
      android:layout_height="@dimen/search_results_height"
      android:layout_below="@id/source_recycler"
      android:gravity="center"
      android:visibility="gone" />

    <com.android.inputmethod.keyboard.top.services.CategoriesRecyclerView
      android:id="@+id/categories"
      android:layout_width="match_parent"
      android:layout_height="@dimen/categories_container_height"
      android:layout_below="@id/source_error"
      android:clipToPadding="false"
      android:paddingStart="10dp" />
  </RelativeLayout>

  <androidx.cardview.widget.CardView
    android:id="@id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="2dp"
    card_view:cardCornerRadius="@dimen/search_bar_border_radius"
    card_view:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:contentPaddingLeft="10dp"
    card_view:contentPaddingRight="10dp">

    <LinearLayout
      android:id="@+id/search_container"
      android:layout_width="match_parent"
      android:layout_height="@dimen/config_suggestions_strip_height"
      android:background="@color/white"
      android:gravity="center_vertical"
      android:orientation="horizontal">

      <ImageView
        android:id="@+id/search_placeholder"
        android:layout_width="@dimen/service_icon_height"
        android:layout_height="@dimen/service_icon_height"
        android:layout_marginEnd="6dp"
        android:src="@drawable/ic_cancel_black_24dp"
        android:tint="@color/black" />

      <EditText
        android:id="@+id/slash_search_mirror"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@drawable/service_search_background"
        android:inputType="text"
        android:maxLines="1" />

      <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/source_image"
        android:layout_width="@dimen/service_icon_height"
        android:layout_height="@dimen/service_icon_height" />
    </LinearLayout>
  </androidx.cardview.widget.CardView>
</merge>