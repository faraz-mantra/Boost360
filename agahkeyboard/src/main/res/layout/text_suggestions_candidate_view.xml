<?xml version="1.0" encoding="utf-8"?>
<nowfloats.nfkeyboard.keyboards.TextSuggestionsCandidateView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="#424242"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/img_nowfloats"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="?android:selectableItemBackground"
        android:elevation="3dp"
        android:padding="7dp"
        android:src="@drawable/ic_nowfloats_circle" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_suggestions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:visibility="gone" />

    <include
        android:id="@+id/suggestion_layout"
        android:visibility="invisible"
        layout="@layout/layout_keyboard_suggestions_candidate_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/img_settings"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="?android:selectableItemBackground"
        android:padding="7dp"
        android:src="@android:drawable/ic_btn_speak_now"
        android:tint="@color/white" />
</nowfloats.nfkeyboard.keyboards.TextSuggestionsCandidateView>