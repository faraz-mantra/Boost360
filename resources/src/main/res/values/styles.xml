  <style name="CustomAlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
    <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    <item name="android:textAllCaps">false</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>
  <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
    <item name="android:textColor">@color/colorAccentNegative</item>
    <item name="android:textAllCaps">false</item>
  </style>
  <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
    <item name="android:textColor">@color/colorAccentPositive</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="MaterialCustomDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
    <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyleMaterial</item>
    <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyleMaterial</item>
  </style>

  <style name="NegativeButtonStyleMaterial" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
    <item name="android:textColor">@color/colorAccentNegative</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="PositiveButtonStyleMaterial" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
    <item name="android:textColor">@color/colorAccentPositive</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="DialogTheme" parent="CustomAlertDialogTheme">
    <item name="android:colorAccent">@color/colorAccentLight</item>
    <item name="android:colorControlNormal">@color/colorAccentLight</item>
    <item name="android:colorControlActivated">@color/colorAccentLight</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="MyButtonBoost" parent="Widget.AppCompat.Button">
    <item name="android:textAllCaps">false</item>
  </style>

