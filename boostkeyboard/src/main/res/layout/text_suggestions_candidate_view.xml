<?xml version="1.0" encoding="utf-8"?>
<nowfloats.nfkeyboard.keyboards.TextSuggestionsCandidateView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:clickable="true"
    android:focusable="true"
    android:background="#424242">

    <ImageView
        android:id="@+id/img_nowfloats"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:padding="7dp"
        android:layout_gravity="center_vertical"
        android:elevation="3dp"
        android:background="?android:selectableItemBackground"
        android:src="@drawable/ic_nowfloats_circle"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_suggestions"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img_settings"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:padding="7dp"
        android:tint="@color/white"
        android:layout_gravity="center_vertical"
        android:src="@android:drawable/ic_btn_speak_now"
        android:background="?android:selectableItemBackground"/>
</nowfloats.nfkeyboard.keyboards.TextSuggestionsCandidateView>