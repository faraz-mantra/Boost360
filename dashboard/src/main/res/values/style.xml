<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="DashboardTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorAccent</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:windowBackground">@color/white</item>
    <item name="android:screenOrientation">portrait</item>
    <item name="android:windowDisablePreview">true</item>
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
    <item name="colorSecondary">@color/black_4a4a4a</item>
    <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    <item name="bottomSheetDialogTheme">@style/BottomSheetTheme</item>
    <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow_toolbar_d</item>
    <item name="searchViewStyle">@style/ThemeOverlay.SearchView</item>
    <item name="editTextStyle">@style/ComposeEditText</item>
    <item name="android:textViewStyle">@style/TextViewDefaultFont</item>
  </style>

  <style name="DashboardThemeNew" parent="DashboardTheme">
    <item name="colorPrimary">@color/black_4a4a4a_jio</item>
    <item name="colorPrimaryDark">@color/black_4a4a4a_jio</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="BusinessProfileTheme" parent="DashboardThemeNew">
    <item name="bottomSheetDialogTheme">@style/BottomDialog</item>
  </style>

  <style name="BottomDialog" parent="BottomSheetTheme">
    <item name="android:windowSoftInputMode">adjustResize</item>
    <item name="android:textColorPrimary">@color/black_2A2A2A</item>
  </style>

  <style name="ThemeOverlay.SearchView" parent="Widget.AppCompat.Light.SearchView">
    <item name="submitBackground">@android:color/transparent</item>
    <item name="queryBackground">@android:color/transparent</item>
    <item name="searchHintIcon">@null</item>
  </style>

  <style name="BusinessProfileTextField">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:colorBackground">@color/browser_actions_bg_grey</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
    <item name="android:background">@drawable/shape_grey_stroke_rect_bkg_gray</item>
    <item name="android:inputType">textCapWords</item>
    <item name="android:padding">@dimen/size_11</item>
    <item name="android:drawableEnd">@drawable/ic_edit_business</item>
    <item name="android:textColor">@color/warm_grey_10</item>
    <item name="android:textColorHint">@color/primary_grey</item>
  </style>

  <style name="BusinessProfile_Text_Title">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginStart">@dimen/size_3</item>
    <item name="android:textColor">@color/black_4a4a4a</item>
    <item name="textType">BODY_3</item>
  </style>

  <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
    <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
    <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
    <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
    <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
  </style>

    <style name="DashBoard.ButtonStyle" parent="ButtonStyle.Rounded">
    <item name="android:background">@drawable/bg_button_proceed_4</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:gravity">center</item>
    <item name="android:textAlignment">center</item>
    <item name="android:paddingTop">@dimen/size_8</item>
    <item name="android:paddingBottom">@dimen/size_8</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/size_38</item>
    <item name="android:stateListAnimator">@null</item>
  </style>
  <style name="DashBoard_Text_Field">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginTop">@dimen/size_5</item>
    <item name="android:padding">@dimen/size_12</item>
    <item name="android:inputType">textCapWords</item>
    <item name="singleLine">true</item>
    <item name="android:editable">true</item>
    <item name="android:background">@drawable/bg_rect_edit_txt</item>
    <item name="android:textColor">@color/warm_grey_10</item>
    <item name="android:textColorHint">@color/primary_grey</item>
  </style>
  <style name="DashBoard_Text_Title">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/black_4a4a4a</item>
    <item name="android:fontFamily">@font/semi_bold</item>
    <item name="textType">BODY_3</item>
    <item name="android:layout_height">wrap_content</item>
  </style>
  <style name="Dashboard.ButtonStyle.Rounded.Solid.Stroke" parent="DashBoard.ButtonStyle">
    <item name="android:background">@drawable/dashboard_button_stroke_orange</item>
    <item name="android:textColor">@color/yellow_ffb900</item>
  </style>
  <style name="DashBoard_Text_Heading">
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textColor">@color/black_4a4a4a</item>
    <item name="textType">HEADING_3</item>
    <item name="android:fontFamily">@font/regular</item>
  </style>
  <style name="DashBoard_Text_Subheading" parent="DashBoard_Text_Heading">
    <item name="textType">SUBHEADING_2</item>
    <item name="android:gravity">center</item>
  </style>
  <style name="DashBoard_Text_Header" parent="DashBoard_Text_Title">
  <item name="android:textColor">@color/warm_grey</item>
  <item name="android:includeFontPadding">false</item>
  <item name="fontFamily">@font/regular</item>
  <item name="textType">BODY_1</item>
  </style>
</resources>