<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/ic_bg_dark_white"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_14"
        android:layout_marginTop="@dimen/size_14"
        android:layout_marginEnd="@dimen/size_14"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/manage_your_business"
          android:textColor="@color/black_4f4f4f"
          app:fontFamily="@font/sans_medium"
          app:textType="HEADING_6" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_2"
          android:ellipsize="end"
          android:maxLines="2"
          android:text="@string/access_all_activated_features_in_your_plan"
          android:textColor="@color/warm_grey"
          app:textType="CAPTION" />
      </LinearLayout>

      <com.framework.views.viewgroups.BaseRecyclerView
        android:id="@+id/rv_manage_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_18"
        android:layout_marginBottom="@dimen/size_28"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="4"
        tools:itemCount="8"
        tools:listitem="@layout/item_manage_business_d" />

      <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_30"
        android:layout_marginTop="@dimen/size_8"
        android:background="@color/white" />
    </androidx.appcompat.widget.LinearLayoutCompat>


    <com.framework.views.customViews.CustomCardView
      android:layout_width="@dimen/size_90"
      android:layout_height="@dimen/size_28"
      android:layout_gravity="center_horizontal|bottom"
      android:layout_marginBottom="@dimen/size_20"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="@dimen/size_14">

      <com.framework.views.customViews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:drawableEnd="@drawable/ic_arrow_right_9_d"
        android:gravity="center"
        android:includeFontPadding="false"
        android:id="@+id/btn_show_all"
        android:clickable="true"
        android:paddingEnd="@dimen/size_6"
        android:text="@string/show_all"
        android:focusable="true"
        android:textAllCaps="true"
        android:textColor="@color/greyish_brown"
        app:fontFamily="@font/semi_bold"
        app:textType="CAPTION"
        tools:ignore="RtlSymmetry" />
    </com.framework.views.customViews.CustomCardView>
  </FrameLayout>
</layout>