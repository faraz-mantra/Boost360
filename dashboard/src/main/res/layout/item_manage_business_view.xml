<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_260"
    android:background="@drawable/ic_fill_business_bg">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_16"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginEnd="@dimen/size_16"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableEnd="@drawable/ic_summary_alert_d"
          android:drawablePadding="@dimen/size_8"
          android:text="@string/manage_your_business"
          android:textColor="@color/black_4a4a4a"
          app:fontFamily="@font/semi_bold"
          app:textType="HEADING_6" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_2"
          android:ellipsize="end"
          android:maxLines="2"
          android:text="@string/manage_business_description"
          android:textColor="@color/black_4a4a4a"
          app:textType="CAPTION" />
      </LinearLayout>

      <com.framework.views.viewgroups.BaseRecyclerView
        android:id="@+id/rv_manage_business"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_16"
        android:layout_marginBottom="@dimen/size_28"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="4"
        tools:itemCount="4"
        tools:listitem="@layout/item_manage_business_d" />

      <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/size_12"
        android:background="@color/white" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.framework.views.customViews.CustomCardView
      android:layout_width="@dimen/size_110"
      android:layout_height="@dimen/size_28"
      android:layout_gravity="center_horizontal|bottom"
      android:layout_marginBottom="@dimen/size_22"
      app:cardBackgroundColor="@color/white"
      app:cardCornerRadius="@dimen/size_14">

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/btn_show_all"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_gravity="center_vertical"
          android:clickable="true"
          android:focusable="true"
          android:gravity="center"
          android:includeFontPadding="false"
          android:text="@string/show_all"
          android:textAllCaps="true"
          android:textColor="@color/greyish_brown"
          app:fontFamily="@font/semi_bold"
          app:textType="CAPTION"
          tools:ignore="RtlSymmetry" />

        <com.framework.views.customViews.CustomImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_3"
          android:layout_marginBottom="0.5dp"
          app:srcCompat="@drawable/ic_arrow_right_9_d" />
      </LinearLayout>

    </com.framework.views.customViews.CustomCardView>
  </FrameLayout>
</layout>