<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

  </data>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size_14"
      android:layout_marginEnd="@dimen/size_14"
      android:orientation="vertical">

      <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recommended_tasks"
        android:textColor="@color/black_4f4f4f"
        app:fontFamily="@font/sans_medium"
        app:textType="HEADING_6" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/access_all_activate_plan"
        android:textColor="@color/warm_grey"
        app:textType="CAPTION" />
    </LinearLayout>

    <androidx.viewpager2.widget.ViewPager2
      android:id="@+id/pager_quick_action"
      android:layout_width="match_parent"
      android:layout_height="@dimen/size_100"
      android:layout_marginTop="@dimen/size_12"
      android:clipChildren="false"
      android:clipToPadding="false" />

    <com.framework.views.dotsindicator.DotsIndicator
      android:id="@+id/dot_indicator_action"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="@dimen/size_14"
      android:layout_marginBottom="@dimen/size_14"
      app:dotsColor="@color/light_grey_1"
      app:dotsCornerRadius="@dimen/_6dp"
      app:dotsSize="@dimen/size_5"
      app:dotsSpacing="@dimen/size_2"
      app:dotsWidthFactor="2.5"
      app:progressMode="false"
      app:selectedDotColor="@color/grey_dark_2" />

    <View
      android:layout_width="match_parent"
      android:layout_height="@dimen/size_6"
      android:background="@drawable/down_shadow_d" />
  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>