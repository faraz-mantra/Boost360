<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data></data>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.framework.views.customViews.CustomImageView
      android:id="@+id/riv_close_bottomSheet"
      android:layout_width="@dimen/size_40"
      android:layout_height="@dimen/size_40"
      android:layout_gravity="center_horizontal"
      android:layout_marginBottom="@dimen/size_15"
      android:src="@drawable/ic_cross_grey_circle" />

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/bottoms_sheet_top20dp_white"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:paddingTop="@dimen/size_10">

      <com.airbnb.lottie.LottieAnimationView
        android:layout_width="@dimen/size_70"
        android:layout_height="@dimen/size_70"
        android:layout_gravity="center_horizontal"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/green_success" />

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_4"
        android:fontFamily="@font/regular"
        android:text="@string/website_updated"
        android:textAllCaps="false"
        android:textColor="@color/colorAccentLight"
        app:fontFamily="@font/semi_bold"
        app:textType="HEADING_5" />

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/txt_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_20"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_26"
        android:fontFamily="@font/regular"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/your_changes_are_saved_successfully_published_and_live_on_your_website_click_on_below_button_to_see_it_live_or_share_with_in_your_connections"
        android:textAlignment="center"
        android:textColor="@color/black_4a4a4a"
        android:textSize="12sp" />

      <com.framework.views.customViews.CustomButton
        android:id="@+id/visit_website"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_38"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/size_26"
        android:background="@drawable/bg_button_proceed_4"
        android:drawableStart="@drawable/ic_arrow_top_right"
        android:drawablePadding="@dimen/size_8"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:paddingHorizontal="@dimen/size_100"
        android:stateListAnimator="@null"
        android:text="@string/view_changes_live"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="visible" />

      <com.framework.views.customViews.CustomButton
        android:id="@+id/share_whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_38"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/size_26"
        android:background="@drawable/rounded_stroke_grey_4_solid_green"
        android:drawableStart="@drawable/ic_whatsapp_for_business_active"
        android:drawablePadding="@dimen/size_8"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:paddingHorizontal="85dp"
        android:stateListAnimator="@null"
        android:text="@string/share_on_whatsapp"
        android:textAllCaps="false"
        android:textColor="@color/green_6bc95c"
        android:textSize="14sp"
        android:visibility="visible" />

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/size_20"
        android:layout_marginBottom="@dimen/size_20"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/size_10"
        android:visibility="visible">

        <com.framework.views.customViews.CustomTextView
          android:id="@id/btn_cancel"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/size_36"
          android:layout_gravity="center_horizontal"
          android:gravity="center"
          android:text="@string/share_on_others"
          android:textColor="@color/warm_grey"
          app:textType="HEADING_6" />

        <com.framework.views.customViews.CustomCardView
          android:id="@+id/btn_copy_message"
          android:layout_width="@dimen/size_40"
                    android:layout_height="@dimen/size_40"
          android:layout_marginStart="@dimen/size_20"
          app:cardBackgroundColor="@color/white_one"
          app:cardCornerRadius="@dimen/size_15"
          app:cardElevation="0dp">

          <com.framework.views.customViews.CustomImageView
            android:layout_width="@dimen/size_16"
            android:layout_height="@dimen/size_16"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_copy_service" />
        </com.framework.views.customViews.CustomCardView>

        <com.framework.views.customViews.CustomImageView
          android:id="@+id/btn_fb"
          android:layout_width="@dimen/size_36"
          android:layout_height="@dimen/size_36"
          android:layout_marginStart="@dimen/size_4"
          android:padding="@dimen/size_3"
          android:visibility="gone"
          app:srcCompat="@drawable/ic_facebook_service" />


        <com.framework.views.customViews.CustomImageView
          android:id="@+id/btn_twitter"
          android:layout_width="@dimen/size_36"
          android:layout_height="@dimen/size_36"
          android:layout_marginStart="@dimen/size_4"
          android:padding="@dimen/size_3"
          app:srcCompat="@drawable/ic_twitter_service" />


        <com.framework.views.customViews.CustomImageView
          android:id="@+id/btn_linkedin"
          android:layout_width="@dimen/size_36"
          android:layout_height="@dimen/size_36"
          android:layout_marginStart="@dimen/size_4"
          android:padding="@dimen/size_3"
          app:srcCompat="@drawable/ic_linkedin_service" />

        <com.framework.views.customViews.CustomImageView
          android:id="@+id/btn_share"
          android:layout_width="@dimen/size_36"
          android:layout_height="@dimen/size_36"
          android:layout_marginStart="@dimen/size_4"
          android:padding="@dimen/size_2"
          app:srcCompat="@drawable/ic_share_rounded" />


      </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

  </androidx.appcompat.widget.LinearLayoutCompat>

</layout>