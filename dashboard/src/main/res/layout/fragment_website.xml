<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/main_content"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/bg_grey_light"
      android:orientation="vertical"
      android:paddingBottom="@dimen/size_100">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_4a4a4a"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/size_14"
        android:paddingTop="@dimen/size_6"
        android:paddingEnd="@dimen/size_14"
        android:paddingBottom="@dimen/size_14">

        <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@drawable/bg_rounded_stroke">

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_16"
            android:layout_marginTop="@dimen/size_20"
            android:layout_marginEnd="@dimen/size_20"
            android:layout_marginBottom="@dimen/size_20"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              android:orientation="horizontal">

              <com.framework.views.customViews.CustomCardView
                android:id="@+id/btn_profile_logo"
                android:layout_width="@dimen/size_67"
                android:layout_height="@dimen/size_67"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/snow_white"
                app:cardCornerRadius="@dimen/size_6">

                <com.framework.views.customViews.CustomCardView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_margin="@dimen/size_4"
                  app:cardBackgroundColor="@color/white_one"
                  app:cardCornerRadius="@dimen/size_6"
                  app:cardElevation="@dimen/size_0">

                  <com.framework.views.customViews.CustomImageView
                    android:id="@+id/img_profile_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_add_logo_d" />
                </com.framework.views.customViews.CustomCardView>

              </com.framework.views.customViews.CustomCardView>

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_8"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.framework.views.customViews.CustomTextView
                  android:id="@+id/txt_business_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:ellipsize="end"
                  android:includeFontPadding="false"
                  android:lineSpacingExtra="-6dp"
                  android:maxLines="2"
                  android:textColor="@color/white"
                  app:textType="HEADING_5"
                  tools:text="PLASTO INDIA AND POLYMERS" />

                <com.framework.views.customViews.CustomTextView
                  android:id="@+id/txt_domain_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/size_2"
                  android:layout_marginTop="@dimen/size_1"
                  android:drawableStart="@drawable/ic_website_accent_d"
                  android:drawablePadding="@dimen/size_4"
                  android:ellipsize="end"
                  android:includeFontPadding="false"
                  android:maxLines="1"
                  android:textColor="@color/colorAccent"
                  app:autoSizeMaxTextSize="16sp"
                  app:autoSizeMinTextSize="8sp"
                  app:autoSizeStepGranularity="1sp"
                  app:autoSizeTextType="uniform"
                  tools:text="@string/www_sravansclinic_com" />

              </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/txt_desc"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_14"
              android:ellipsize="end"
              android:includeFontPadding="false"
              android:maxLines="2"
              android:textColor="@color/pinkish_grey"
              app:textType="BODY_1"
              tools:text="Dr. Shravans clinic is located in Jubilee Hills, Hyderabad. The clinic was establised in 2006 and is one of the most..." />
          </androidx.appcompat.widget.LinearLayoutCompat>


          <com.framework.views.customViews.CustomImageView
            android:id="@+id/edit_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:srcCompat="@drawable/ic_edit_icon_d" />

        </FrameLayout>

      </androidx.appcompat.widget.LinearLayoutCompat>

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_100"
        android:background="@color/bg_grey_light"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/size_16"
        android:paddingEnd="@dimen/size_16">

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/website_pages_and_widgets"
          android:textColor="@color/black_4a4a4a"
          app:fontFamily="@font/semi_bold"
          app:textType="HEADING_6" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_4"
          android:text="@string/for_better_engagement_and_traffic_desc"
          android:textColor="@color/black_4a4a4a" />
      </androidx.appcompat.widget.LinearLayoutCompat>

      <com.framework.views.viewgroups.BaseRecyclerView
        android:id="@+id/rv_enquiries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_website_item" />
    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.core.widget.NestedScrollView>

</layout>