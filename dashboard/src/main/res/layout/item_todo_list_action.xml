<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <com.framework.views.customViews.CustomCardView
    android:id="@+id/maim_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/size_15"
    android:layout_marginTop="@dimen/size_2"
    android:layout_marginEnd="@dimen/size_15"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/size_20"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="true"
    tools:layout_height="@dimen/size_174">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@drawable/green_rounded_stroke_rad_20"
      android:orientation="vertical">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_122"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomCardView
          android:id="@+id/card_image"
          android:layout_width="@dimen/size_50"
          android:layout_height="@dimen/size_50"
          android:layout_marginStart="@dimen/size_19"
          android:layout_marginTop="@dimen/size_20"
          app:cardCornerRadius="@dimen/size_10"
          app:cardElevation="@dimen/size_2"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent">

          <com.framework.views.customViews.CustomImageView
            android:layout_width="@dimen/size_44"
            android:layout_height="@dimen/size_44"
            android:layout_gravity="center"
            android:src="@drawable/ic_demo_1" />

        </com.framework.views.customViews.CustomCardView>

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_title_1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/size_11"
          android:fontFamily="@font/semi_bold"
          android:gravity="center"
          android:text="Business profile"
          android:textColor="@color/gray_828282"
          android:textSize="@dimen/text_10"
          app:layout_constraintStart_toEndOf="@+id/card_image"
          app:layout_constraintTop_toTopOf="@+id/card_image" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_title_2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/bold"
          android:gravity="start"
          android:includeFontPadding="false"
          android:lineSpacingMultiplier="0.8"
          android:text="Introduce your business\nto your customers."
          android:textAlignment="gravity"
          android:textColor="@color/green_27AE60"
          app:layout_constraintStart_toStartOf="@+id/tv_title_1"
          app:layout_constraintTop_toBottomOf="@+id/tv_title_1"
          app:textType="BODY_2" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/tv_title_3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginHorizontal="@dimen/size_18"
          android:layout_marginTop="@dimen/size_11"
          android:fontFamily="@font/regular"
          android:gravity="start"
          android:text="Customise everything from the font, theme color, your brand logo, favicon, custom background images etc."
          android:textAlignment="gravity"
          android:textColor="@color/color_888888"
          android:textSize="@dimen/text_10"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/card_image" />

        <com.framework.views.customViews.CustomImageView
          android:layout_width="@dimen/size_22"
          android:layout_height="@dimen/size_22"
          android:layout_gravity="center"
          android:layout_marginTop="@dimen/size_10"
          android:layout_marginEnd="@dimen/size_11"
          android:src="@drawable/ic_close_grey_card"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>

      <com.framework.views.customViews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_36"
        android:background="@color/green_27AE60"
        android:fontFamily="@font/semi_bold"
        android:gravity="center"
        android:text="Complete biz profile"
        android:textColor="@color/white"
        app:textType="BODY_3" />

    </androidx.appcompat.widget.LinearLayoutCompat>
  </com.framework.views.customViews.CustomCardView>
</layout>