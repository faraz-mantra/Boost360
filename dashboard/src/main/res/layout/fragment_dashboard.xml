<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <FrameLayout
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
      android:id="@+id/nestedScrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:visibility="gone"
      tools:visibility="visible"
      android:background="@color/white"
      android:fillViewport="true">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_16">

        <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_210">

            <com.framework.views.customViews.CustomImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scaleType="centerCrop"
              app:srcCompat="@drawable/ic_bg_dash" />

            <com.framework.views.customViews.CustomImageView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:scaleType="centerCrop"
              app:srcCompat="@drawable/ic_fill_bg" />
          </FrameLayout>

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_180"
            android:background="@drawable/ic_business_snapshot_bac_d"
            android:orientation="vertical"
            android:paddingTop="@dimen/size_12">

            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_18"
              android:orientation="vertical">

              <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pager_business_setup_high"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_50"
                android:clipChildren="false"
                android:clipToPadding="false" />

              <com.framework.views.dotsindicator.DotsIndicator
                android:id="@+id/dot_indicator_business_high"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/size_12"
                android:layout_marginBottom="@dimen/size_12"
                app:dotsColor="@color/light_grey_1"
                app:dotsCornerRadius="@dimen/_6dp"
                app:dotsSize="@dimen/size_5"
                app:dotsSpacing="@dimen/size_2"
                app:dotsWidthFactor="2.5"
                app:progressMode="false"
                app:selectedDotColor="@color/grey_dark_2" />
            </androidx.appcompat.widget.LinearLayoutCompat>

          </androidx.appcompat.widget.LinearLayoutCompat>

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_34"
              android:orientation="horizontal">

              <com.framework.views.customViews.CustomCardView
                android:id="@+id/btn_business_logo"
                android:layout_width="@dimen/size_67"
                android:layout_height="@dimen/size_67"
                android:layout_marginStart="@dimen/size_16"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@color/snow_white"
                app:cardCornerRadius="@dimen/size_6">

                <com.framework.views.customViews.CustomCardView
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_margin="@dimen/size_4"
                  app:cardBackgroundColor="@color/white_one"
                  app:cardCornerRadius="@dimen/size_6"
                  app:cardElevation="@dimen/size_0">

                  <com.framework.views.customViews.CustomImageView
                    android:id="@+id/img_business_logo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_add_logo_d" />
                </com.framework.views.customViews.CustomCardView>

              </com.framework.views.customViews.CustomCardView>

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_6"
                android:layout_marginEnd="@dimen/size_6"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.framework.views.customViews.CustomTextView
                  android:id="@+id/txt_business_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:ellipsize="end"
                  android:includeFontPadding="false"
                  android:lineSpacingExtra="-6dp"
                  android:maxLines="2"
                  android:textColor="@color/white"
                  app:fontFamily="@font/bold"
                  app:textType="HEADING_5"
                  tools:text="PLASTO INDIA AND POLYMERS" />

                <FrameLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <com.framework.views.customViews.CustomImageView
                    android:id="@+id/txt_gst_status"
                    android:layout_width="@dimen/size_82"
                    android:layout_height="@dimen/size_17"
                    android:layout_marginStart="@dimen/size_2"
                    android:layout_marginTop="@dimen/size_1"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_gst_verfied_d" />

                  <com.framework.views.customViews.CustomTextView
                    android:id="@+id/txt_domain_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_2"
                    android:layout_marginTop="@dimen/size_1"
                    android:drawableStart="@drawable/ic_website_d"
                    android:drawablePadding="@dimen/size_4"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:textColor="@color/greyish_brown"
                    app:autoSizeMaxTextSize="16sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeStepGranularity="1sp"
                    app:autoSizeTextType="uniform"
                    tools:text="@string/www_sravansclinic_com" />
                </FrameLayout>

              </androidx.appcompat.widget.LinearLayoutCompat>

              <FrameLayout
                android:id="@+id/btn_notofication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_4"
                android:layout_marginEnd="@dimen/size_14"
                android:clickable="true"
                android:focusable="true">

                <com.framework.views.customViews.CustomImageView
                  android:layout_width="@dimen/size_34"
                  android:layout_height="@dimen/size_34"
                  android:layout_marginStart="@dimen/size_8"
                  android:layout_marginTop="@dimen/size_8"
                  android:background="@drawable/ic_chat_ria_icon_d" />

                <com.framework.views.customViews.CustomTextView
                  android:id="@+id/txt_notification"
                  android:layout_width="@dimen/size_26"
                  android:layout_height="@dimen/size_16"
                  android:background="@drawable/ic_round_red_d"
                  android:gravity="center"
                  android:paddingStart="@dimen/size_2"
                  android:textAlignment="gravity"
                  android:textColor="@color/white"
                  android:visibility="gone"
                  app:textType="OVERLINE"
                  tools:ignore="RtlSymmetry"
                  tools:text="9+"
                  tools:visibility="visible" />
              </FrameLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
              android:id="@+id/btn_visiting_card"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="@dimen/size_16"
              android:layout_marginTop="@dimen/size_20"
              android:layout_marginEnd="@dimen/size_16"
              android:background="@drawable/ic_btn_round_white_stroke"
              android:gravity="center|center_vertical"
              android:orientation="horizontal">

              <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share_business_card"
                android:textColor="@color/white"
                app:textAllCaps="true"
                app:textType="HEADING_6" />

              <com.framework.views.customViews.CustomImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_6"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_arrow_down_white_12_d" />
            </LinearLayout>
          </LinearLayout>

        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_12"
          android:orientation="vertical">

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
              android:id="@+id/low_recommended_task"
              layout="@layout/item_recommended_task_view" />

            <include
              android:id="@+id/low_manage_business"
              layout="@layout/item_manage_business_view" />
          </LinearLayout>


          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
              android:id="@+id/ria_academy_view"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_18"
                android:layout_marginEnd="@dimen/size_18"
                android:drawableEnd="@drawable/ic_summary_alert_d"
                android:drawablePadding="@dimen/size_8"
                android:text="@string/ria_academy"
                android:textColor="@color/black_4a4a4a"
                app:fontFamily="@font/semi_bold"
                app:textType="HEADING_6" />

              <com.framework.views.customViews.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_18"
                android:layout_marginTop="@dimen/size_2"
                android:layout_marginEnd="@dimen/size_18"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/learn_boost_360"
                android:textColor="@color/black_4a4a4a"
                app:textType="CAPTION" />

              <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/pager_ria_academy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_210"
                android:layout_marginTop="@dimen/size_14"
                android:clipChildren="false"
                android:clipToPadding="false" />
            </androidx.appcompat.widget.LinearLayoutCompat>


            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_16"
                android:background="@drawable/ic_bg_dark_white_round"
                android:orientation="vertical">

                <FrameLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_marginStart="@dimen/size_18"
                  android:layout_marginTop="@dimen/size_18"
                  android:layout_marginEnd="@dimen/size_18"
                  android:orientation="horizontal">

                  <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:drawableEnd="@drawable/ic_summary_alert_d"
                    android:drawablePadding="@dimen/size_8"
                    android:includeFontPadding="false"
                    android:text="@string/business_statistics"
                    android:textColor="@color/black_4a4a4a"
                    app:fontFamily="@font/semi_bold"
                    app:textType="HEADING_6" />

                  <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/size_4"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/till_date"
                    android:textColor="@color/black_4a4a4a"
                    app:textType="CAPTION" />
                  <!--                  android:drawableEnd="@drawable/ic_arrow_down_d"-->
                  <!--                  android:drawablePadding="@dimen/size_6"-->
                </FrameLayout>

                <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/size_18"
                  android:layout_marginTop="@dimen/size_2"
                  android:layout_marginEnd="@dimen/size_18"
                  android:ellipsize="end"
                  android:maxLines="2"
                  android:text="@string/perform_online_business"
                  android:textColor="@color/warm_grey"
                  app:textType="CAPTION" />

                <com.framework.views.viewgroups.BaseRecyclerView
                  android:id="@+id/rv_roi_summary"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/size_8"
                  android:layout_marginTop="@dimen/size_12"
                  android:layout_marginEnd="@dimen/size_8"
                  android:layout_marginBottom="@dimen/size_8"
                  app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                  app:spanCount="2"
                  tools:itemCount="4"
                  tools:listitem="@layout/item_roi_summary" />
              </androidx.appcompat.widget.LinearLayoutCompat>

              <LinearLayout
                android:id="@+id/boost_premium_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/size_18"
                  android:layout_marginTop="@dimen/size_16"
                  android:layout_marginEnd="@dimen/size_18"
                  android:drawableEnd="@drawable/ic_summary_alert_d"
                  android:drawablePadding="@dimen/size_8"
                  android:text="@string/add_on_marketplace_banner"
                  android:textColor="@color/black_4a4a4a"
                  app:fontFamily="@font/semi_bold"
                  app:textType="HEADING_6" />

                <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/size_18"
                  android:layout_marginTop="@dimen/size_2"
                  android:layout_marginEnd="@dimen/size_18"
                  android:ellipsize="end"
                  android:maxLines="2"
                  android:text="@string/learn_boost_360"
                  android:textColor="@color/black_4a4a4a"
                  app:textType="CAPTION" />

                <androidx.viewpager2.widget.ViewPager2
                  android:id="@+id/pager_boost_premium"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/size_210"
                  android:layout_marginTop="@dimen/size_14"
                  android:clipChildren="false"
                  android:clipToPadding="false" />
              </LinearLayout>


              <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                  android:layout_marginStart="@dimen/size_18"
                  android:layout_marginTop="@dimen/size_16"
                  android:layout_marginEnd="@dimen/size_18"
                  android:orientation="horizontal">

                  <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:drawableEnd="@drawable/ic_summary_alert_d"
                    android:drawablePadding="@dimen/size_8"
                    android:includeFontPadding="false"
                    android:text="@string/online_growth_stats"
                    android:textColor="@color/black_4a4a4a"
                    app:fontFamily="@font/semi_bold"
                    app:textType="HEADING_6" />

                  <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/size_4"
                    android:gravity="center_vertical"
                    android:includeFontPadding="false"
                    android:text="@string/till_date"
                    android:textColor="@color/black_4a4a4a"
                    app:textType="CAPTION" />
                  <!--                    android:drawableEnd="@drawable/ic_arrow_down_d"-->
                  <!--                    android:drawablePadding="@dimen/size_6"-->

                </FrameLayout>

                <com.framework.views.customViews.CustomTextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/size_18"
                  android:layout_marginTop="@dimen/size_2"
                  android:layout_marginEnd="@dimen/size_18"
                  android:ellipsize="end"
                  android:maxLines="2"
                  android:text="@string/perform_online_business"
                  android:textColor="@color/warm_grey"
                  app:textType="CAPTION" />

                <com.framework.views.viewgroups.BaseRecyclerView
                  android:id="@+id/rv_growth_state"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="@dimen/size_16"
                  app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                  tools:itemCount="4"
                  tools:listitem="@layout/item_growth_state" />

              </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_22"
              android:layout_marginBottom="@dimen/size_14"
              android:gravity="center"
              android:orientation="vertical">

              <com.framework.views.customViews.CustomImageView
                android:layout_width="@dimen/size_122"
                android:layout_height="@dimen/size_24"
                app:srcCompat="@drawable/ic_boost_logo_d" />

              <com.framework.views.customViews.CustomTextView
                android:id="@+id/txt_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorLightGrey"
                app:textType="CAPTION"
                tools:text="Version 1.6.17" />
            </androidx.appcompat.widget.LinearLayoutCompat>

          </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>
      </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.core.widget.NestedScrollView>

    <include android:id="@+id/progress_simmer"
      layout="@layout/view_dashboard_simmer"
      android:layout_height="wrap_content"
      android:layout_width="match_parent"
      android:visibility="visible"
      tools:visibility="gone"/>
  </FrameLayout>

</layout>