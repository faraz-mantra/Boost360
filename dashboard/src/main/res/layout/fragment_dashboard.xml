<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_200">

          <com.framework.views.customViews.CustomImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_bg_dash" />

          <com.framework.views.customViews.CustomImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_fill_bg" />
        </FrameLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_400"
          android:layout_marginTop="@dimen/size_190"
          android:background="@drawable/ic_bg_dark_white_round"
          android:orientation="vertical">

        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.framework.views.customViews.CustomCardView
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_210"
          android:layout_marginStart="@dimen/size_6"
          android:layout_marginTop="@dimen/size_130"
          android:layout_marginEnd="@dimen/size_6"
          app:cardBackgroundColor="@color/white"
          app:cardCornerRadius="@dimen/size_16"
          app:cardUseCompatPadding="true">

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.LinearLayoutCompat
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="@dimen/size_10">

              <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_marginStart="@dimen/size_2"
                  android:layout_weight="1"
                  android:orientation="vertical">

                  <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_digital_business_card"
                    android:textColor="@color/black_4f4f4f"
                    app:textType="HEADING_7" />

                  <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_2"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@string/bring_your_score_to_above_90_for_better_online_traction"
                    android:textColor="@color/warm_grey"
                    app:textType="CAPTION" />
                </LinearLayout>

                <com.framework.views.customViews.CustomImageView
                  android:layout_width="@dimen/size_28"
                  android:layout_height="@dimen/size_28"
                  android:background="?attr/selectableItemBackgroundBorderless"
                  android:clickable="true"
                  android:focusable="true"
                  android:padding="@dimen/size_4"
                  app:srcCompat="@drawable/ic_filter_d" />
              </LinearLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:gravity="center_vertical">

              <com.framework.views.viewgroups.BaseRecyclerView
                android:id="@+id/channelList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="4"
                tools:listitem="@layout/item_channel_d" />
            </LinearLayout>

            <View
              android:layout_width="match_parent"
              android:layout_height="@dimen/size_1"
              android:layout_marginTop="@dimen/size_8"
              android:background="@color/grey_white" />

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/size_42"
              android:orientation="horizontal">

              <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/share_on_whatsapp"
                android:textColor="@color/black_4f4f4f" />

              <View
                android:layout_width="@dimen/size_1"
                android:layout_height="match_parent"
                android:background="@color/grey_white" />

              <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/share_on_more"
                android:textColor="@color/black_4f4f4f" />
            </LinearLayout>
          </androidx.appcompat.widget.LinearLayoutCompat>

        </com.framework.views.customViews.CustomCardView>

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_34"
          android:orientation="horizontal">

          <com.framework.views.customViews.CustomCardView
            android:layout_width="@dimen/size_66"
            android:layout_height="@dimen/size_66"
            android:layout_marginStart="@dimen/size_14"
            app:cardBackgroundColor="@color/snow_white"
            app:cardCornerRadius="@dimen/size_8">

            <com.framework.views.customViews.CustomCardView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_margin="@dimen/size_6"
              app:cardBackgroundColor="@color/white"
              app:cardCornerRadius="@dimen/size_8"
              app:cardElevation="@dimen/size_0">

              <com.framework.views.customViews.CustomImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/sample" />
            </com.framework.views.customViews.CustomCardView>

          </com.framework.views.customViews.CustomCardView>

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_6"
            android:layout_marginEnd="@dimen/size_6"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:ellipsize="end"
              android:includeFontPadding="false"
              android:maxLines="2"
              android:text="Dr. Sravanâ€™s Skin Clinic"
              android:textColor="@color/white"
              app:fontFamily="@font/bold"
              app:textType="HEADING_4" />

            <com.framework.views.customViews.CustomTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/size_2"
              android:drawableStart="@drawable/ic_edit_d"
              android:drawablePadding="@dimen/size_6"
              android:ellipsize="end"
              android:includeFontPadding="false"
              android:maxLines="2"
              android:text="@string/www_sravansclinic_com"
              android:textColor="@color/greyish_brown"
              app:textType="HEADING_6" />
          </androidx.appcompat.widget.LinearLayoutCompat>

          <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_4"
            android:layout_marginEnd="@dimen/size_12"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <FrameLayout
              android:layout_width="@dimen/size_34"
              android:layout_height="@dimen/size_34"
              android:layout_marginStart="@dimen/size_8"
              android:layout_marginTop="@dimen/size_8"
              android:background="@drawable/ic_chat_ria_d">

              <com.framework.views.customViews.CustomImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/size_2"
                app:srcCompat="@drawable/ic_ria_d" />
            </FrameLayout>

            <com.framework.views.customViews.CustomTextView
              android:layout_width="@dimen/size_26"
              android:layout_height="@dimen/size_16"
              android:background="@drawable/ic_round_red_d"
              android:gravity="center"
              android:paddingStart="@dimen/size_2"
              android:text="9+"
              android:textAlignment="gravity"
              android:textColor="@color/white"
              app:textType="OVERLINE"
              tools:ignore="RtlSymmetry" />
          </FrameLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
      </FrameLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.core.widget.NestedScrollView>
</layout>