<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <com.framework.views.customViews.CustomCardView
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/size_12"
    android:layout_marginTop="@dimen/size_10"
    android:layout_marginEnd="@dimen/size_12"
    android:layout_marginBottom="@dimen/size_2"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_8">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:orientation="horizontal">

      <FrameLayout
        android:layout_width="@dimen/size_82"
        android:layout_height="@dimen/size_82"
        android:background="@drawable/ic_ellipse_grey_d">

        <com.framework.views.customViews.CustomImageView
          android:id="@+id/imageViewIcon"
          android:layout_width="@dimen/size_40"
          android:layout_height="@dimen/size_40"
          android:layout_gravity="center|center_horizontal"
          app:srcCompat="@drawable/ic_customer_call_d" />
      </FrameLayout>

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/size_14"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <com.framework.views.customViews.CustomTextView
          android:id="@+id/txt_count"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_4"
          android:includeFontPadding="false"
          android:textColor="@color/black_4a4a4a"
          android:textSize="26sp"
          app:fontFamily="@font/barlow_regular"
          tools:text="1,579" />
        <com.framework.views.customViews.CustomTextView
          android:id="@+id/textViewName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/grey_dark_2"
          app:fontFamily="@font/regular"
          app:textType="HEADING_6"
          tools:text="My digital channels" />


      </androidx.appcompat.widget.LinearLayoutCompat>


      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/size_10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/txt_notification"
          android:layout_width="@dimen/size_26"
          android:layout_height="@dimen/size_16"
          android:layout_marginEnd="@dimen/size_4"
          android:background="@drawable/ic_round_red_d"
          android:gravity="center"
          android:textAlignment="gravity"
          android:textColor="@color/white"
          android:visibility="gone"
          app:textType="OVERLINE"
          tools:ignore="RtlSymmetry"
          tools:text="9" />

        <com.framework.views.customViews.CustomImageView
          android:layout_width="@dimen/size_14"
          android:layout_height="@dimen/size_14"
          android:layout_gravity="center"
          android:tint="@color/pinkish_grey_ten_alpha"
          app:srcCompat="@drawable/ic_arrow_right_9_d" />
      </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>
  </com.framework.views.customViews.CustomCardView>

</layout>