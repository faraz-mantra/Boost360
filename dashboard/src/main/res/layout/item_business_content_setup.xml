<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <com.framework.views.customViews.CustomCardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/size_16"
    android:layout_marginEnd="@dimen/size_16"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/size_10"
    app:cardUseCompatPadding="true">

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_80"
        android:orientation="vertical">

        <View
          android:id="@+id/view_dash_top_1"
          android:layout_width="0.7dp"
          android:layout_height="@dimen/size_8"
          android:layout_marginStart="@dimen/size_18_3"
          android:background="@color/light_grey_7" />

        <androidx.recyclerview.widget.RecyclerView
          android:id="@+id/rv_business_item_state"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
          tools:itemCount="3"
          tools:listitem="@layout/item_content_setup_manage" />
      </androidx.appcompat.widget.LinearLayoutCompat>


      <com.framework.views.customViews.CustomCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/size_10">

        <androidx.appcompat.widget.LinearLayoutCompat
          android:layout_width="match_parent"
          android:layout_height="@dimen/size_82"
          android:layout_marginStart="@dimen/size_12"
          android:layout_marginEnd="@dimen/size_16"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <FrameLayout
              android:id="@+id/view_image"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center">

              <com.framework.views.customViews.CustomImageView
                android:id="@+id/img_circle"
                android:layout_width="@dimen/size_50"
                android:layout_height="@dimen/size_50"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/ic_add_home_circle_d" />

              <com.framework.views.customViews.CustomImageView
                android:id="@+id/img_icon"
                android:layout_width="@dimen/size_16"
                android:layout_height="@dimen/size_16"
                android:layout_gravity="center"
                tools:srcCompat="@drawable/ic_add_home_d" />
            </FrameLayout>

            <com.framework.views.GifView
              android:id="@+id/gif_sync_ok"
              android:layout_width="@dimen/size_94"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:layout_marginTop="@dimen/size_6"
              android:layout_marginBottom="@dimen/size_6"
              android:visibility="gone"
              app:paused="true"
              tools:gif="@raw/ic_ok_gif_d" />
          </FrameLayout>

          <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/size_12"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/txt_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/black_4f4f4f"
              app:fontFamily="@font/sans_medium"
              app:textType="HEADING_6"
              tools:text="Business profile setup" />

            <com.framework.views.customViews.CustomTextView
              android:id="@+id/txt_des"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textColor="@color/light_grey_3"
              app:fontFamily="@font/sans_medium"
              app:textType="BODY_1"
              tools:text="40% remaining" />
          </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
      </com.framework.views.customViews.CustomCardView>

    </FrameLayout>

  </com.framework.views.customViews.CustomCardView>

</layout>