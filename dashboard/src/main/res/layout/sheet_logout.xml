<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottoms_sheet_top20dp_white"
    android:orientation="vertical"
    android:padding="@dimen/size_24">

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/tv_heading"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Logging out?"
      android:textColor="@color/black_4a4a4a"
      app:fontFamily="@font/bold"
      app:textType="HEADING_5" />

    <com.framework.views.customViews.CustomTextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size_8"
      android:fontFamily="@font/regular"
      android:text="@string/logout_desc"
      android:textColor="@color/black_4a4a4a"
      app:textType="CAPTION" />

    <com.framework.views.customViews.CustomMaterialButton
      android:id="@+id/btn_switch"
      style="@style/Widget.MaterialComponents.Button.OutlinedButton"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:layout_marginTop="@dimen/size_20"
      android:enabled="false"
      android:fontFamily="@font/semi_bold"
      android:text="@string/switch_to_a_different_business"
      android:textAllCaps="false"
      android:textColor="@color/black_4a4a4a"
      android:textSize="@dimen/text_14"
      android:visibility="gone"
      app:cornerRadius="@dimen/size_15"
      app:strokeColor="@color/black_4a4a4a"
      app:strokeWidth="2dp" />

    <com.framework.views.customViews.CustomMaterialButton
      android:id="@+id/btn_logout"
      android:layout_width="match_parent"
      android:layout_height="55dp"
      android:layout_marginTop="@dimen/size_10"
      android:backgroundTint="@color/red_button"
      android:fontFamily="@font/semi_bold"
      android:text="@string/logout"
      android:textAllCaps="false"
      android:textColor="@color/white"
      app:cornerRadius="@dimen/size_15" />
  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>