<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.framework.views.customViews.CustomCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_158"
        app:cardCornerRadius="@dimen/size_20">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_122"
                android:background="#ff0000"
                android:orientation="vertical">

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_12"
                    android:fontFamily="@font/bold"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:layout_marginTop="@dimen/size_36"
                    android:lineSpacingMultiplier="0.8"
                    android:text="YouTube"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_28"
                    app:layout_constraintStart_toEndOf="@+id/iv_feature"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:gravity="center"
                    android:text="autoposting is here."
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/tv_title_2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_2"
                    android:textSize="@dimen/text_18" />

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/iv_feature"
                    android:layout_width="@dimen/size_68"
                    android:layout_height="@dimen/size_68"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size_24"
                    android:layout_marginTop="@dimen/size_26"
                    android:src="@drawable/ic_youtube_circle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.framework.views.customViews.CustomImageView
                    android:layout_width="@dimen/size_52"
                    android:layout_height="@dimen/size_20"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_free_tag"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_feature"
                    app:layout_constraintEnd_toEndOf="@+id/iv_feature"
                    app:layout_constraintStart_toStartOf="@+id/iv_feature"
                    app:layout_constraintTop_toBottomOf="@+id/iv_feature" />

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/customImageView11"
                    android:layout_width="@dimen/size_22"
                    android:layout_height="@dimen/size_22"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_11"
                    android:src="@drawable/ic_close_white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_36"
                android:background="@color/white"
                android:gravity="center">

                <com.framework.views.customViews.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:fontFamily="@font/semi_bold"
                    android:gravity="center"
                    android:text="Explore feature"
                    android:textColor="@color/red_CE1312"
                    app:textType="BODY_3" />

                <com.framework.views.customViews.CustomImageView
                    android:layout_width="@dimen/size_14"
                    android:layout_height="@dimen/size_14"
                    android:layout_marginStart="@dimen/size_4"
                    android:tint="@color/red_CE1312"
                    android:src="@drawable/ic_arrow_purple"/>

            </androidx.appcompat.widget.LinearLayoutCompat>


        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.framework.views.customViews.CustomCardView>
</layout>