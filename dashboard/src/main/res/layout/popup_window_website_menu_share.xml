<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.framework.views.customViews.CustomCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/size_6"
        app:cardUseCompatPadding="true">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="@dimen/size_150"
            android:layout_height="wrap_content"
            android:id="@+id/ll_share"
            android:paddingVertical="@dimen/size_6"
            android:paddingHorizontal="@dimen/size_4"
            android:orientation="horizontal">
            <com.framework.views.customViews.CustomImageView
                android:layout_width="@dimen/size_24"
                android:padding="1dp"
                android:layout_height="@dimen/size_24"
                android:src="@drawable/ic_share_gray" />

            <com.framework.views.customViews.CustomTextView
                android:id="@+id/share_text"
                android:layout_width="wrap_content"
                 android:layout_marginStart="@dimen/size_4"
                android:layout_height="match_parent"
                android:background="?android:selectableItemBackground"
                android:clickable="false"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/open_sans_semibold"
                android:gravity="center"
                android:text="Share on more"
                android:textColor="@color/gray_4e4e4e"
                android:textSize="14sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.framework.views.customViews.CustomCardView>
</layout>