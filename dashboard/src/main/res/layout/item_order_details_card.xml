<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.framework.views.customViews.CustomCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_158"
        app:cardCornerRadius="@dimen/size_20">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_122"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginTop="@dimen/size_16"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.framework.views.customViews.CustomImageView
                        android:id="@+id/customImageView13"
                        android:layout_width="@dimen/size_55"
                        android:layout_height="@dimen/size_55"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_package_green" />

                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="@dimen/size_21"
                        android:layout_height="@dimen/size_21"
                        android:layout_marginBottom="@dimen/size_1"
                        android:layout_gravity="end|bottom"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_tick_circle_green_solid_filled" />

                </FrameLayout>

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginTop="@dimen/size_14"
                    android:fontFamily="@font/bold"
                    android:gravity="center"
                    android:text="Delivered"
                    android:textAllCaps="true"
                    android:textColor="@color/purple_BB6BD9"
                    android:textSize="@dimen/text_12"
                    app:layout_constraintStart_toEndOf="@+id/frame_package"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.8"
                    android:text="Shatrughn Sinha"
                    android:textAlignment="gravity"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="@dimen/text_20"
                    app:layout_constraintStart_toStartOf="@+id/tv_title_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_1" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/customTextView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.8"
                    android:text="Order no: 346564234324213"
                    android:textAlignment="gravity"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="@dimen/text_10"
                    app:layout_constraintStart_toStartOf="@+id/tv_title_2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_2" />

                <com.framework.views.customViews.CustomImageView
                    android:layout_width="@dimen/size_22"
                    android:layout_height="@dimen/size_22"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_11"
                    android:src="@drawable/ic_close_grey_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="@dimen/size_10"
                    android:weightSum="4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/customTextView10">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/size_12"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Order worth: "
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/text_10" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:text="â‚¹4,568.00"
                            android:textColor="@color/black_4a4a4a"
                            android:textSize="@dimen/text_12" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Item(s): "
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/text_10" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:text="1 (one)"
                            android:textColor="@color/black_4a4a4a"
                            android:textSize="@dimen/text_12" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Payment "
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/text_10" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:text="Done"
                            android:textColor="@color/black_4a4a4a"
                            android:textSize="@dimen/text_12" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/size_12"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/regular"
                            android:text="Type"
                            android:textColor="@color/color_888888"
                            android:textSize="@dimen/text_10" />

                        <com.framework.views.customViews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bold"
                            android:text="Delivery"
                            android:textColor="@color/black_4a4a4a"
                            android:textSize="@dimen/text_12" />

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_36"
                android:background="@color/purple_BB6BD9"
                android:fontFamily="@font/semi_bold"
                android:gravity="center"
                android:text="View details"
                android:textColor="@color/white"
                app:textType="BODY_3" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.framework.views.customViews.CustomCardView>
</layout>