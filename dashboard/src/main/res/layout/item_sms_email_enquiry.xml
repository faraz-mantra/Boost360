<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.framework.views.customViews.CustomCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_158"
        app:cardCornerRadius="@dimen/size_20">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_122"
                android:orientation="vertical">

                <com.framework.views.customViews.CustomImageView
                    android:id="@+id/iv_device"
                    android:layout_width="@dimen/size_42"
                    android:layout_height="@dimen/size_42"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/size_22"
                    android:layout_marginTop="@dimen/size_20"
                    android:src="@drawable/ic_mobile_device_blue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_6"
                    android:fontFamily="@font/bold"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.8"
                    android:text="SMS enquiry from"
                    android:textAlignment="gravity"
                    android:textColor="@color/blue_56CCF2"
                    android:textSize="@dimen/text_12"
                    app:layout_constraintStart_toEndOf="@+id/iv_device"
                    app:layout_constraintTop_toTopOf="@+id/iv_device" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bold"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="0.8"
                    android:text="+91-9834XXXX45"
                    android:textAlignment="gravity"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="@dimen/text_20"
                    app:layout_constraintStart_toStartOf="@+id/tv_title_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_1" />

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_title_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/size_22"
                    android:layout_marginTop="@dimen/size_8"
                    android:ellipsize="end"
                    android:fontFamily="@font/regular"
                    android:gravity="start"
                    android:maxLines="2"
                    android:text="Hello random business name, I want to know\nmore about random product for which youâ€™ve..."
                    android:textAlignment="gravity"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="@dimen/text_13"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_2" />

                <com.framework.views.customViews.CustomImageView
                    android:layout_width="@dimen/size_22"
                    android:layout_height="@dimen/size_22"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/size_10"
                    android:layout_marginEnd="@dimen/size_11"
                    android:src="@drawable/ic_close_grey_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_36"
                android:background="@color/blue_56CCF2"
                android:fontFamily="@font/semi_bold"
                android:gravity="center"
                android:text="View &amp; respond"
                android:textColor="@color/white"
                app:textType="BODY_3" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.framework.views.customViews.CustomCardView>
</layout>