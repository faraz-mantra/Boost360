<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_gradient_dark_grey"
    android:orientation="vertical">

    <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:background="@drawable/rounded_bottom_white_d"
      android:layout_weight="1"
      android:paddingStart="@dimen/size_20"
      android:paddingEnd="@dimen/size_20"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <com.framework.views.customViews.CustomImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:id="@+id/close_btn"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:layout_marginTop="@dimen/size_20"
        app:srcCompat="@drawable/ic_close_dashboard" />

      <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/view_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomImageView
          android:id="@+id/image"
          android:layout_width="@dimen/size_300"
          android:layout_height="@dimen/size_200"
          tools:srcCompat="@drawable/ic_website_content_d" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_26"
          android:gravity="center"
          android:textColor="@color/primary_4a4a4a_jio"
          android:textSize="24sp"
          app:fontFamily="@font/bold"
          tools:text="Manage everything on your business website" />

        <com.framework.views.customViews.CustomTextView
          android:id="@+id/desc"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_26"
          android:gravity="center"
          android:textColor="@color/black_4a4a4a"
          app:textType="HEADING_6"
          tools:text="Make content changes to all the pages of your website including business information, contact details, latest updates, products/services etc." />
      </androidx.appcompat.widget.LinearLayoutCompat>
    </FrameLayout>


    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <com.framework.views.customViews.CustomButton
        android:id="@+id/btn_manage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/size_14"
        android:layout_marginTop="@dimen/size_40"
        android:layout_marginEnd="@dimen/size_14"
        android:layout_marginBottom="@dimen/size_40"
        android:background="@drawable/bg_rounded_10"
        android:gravity="center"
        android:textAllCaps="false"
        app:textType="HEADING_6"
        tools:text="Manage my website" />
    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>