<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <data>

  </data>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_gradient_dark_grey"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/view_top"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:background="@drawable/rounded_bottom_white_d"
      android:gravity="center_horizontal"
      android:orientation="vertical"
      android:paddingStart="@dimen/size_20"
      android:paddingEnd="@dimen/size_20"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <com.framework.views.customViews.CustomImageView
        android:layout_width="@dimen/size_210"
        android:layout_height="@dimen/size_210"
        android:layout_marginTop="@dimen/size_40"
        app:srcCompat="@drawable/ic_website_content_d" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30"
        android:gravity="center"
        android:text="Easy access to all your website content"
        android:textColor="@color/colorAccent"
        app:fontFamily="@font/bold"
        app:textType="HEADING_3" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_30"
        android:gravity="center"
        android:text="Find and make content changes to all the pages of your clinic website including business profille, updates products/services etc."
        app:textType="HEADING_5" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <com.framework.views.customViews.CustomButton
        android:id="@+id/linkFacebook"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_46"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/size_14"
        android:layout_marginTop="@dimen/size_50"
        android:layout_marginEnd="@dimen/size_14"
        android:layout_marginBottom="@dimen/size_50"
        android:background="@drawable/bg_rounded_10"
        android:gravity="center"
        android:text="manage my website content"
        android:textAllCaps="true"
        app:textType="HEADING_6" />
    </androidx.appcompat.widget.LinearLayoutCompat>
  </androidx.appcompat.widget.LinearLayoutCompat>
</layout>