<layout xmlns:tools="http://schemas.android.com/tools">

  <com.framework.views.customViews.CustomCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_140"
    android:clickable="true"
    android:elevation="@dimen/size_2"
    app:cardCornerRadius="@dimen/size_8"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:foreground="?attr/selectableItemBackgroundBorderless"
      android:padding="@dimen/size_8">

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/ctv_needs_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_20"
        android:background="@drawable/rounded_stroke_3"
        android:backgroundTint="@color/red_more_settings"
        android:fontFamily="@font/barlow_regular"
        android:gravity="center"
        android:includeFontPadding="true"
        android:paddingHorizontal="@dimen/size_8"
        android:paddingVertical="2dp"
        android:text="@string/need_action"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="700"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/riv_icon"
        app:layout_constraintTop_toTopOf="parent" />

      <com.framework.views.roundedimageview.RoundedImageView
        android:id="@+id/riv_icon"
        android:layout_width="@dimen/size_30"
        android:layout_height="@dimen/size_30"
        android:src="@drawable/business_kyc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/ctv_heading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8"
        android:ellipsize="end"
        android:fontFamily="@font/semi_bold"
        android:maxLines="2"
        android:textColor="@color/black_4a4a4a"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/riv_icon"
        app:layout_constraintVertical_bias="0"
        tools:text="My business KYC" />

      <com.framework.views.customViews.CustomTextView
        android:id="@+id/ctv_subheading"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_2"
        android:ellipsize="end"
        android:fontFamily="@font/regular"
        android:maxLines="2"
        android:textColor="@color/warm_grey"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ctv_heading"
        app:layout_constraintVertical_bias="0"
        tools:text="Govt mandated process to help you etc." />


    </androidx.constraintlayout.widget.ConstraintLayout>
  </com.framework.views.customViews.CustomCardView>
</layout>