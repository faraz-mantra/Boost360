<layout>
<com.framework.views.customViews.CustomCardView
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:elevation="@dimen/size_2"
  app:cardCornerRadius="@dimen/size_8"
  android:clickable="true"
  app:cardUseCompatPadding="true"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:android="http://schemas.android.com/apk/res/android">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:layout_height="match_parent"
    android:padding="@dimen/size_8">

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/ctv_needs_action"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="@dimen/size_20"
      android:background="@drawable/rounded_stroke_3"
      android:backgroundTint="@color/red_more_settings"
      android:fontFamily="@font/barlow_semi_bold"
      android:gravity="center"
      android:includeFontPadding="true"
      android:paddingHorizontal="@dimen/size_8"
      android:paddingVertical="2dp"
      android:text="@string/need_action"
      android:textAllCaps="true"
      android:textColor="@color/white"
      android:textSize="12sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1"
      app:layout_constraintStart_toEndOf="@+id/riv_icon"
      app:layout_constraintTop_toTopOf="parent" />

    <com.framework.views.roundedimageview.RoundedImageView
      android:id="@+id/riv_icon"
      android:layout_width="@dimen/size_40"
      android:layout_height="@dimen/size_40"
      android:src="@drawable/business_kyc"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/ctv_heading"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size_12"
      android:lines="2"
      android:fontFamily="@font/open_sans_semibold"
      android:text="@string/my_business_kyc"
      android:textColor="@color/black_4a4a4a"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/riv_icon"
      app:layout_constraintVertical_bias="0" />

    <com.framework.views.customViews.CustomTextView
      android:id="@+id/ctv_subheading"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="@dimen/size_8"
      android:lines="2"
      app:layout_constraintHorizontal_bias="0"
      android:fontFamily="@font/open_sans"
      android:text="@string/govt_mandated_process_to_help_you_etc"
      android:textColor="@color/warm_grey"
      android:textSize="14sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/ctv_heading"
      app:layout_constraintVertical_bias="0" />


  </androidx.constraintlayout.widget.ConstraintLayout>
</com.framework.views.customViews.CustomCardView>
</layout>