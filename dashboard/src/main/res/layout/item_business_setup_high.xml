<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/size_15"
    android:layout_marginEnd="@dimen/size_15">

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/view_business_count"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      tools:gravity="top">

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_2"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Business"
          android:id="@+id/txt_title1"
          android:textColor="@color/black_4f4f4f"
          app:fontFamily="@font/sans_medium"
          app:textType="BODY_1" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableEnd="@drawable/ic_summary_alert_8_d"
          android:text="Update"
          android:id="@+id/txt_title2"
          android:textColor="@color/black_4f4f4f"
          app:fontFamily="@font/sans_medium"
          app:textType="BODY_1" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
          android:id="@+id/view_visitor"
          layout="@layout/item_detail_business" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
          android:id="@+id/view_booking"
          layout="@layout/item_detail_business" />
      </LinearLayout>

      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <include
          android:id="@+id/view_enquiry"
          layout="@layout/item_detail_business" />
      </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
      android:id="@+id/view_readiness_score"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginStart="@dimen/size_2"
      android:layout_marginEnd="@dimen/size_2"
      android:gravity="center_vertical"
      android:orientation="vertical">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.framework.views.customViews.CustomTextView
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:paddingTop="@dimen/size_2"
          android:paddingBottom="@dimen/size_2"
          android:id="@+id/txt_title3"
          android:text="Digital Readiness score: 82%"
          android:textColor="@color/black_4f4f4f"
          app:fontFamily="@font/sans_medium"
          app:textType="BODY_1" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableEnd="@drawable/ic_arrow_right_accent_8_d"
          android:drawablePadding="@dimen/size_4"
          android:paddingTop="@dimen/size_2"
          android:paddingBottom="@dimen/size_2"
          android:text="@string/improve"
          android:textAllCaps="true"
          android:textColor="@color/colorAccent"
          app:fontFamily="@font/semi_bold"
          app:textType="CAPTION" />
      </androidx.appcompat.widget.LinearLayoutCompat>

      <ProgressBar
        android:id="@+id/progressBar"
        style="@style/CustomProgressBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_6"
        android:layout_marginTop="@dimen/size_8"
        android:layout_marginBottom="@dimen/size_2"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/ic_progress_bar_horizontal_high" />
    </androidx.appcompat.widget.LinearLayoutCompat>
  </FrameLayout>
</layout>