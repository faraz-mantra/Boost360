<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.framework.views.customViews.CustomCardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_158"
        app:cardCornerRadius="@dimen/size_20">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_122"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/frame_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_16"
                    android:layout_marginTop="@dimen/size_16"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.framework.views.customViews.CustomImageView
                        android:id="@+id/customImageView13"
                        android:layout_width="@dimen/size_55"
                        android:layout_height="@dimen/size_55"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_package_grey" />

                    <com.framework.views.customViews.CustomImageView
                        android:layout_width="@dimen/size_19"
                        android:layout_height="@dimen/size_19"
                        android:layout_gravity="end|bottom"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_error_red" />

                </FrameLayout>

                <com.framework.views.customViews.CustomTextView
                    android:id="@+id/tv_title_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:layout_marginStart="@dimen/size_12"
                    android:text="@string/orders_need_your_attention"
                    android:textColor="@color/black_4a4a4a"
                    android:textSize="@dimen/text_28"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/frame_package"
                    app:layout_constraintTop_toTopOf="@+id/frame_package" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.framework.views.customViews.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_36"
                android:background="@color/watermelon_light_10"
                android:fontFamily="@font/semi_bold"
                android:gravity="center"
                android:text="View orders"
                android:textColor="@color/white"
                app:textType="BODY_3" />

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.framework.views.customViews.CustomCardView>
</layout>