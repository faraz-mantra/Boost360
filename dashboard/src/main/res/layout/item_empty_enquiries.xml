  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools">

  <data>

  </data>

  <androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/size_16"
    android:layout_marginVertical="@dimen/size_8"
    android:background="@drawable/ic_bg_rounded_grey_bottom"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/size_20"
    android:paddingTop="@dimen/size_10"
    android:paddingBottom="@dimen/size_30"
    android:visibility="gone"
    tools:visibility="visible">

    <com.framework.views.customViews.CustomImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/ic_group_user" />

    <com.framework.views.customViews.CustomTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="@string/no_enquiry_yet"
      android:textAlignment="gravity"
      android:textColor="@color/black_4a4a4a"
      app:fontFamily="@font/regular"
      app:textType="HEADING_4" />

    <com.framework.views.customViews.CustomTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/size_26"
      android:layout_marginTop="@dimen/size_10"
      android:gravity="center"
      android:text="@string/promote_your_website_with_as_many_people_as_you_can"
      android:textAlignment="gravity"
      android:textColor="@color/black_4a4a4a"
      app:textType="BODY_1" />

    <RelativeLayout
      android:id="@+id/btn_whatsapp_enquiries"
      android:layout_width="match_parent"
      android:layout_height="@dimen/size_44"
      android:layout_marginHorizontal="@dimen/size_10"
      android:layout_marginTop="@dimen/size_16"
      android:background="@drawable/bg_button_rounded_green"
      android:clickable="true"
      android:focusable="true"
      android:foreground="?attr/selectableItemBackground"
      tools:ignore="UnusedAttribute">

      <com.framework.views.customViews.CustomImageView
        android:layout_width="@dimen/size_32"
        android:layout_height="@dimen/size_32"
        android:layout_centerVertical="true"
        app:srcCompat="@drawable/ic_whatsapp_enquiries" />

      <com.framework.views.customViews.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/share_on_whatsapp"
        android:textAlignment="gravity"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:fontFamily="@font/semi_bold"
        app:textType="BODY_1" />
    </RelativeLayout>

    <com.framework.views.customViews.CustomTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginVertical="@dimen/size_16"
      android:text="@string/or_share_on"
      android:textColor="@color/gray_828282"
      app:textType="BODY_1" />

    <androidx.appcompat.widget.LinearLayoutCompat
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_messanger_enquiries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomImageView
          android:layout_width="@dimen/size_44"
          android:layout_height="@dimen/size_44"
          app:srcCompat="@drawable/ic_messanger_enquiries" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_6"
          android:text="Facebook"
          android:textColor="@color/gray_828282"
          app:textType="BODY_1" />

      </androidx.appcompat.widget.LinearLayoutCompat>

      <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_instagram_enquiries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomImageView
          android:layout_width="@dimen/size_44"
          android:layout_height="@dimen/size_44"
          app:srcCompat="@drawable/ic_instagram_enquiries" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_6"
          android:text="Instagram"
          android:textColor="@color/gray_828282"
          app:textType="BODY_1" />

      </androidx.appcompat.widget.LinearLayoutCompat>

      <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_telegram_enquiries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomImageView
          android:layout_width="@dimen/size_44"
          android:layout_height="@dimen/size_44"
          app:srcCompat="@drawable/ic_telegram_enquiries" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_6"
          android:text="Telegram"
          android:textColor="@color/gray_828282"
          app:textType="BODY_1" />

      </androidx.appcompat.widget.LinearLayoutCompat>

      <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_other_share_enquiries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <com.framework.views.customViews.CustomImageView
          android:layout_width="@dimen/size_44"
          android:layout_height="@dimen/size_44"
          app:srcCompat="@drawable/ic_share_enquiries" />

        <com.framework.views.customViews.CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="@dimen/size_6"
          android:text="Others"
          android:textColor="@color/gray_828282"
          app:textType="BODY_1" />

      </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>

